<div class="bg-light rounded-lg p-6">
  <h2 class="text-xl font-semibold text-dark mb-4 flex items-center">
    <svg class="w-5 h-5 mr-2 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
    </svg>
    Your Details
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :first_name, 'First Name', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.text_field :first_name, name: "#{f.object_name}[tenant_customer_attributes][first_name]", required: true, 
          class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary focus:border-primary' %>
    </div>
    <div>
      <%= f.label :last_name, 'Last Name', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.text_field :last_name, name: "#{f.object_name}[tenant_customer_attributes][last_name]", required: true, 
          class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary focus:border-primary' %>
    </div>
    <div>
      <%= f.label :email, 'Email', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.email_field :email, { required: true, name: "#{f.object_name}[tenant_customer_attributes][email]", 
          class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary focus:border-primary' } %>
    </div>
    <div>
      <%= f.label :phone, 'Phone', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.telephone_field :phone, name: "#{f.object_name}[tenant_customer_attributes][phone]", 
          class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary focus:border-primary' %>
    </div>
  </div>
  <div class="mt-6 p-4 bg-white rounded-lg border border-gray-200">
    <div class="flex items-center">
      <%= f.check_box :create_account, { id: 'create_account_checkbox', class: 'h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded' }, '1', '0' %>
      <%= f.label :create_account, 'Create an account with these details?', { for: 'create_account_checkbox', class: 'ml-2 block text-sm text-gray-700' } %>
    </div>
    <p class="mt-1 text-xs text-gray-500">Creating an account will allow you to track your orders and save your information for future purchases.</p>
  </div>
  <div id="account_password_fields" class="mt-4 space-y-4 hidden">
    <div>
      <%= f.label :password, 'Password', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.password_field :password, 
          class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary focus:border-primary' %>
    </div>
    <div>
      <%= f.label :password_confirmation, 'Confirm Password', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.password_field :password_confirmation, 
          class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-primary focus:border-primary' %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var checkbox = document.getElementById('create_account_checkbox');
    var passwordFields = document.getElementById('account_password_fields');
    if (!checkbox) return;
    
    // Set initial state
    if (checkbox.checked) {
      passwordFields.classList.remove('hidden');
    } else {
      passwordFields.classList.add('hidden');
    }
    
    checkbox.addEventListener('change', function() {
      if (checkbox.checked) {
        passwordFields.classList.remove('hidden');
      } else {
        passwordFields.classList.add('hidden');
      }
    });
  });
</script> 