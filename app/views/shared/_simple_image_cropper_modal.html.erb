<%#
  Simple Image Cropper Modal

  A drag-to-reposition style cropper that's simpler and more mobile-friendly.
  Works with the simple-image-cropper Stimulus controller.

  Usage:
    render 'shared/simple_image_cropper_modal',
        modal_id: "product_cropper",
        viewport_size: 300
%>
<% modal_id ||= "simple_image_cropper_modal" %>
<% viewport_size ||= 300 %>

<div id="<%= modal_id %>"
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     data-simple-image-cropper-target="modal"
     aria-labelledby="cropper-title"
     role="dialog"
     aria-modal="true">

  <!-- Backdrop -->
  <div class="fixed inset-0 bg-gray-900 bg-opacity-75 transition-opacity"
       data-action="click->simple-image-cropper#cancelCrop"></div>

  <!-- Modal Panel -->
  <div class="flex min-h-full items-center justify-center p-4">
    <div class="relative bg-white rounded-xl shadow-2xl w-full max-w-md overflow-hidden"
         data-action="click->simple-image-cropper#stopPropagation">

      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <div class="flex items-center justify-between">
          <h3 id="cropper-title" class="text-lg font-semibold text-gray-900">
            Crop Image
          </h3>
          <button type="button"
                  class="text-gray-400 hover:text-gray-600 transition-colors"
                  data-action="click->simple-image-cropper#cancelCrop">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Crop Area -->
      <div class="p-6 bg-gray-100 flex flex-col items-center">
        <!-- Viewport with drag instruction -->
        <div class="relative mb-4">
          <!-- Square viewport mask -->
          <div data-simple-image-cropper-target="viewport"
               class="relative overflow-hidden rounded-lg bg-black cursor-move"
               style="width: <%= viewport_size %>px; height: <%= viewport_size %>px; aspect-ratio: 1; flex-shrink: 0;"
               data-action="mousedown->simple-image-cropper#startDrag touchstart->simple-image-cropper#startTouchDrag">

            <!-- Draggable image -->
            <img data-simple-image-cropper-target="image"
                 class="absolute top-0 left-0 select-none pointer-events-none"
                 style="will-change: transform;"
                 draggable="false"
                 src=""
                 alt="Drag to reposition">

            <!-- Drag instruction overlay -->
            <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
              <div class="bg-black bg-opacity-50 text-white px-3 py-2 rounded-lg flex items-center gap-2 opacity-75">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
                </svg>
                <span class="text-sm font-medium">Drag to Reposition</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Zoom controls -->
        <div class="flex items-center gap-3 w-full max-w-xs">
          <button type="button"
                  class="p-2 text-gray-600 hover:text-gray-900 transition-colors"
                  data-action="click->simple-image-cropper#zoomOut"
                  title="Zoom Out">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
            </svg>
          </button>

          <input type="range"
                 min="0.1" max="5" step="0.001" value="1"
                 class="flex-1 h-2 bg-gray-300 rounded-lg appearance-none cursor-pointer"
                 data-simple-image-cropper-target="zoomSlider"
                 data-action="input->simple-image-cropper#zoomChange change->simple-image-cropper#zoomChange">

          <button type="button"
                  class="p-2 text-gray-600 hover:text-gray-900 transition-colors"
                  data-action="click->simple-image-cropper#zoomIn"
                  title="Zoom In">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Footer Actions -->
      <div class="px-6 py-4 border-t border-gray-200 flex justify-end gap-3 bg-white">
        <button type="button"
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
                data-action="click->simple-image-cropper#cancelCrop">
          Cancel
        </button>
        <button type="button"
                class="px-4 py-2 text-sm font-medium text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors"
                data-action="click->simple-image-cropper#applyCrop">
          Apply Crop
        </button>
      </div>
    </div>
  </div>
</div>
