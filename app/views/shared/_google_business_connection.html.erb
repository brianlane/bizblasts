<%# Google Business Connection Component %>
<%# This component replaces the manual Place ID entry with a user-friendly search interface %>

<div data-controller="google-business-search" 
     data-google-business-search-business-name-value="<%= business.name %>"
     data-google-business-search-business-address-value="<%= [business.address, business.city, business.state].compact.join(', ') %>"
     data-turbo-permanent
     class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100">
     
  <!-- Header -->
  <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-blue-100 border-b border-blue-200">
    <div class="flex items-center">
      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <div class="ml-3">
        <h2 class="text-lg font-semibold text-gray-900">Google Business Reviews</h2>
        <p class="text-sm text-gray-600 mt-1">Connect your Google Business listing to display reviews and send review requests</p>
      </div>
    </div>
  </div>

  <div class="p-6">
    <!-- Connected Business Display (hidden by default) -->
    <div data-google-business-search-target="connectedBusiness" class="hidden mb-6"></div>

    <!-- Search Interface -->
    <div class="space-y-4">
      <!-- Search Input -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Find Your Business on Google
        </label>
        <div class="relative">
          <input type="text" 
                 data-google-business-search-target="searchInput"
                 data-action="input->google-business-search#onSearchInput"
                 placeholder="Enter your business name (e.g., <%= business.name || 'Joe\'s Pizza' %>)"
                 class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
          <div class="absolute inset-y-0 right-0 flex items-center pr-3">
            <svg data-google-business-search-target="loadingIndicator" 
                 class="hidden animate-spin h-5 w-5 text-gray-400" 
                 fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Location Context (Optional) -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Location (Optional - helps narrow results)
        </label>
        <input type="text" 
               data-google-business-search-target="locationInput"
               placeholder="City, State or ZIP code"
               class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
      </div>

      <!-- Search Button -->
      <div>
        <button data-google-business-search-target="searchButton"
                data-action="click->google-business-search#onSearchClick"
                class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-sm cursor-pointer">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Search for My Business
        </button>
      </div>
    </div>

    <!-- Error Display -->
    <div data-google-business-search-target="errorMessage" 
         class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
      <div class="flex">
        <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <p class="text-sm text-red-700"></p>
        </div>
      </div>
    </div>

    <!-- Search Results -->
    <div data-google-business-search-target="searchResults" class="hidden mt-6">
      <!-- Results will be populated by JavaScript -->
    </div>

    <!-- Help Section -->
    <div class="mt-8 p-4 bg-gray-50 border border-gray-200 rounded-lg">
      <h3 class="text-sm font-medium text-gray-900 mb-2">üìç How this works</h3>
      <ul class="text-sm text-gray-600 space-y-1">
        <li>‚Ä¢ <strong>Search</strong> for your business using the name you use on Google</li>
        <li>‚Ä¢ <strong>Select</strong> your business from the search results</li>
        <li>‚Ä¢ <strong>Connect</strong> to automatically enable Google reviews</li>
        <li>‚Ä¢ Your customers will see reviews on your business page and receive review request emails automatically as long as your business is connected here</li>
      </ul>
      
      <div class="mt-4 pt-3 border-t border-gray-300">
        <p class="text-xs text-gray-500">
          <strong>Can't find your business?</strong> Make sure you have a
          <a href="https://www.google.com/business/" target="_blank" rel="noopener noreferrer"
             class="text-blue-600 hover:text-blue-800 underline">Google Business Profile</a>
          set up first.
        </p>
      </div>
    </div>

    <!-- Service Business Manual Entry Section -->
    <div class="mt-6 p-4 bg-purple-50 border border-purple-200 rounded-lg">
      <h3 class="text-sm font-medium text-purple-800 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        Service Business (No Physical Location)
      </h3>
      <p class="text-sm text-purple-700 mb-3">
        If you serve a region but don't have a fixed address, we'll help you find your <strong>Google Place ID</strong>:
      </p>

      <!-- Automatic Place ID Lookup - Extended scope to include form field -->
      <div data-controller="place-id-lookup">
        <!-- SECURITY & LEGAL WARNING -->
        <div class="mb-4 p-4 bg-amber-50 border border-amber-200 rounded-lg">
          <h4 class="text-sm font-semibold text-amber-900 mb-2">‚ö†Ô∏è Important Notice: Experimental Feature</h4>
          <p class="text-xs text-amber-800 mb-2">
            <strong>Automatic Place ID extraction is experimental and may:</strong>
          </p>
          <ul class="text-xs text-amber-900 space-y-1 ml-4 list-disc">
            <li>Not work reliably as Google's website changes</li>
            <li>Be detected and blocked by Google</li>
            <li>Take 10-30 seconds to complete</li>
            <li>Fail for certain business types</li>
            <li>Be limited to 5 attempts per hour</li>
          </ul>
          <p class="text-xs text-amber-800 mt-2">
            <strong>If the automation tool fails, use the manual method below.</strong>
          </p>
        </div>

        <div class="mb-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <h4 class="text-sm font-semibold text-blue-900 mb-2">‚ú® Try Automatic Lookup First</h4>
          <p class="text-xs text-blue-800 mb-3">
            Paste your <strong>Google Maps URL</strong> and we'll try to find your Place ID automatically!
          </p>

          <div class="space-y-3">
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">
                Google Maps URL
              </label>
              <div class="flex gap-2">
                <input
                  type="text"
                  data-place-id-lookup-target="input"
                  placeholder="https://www.google.com/maps/place/Your+Business/..."
                  class="flex-1 px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm" />
                <button
                  type="button"
                  data-place-id-lookup-target="lookupButton"
                  data-action="click->place-id-lookup#lookup"
                  class="cursor-pointer inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors whitespace-nowrap">
                  <span data-place-id-lookup-target="spinner" class="hidden mr-2">
                    <svg class="animate-spin h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                  </span>
                  <span class="button-text">Find Place ID</span>
                </button>
              </div>
              <p class="mt-1 text-xs text-blue-600">
                üí° Tip: Open your business on Google Maps and copy the URL from your browser
              </p>
            </div>

            <!-- Result message area -->
            <div data-place-id-lookup-target="result" class="hidden"></div>
          </div>
        </div>

      <!-- Manual Fallback Instructions -->
      <div class="mb-4 p-4 bg-amber-50 border border-amber-200 rounded-lg">
        <h4 class="text-sm font-semibold text-amber-900 mb-2">üîß If Automatic Lookup Doesn't Work</h4>
        <p class="text-xs text-amber-800 mb-2">
          Follow these steps to find your Place ID manually:
        </p>
        <ol class="text-xs text-amber-900 space-y-1 ml-4 list-decimal">
          <li>Open your business on <strong>Google Maps</strong></li>
          <li>Click the <strong>"Write a review"</strong> button</li>
          <li>Right-click anywhere on the review popup and select <strong>"Inspect"</strong> (or press F12)</li>
          <li>In the HTML code, look for an <code class="bg-amber-100 px-1 rounded">&lt;iframe</code> tag</li>
          <li>Find the <strong>src</strong> attribute - it will contain a long URL</li>
          <li>In that URL, look for a parameter that starts with <strong>ChIJ</strong>, <strong>GhIJ</strong>, <strong>E</strong>, or <strong>I</strong> - this is your Place ID</li>
          <li>Copy that Place ID and paste it in the field below</li>
        </ol>
        <p class="mt-2 text-xs text-amber-700">
          <strong>Note:</strong> The automatic lookup doesn't work for all businesses. If it fails, you'll need to use the manual method above.
        </p>
      </div>

        <%= form_with model: business, url: business_manager_settings_business_path, method: :patch, local: true, class: "space-y-3" do |form| %>
          <%= hidden_field_tag :return_to, business_manager_settings_integrations_path %>

          <div>
            <%= form.label :google_place_id, "Google Place ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :google_place_id,
                  value: business.google_place_id,
                  placeholder: "ChIJN1t_tDeuEmsRUsoyG83frY4",
                  pattern: "^(ChIJ|GhIJ|E|I).+",
                  title: "Place ID must start with ChIJ, GhIJ, E, or I",
                  data: { place_id_lookup_target: "placeIdField" },
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm font-mono text-xs" %>
            <p class="mt-1 text-xs text-gray-600">
              This field will be auto-filled when you use the lookup above, or you can enter it manually if you already have it.
            </p>
          </div>

          <%= form.submit "Save Settings",
                class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
        <% end %>
      </div> <!-- Close place-id-lookup controller scope -->
    </div>

    <!-- Benefits Preview -->
    <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-green-800">Display Reviews</h4>
            <p class="text-xs text-green-700 mt-1">Bizblasts automatically displays your new and current Google reviews on your business page</p>
          </div>
        </div>
      </div>
      
      <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-blue-800">Request Reviews</h4>
            <p class="text-xs text-blue-700 mt-1">Bizblasts automatically emails customers to request reviews on your behalf</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>