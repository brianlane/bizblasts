<%# Google Business Connection Component %>
<%# This component replaces the manual Place ID entry with a user-friendly search interface %>

<div data-controller="google-business-search" 
     data-google-business-search-business-name-value="<%= business.name %>"
     data-google-business-search-business-address-value="<%= [business.address, business.city, business.state].compact.join(', ') %>"
     data-turbo-permanent
     class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100">
     
  <!-- Header -->
  <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-blue-100 border-b border-blue-200">
    <div class="flex items-center">
      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <div class="ml-3">
        <h2 class="text-lg font-semibold text-gray-900">Google Business Reviews</h2>
        <p class="text-sm text-gray-600 mt-1">Connect your Google Business listing to display reviews and send review requests</p>
      </div>
    </div>
  </div>

  <div class="p-6">
    <!-- Connected Business Display (hidden by default) -->
    <div data-google-business-search-target="connectedBusiness" class="hidden mb-6"></div>

    <!-- Search Interface -->
    <div class="space-y-4">
      <!-- Search Input -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Find Your Business on Google
        </label>
        <div class="relative">
          <input type="text" 
                 data-google-business-search-target="searchInput"
                 data-action="input->google-business-search#onSearchInput"
                 placeholder="Enter your business name (e.g., <%= business.name || 'Joe\'s Pizza' %>)"
                 class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
          <div class="absolute inset-y-0 right-0 flex items-center pr-3">
            <svg data-google-business-search-target="loadingIndicator" 
                 class="hidden animate-spin h-5 w-5 text-gray-400" 
                 fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Location Context (Optional) -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Location (Optional - helps narrow results)
        </label>
        <input type="text" 
               data-google-business-search-target="locationInput"
               placeholder="City, State or ZIP code"
               class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
      </div>

      <!-- Search Buttons -->
      <div class="flex flex-col sm:flex-row gap-3">
        <button data-google-business-search-target="searchButton"
                data-action="click->google-business-search#onSearchClick"
                class="flex-1 sm:flex-none inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-sm cursor-pointer">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Search for My Business
        </button>
        
        <button data-action="click->google-business-search#onServiceBusinessClick"
                class="flex-1 sm:flex-none inline-flex items-center justify-center px-6 py-3 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-all duration-200 shadow-sm cursor-pointer">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          Service Businesses
          (Coming Soon)
        </button>
      </div>
      
      <!-- Footnote for Service Businesses -->
      <div class="mt-2">
        <p class="text-xs text-gray-500">
          <span class="text-green-600">*</span> Use "Service Businesses" if you can't find your business due to no exact address
        </p>
      </div>
    </div>

    <!-- Error Display -->
    <div data-google-business-search-target="errorMessage" 
         class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
      <div class="flex">
        <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <p class="text-sm text-red-700"></p>
        </div>
      </div>
    </div>

    <!-- Search Results -->
    <div data-google-business-search-target="searchResults" class="hidden mt-6">
      <!-- Results will be populated by JavaScript -->
    </div>

    <!-- Help Section -->
    <div class="mt-8 p-4 bg-gray-50 border border-gray-200 rounded-lg">
      <h3 class="text-sm font-medium text-gray-900 mb-2">üìç How this works</h3>
      <ul class="text-sm text-gray-600 space-y-1">
        <li>‚Ä¢ <strong>Search</strong> for your business using the name you use on Google</li>
        <li>‚Ä¢ <strong>Select</strong> your business from the search results</li>
        <li>‚Ä¢ <strong>Connect</strong> to automatically enable Google reviews</li>
        <li>‚Ä¢ Your customers will see reviews on your business page and receive review request emails automatically as long as your business is connected here</li>
      </ul>
      
      <div class="mt-4 pt-3 border-t border-gray-300">
        <p class="text-xs text-gray-500">
          <strong>Can't find your business?</strong> Make sure you have a 
          <a href="https://www.google.com/business/" target="_blank" rel="noopener noreferrer" 
             class="text-blue-600 hover:text-blue-800 underline">Google Business Profile</a> 
          set up first. If you still need help, 
          <button data-action="click->google-business-search#toggleManualEntry"
                  class="text-blue-600 hover:text-blue-800 underline cursor-pointer">
            use manual Place ID entry
          </button>.
        </p>
      </div>
    </div>

    <!-- Manual Entry Fallback (Hidden by default) -->
    <div id="manual-entry" data-google-business-search-target="manualEntry" class="hidden mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
      <h3 class="text-sm font-medium text-yellow-800 mb-3">Manual Google Place ID Entry</h3>
      <p class="text-sm text-yellow-700 mb-3">
        If you can't find your business in the search, you can manually enter your Google Place ID:
      </p>
      
      <%= form_with url: '/manage/settings/integrations/google-business/connect', method: :post, local: false, 
            class: "space-y-3", 
            data: { 
              turbo: false,
              action: "ajax:success->google-business-search#checkConnectionStatus ajax:error->google-business-search#showError"
            } do |form| %>
        
        <div>
          <%= form.text_field :place_id, 
                placeholder: "ChIJN1t_tDeuEmsRUsoyG83frY4",
                class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm font-mono text-xs" %>
          <p class="mt-1 text-xs text-yellow-600">
            <a href="https://developers.google.com/maps/documentation/places/web-service/place-id" 
               target="_blank" rel="noopener noreferrer" 
               class="underline hover:text-yellow-800">
              How to find your Place ID
            </a>
          </p>
        </div>
        
        <%= form.submit "Connect Manually", 
              class: "inline-flex items-center px-4 py-2 bg-yellow-600 text-white text-sm font-medium rounded-lg hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
      <% end %>
    </div>

    <!-- Service Business Manual Entry Section -->
    <div class="mt-6 p-4 bg-purple-50 border border-purple-200 rounded-lg">
      <h3 class="text-sm font-medium text-purple-800 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        Service Business (No Physical Location)
      </h3>
      <p class="text-sm text-purple-700 mb-3">
        If you serve a region but don't have a fixed address, enter your Google Business Profile ID manually:
      </p>

      <%= form_with url: business_manager_settings_business_path, method: :patch, local: true, class: "space-y-3" do |form| %>
        <div>
          <%= form.label :google_business_profile_id, "Google Business Profile ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :google_business_profile_id,
                value: business.google_business_profile_id,
                placeholder: "ChIJN1t_tDeuEmsRUsoyG83frY4",
                class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 sm:text-sm font-mono text-xs" %>
          <p class="mt-1 text-xs text-purple-600">
            <a href="https://developers.google.com/maps/documentation/places/web-service/place-id"
               target="_blank" rel="noopener noreferrer"
               class="underline hover:text-purple-800">
              How to find your Profile ID
            </a>
          </p>
        </div>

        <div class="flex items-center">
          <%= form.check_box :show_google_reviews, checked: business.show_google_reviews, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
          <%= form.label :show_google_reviews, "Show Google Reviews on my website", class: "ml-2 block text-sm text-gray-700" %>
        </div>

        <%= form.submit "Save Settings",
              class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
      <% end %>
    </div>

    <!-- Benefits Preview -->
    <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-green-800">Display Reviews</h4>
            <p class="text-xs text-green-700 mt-1">Bizblasts automatically displays your new and current Google reviews on your business page</p>
          </div>
        </div>
      </div>
      
      <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-blue-800">Request Reviews</h4>
            <p class="text-xs text-blue-700 mt-1">Bizblasts automatically emails customers to request reviews on your behalf</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>