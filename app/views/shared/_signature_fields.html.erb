<div class="mb-4">
  <label class="block text-sm font-medium text-gray-700 mb-2">Your Full Name</label>
<input type="text"
    name="signature_name"
    data-signature-pad-target="signatureName"
    data-action="input->signature-pad#nameChanged"
  value="<%= params[:signature_name].presence || '' %>"
    class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
    placeholder="Enter your full name"
    required>
</div>

<div class="mb-4">
  <label class="block text-sm font-medium text-gray-700 mb-2">Your Signature</label>
  <div class="border border-gray-300 rounded-md bg-white" style="height: 150px;">
    <canvas data-signature-pad-target="canvas" class="w-full h-full rounded-md"></canvas>
  </div>
  <input type="hidden" name="signature_data" data-signature-pad-target="signatureData">
  <div class="mt-2 flex justify-between items-center">
    <button type="button"
      data-action="signature-pad#clearSignature"
      data-signature-pad-target="clearButton"
      class="text-sm text-gray-500 hover:text-gray-700">
      Clear Signature
    </button>
    <span data-signature-pad-target="validationMessage" class="text-sm text-red-600 hidden"></span>
  </div>
</div>
