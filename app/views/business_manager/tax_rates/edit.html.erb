<%# app/views/business_manager/tax_rates/edit.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8 max-w-2xl">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to business_manager_tax_rates_path, 
          class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors mb-4" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Tax Rates
    <% end %>
    
    <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Edit Tax Rate</h1>
    <p class="text-sm text-gray-600 mt-1">Update "<%= @tax_rate.name %>" settings</p>
  </div>

  <!-- Form Container -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:px-6">
      <%= render 'form', tax_rate: @tax_rate %>
    </div>
  </div>
</div> 