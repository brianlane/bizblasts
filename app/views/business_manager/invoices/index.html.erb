<%# app/views/business_manager/invoices/index.html.erb %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Invoices</h1>
  </div>

  <% if @invoices.any? %>
    <table class="min-w-full bg-white border border-gray-200">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Number</th>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Customer</th>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Total</th>
          <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 border-b border-gray-200"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @invoices.each do |invoice| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= invoice.id %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= link_to invoice.invoice_number, business_manager_invoice_path(invoice), class: 'text-blue-600 hover:text-blue-800' %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= invoice.tenant_customer&.name || '-' %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= number_to_currency(invoice.total_amount) %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= invoice.created_at.strftime('%b %d, %Y') %></td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to 'View', business_manager_invoice_path(invoice), class: 'text-indigo-600 hover:text-indigo-900' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="mt-4">
      <%= paginate @invoices %>
    </div>
  <% else %>
    <p class="text-gray-500 italic">No invoices found.</p>
  <% end %>
</div> 