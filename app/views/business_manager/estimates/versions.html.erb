<% content_for :title, "Version History - Estimate #{@estimate.estimate_number || "##{@estimate.id}"}" %>

<div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <div>
        <nav class="flex items-center text-sm text-gray-500 mb-2">
          <%= link_to "Estimates", business_manager_estimates_path, class: "hover:text-gray-700" %>
          <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <%= link_to @estimate.estimate_number || "##{@estimate.id}", business_manager_estimate_path(@estimate), class: "hover:text-gray-700" %>
          <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
          <span class="text-gray-900">Version History</span>
        </nav>
        <h1 class="text-2xl font-bold text-gray-900">Version History</h1>
        <p class="mt-1 text-sm text-gray-500">
          Estimate <%= @estimate.estimate_number || "##{@estimate.id}" %> •
          Current Version: <span class="font-medium"><%= @estimate.current_version %></span> of <%= @estimate.total_versions %>
        </p>
      </div>
      <%= link_to business_manager_estimate_path(@estimate),
        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Estimate
      <% end %>
    </div>
  </div>

  <% if @versions.empty? %>
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <h3 class="mt-4 text-sm font-medium text-gray-900">No version history yet</h3>
      <p class="mt-1 text-sm text-gray-500">Version history is created when estimates are updated after being sent to customers.</p>
    </div>
  <% else %>
    <!-- Version Timeline -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <ul role="list" class="divide-y divide-gray-200">
        <% @versions.each_with_index do |version, index| %>
          <li class="relative">
            <div class="px-6 py-5 flex items-start space-x-4 hover:bg-gray-50">
              <!-- Version Number Badge -->
              <div class="flex-shrink-0">
                <span class="inline-flex items-center justify-center h-10 w-10 rounded-full
                  <%= version.version_number == @estimate.current_version ? 'bg-blue-100 text-blue-600' : 'bg-gray-100 text-gray-600' %>">
                  <span class="text-sm font-medium">v<%= version.version_number %></span>
                </span>
              </div>

              <!-- Version Details -->
              <div class="flex-1 min-w-0">
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-sm font-medium text-gray-900">
                      Version <%= version.version_number %>
                      <% if version.version_number == @estimate.current_version %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          Current
                        </span>
                      <% end %>
                    </h3>
                    <p class="mt-1 text-sm text-gray-500">
                      <%= time_ago_in_words(version.created_at) %> ago
                      <span class="mx-1">•</span>
                      <%= version.created_at.strftime('%B %d, %Y at %I:%M %p') %>
                    </p>
                  </div>

                  <!-- Restore Button (only for non-current versions in modifiable estimates) -->
                  <% if version.version_number != @estimate.current_version && (@estimate.draft? || @estimate.sent? || @estimate.viewed?) %>
                    <%= button_to restore_version_business_manager_estimate_path(@estimate, version_id: version.id),
                      method: :patch,
                      data: { turbo_confirm: "Are you sure you want to restore to version #{version.version_number}? This will create a new version with the restored data." },
                      class: "inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-xs font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                      </svg>
                      Restore
                    <% end %>
                  <% end %>
                </div>

                <!-- Change Notes -->
                <% if version.change_notes.present? %>
                  <p class="mt-2 text-sm text-gray-600">
                    <span class="font-medium">Changes:</span>
                    <%= version.change_notes %>
                  </p>
                <% end %>

                <!-- Version Summary -->
                <% if version.snapshot.present? %>
                  <div class="mt-3 flex items-center space-x-4 text-xs text-gray-500">
                    <span class="inline-flex items-center">
                      <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      Total: <%= number_to_currency(version.snapshot.dig('version_metadata', 'total') || version.snapshot.dig('estimate', 'total')) %>
                    </span>
                    <span class="inline-flex items-center">
                      <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                      </svg>
                      <%= version.snapshot.dig('version_metadata', 'item_count') || version.snapshot.dig('items')&.size || 0 %> items
                    </span>
                    <% if version.snapshot.dig('version_metadata', 'has_signature') %>
                      <span class="inline-flex items-center text-green-600">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Signed
                      </span>
                    <% end %>
                  </div>
                <% end %>

                <!-- Expand/Collapse Details (optional - can show full snapshot) -->
                <details class="mt-3 group">
                  <summary class="cursor-pointer text-xs text-blue-600 hover:text-blue-800 flex items-center">
                    <svg class="w-4 h-4 mr-1 transform group-open:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                    View snapshot details
                  </summary>
                  <div class="mt-2 p-3 bg-gray-50 rounded-lg text-xs">
                    <% snapshot = version.snapshot %>
                    <% if snapshot['items'].present? %>
                      <div class="mb-3">
                        <h4 class="font-medium text-gray-700 mb-1">Items</h4>
                        <table class="w-full text-left">
                          <thead>
                            <tr class="border-b border-gray-200">
                              <th class="py-1 pr-2">Description</th>
                              <th class="py-1 pr-2 text-right">Qty</th>
                              <th class="py-1 pr-2 text-right">Rate</th>
                              <th class="py-1 text-right">Total</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% snapshot['items'].each do |item| %>
                              <tr class="border-b border-gray-100">
                                <td class="py-1 pr-2"><%= item['description'] || 'N/A' %></td>
                                <td class="py-1 pr-2 text-right"><%= item['qty'] %></td>
                                <td class="py-1 pr-2 text-right"><%= number_to_currency(item['cost_rate']) %></td>
                                <td class="py-1 text-right"><%= number_to_currency(item['total']) %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                      </div>
                    <% end %>
                    <div class="grid grid-cols-2 gap-2 text-gray-600">
                      <div>Subtotal: <%= number_to_currency(snapshot.dig('estimate', 'subtotal')) %></div>
                      <div>Taxes: <%= number_to_currency(snapshot.dig('estimate', 'taxes')) %></div>
                      <div>Required Deposit: <%= number_to_currency(snapshot.dig('estimate', 'required_deposit')) %></div>
                      <div>Status: <%= snapshot.dig('estimate', 'status')&.humanize %></div>
                    </div>
                  </div>
                </details>
              </div>
            </div>

            <!-- Timeline connector -->
            <% unless index == @versions.length - 1 %>
              <div class="absolute left-[2.75rem] top-[3.5rem] w-0.5 h-full bg-gray-200" style="height: calc(100% - 2.5rem)"></div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

