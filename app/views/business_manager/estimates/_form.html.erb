<%= form_with model: [:business_manager, @estimate], local: true, data: { controller: "estimate-line-items", estimate_line_items_estimate_id_value: @estimate.id } do |f| %>
  <% if @estimate.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4" role="alert">
      <div class="flex">
        <svg class="w-5 h-5 text-red-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div>
          <h3 class="text-sm font-medium text-red-800 mb-2">
            <%= pluralize(@estimate.errors.count, "error") %> prohibited this estimate from being saved:
          </h3>
          <ul class="text-sm text-red-700 list-disc list-inside space-y-1">
            <% @estimate.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Customer Selection -->
  <div class="mb-6" data-controller="customer-dropdown" data-customer-dropdown-selected-value-value="">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Customer Information</h3>
    
    <%= f.label :customer_selection, 'Customer', class: 'block text-sm font-medium text-gray-700 mb-2' %>
    
    <!-- Custom Customer Dropdown -->
    <div class="customer-dropdown relative">
      <button type="button" 
              class="customer-dropdown-button w-full bg-white border border-gray-300 rounded-md shadow-sm px-3 py-3 text-left cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-base min-h-[48px]"
              data-customer-dropdown-target="button"
              data-action="click->customer-dropdown#toggle">
        <span class="customer-dropdown-text text-gray-900">
          Select customer or create new
        </span>
        <span class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
          <svg class="h-5 w-5 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </span>
      </button>
      
      <!-- Dropdown Menu -->
      <div class="customer-dropdown-menu absolute z-[100] mt-1 w-full bg-white shadow-lg max-h-60 rounded-md py-1 text-base ring-1 ring-black ring-opacity-5 overflow-auto focus:outline-none hidden"
           data-customer-dropdown-target="menu">
        
        <div class="customer-option cursor-pointer select-none relative py-3 px-3 hover:bg-blue-50 transition-colors"
             data-item-id="new"
             data-item-text="Create new customer"
             data-customer-dropdown-target="option"
             data-action="click->customer-dropdown#select">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <div class="font-medium text-blue-600">+ Create new customer</div>
            </div>
          </div>
        </div>
        
        <% if @customers.any? %>
          <div class="border-t border-gray-200"></div>
          <% @customers.each do |customer| %>
            <div class="customer-option cursor-pointer select-none relative py-3 px-3 hover:bg-blue-50 transition-colors"
                 data-item-id="<%= customer.id %>"
                 data-item-text="<%= customer.full_name %> (<%= customer.email %>)"
                 data-customer-dropdown-target="option"
                 data-action="click->customer-dropdown#select">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="font-medium text-gray-900"><%= customer.full_name %></div>
                  <% if customer.email.present? %>
                    <div class="text-sm text-gray-500 mt-1"><%= customer.email %></div>
                  <% end %>
                  <% if customer.phone.present? %>
                    <div class="text-xs text-gray-400 mt-1"><%= customer.phone %></div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <!-- Hidden field to store the selected customer ID -->
    <%= f.hidden_field :tenant_customer_id, data: { customer_dropdown_target: "hidden" } %>

    <!-- Customer Details Section (for new customers) -->
    <div id="customer-details" class="mb-6 hidden" data-customer-dropdown-target="newCustomerFields">
    <h4 class="text-md font-medium text-gray-900 mb-4">Customer Details</h4>
    
    <!-- New customer fields - these create the tenant_customer -->
    <%= f.fields_for :tenant_customer do |cf| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
          <%= cf.label :first_name, 'First Name', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= cf.text_field :first_name, class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
        </div>
        <div>
          <%= cf.label :last_name, 'Last Name', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= cf.text_field :last_name, class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
          <%= cf.label :email, 'Email', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= cf.email_field :email, class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
        </div>
        <div>
          <%= cf.label :phone, 'Phone', class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= cf.telephone_field :phone, class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
        </div>
      </div>
      
      <div class="mb-4">
        <%= cf.label :address, 'Address', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= cf.text_field :address, class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
      </div>
    <% end %>
    
    <!-- Additional estimate-specific location fields (city, state, zip) -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
      <div>
        <%= f.label :city, 'City', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :city, class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
      </div>
      <div>
        <%= f.label :state, 'State', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :state, class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
      </div>
      <div>
        <%= f.label :zip, 'ZIP Code', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :zip, class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
      </div>
    </div>
    </div>
  </div>

  <!-- Proposed Schedule -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Proposed Schedule</h3>

    <div class="mb-4">
      <%= f.label :proposed_start_time, 'Proposed Start Time', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.text_field :proposed_start_time,
            type: 'datetime-local',
            value: (@estimate.proposed_start_time ? @estimate.proposed_start_time.strftime('%Y-%m-%dT%H:%M') : nil),
            class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm' %>
    </div>
  </div>

  <!-- Deposit Information -->
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Deposit Information</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= f.label :required_deposit, 'Required Deposit ($)', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.number_field :required_deposit, step: 0.01, min: 0, 
              class: 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
              placeholder: '0.00' %>
      </div>
    </div>
  </div>

  <!-- Line Items -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900">Estimate Line Items</h3>
      <button type="button"
              data-action="estimate-line-items#addItem"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Line Item
      </button>
    </div>

    <!-- Line Items Table -->
    <div class="overflow-x-auto border border-gray-200 rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item / Fields</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Qty</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rate</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tax %</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Optional</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200" data-estimate-line-items-target="items">
          <%= f.fields_for :estimate_items do |item| %>
            <%= render partial: 'estimate_item_fields', locals: { item: item, services: @services, products: @products } %>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Template for new line items -->
    <template data-estimate-line-items-target="template">
      <tr data-estimate-line-items-target="item">
        <!-- Item Type -->
        <td class="px-4 py-3">
          <select name="estimate[estimate_items_attributes][NEW_RECORD][item_type]"
                  class="block w-full px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                  data-action="change->estimate-line-items#changeItemType">
            <option value="service">Service</option>
            <option value="product">Product</option>
            <option value="labor">Labor</option>
            <option value="part">Part</option>
          </select>
        </td>

        <!-- Service/Product Selection / Labor Fields -->
        <td class="px-4 py-3">
          <!-- Service Select -->
          <div data-field-type="service">
            <select name="estimate[estimate_items_attributes][NEW_RECORD][service_id]"
                    class="block w-full px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                    data-action="change->estimate-line-items#selectService">
              <option value="">-- Select Service --</option>
              <% @services.each do |service| %>
                <option value="<%= service.id %>" data-price="<%= service.price %>" data-description="<%= service.name %>">
                  <%= service.name %>
                </option>
              <% end %>
            </select>
          </div>

          <!-- Product Select -->
          <div data-field-type="product" class="hidden">
            <select name="estimate[estimate_items_attributes][NEW_RECORD][product_id]"
                    class="block w-full px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                    data-action="change->estimate-line-items#selectProduct">
              <option value="">-- Select Product --</option>
              <% @products.each do |product| %>
                <option value="<%= product.id %>" data-price="<%= product.price %>" data-description="<%= product.name %>">
                  <%= product.name %>
                </option>
              <% end %>
            </select>
          </div>

          <!-- Labor Fields -->
          <div data-field-type="labor" class="hidden">
            <div class="grid grid-cols-2 gap-2">
              <div>
                <label class="block text-xs text-gray-500">Hours</label>
                <input type="number" name="estimate[estimate_items_attributes][NEW_RECORD][hours]"
                       step="0.5" min="0"
                       class="block w-full px-2 py-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
                       placeholder="Hours"
                       data-action="input->estimate-line-items#calculateLaborTotal" />
              </div>
              <div>
                <label class="block text-xs text-gray-500">Rate/Hr</label>
                <input type="number" name="estimate[estimate_items_attributes][NEW_RECORD][hourly_rate]"
                       step="0.01" min="0"
                       class="block w-full px-2 py-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
                       placeholder="$/hr"
                       data-action="input->estimate-line-items#calculateLaborTotal" />
              </div>
            </div>
          </div>
        </td>

        <!-- Description -->
        <td class="px-4 py-3">
          <input type="text" name="estimate[estimate_items_attributes][NEW_RECORD][description]"
                 class="block w-full px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                 placeholder="Description"
                 data-action="input->estimate-line-items#inputChanged" />
        </td>

        <!-- Qty (hidden for labor) -->
        <td class="px-4 py-3">
          <div data-field-type="standard">
            <input type="number" name="estimate[estimate_items_attributes][NEW_RECORD][qty]"
                   min="1" value="1"
                   class="block w-full px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   placeholder="1"
                   data-action="input->estimate-line-items#inputChanged" />
          </div>
        </td>

        <!-- Rate (hidden for labor) -->
        <td class="px-4 py-3">
          <div data-field-type="standard">
            <input type="number" name="estimate[estimate_items_attributes][NEW_RECORD][cost_rate]"
                   step="0.01" min="0"
                   class="block w-full px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   placeholder="0.00"
                   data-action="input->estimate-line-items#inputChanged" />
          </div>
        </td>

        <!-- Tax Rate -->
        <td class="px-4 py-3">
          <input type="number" name="estimate[estimate_items_attributes][NEW_RECORD][tax_rate]"
                 step="0.01" min="0" value="0"
                 class="block w-full px-2 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                 placeholder="0"
                 data-action="input->estimate-line-items#inputChanged" />
        </td>

        <!-- Optional -->
        <td class="px-4 py-3 text-center">
          <label class="inline-flex items-center">
            <input type="checkbox" name="estimate[estimate_items_attributes][NEW_RECORD][optional]"
                   class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                   data-action="change->estimate-line-items#inputChanged" />
          </label>
        </td>

        <!-- Line Total -->
        <td class="px-4 py-3 text-right">
          <span data-estimate-line-items-target="itemTotal" class="font-medium text-gray-900">$0.00</span>
        </td>

        <!-- Actions -->
        <td class="px-4 py-3 text-center">
          <button type="button"
                  data-action="estimate-line-items#removeItem"
                  class="text-red-600 hover:text-red-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          </button>
          <input type="hidden" name="estimate[estimate_items_attributes][NEW_RECORD][position]" value="" />
        </td>
      </tr>

      <!-- Save for Future Use Section Template (for labor and part items) -->
      <tr data-field-type="save-for-future" class="bg-blue-50 hidden">
        <td colspan="9" class="px-4 py-3">
          <!-- Save as Service (for labor items) -->
          <div data-save-type="service" class="hidden">
            <div class="flex items-start space-x-4">
              <label class="inline-flex items-center mt-1">
                <input type="checkbox" name="estimate[estimate_items_attributes][NEW_RECORD][save_as_service]"
                       class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                       data-action="change->estimate-line-items#toggleSaveForFuture">
                <span class="ml-2 text-sm font-medium text-gray-700">Save as Service</span>
              </label>
              <div data-field-type="save-service-fields" class="hidden flex-1">
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-xs font-medium text-gray-600">Service Type *</label>
                    <select name="estimate[estimate_items_attributes][NEW_RECORD][service_type]"
                            class="block w-full px-2 py-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm">
                      <option value="">-- Select Type --</option>
                      <option value="standard">Standard</option>
                      <option value="experience">Experience</option>
                      <option value="event">Event</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600">Service Name *</label>
                    <input type="text" name="estimate[estimate_items_attributes][NEW_RECORD][service_name]"
                           class="block w-full px-2 py-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
                           placeholder="Enter service name">
                  </div>
                </div>
                <p class="mt-1 text-xs text-gray-500">
                  Service will be created when estimate is saved. Duration and price auto-calculated from hours and rate.
                </p>
              </div>
            </div>
          </div>
          <!-- Save as Product (for part items) -->
          <div data-save-type="product" class="hidden">
            <div class="flex items-start space-x-4">
              <label class="inline-flex items-center mt-1">
                <input type="checkbox" name="estimate[estimate_items_attributes][NEW_RECORD][save_as_product]"
                       class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                       data-action="change->estimate-line-items#toggleSaveForFuture">
                <span class="ml-2 text-sm font-medium text-gray-700">Save as Product</span>
              </label>
              <div data-field-type="save-product-fields" class="hidden flex-1">
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-xs font-medium text-gray-600">Product Type *</label>
                    <select name="estimate[estimate_items_attributes][NEW_RECORD][product_type]"
                            class="block w-full px-2 py-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm">
                      <option value="">-- Select Type --</option>
                      <option value="standard">Standard</option>
                      <option value="service">Service Product</option>
                      <option value="mixed">Mixed</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600">Product Name *</label>
                    <input type="text" name="estimate[estimate_items_attributes][NEW_RECORD][product_name]"
                           class="block w-full px-2 py-1 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm"
                           placeholder="Enter product name">
                  </div>
                </div>
                <p class="mt-1 text-xs text-gray-500">
                  Product will be created when estimate is saved. Price auto-set from cost rate.
                </p>
              </div>
            </div>
          </div>
        </td>
      </tr>
    </template>
  </div>

  <!-- Totals Summary -->
  <div class="mt-6 bg-gray-50 rounded-lg p-6 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Estimate Totals</h3>

    <div class="space-y-3">
      <div class="flex justify-between text-sm">
        <span class="text-gray-600">Subtotal:</span>
        <span data-estimate-line-items-target="subtotal" class="font-medium text-gray-900">$0.00</span>
      </div>

      <div class="flex justify-between text-sm">
        <span class="text-gray-600">Taxes:</span>
        <span data-estimate-line-items-target="taxes" class="font-medium text-gray-900">$0.00</span>
      </div>

      <div class="flex justify-between text-sm text-gray-500 border-t pt-3">
        <span>Optional Items Subtotal:</span>
        <span data-estimate-line-items-target="optionalSubtotal">$0.00</span>
      </div>

      <div class="flex justify-between text-sm text-gray-500">
        <span>Optional Items Taxes:</span>
        <span data-estimate-line-items-target="optionalTaxes">$0.00</span>
      </div>

      <div class="flex justify-between text-lg font-bold border-t-2 border-gray-300 pt-3">
        <span class="text-gray-900">Total:</span>
        <span data-estimate-line-items-target="total" class="text-blue-600">$0.00</span>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
    <%= link_to 'Cancel', business_manager_estimates_path, 
          class: 'inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
    <%= f.submit (@estimate.persisted? ? 'Update Estimate' : 'Create Estimate'), 
          class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
     </div>
 <% end %> 