<% content_for :title, 'Estimates' %>

<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold mb-4">Estimates</h1>
  <%= link_to 'New Estimate', new_business_manager_estimate_path, class: 'px-4 py-2 bg-blue-500 text-white rounded mb-4 inline-block' %>
  <table class="min-w-full mt-4">
    <thead>
      <tr>
        <th>ID</th>
        <th>Customer</th>
        <th>Status</th>
        <th>Total</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @estimates.each do |estimate| %>
        <tr>
          <td><%= estimate.id %></td>
          <td><%= estimate.tenant_customer&.full_name || "#{estimate.first_name} #{estimate.last_name}" %></td>
          <td><%= estimate.status %></td>
          <td><%= number_to_currency(estimate.total) %></td>
          <td><%= l(estimate.created_at, format: :short) %></td>
          <td>
            <%= link_to 'Show', business_manager_estimate_path(estimate), class: 'text-blue-500' %>
            <%= link_to 'Edit', edit_business_manager_estimate_path(estimate), class: 'text-green-500 ml-2' %>
            <%= link_to 'Delete', business_manager_estimate_path(estimate), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-red-500 ml-2' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 