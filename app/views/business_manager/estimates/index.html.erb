<% content_for :title, 'Estimates' %>

<%# app/views/business_manager/estimates/index.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-xl sm:text-2xl font-bold">Estimates</h1>
          <p class="text-sm text-gray-600 mt-1">Create and manage customer estimates and quotes</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-2">
          <%= link_to new_business_manager_estimate_path,
                class: "inline-flex items-center justify-center px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            New Estimate
          <% end %>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <% if @estimates.any? %>
        <!-- Mobile Card Layout (hidden on lg+ screens) -->
        <div class="lg:hidden space-y-4">
          <% @estimates.each do |estimate| %>
            <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
              <div class="p-4">
                <div class="flex items-start justify-between mb-3">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-3 mb-2">
                      <h3 class="text-base font-semibold text-gray-900">
                        <%= link_to estimate.estimate_number || "##{estimate.id}", business_manager_estimate_path(estimate), class: "text-blue-600 hover:text-blue-800 transition-colors" %>
                      </h3>
                      <%= render_estimate_status_badge(estimate) %>
                    </div>
                    
                    <div class="space-y-1 text-sm">
                      <div class="flex items-center text-gray-600">
                        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                        <%= estimate.tenant_customer&.full_name || "#{estimate.first_name} #{estimate.last_name}".strip.presence || 'No customer' %>
                      </div>
                      <div class="flex items-center text-gray-600">
                        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span class="font-semibold text-green-600"><%= number_to_currency(estimate.total) %></span>
                      </div>
                      <div class="flex items-center text-gray-500">
                        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <%= estimate.created_at.strftime('%b %d, %Y') %>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center gap-2 pt-3 border-t border-gray-100">
                  <%= link_to business_manager_estimate_path(estimate),
                        class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-md transition-colors" do %>
                    View
                  <% end %>
                  <%= link_to edit_business_manager_estimate_path(estimate),
                        class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-xs font-medium text-amber-600 bg-amber-50 hover:bg-amber-100 rounded-md transition-colors" do %>
                    Edit
                  <% end %>
                  <%= button_to business_manager_estimate_path(estimate),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete estimate #{estimate.estimate_number || "##{estimate.id}"}?" },
                        class: "inline-flex items-center justify-center px-3 py-2 text-xs font-medium text-red-600 bg-red-50 hover:bg-red-100 rounded-md transition-colors border-0" do %>
                    Delete
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table Layout (hidden on mobile) -->
        <div class="hidden lg:block">
          <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200">
              <thead class="bg-gray-100">
                <tr>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Estimate</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Customer</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Total</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Created</th>
                  <th class="px-6 py-3 border-b border-gray-200"></th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @estimates.each do |estimate| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-semibold">
                        <%= link_to estimate.estimate_number || "##{estimate.id}", business_manager_estimate_path(estimate), class: "text-blue-600 hover:text-blue-800 transition-colors" %>
                      </div>
                      <% if estimate.estimate_messages.any? %>
                        <span class="inline-flex items-center text-xs text-blue-600">
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                          </svg>
                          <%= pluralize(estimate.estimate_messages.count, 'message') %>
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% customer_name = estimate.tenant_customer&.full_name || "#{estimate.first_name} #{estimate.last_name}".strip.presence %>
                      <% if customer_name.present? %>
                        <div class="text-sm font-medium text-gray-900"><%= customer_name %></div>
                        <div class="text-xs text-gray-500"><%= estimate.customer_email || estimate.tenant_customer&.email %></div>
                      <% else %>
                        <span class="text-sm text-gray-400">No customer</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= render_estimate_status_badge(estimate) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="text-sm font-semibold text-green-600"><%= number_to_currency(estimate.total) %></span>
                      <% if estimate.required_deposit.present? && estimate.required_deposit > 0 %>
                        <div class="text-xs text-gray-500">Deposit: <%= number_to_currency(estimate.required_deposit) %></div>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                      <%= estimate.created_at.strftime('%b %d, %Y') %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <div class="flex items-center justify-end space-x-2">
                        <%= link_to 'View', business_manager_estimate_path(estimate),
                              class: "text-indigo-600 hover:text-indigo-900 transition-colors" %>
                        <%= link_to 'Edit', edit_business_manager_estimate_path(estimate),
                              class: "text-indigo-600 hover:text-indigo-900 transition-colors" %>
                        <%= button_to 'Delete',
                              business_manager_estimate_path(estimate),
                              method: :delete,
                              data: { turbo_confirm: "Are you sure you want to delete estimate #{estimate.estimate_number || "##{estimate.id}"}?" },
                              class: 'text-red-600 hover:text-red-900 transition-colors bg-transparent border-0 p-0' %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Pagination -->
        <% if respond_to?(:paginate) && @estimates.respond_to?(:current_page) && @estimates.total_pages > 1 %>
          <div class="flex justify-center mt-8">
            <%= paginate @estimates %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No estimates yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating your first estimate.</p>
          <div class="mt-6">
            <%= link_to new_business_manager_estimate_path,
                  class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              Create Estimate
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
