<%# Local variables: business, video_info %>

<div class="bg-white rounded-lg shadow mb-8">
  <div class="p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Gallery Video</h2>
      <span class="text-sm text-gray-500"><strong class="text-gray-700">Recommended: MP4</strong> | WebM, MOV up to 50MB</span>
    </div>

    <% if video_info.present? %>
      <%# Check if video is being converted (content type is convertible) %>
      <% is_converting = %w[video/quicktime video/x-msvideo video/x-ms-wmv].include?(video_info[:content_type]) %>

      <% if is_converting %>
        <!-- Conversion In Progress Banner -->
        <div class="mb-4 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex items-center">
            <svg class="animate-spin h-5 w-5 text-blue-600 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <div>
              <p class="text-sm font-medium text-blue-900">Converting video to MP4...</p>
              <p class="text-xs text-blue-700 mt-1">
                Your <%= video_info[:content_type]&.include?('quicktime') ? 'MOV' : 'video' %> file is being converted to MP4 for better browser compatibility. 
                <strong>Refresh the page</strong> in a moment to see the converted video.
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Existing Video -->
      <div class="border border-gray-200 rounded-lg p-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 items-start">
          <!-- Video Preview -->
          <div class="bg-gray-100 rounded-lg overflow-hidden">
            <video controls class="w-full h-64 object-cover">
              <source src="<%= video_info[:url] %>" type="<%= video_info[:content_type] %>">
              Your browser does not support the video tag.
            </video>
          </div>

          <!-- Video Settings -->
          <div>
            <%= form_with url: business_manager_gallery_video_path, method: :patch,
                         data: { turbo: true } do |f| %>
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Video Title (Optional)</label>
                  <%= f.text_field :video_title, value: video_info[:title],
                                  class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                                  placeholder: "e.g., Welcome Video" %>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Display Location</label>
                  <div class="space-y-2">
                    <label class="flex items-center">
                      <%= f.radio_button :video_display_location, 'hero',
                                        checked: business.video_display_location_hero?,
                                        class: "rounded-full border-gray-300 text-blue-600 focus:ring-blue-500" %>
                      <span class="ml-2 text-sm text-gray-700">
                        Hero Section Only
                        <span class="text-gray-500 text-xs block">Auto-plays as background video</span>
                      </span>
                    </label>

                    <label class="flex items-center">
                      <%= f.radio_button :video_display_location, 'gallery',
                                        checked: business.video_display_location_gallery?,
                                        class: "rounded-full border-gray-300 text-blue-600 focus:ring-blue-500" %>
                      <span class="ml-2 text-sm text-gray-700">
                        Gallery Section Only
                        <span class="text-gray-500 text-xs block">Shows with play controls in gallery</span>
                      </span>
                    </label>

                    <label class="flex items-center">
                      <%= f.radio_button :video_display_location, 'both',
                                        checked: business.video_display_location_both?,
                                        class: "rounded-full border-gray-300 text-blue-600 focus:ring-blue-500" %>
                      <span class="ml-2 text-sm text-gray-700">
                        Both Locations
                        <span class="text-gray-500 text-xs block">Hero background + gallery section</span>
                      </span>
                    </label>
                  </div>
                </div>

                <% if business.video_display_location_hero? || business.video_display_location_both? %>
                  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <label class="flex items-start">
                      <%= f.check_box :video_autoplay_hero,
                                     checked: business.video_autoplay_hero?,
                                     class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500 mt-0.5" %>
                      <span class="ml-2">
                        <span class="text-sm font-medium text-gray-900">Autoplay in Hero</span>
                        <span class="text-xs text-gray-600 block mt-1">
                          Video will loop silently in the background
                        </span>
                      </span>
                    </label>
                  </div>
                <% end %>

                <!-- Video Info -->
                <div class="bg-gray-50 rounded-lg p-4">
                  <dl class="grid grid-cols-2 gap-2 text-sm">
                    <dt class="text-gray-500">Filename:</dt>
                    <dd class="text-gray-900 font-medium truncate"><%= video_info[:filename] %></dd>

                    <dt class="text-gray-500">File Size:</dt>
                    <dd class="text-gray-900 font-medium"><%= video_info[:size_human] %></dd>

                    <dt class="text-gray-500">Format:</dt>
                    <dd class="text-gray-900 font-medium"><%= video_info[:content_type] %></dd>
                  </dl>
                </div>

                <%# Format warning is now replaced by conversion banner at top %>

                <!-- Actions -->
                <div>
                  <%= f.submit "Save Settings", class: "w-full inline-flex items-center justify-center px-4 py-2 bg-primary text-white font-medium rounded-lg hover:bg-primary transition-colors shadow-sm cursor-pointer" %>
                </div>
              </div>
            <% end %>

            <!-- Delete Button (outside form to avoid nesting) -->
            <div class="mt-4">
              <%= button_to "Remove Video",
                           business_manager_gallery_video_path,
                           method: :delete,
                           data: { turbo_confirm: "Are you sure you want to remove this video?" },
                           class: "w-full inline-flex items-center justify-center px-4 py-2 bg-error text-white font-medium rounded-lg hover:bg-red-600 transition-colors shadow-sm cursor-pointer" %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <!-- Upload Video Form -->
      <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 hover:border-blue-500 transition">
        <%= form_with url: business_manager_gallery_video_path, method: :post,
                     data: { turbo: true }, multipart: true do |f| %>
          <div class="text-center mb-6">
            <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            <h3 class="mt-2 text-lg font-medium text-gray-900">Upload Your Gallery Video</h3>
            <p class="mt-1 text-sm text-gray-500">Showcase your business with a compelling video</p>
          </div>

          <div class="max-w-md mx-auto space-y-4">
            <div class="text-center">
              <label class="block text-sm font-medium text-gray-700 mb-3">Select Video File</label>
              <div class="flex flex-col items-center justify-center space-y-2">
                <input type="file"
                       name="video_file"
                       id="video_file_input"
                       accept="video/*"
                       required
                       class="hidden"
                       onchange="updateFileName(this)">
                <label for="video_file_input"
                       class="inline-flex items-center justify-center px-6 py-2.5 bg-white text-gray-700 font-medium rounded-lg border-2 border-gray-300 hover:border-primary hover:bg-blue-50 transition-colors shadow-sm cursor-pointer">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                  </svg>
                  Choose File
                </label>
                <span id="file-name" class="text-sm text-gray-500">No file chosen</span>
              </div>
              <p class="mt-3 text-xs text-gray-500">MP4 (recommended), WebM, MOV, or AVI up to 50MB</p>
            </div>

            <script>
              function updateFileName(input) {
                const fileNameSpan = document.getElementById('file-name');
                if (input.files.length > 0) {
                  fileNameSpan.textContent = input.files[0].name;
                  fileNameSpan.classList.remove('text-gray-500');
                  fileNameSpan.classList.add('text-gray-900', 'font-medium');
                } else {
                  fileNameSpan.textContent = 'No file chosen';
                  fileNameSpan.classList.remove('text-gray-900', 'font-medium');
                  fileNameSpan.classList.add('text-gray-500');
                }
              }
            </script>

            <!-- Format Compatibility Info -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="flex-1">
                  <h5 class="text-xs font-semibold text-blue-900 mb-1">Auto-Conversion for MOV Files</h5>
                  <p class="text-xs text-blue-800">
                    <strong>MP4 format is recommended</strong> for best compatibility.
                    If you upload a <strong>MOV file</strong>, it will be automatically converted to MP4
                    in the background. Refresh the page after a moment to see your converted video.
                  </p>
                </div>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Video Title (Optional)</label>
              <%= f.text_field :video_title,
                              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                              placeholder: "e.g., Welcome to Our Business" %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Where should this video appear?</label>
              <div class="space-y-2">
                <label class="flex items-center">
                  <%= f.radio_button :video_display_location, 'hero', checked: true,
                                    class: "rounded-full border-gray-300 text-blue-600 focus:ring-blue-500" %>
                  <span class="ml-2 text-sm text-gray-700">Hero Section (Autoplay Background)</span>
                </label>

                <label class="flex items-center">
                  <%= f.radio_button :video_display_location, 'gallery',
                                    class: "rounded-full border-gray-300 text-blue-600 focus:ring-blue-500" %>
                  <span class="ml-2 text-sm text-gray-700">Gallery Section (With Controls)</span>
                </label>

                <label class="flex items-center">
                  <%= f.radio_button :video_display_location, 'both',
                                    class: "rounded-full border-gray-300 text-blue-600 focus:ring-blue-500" %>
                  <span class="ml-2 text-sm text-gray-700">Both Locations</span>
                </label>
              </div>
            </div>

            <%= f.hidden_field :video_autoplay_hero, value: true %>

            <%= f.submit "Upload Video", class: "w-full inline-flex items-center justify-center px-4 py-2.5 bg-primary text-white font-medium rounded-lg hover:bg-[#145169] transition-colors shadow-sm cursor-pointer" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Video Tips -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <h4 class="text-sm font-medium text-blue-900 mb-2">ðŸ’¡ Video Tips</h4>
      <ul class="text-sm text-blue-800 space-y-1">
        <li>â€¢ <strong>MP4 format recommended</strong> - MOV files are auto-converted to MP4</li>
        <li>â€¢ Keep videos short (30-60 seconds) for best engagement</li>
        <li>â€¢ Use high-quality footage with good lighting</li>
        <li>â€¢ Hero videos autoplay muted in the background</li>
        <li>â€¢ Consider mobile users - videos should load quickly</li>
        <li>â€¢ After uploading MOV, refresh the page to see the converted video</li>
      </ul>
    </div>
  </div>
</div>
