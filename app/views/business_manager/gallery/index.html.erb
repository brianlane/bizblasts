<% content_for :title, "Gallery Management" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-controller="gallery-manager">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Photos & Videos Gallery</h1>
        <p class="mt-2 text-sm text-gray-600">
          Manage your gallery photos (<%= @photos_count %>/100) and video for your website.
        </p>
      </div>
      <div class="flex flex-wrap gap-3">
        <%= link_to root_path(anchor: 'gallery'), target: "_blank", class: "inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary transition-colors shadow-sm" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          View Gallery Live
        <% end %>
        <%= link_to edit_business_manager_settings_website_pages_path, class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors shadow-sm" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Gallery Settings
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-blue-100 rounded-md p-3">
          <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Total Photos</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @photos_count %>/100</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-purple-100 rounded-md p-3">
          <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Gallery Video</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @video_info.present? ? "Yes" : "No" %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-100 rounded-md p-3">
          <svg class="h-6 w-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Gallery Status</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @business.gallery_enabled? ? "Enabled" : "Disabled" %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Upload Section -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Upload New Photos</h2>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Upload from Computer -->
        <%= form_with url: business_manager_gallery_photos_path, method: :post,
                     data: { turbo_frame: "_top" } do |f| %>
          <%= f.file_field :image, accept: "image/*", multiple: true,
                          class: "hidden", id: "photo_upload",
                          data: { action: "change->photo-upload#handleFiles", controller: "photo-upload" } %>
          <%= f.label :photo_upload, class: "border-2 border-dashed border-gray-300 rounded-lg p-6 hover:border-primary hover:bg-light transition cursor-pointer block" do %>
            <div class="flex flex-col items-center text-center py-4">
              <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
              <h3 class="text-sm font-medium text-gray-900">Upload from Computer</h3>
              <p class="mt-1 text-sm text-gray-500">PNG, JPG, GIF, WebP, HEIC up to 15MB</p>
              <p class="mt-4 text-xs text-gray-500"><%= @photos_count < 100 ? "#{100 - @photos_count} slots remaining" : "Gallery full" %></p>
            </div>
          <% end %>
        <% end %>

        <!-- Link from Services/Products -->
        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 hover:border-primary hover:bg-light transition cursor-pointer"
             data-action="click->gallery-manager#openLinkModal">
          <div class="flex flex-col items-center text-center py-4">
            <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
            </svg>
            <h3 class="text-sm font-medium text-gray-900">Link Existing Images</h3>
            <p class="mt-1 text-sm text-gray-500">Add photos from your services or products</p>
            <p class="mt-4 text-xs text-gray-500">
              <% available_count = @available_images[:services].count + @available_images[:products].count %>
              <%= available_count %> images available
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Video Section -->
  <div id="gallery_video_section">
    <%= render 'business_manager/gallery/video_section', business: @business, video_info: @video_info %>
  </div>

  <!-- All Gallery Photos -->
  <div class="bg-white rounded-lg shadow">
    <div class="p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold text-gray-900">All Gallery Photos</h2>
        <div class="flex items-center gap-4">
          <!-- View Selector Dropdown -->
          <div class="relative inline-block"
               data-controller="dropdown"
               data-dropdown-selected-value-value="grid"
               data-dropdown-selected-text-value="Grid View"
               data-action="dropdown:selected->gallery-manager#handleDropdownChange">
            <input type="hidden" name="view_mode" value="grid" data-dropdown-target="hidden">
            <button type="button"
                    class="inline-flex items-center justify-between bg-white border border-gray-300 rounded-md shadow-sm px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary min-w-[140px]"
                    data-dropdown-target="button"
                    data-action="click->dropdown#toggle">
              <span class="rich-dropdown-text">Grid View</span>
              <svg class="ml-2 h-5 w-5 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div class="hidden absolute right-0 z-10 mt-1 w-48 bg-white shadow-lg rounded-md py-1 text-sm ring-1 ring-black ring-opacity-5"
                 data-dropdown-target="menu">
              <div class="cursor-pointer select-none relative py-2 px-3 hover:bg-light transition-colors"
                   data-dropdown-target="option"
                   data-item-id="grid"
                   data-item-text="Grid View"
                   data-action="click->dropdown#select">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
                  </svg>
                  Grid View
                </div>
              </div>
              <div class="cursor-pointer select-none relative py-2 px-3 hover:bg-light transition-colors"
                   data-dropdown-target="option"
                   data-item-id="list"
                   data-item-text="List View"
                   data-action="click->dropdown#select">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                  </svg>
                  List View
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% if @gallery_photos.any? %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4"
             id="gallery_photos_grid">
          <% @gallery_photos.each do |photo| %>
            <%= render 'business_manager/gallery/photo_card', photo: photo %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No photos yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by uploading your first photo or linking existing images.</p>
        </div>
      <% end %>
    </div>
  </div>

<!-- Edit Photo Modal -->
<div id="edit_photo_modal"
     class="hidden fixed inset-0 z-50"
     data-gallery-manager-target="editModal"
     data-action="click->gallery-manager#closeEditModal">
  <div class="flex items-center justify-center min-h-screen p-4" data-action="click->gallery-manager#stopPropagation">
    <div class="bg-white rounded-lg w-full max-w-xl shadow-xl overflow-hidden">
      <div class="flex items-start justify-between px-6 py-4 border-b border-gray-200">
        <div>
          <h3 class="text-lg font-semibold text-gray-900">Edit Photo</h3>
          <p class="text-xs text-gray-500">Update the title or description.</p>
        </div>
        <button type="button"
                class="text-gray-400 hover:text-gray-600 transition"
                aria-label="Close"
                data-action="click->gallery-manager#closeEditModal">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <div class="px-6 py-4">
        <div class="hidden mb-4 border border-red-200 text-red-700 bg-red-50 rounded-md px-4 py-2 text-sm"
             data-gallery-manager-target="editErrors"></div>

        <form data-gallery-manager-target="editForm"
              data-action="submit->gallery-manager#submitEdit">
          <input type="hidden" name="_method" value="patch">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

          <div class="space-y-4">
            <div>
              <label for="gallery_photo_title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
              <input id="gallery_photo_title"
                     name="gallery_photo[title]"
                     type="text"
                     data-gallery-manager-target="titleInput"
                     class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                     placeholder="Add a title (optional)">
            </div>

            <div>
              <label for="gallery_photo_description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
              <textarea id="gallery_photo_description"
                        name="gallery_photo[description]"
                        rows="3"
                        data-gallery-manager-target="descriptionInput"
                        class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"
                        placeholder="Tell visitors more about this photo"></textarea>
            </div>
          </div>

          <div class="mt-6 flex justify-end gap-3">
            <button type="button"
                    class="inline-flex items-center justify-center px-4 py-2 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors shadow-sm cursor-pointer"
                    data-action="click->gallery-manager#closeEditModal">
              Cancel
            </button>
            <button type="submit"
                    class="inline-flex items-center justify-center px-4 py-2 bg-primary text-white font-medium rounded-lg hover:bg-primary transition-colors shadow-sm cursor-pointer"
                    data-gallery-manager-target="saveButton">
              Save Changes
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Link Images Modal -->
<div id="link_images_modal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 z-50" data-controller="modal">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-lg max-w-4xl w-full max-h-[90vh] overflow-hidden">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900">Link Existing Images</h3>
          <button type="button" data-action="click->modal#close" class="text-gray-400 hover:text-gray-500">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
      <div class="p-6 overflow-y-auto max-h-[calc(90vh-200px)]">
        <%= render 'business_manager/gallery/link_images_content', available_images: @available_images %>
      </div>
    </div>
  </div>
</div>

</div>
