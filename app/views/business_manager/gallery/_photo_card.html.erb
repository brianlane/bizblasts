<%# Local variables: photo, featured (optional) %>
<% featured ||= false %>

<div id="gallery_photo_<%= photo.id %>"
     class="group relative bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-200 overflow-hidden <%= 'ring-2 ring-yellow-400' if photo.featured? %>"
     data-photo-id="<%= photo.id %>"
     data-sortable-id="<%= photo.id %>">

  <!-- Image -->
  <div class="aspect-w-4 aspect-h-3 bg-gray-200">
    <% if photo.has_image? %>
      <%= image_tag photo.image_url(:medium), alt: photo.title || "Gallery photo",
                    class: "w-full h-48 object-cover" %>
    <% else %>
      <div class="flex items-center justify-center h-48 bg-gray-100">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
    <% end %>

    <!-- Drag handle (only in reorder mode) -->
    <div class="hidden absolute top-2 left-2 bg-white rounded p-1 shadow cursor-move sortable-handle"
         data-sortable-handle>
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
      </svg>
    </div>

    <!-- Featured badge -->
    <% if photo.featured? %>
      <div class="absolute top-2 right-2 bg-yellow-400 text-yellow-900 px-2 py-1 rounded-full text-xs font-semibold flex items-center">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        Featured
      </div>
    <% end %>

    <!-- Source badge -->
    <% if photo.photo_source_service? || photo.photo_source_product? %>
      <div class="absolute bottom-2 left-2 bg-blue-500 text-white px-2 py-1 rounded text-xs font-medium">
        <%= photo.photo_source.titleize %>
      </div>
    <% end %>

    <!-- Overlay with actions (visible on hover) -->
    <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-opacity duration-200 flex items-center justify-center opacity-0 group-hover:opacity-100">
      <div class="flex gap-2">
        <!-- Toggle Featured -->
        <%= button_to business_manager_gallery_toggle_featured_photo_path(photo),
                     method: :post,
                     data: { turbo_method: :post },
                     class: "p-2 bg-white rounded-full hover:bg-yellow-100 transition",
                     title: photo.featured? ? "Unfeature" : "Feature" do %>
          <svg class="w-5 h-5 <%= photo.featured? ? 'text-yellow-500' : 'text-gray-600' %>" fill="<%= photo.featured? ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
        <% end %>

        <!-- Edit -->
        <button type="button"
                data-action="click->gallery-manager#editPhoto"
                data-photo-id="<%= photo.id %>"
                class="p-2 bg-white rounded-full hover:bg-blue-100 transition"
                title="Edit">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </button>

        <!-- View Full Size -->
        <a href="<%= photo.image_url(:large) %>"
           target="_blank"
           class="p-2 bg-white rounded-full hover:bg-green-100 transition"
           title="View Full Size">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
          </svg>
        </a>

        <!-- Delete -->
        <%= button_to business_manager_gallery_destroy_photo_path(photo),
                     method: :delete,
                     data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this photo from the gallery?" },
                     class: "p-2 bg-white rounded-full hover:bg-red-100 transition",
                     title: "Delete" do %>
          <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Photo Info -->
  <div class="p-3">
    <% if photo.title.present? %>
      <h3 class="text-sm font-medium text-gray-900 truncate"><%= photo.title %></h3>
    <% else %>
      <h3 class="text-sm font-medium text-gray-400 italic">No title</h3>
    <% end %>

    <% if photo.description.present? %>
      <p class="mt-1 text-xs text-gray-500 line-clamp-2"><%= photo.description %></p>
    <% end %>

    <div class="mt-2 flex items-center justify-between text-xs text-gray-500">
      <span>Position: <%= photo.position %></span>
      <% if photo.display_in_hero? %>
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
          Hero
        </span>
      <% end %>
    </div>
  </div>
</div>
