<%# Local variables: photo %>

<div id="gallery_photo_<%= photo.id %>"
     class="group relative bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-200 overflow-hidden"
     data-photo-id="<%= photo.id %>"
     data-sortable-id="<%= photo.id %>"
     data-photo-title="<%= photo.title.to_s %>"
     data-photo-description="<%= photo.description.to_s %>"
     data-photo-update-url="<%= business_manager_gallery_update_photo_path(photo) %>">

  <!-- Image -->
  <div class="aspect-w-4 aspect-h-3 bg-gray-200">
    <% if photo.has_image? %>
      <%= image_tag photo.image_url(:medium), alt: photo.title || "Gallery photo",
                    class: "w-full h-48 object-cover" %>
    <% else %>
      <div class="flex items-center justify-center h-48 bg-gray-100">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
    <% end %>

    <!-- Drag handle -->
    <div class="flex absolute top-2 left-2 bg-white rounded p-1 shadow cursor-move z-20 hover:bg-gray-100 transition-colors"
         data-sortable-handle
         title="Drag to reorder">
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
      </svg>
    </div>

    <!-- Source badge -->
    <% if photo.photo_source_service? || photo.photo_source_product? %>
      <div class="absolute bottom-2 left-2 bg-primary text-white px-2 py-1 rounded text-xs font-medium">
        <%= photo.photo_source.titleize %>
      </div>
    <% end %>

    <!-- Overlay with actions (visible on hover) -->
    <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-opacity duration-200 flex items-center justify-center opacity-0 group-hover:opacity-100">
      <div class="flex gap-2">
        <!-- Edit -->
        <button type="button"
                data-action="click->gallery-manager#editPhoto"
                data-photo-id="<%= photo.id %>"
                data-photo-title="<%= photo.title.to_s %>"
                data-photo-description="<%= photo.description.to_s %>"
                data-photo-update-url="<%= business_manager_gallery_update_photo_path(photo) %>"
                class="p-2 bg-white rounded-full hover:bg-light transition"
                title="Edit">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </button>

        <!-- Crop -->
        <% if photo.has_image? %>
          <button type="button"
                  data-action="click->simple-image-cropper#openCropper"
                  data-image-url="<%= photo.image_url(:large) %>"
                  data-crop-url="<%= business_manager_gallery_crop_photo_path(photo) %>"
                  class="p-2 bg-white rounded-full hover:bg-blue-100 transition"
                  title="Crop">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 2v13a2 2 0 002 2h13"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 14V9a2 2 0 00-2-2h-5"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 17v5M7 7H2"/>
            </svg>
          </button>
        <% end %>

        <!-- View Full Size -->
        <a href="<%= photo.image_url(:large) %>"
           target="_blank"
           class="p-2 bg-white rounded-full hover:bg-green-100 transition"
           title="View Full Size">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
          </svg>
        </a>

        <!-- Delete -->
        <%= button_to business_manager_gallery_destroy_photo_path(photo),
                     method: :delete,
                     data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this photo from the gallery?" },
                     class: "p-2 bg-white rounded-full hover:bg-red-100 transition",
                     title: "Delete" do %>
          <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Photo Info -->
  <div class="p-3">
    <% if photo.title.present? %>
      <h3 class="text-sm font-medium text-gray-900 truncate" data-photo-field="title"><%= photo.title %></h3>
    <% else %>
      <h3 class="text-sm font-medium text-gray-400 italic" data-photo-field="title">No title</h3>
    <% end %>

    <% if photo.description.present? %>
      <p class="mt-1 text-xs text-gray-500 line-clamp-2" data-photo-field="description"><%= photo.description %></p>
    <% end %>

    <div class="mt-2 flex items-center justify-between text-xs text-gray-500">
      <span data-photo-field="position">Position: <%= photo.position %></span>
    </div>
  </div>
</div>
