<div class="max-w-4xl mx-auto space-y-6">
  <div class="flex flex-col gap-2">
    <div class="flex items-center gap-3">
      <%= link_to business_manager_document_templates_path,
                  class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to templates
      <% end %>
    </div>
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">Edit Template</h1>
      <p class="mt-1 text-sm text-gray-600">
        Update the content clients will review before signing and paying.
      </p>
    </div>
  </div>

  <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
    <%= render "form" %>
  </div>
</div>
