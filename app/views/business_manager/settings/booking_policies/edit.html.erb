<script>
  document.addEventListener('DOMContentLoaded', function() {
    const checkbox = document.getElementById('use_fixed_intervals_checkbox');
    const intervalSection = document.getElementById('interval_mins_section');
    
    if (checkbox && intervalSection) {
      checkbox.addEventListener('change', function() {
        if (this.checked) {
          intervalSection.classList.remove('hidden');
        } else {
          intervalSection.classList.add('hidden');
        }
      });
    }

    const radiusCheckbox = document.getElementById('service_radius_enabled_checkbox');
    const radiusFields = document.getElementById('service_radius_fields');
    if (radiusCheckbox && radiusFields) {
      radiusCheckbox.addEventListener('change', function() {
        if (this.checked) {
          radiusFields.classList.remove('hidden');
        } else {
          radiusFields.classList.add('hidden');
        }
      });
    }
  });
</script> 