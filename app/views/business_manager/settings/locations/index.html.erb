<div class="container mx-auto px-4 py-4 sm:py-8">
  <!-- Flash Messages -->
  <% if flash[:notice] %>
    <div class="bg-emerald-50 border border-success/30 rounded-xl overflow-hidden shadow-sm mb-6">
      <div class="px-6 py-4 bg-emerald-100 border-b border-success/30">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-success mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <h3 class="text-sm font-medium text-success">Success!</h3>
        </div>
      </div>
      <div class="px-6 py-4">
        <p class="text-sm text-success"><%= flash[:notice] %></p>
      </div>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-300 rounded-xl overflow-hidden shadow-sm mb-6">
      <div class="px-6 py-4 bg-red-100 border-b border-red-200">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-red-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <h3 class="text-sm font-medium text-red-800">Alert</h3>
        </div>
      </div>
      <div class="px-6 py-4">
        <p class="text-sm text-red-700"><%= flash[:alert] %></p>
      </div>
    </div>
  <% end %>

  <!-- Header Section -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100 mb-8">
    <div class="bg-gradient-to-r from-primary to-secondary px-4 py-6 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-gradient-to-br from-white/20 to-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white border border-white/30">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-xl sm:text-2xl font-bold text-white">
              Business Locations
            </h1>
            <p class="text-white/80 text-sm mt-1">
              Manage your business locations and service areas
            </p>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to business_manager_settings_path,
                class: "inline-flex items-center justify-center px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 text-sm font-medium rounded-lg text-white hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-primary transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Back to Settings
          <% end %>
          
          <%= link_to new_business_manager_settings_location_path,
                class: "inline-flex items-center justify-center px-4 py-2 bg-white text-primary hover:bg-light font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary shadow-sm" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Add New Location
          <% end %>
        </div>
      </div>
    </div>

  </div>

  <!-- Locations Content -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100">
    <% if @locations.any? %>
      <!-- Mobile Cards (hidden on desktop) -->
      <div class="lg:hidden">
        <% @locations.each_with_index do |location, index| %>
          <div class="<%= 'border-t border-gray-200' if index > 0 %>">
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-3 mb-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white font-semibold text-sm">
                      <%= location.name.first.upcase %>
                    </div>
                    <div>
                      <h3 class="text-base font-semibold text-gray-900 truncate">
                        <%= location.name %>
                      </h3>
                      <p class="text-sm text-gray-500">Business Location</p>
                    </div>
                  </div>
                  
                  <div class="space-y-2">
                    <div class="flex items-start text-sm text-gray-600">
                      <svg class="w-4 h-4 mr-2 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                      <div>
                        <%= location.address %><br>
                        <%= location.city %>, <%= location.state %> <%= location.zip %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="flex items-center gap-2 pt-3 border-t border-gray-100">
                <%= link_to edit_business_manager_settings_location_path(location),
                      class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-light border border-primary/30 text-sm font-medium rounded-lg text-primary hover:bg-light focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-all duration-200" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  Edit
                <% end %>
                <%= button_to business_manager_settings_location_path(location),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete the location '#{location.name}'?" },
                      class: "inline-flex items-center justify-center px-3 py-2 bg-red-50 border border-red-200 text-sm font-medium rounded-lg text-red-700 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-all duration-200 cursor-pointer" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Desktop Table (hidden on mobile) -->
      <div class="hidden lg:block">
        <table class="w-full">
          <thead class="bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Location</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Address</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">City</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">State</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">ZIP</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @locations.each do |location| %>
              <tr class="hover:bg-light/30 transition-colors duration-200">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-10 h-10 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white font-semibold text-sm mr-3">
                      <%= location.name.first.upcase %>
                    </div>
                    <div>
                      <div class="text-sm font-semibold text-gray-900">
                        <%= location.name %>
                      </div>
                      <div class="text-xs text-gray-500">Business Location</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= location.address %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= location.city %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= location.state %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= location.zip %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex items-center gap-3">
                    <%= link_to edit_business_manager_settings_location_path(location),
                          class: "inline-flex items-center px-3 py-1.5 bg-primary/10 text-primary rounded-lg hover:bg-secondary/20 transition-colors font-medium text-xs" do %>
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                      Edit
                    <% end %>
                    <%= button_to business_manager_settings_location_path(location),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete the location '#{location.name}'?" },
                          class: "inline-flex items-center px-3 py-1.5 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors font-medium text-xs cursor-pointer" do %>
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16 px-4">
        <div class="max-w-md mx-auto">
          <div class="w-20 h-20 bg-gradient-to-br from-blue-100 to-blue-200 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">No locations yet</h3>
          <p class="text-gray-600 mb-8">Get started by adding your first business location to help customers find you.</p>
          <%= link_to new_business_manager_settings_location_path,
                class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-secondary text-white font-medium rounded-lg hover:from-secondary hover:to-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-all duration-200 shadow-lg hover:shadow-xl" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Add Your First Location
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Information Section -->
  <div class="mt-8">
    <div class="bg-gradient-to-br from-blue-50 to-indigo-50 border border-primary/30 rounded-xl overflow-hidden shadow-sm">
      <div class="px-6 py-6">
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="flex-1">
            <h2 class="text-lg font-semibold text-gray-900 mb-3">
              Location Management Tips
            </h2>
            <div class="space-y-3 text-sm text-gray-700">
              <div class="flex items-start gap-3">
                <div class="w-5 h-5 bg-emerald-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-success" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p><strong>Multiple locations</strong> help customers find you and allow for better service area management.</p>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-5 h-5 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p><strong>Location sync</strong> with business settings allows you to keep information consistent across your business profile.</p>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-5 h-5 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p><strong>Multiple locations</strong> can help customers find you and support different service areas.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 