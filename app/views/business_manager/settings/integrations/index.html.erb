<%# Business Manager Integration Settings %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <!-- Header Section -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100 mb-8">
    <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-4 py-6 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-gradient-to-br from-white/20 to-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white border border-white/30">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
            </svg>
          </div>
          <div>
            <h1 class="text-xl sm:text-2xl font-bold text-white">
              Integrations & Connections
            </h1>
            <p class="text-indigo-100 text-sm mt-1">
              Connect your business with external services and platforms
            </p>
          </div>
        </div>
        
        <%= link_to business_manager_settings_path,
              class: "inline-flex items-center justify-center px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 text-sm font-medium rounded-lg text-white hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-indigo-600 transition-all duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to Settings
        <% end %>
      </div>
    </div>
  </div>

  <!-- Google Business Reviews Integration -->
  <%= render 'shared/google_business_connection', business: @business %>

  <!-- Calendar Integration Section -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100 mt-8">
    <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-blue-100 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-lg font-semibold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            Calendar Integrations
          </h2>
          <p class="text-sm text-gray-600 mt-1">Connect your team's calendars to automatically sync bookings and prevent double-booking conflicts</p>
        </div>
      </div>
    </div>

    <div class="p-6">
      <% if @sync_statistics.present? && @sync_statistics[:total_attempts] > 0 %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
          <h3 class="font-medium text-gray-900 mb-3">Sync Statistics (Last 24 Hours)</h3>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">
            <div>
              <div class="text-2xl font-bold text-green-600"><%= @sync_statistics[:successful] %></div>
              <div class="text-xs text-gray-600">Successful Syncs</div>
            </div>
            <div>
              <div class="text-2xl font-bold text-red-600"><%= @sync_statistics[:failed] %></div>
              <div class="text-xs text-gray-600">Failed Syncs</div>
            </div>
            <div>
              <div class="text-2xl font-bold text-blue-600"><%= @sync_statistics[:success_rate].round(1) %>%</div>
              <div class="text-xs text-gray-600">Success Rate</div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <% @staff_members.each do |staff_member| %>
          <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
            <!-- Staff Member Header -->
            <div class="p-4 sm:p-5 border-b border-gray-100">
              <div class="flex items-start justify-between">
                <div class="min-w-0 flex-1">
                  <h3 class="text-lg font-semibold text-gray-900 truncate"><%= staff_member.name %></h3>
                  <p class="text-sm text-gray-600 mt-1 truncate"><%= staff_member.email %></p>
                </div>
                <span class="ml-3 inline-flex px-3 py-1 text-xs font-medium rounded-full bg-<%= staff_member.calendar_sync_status.downcase.gsub(' ', '-') == 'all-synced' ? 'green' : staff_member.calendar_sync_status.downcase.gsub(' ', '-') == 'no-integrations' ? 'gray' : 'yellow' %>-100 text-<%= staff_member.calendar_sync_status.downcase.gsub(' ', '-') == 'all-synced' ? 'green' : staff_member.calendar_sync_status.downcase.gsub(' ', '-') == 'no-integrations' ? 'gray' : 'yellow' %>-800">
                  <%= staff_member.calendar_sync_status %>
                </span>
              </div>
            </div>

            <!-- Calendar Connections Content -->
            <div class="p-4 sm:p-5">

            <% if staff_member.calendar_connections.active.any? %>
              <div class="space-y-3 mb-4">
                <% staff_member.calendar_connections.active.each do |connection| %>
                  <div class="bg-gray-50 border border-gray-200 rounded-lg overflow-hidden">
                    <!-- Desktop Layout: Horizontal -->
                    <div class="hidden sm:flex items-center justify-between p-4">
                      <div>
                        <div class="flex items-center gap-2">
                          <span class="font-medium text-gray-900">
                            <%= connection.provider_display_name %>
                          </span>
                          <% if staff_member.default_calendar_connection == connection %>
                            <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full font-medium">Default</span>
                          <% end %>
                        </div>
                        <div class="text-sm text-gray-600 mt-1">Last sync: <%= connection.last_sync_status %></div>
                      </div>
                      
                      <div class="flex items-center space-x-2">
                        <%= button_to "Resync", calendar_integration_resync_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                      method: :post, 
                                      class: "cursor-pointer px-3 py-1 text-sm bg-blue-600 text-white rounded hover:bg-blue-700" %>
                        
                        <% if staff_member.default_calendar_connection == connection %>
                          <%= button_to "Remove Default", calendar_integration_toggle_default_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                        method: :patch, 
                                        class: "cursor-pointer px-3 py-1 text-sm bg-gray-600 text-white rounded hover:bg-gray-700" %>
                        <% else %>
                          <%= button_to "Set Default", calendar_integration_toggle_default_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                        method: :patch, 
                                        class: "cursor-pointer px-3 py-1 text-sm bg-gray-600 text-white rounded hover:bg-gray-700" %>
                        <% end %>
                        
                        <%= link_to "Details", calendar_integration_show_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                    class: "cursor-pointer px-3 py-1 text-sm bg-indigo-600 text-white rounded hover:bg-indigo-700" %>
                        
                        <%= button_to "Disconnect", calendar_integration_destroy_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                      method: :delete, 
                                      class: "cursor-pointer px-3 py-1 text-sm bg-red-600 text-white rounded hover:bg-red-700",
                                      data: { turbo_confirm: "Are you sure you want to disconnect #{connection.provider_display_name}? This will stop syncing bookings to #{staff_member.name}'s calendar." } %>
                      </div>
                    </div>

                    <!-- Mobile Layout: Vertical Stack -->
                    <div class="sm:hidden">
                      <!-- Header Section -->
                      <div class="bg-white p-4 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                          <div>
                            <h4 class="font-semibold text-gray-900 text-base">
                              <%= connection.provider_display_name %>
                            </h4>
                            <p class="text-sm text-gray-600 mt-1">Last sync: <%= connection.last_sync_status %></p>
                          </div>
                          <% if staff_member.default_calendar_connection == connection %>
                            <span class="px-3 py-1 text-xs bg-blue-100 text-blue-800 rounded-full font-medium">Default</span>
                          <% end %>
                        </div>
                      </div>
                      
                      <!-- Actions Section -->
                      <div class="bg-gray-50 p-4">
                        <div class="grid grid-cols-2 gap-3">
                          <%= button_to "Resync", calendar_integration_resync_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                        method: :post, 
                                        class: "cursor-pointer w-full px-4 py-3 text-sm font-medium bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors min-h-[44px] flex items-center justify-center" %>
                          
                          <% if staff_member.default_calendar_connection == connection %>
                            <%= button_to "Remove Default", calendar_integration_toggle_default_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                          method: :patch, 
                                          class: "cursor-pointer w-full px-4 py-3 text-sm font-medium bg-gray-600 text-white rounded-lg hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors min-h-[44px] flex items-center justify-center" %>
                          <% else %>
                            <%= button_to "Set Default", calendar_integration_toggle_default_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                          method: :patch, 
                                          class: "cursor-pointer w-full px-4 py-3 text-sm font-medium bg-gray-600 text-white rounded-lg hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors min-h-[44px] flex items-center justify-center" %>
                          <% end %>
                          
                          <%= link_to "Details", calendar_integration_show_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                      class: "cursor-pointer w-full px-4 py-3 text-sm font-medium bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors min-h-[44px] flex items-center justify-center" %>
                          
                          <%= button_to "Disconnect", calendar_integration_destroy_business_manager_settings_integrations_path(calendar_integration_id: connection.id), 
                                        method: :delete, 
                                        class: "cursor-pointer w-full px-4 py-3 text-sm font-medium bg-red-600 text-white rounded-lg hover:bg-red-700 focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors min-h-[44px] flex items-center justify-center",
                                        data: { turbo_confirm: "Are you sure you want to disconnect #{connection.provider_display_name}? This will stop syncing bookings to #{staff_member.name}'s calendar." } %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>

            <% if @providers.any? { |provider| !staff_member.calendar_connections.active.exists?(provider: provider) } %>
              <!-- Connect New Calendar Section -->
              <div class="border-t border-gray-200 pt-4">
                <h5 class="text-sm font-medium text-gray-900 mb-3">Connect Additional Calendars</h5>
                <!-- Desktop Layout: Inline buttons -->
                <div class="hidden sm:flex flex-wrap gap-3">
                  <% @providers.each do |provider| %>
                    <% unless staff_member.calendar_connections.active.exists?(provider: provider) %>
                      <%= button_to "Connect #{provider.humanize} Calendar", 
                                    calendar_integration_connect_business_manager_settings_integrations_path, 
                                    params: { provider: provider, staff_member_id: staff_member.id },
                                    method: :post,
                                    class: "cursor-pointer px-4 py-2 text-sm font-medium bg-#{provider == 'google' ? 'blue' : provider == 'microsoft' ? 'indigo' : 'orange'}-600 text-white rounded-lg hover:bg-#{provider == 'google' ? 'blue' : provider == 'microsoft' ? 'indigo' : 'orange'}-700 focus:ring-2 focus:ring-#{provider == 'google' ? 'blue' : provider == 'microsoft' ? 'indigo' : 'orange'}-500 focus:ring-offset-2 transition-colors",
                                    data: { turbo: false } %>
                    <% end %>
                  <% end %>
                </div>
                <!-- Mobile Layout: Full width buttons -->
                <div class="sm:hidden grid grid-cols-1 gap-3">
                  <% @providers.each do |provider| %>
                    <% unless staff_member.calendar_connections.active.exists?(provider: provider) %>
                      <%= button_to "Connect #{provider.humanize} Calendar", 
                                    calendar_integration_connect_business_manager_settings_integrations_path, 
                                    params: { provider: provider, staff_member_id: staff_member.id },
                                    method: :post,
                                    class: "cursor-pointer w-full px-4 py-3 text-sm font-medium bg-#{provider == 'google' ? 'blue' : provider == 'microsoft' ? 'indigo' : 'orange'}-600 text-white rounded-lg hover:bg-#{provider == 'google' ? 'blue' : provider == 'microsoft' ? 'indigo' : 'orange'}-700 focus:ring-2 focus:ring-#{provider == 'google' ? 'blue' : provider == 'microsoft' ? 'indigo' : 'orange'}-500 focus:ring-offset-2 transition-colors",
                                    data: { turbo: false } %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        <% end %>

        <% if @staff_members.empty? %>
          <div class="text-center py-8">
            <p class="text-gray-600">No active staff members found. <%= link_to "Add staff members", business_manager_staff_members_path, class: "text-blue-600 hover:underline" %> to enable calendar integrations.</p>
          </div>
        <% end %>
      </div>

      <% if @calendar_connections.any? %>
        <div class="mt-8 pt-6 border-t border-gray-200">
          <h3 class="font-medium text-gray-900 mb-4">Bulk Actions</h3>
          <div class="flex flex-col sm:flex-row gap-3">
            <%= button_to "Sync All Pending Bookings", 
                          calendar_integration_batch_sync_business_manager_settings_integrations_path, 
                          method: :post, 
                          class: "cursor-pointer w-full sm:w-auto px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 text-center",
                          data: { turbo_confirm: "This will sync all pending bookings for all staff members. Continue?" } %>
            
            <%= button_to "Import All Availability", 
                          calendar_integration_import_availability_business_manager_settings_integrations_path, 
                          method: :post, 
                          class: "cursor-pointer w-full sm:w-auto px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 text-center",
                          data: { turbo_confirm: "This will import calendar events from all connected calendars. Continue?" } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Video Meeting Integration Section -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100 mt-8">
    <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-purple-100 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-lg font-semibold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            Video Meeting Integrations
          </h2>
          <p class="text-sm text-gray-600 mt-1">Connect Zoom or Google Meet to automatically create video meetings for virtual services</p>
        </div>
      </div>
    </div>

    <div class="p-6">
      <div class="space-y-6">
        <% @staff_members.each do |staff_member| %>
          <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
            <!-- Staff Member Header -->
            <div class="p-4 sm:p-5 border-b border-gray-100">
              <div class="flex items-start justify-between">
                <div class="min-w-0 flex-1">
                  <h3 class="text-lg font-semibold text-gray-900 truncate"><%= staff_member.name %></h3>
                  <p class="text-sm text-gray-600 mt-1 truncate"><%= staff_member.email %></p>
                </div>
                <span class="ml-3 inline-flex px-3 py-1 text-xs font-medium rounded-full <%= staff_member.has_video_meeting_integrations? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= staff_member.has_video_meeting_integrations? ? 'Connected' : 'No Connections' %>
                </span>
              </div>
            </div>

            <!-- Video Meeting Connections Content -->
            <div class="p-4 sm:p-5">
              <% if staff_member.video_meeting_connections.active.any? %>
                <div class="space-y-3 mb-4">
                  <% staff_member.video_meeting_connections.active.each do |connection| %>
                    <div class="bg-gray-50 border border-gray-200 rounded-lg overflow-hidden">
                      <!-- Desktop Layout -->
                      <div class="hidden sm:flex items-center justify-between p-4">
                        <div>
                          <div class="flex items-center gap-2">
                            <% if connection.zoom? %>
                              <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M4.5 4.5h15a1.5 1.5 0 011.5 1.5v9a1.5 1.5 0 01-1.5 1.5H18v3l-4.5-3H4.5A1.5 1.5 0 013 15V6a1.5 1.5 0 011.5-1.5z"/>
                              </svg>
                            <% else %>
                              <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                              </svg>
                            <% end %>
                            <span class="font-medium text-gray-900"><%= connection.provider_name %></span>
                          </div>
                          <div class="text-sm text-gray-600 mt-1">
                            Connected: <%= connection.connected_at&.strftime('%b %d, %Y') || 'N/A' %>
                            <% if connection.last_used_at %>
                              · Last used: <%= connection.last_used_at.strftime('%b %d, %Y') %>
                            <% end %>
                          </div>
                        </div>

                        <div class="flex items-center space-x-2">
                          <%= button_to "Disconnect",
                                        video_integration_destroy_business_manager_settings_integrations_path(id: connection.id),
                                        method: :delete,
                                        class: "cursor-pointer px-3 py-1 text-sm bg-red-600 text-white rounded hover:bg-red-700",
                                        data: { turbo_confirm: "Are you sure you want to disconnect #{connection.provider_name}? Virtual services will no longer create video meetings automatically." } %>
                        </div>
                      </div>

                      <!-- Mobile Layout -->
                      <div class="sm:hidden">
                        <div class="bg-white p-4 border-b border-gray-200">
                          <div class="flex items-center gap-2">
                            <% if connection.zoom? %>
                              <svg class="w-5 h-5 text-blue-500" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M4.5 4.5h15a1.5 1.5 0 011.5 1.5v9a1.5 1.5 0 01-1.5 1.5H18v3l-4.5-3H4.5A1.5 1.5 0 013 15V6a1.5 1.5 0 011.5-1.5z"/>
                              </svg>
                            <% else %>
                              <svg class="w-5 h-5 text-green-500" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                              </svg>
                            <% end %>
                            <span class="font-semibold text-gray-900"><%= connection.provider_name %></span>
                          </div>
                          <p class="text-sm text-gray-600 mt-1">Connected: <%= connection.connected_at&.strftime('%b %d, %Y') || 'N/A' %></p>
                        </div>
                        <div class="bg-gray-50 p-4">
                          <%= button_to "Disconnect",
                                        video_integration_destroy_business_manager_settings_integrations_path(id: connection.id),
                                        method: :delete,
                                        class: "cursor-pointer w-full px-4 py-3 text-sm font-medium bg-red-600 text-white rounded-lg hover:bg-red-700 min-h-[44px] flex items-center justify-center",
                                        data: { turbo_confirm: "Are you sure you want to disconnect #{connection.provider_name}?" } %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <%# Define button classes statically so Tailwind JIT can find them %>
              <% video_button_classes = {
                'zoom' => {
                  desktop: 'cursor-pointer px-4 py-2 text-sm font-medium bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors',
                  mobile: 'cursor-pointer w-full px-4 py-3 text-sm font-medium bg-blue-600 text-white rounded-lg hover:bg-blue-700 min-h-[44px]'
                },
                'google_meet' => {
                  desktop: 'cursor-pointer px-4 py-2 text-sm font-medium bg-green-600 text-white rounded-lg hover:bg-green-700 focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors',
                  mobile: 'cursor-pointer w-full px-4 py-3 text-sm font-medium bg-green-600 text-white rounded-lg hover:bg-green-700 min-h-[44px]'
                }
              } %>
              <% available_video_options = [] %>
              <% if @video_providers.include?('zoom') && !staff_member.zoom_connected? %>
                <% available_video_options << { provider: 'zoom', name: 'Zoom', link_from_calendar: false } %>
              <% end %>
              <% if @video_providers.include?('google_meet') && !staff_member.google_meet_connected? %>
                <% # Check if they can link from existing Google Calendar %>
                <% has_google_calendar = staff_member.google_calendar_connected? %>
                <% available_video_options << { provider: 'google_meet', name: 'Google Meet', link_from_calendar: has_google_calendar } %>
              <% end %>

              <% if available_video_options.any? %>
                <div class="border-t border-gray-200 pt-4">
                  <h5 class="text-sm font-medium text-gray-900 mb-3">Connect Video Meeting Account</h5>

                  <!-- Desktop Layout -->
                  <div class="hidden sm:flex flex-wrap gap-3">
                    <% available_video_options.each do |option| %>
                      <% if option[:link_from_calendar] %>
                        <!-- Show both options for Google Meet when calendar is connected -->
                        <%= button_to "Use Google Calendar Account",
                                      video_integration_link_from_calendar_business_manager_settings_integrations_path,
                                      params: { staff_member_id: staff_member.id },
                                      method: :post,
                                      class: "cursor-pointer px-4 py-2 text-sm font-medium bg-green-600 text-white rounded-lg hover:bg-green-700 focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors" %>
                        <%= button_to "Connect Different Google Account",
                                      video_integration_connect_business_manager_settings_integrations_path,
                                      params: { provider: option[:provider], staff_member_id: staff_member.id },
                                      method: :post,
                                      class: "cursor-pointer px-4 py-2 text-sm font-medium bg-gray-600 text-white rounded-lg hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors",
                                      data: { turbo: false } %>
                      <% else %>
                        <%= button_to "Connect #{option[:name]}",
                                      video_integration_connect_business_manager_settings_integrations_path,
                                      params: { provider: option[:provider], staff_member_id: staff_member.id },
                                      method: :post,
                                      class: video_button_classes[option[:provider]][:desktop],
