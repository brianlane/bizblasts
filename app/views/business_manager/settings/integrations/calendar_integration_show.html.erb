<%# Calendar Integration Details View %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <!-- Header Section -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100 mb-8">
    <div class="bg-gradient-to-r from-primary to-secondary px-4 py-6 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-gradient-to-br from-white/20 to-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white border border-white/30">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-xl sm:text-2xl font-bold text-white">
              <%= @calendar_connection.provider_display_name %> Calendar Details
            </h1>
            <p class="text-white/80 text-sm mt-1">
              <%= @calendar_connection.staff_member.name %>'s calendar integration
            </p>
          </div>
        </div>
        
        <%= link_to business_manager_settings_integrations_path,
              class: "inline-flex items-center justify-center px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 text-sm font-medium rounded-lg text-white hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-primary transition-all duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to Integrations
        <% end %>
      </div>
    </div>
  </div>

  <!-- Connection Details Section -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100 mb-8">
    <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Connection Details</h2>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="font-medium text-gray-900 mb-3">Basic Information</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Provider:</span>
              <span class="text-sm font-medium text-gray-900"><%= @calendar_connection.provider_display_name %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Staff Member:</span>
              <span class="text-sm font-medium text-gray-900"><%= @calendar_connection.staff_member.name %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Status:</span>
              <span class="text-sm font-medium <%= @calendar_connection.active? ? 'text-success' : 'text-red-600' %>">
                <%= @calendar_connection.active? ? 'Active' : 'Inactive' %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Default Calendar:</span>
              <span class="text-sm font-medium text-gray-900">
                <%= @calendar_connection.staff_member.default_calendar_connection == @calendar_connection ? 'Yes' : 'No' %>
              </span>
            </div>
          </div>
        </div>

        <div>
          <h3 class="font-medium text-gray-900 mb-3">Sync Information</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Last Sync:</span>
              <span class="text-sm font-medium text-gray-900">
                <% if @calendar_connection.respond_to?(:last_synced_at) && @calendar_connection.last_synced_at %>
                  <%= time_ago_in_words(@calendar_connection.last_synced_at) %> ago
                  (<%= @calendar_connection.last_synced_at.strftime("%m/%d/%Y %I:%M %p") %>)
                <% else %>
                  Never synced
                <% end %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Connected:</span>
              <span class="text-sm font-medium text-gray-900">
                <% if @calendar_connection.respond_to?(:connected_at) && @calendar_connection.connected_at %>
                  <%= @calendar_connection.connected_at.strftime("%B %d, %Y at %I:%M %p") %>
                <% else %>
                  <%= @calendar_connection.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <% end %>
              </span>
            </div>
            <% if @calendar_connection.respond_to?(:scopes) && @calendar_connection.scopes.present? %>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Permissions:</span>
                <div class="flex flex-wrap gap-1">
                  <% @calendar_connection.sync_scopes.each do |scope| %>
                    <span class="inline-block px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded">
                      <%= scope.split('/').last.humanize %>
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>
            <% if @calendar_connection.provider == 'caldav' %>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Server:</span>
                <span class="text-sm font-medium text-gray-900 truncate max-w-48">
                  <%= @calendar_connection.caldav_url %>
                </span>
              </div>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Username:</span>
                <span class="text-sm font-medium text-gray-900">
                  <%= @calendar_connection.caldav_username %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-3 mt-6 pt-6 border-t border-gray-200">
        <%= button_to "Resync Now", calendar_integration_resync_business_manager_settings_integrations_path(calendar_integration_id: @calendar_connection.id), 
                      method: :post, 
                      class: "px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2" %>
        
        <% if @calendar_connection.staff_member.default_calendar_connection == @calendar_connection %>
          <%= button_to "Remove as Default", calendar_integration_toggle_default_business_manager_settings_integrations_path(calendar_integration_id: @calendar_connection.id), 
                        method: :patch, 
                        class: "px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
        <% else %>
          <%= button_to "Set as Default", calendar_integration_toggle_default_business_manager_settings_integrations_path(calendar_integration_id: @calendar_connection.id), 
                        method: :patch, 
                        class: "px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
        <% end %>
        
        <%= button_to "Disconnect", calendar_integration_destroy_business_manager_settings_integrations_path(calendar_integration_id: @calendar_connection.id), 
                      method: :delete, 
                      class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2",
                      data: { turbo_confirm: "Are you sure you want to disconnect #{@calendar_connection.provider_display_name}? This will stop syncing bookings to #{@calendar_connection.staff_member.name}'s calendar." } %>
      </div>
    </div>
  </div>

  <!-- Sync Statistics Section -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100 mb-8">
    <div class="px-6 py-4 bg-gradient-to-r from-green-50 to-green-100 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Sync Statistics</h2>
      <p class="text-sm text-gray-600 mt-1">Overview of booking and event synchronization</p>
    </div>
    
    <div class="p-6">
      <% 
        total_mappings = @calendar_connection.calendar_event_mappings.count rescue 0
        synced_mappings = @calendar_connection.calendar_event_mappings.synced.count rescue 0
        failed_mappings = @calendar_connection.calendar_event_mappings.failed.count rescue 0
        external_events = @calendar_connection.external_calendar_events.count rescue 0
      %>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary"><%= total_mappings %></div>
          <div class="text-sm text-gray-600 mt-1">Total Bookings Synced</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-success"><%= synced_mappings %></div>
          <div class="text-sm text-gray-600 mt-1">Successfully Synced</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-red-600"><%= failed_mappings %></div>
          <div class="text-sm text-gray-600 mt-1">Failed Syncs</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-indigo-600"><%= external_events %></div>
          <div class="text-sm text-gray-600 mt-1">External Events Imported</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sync Logs Section -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100">
    <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Recent Sync Activity</h2>
      <p class="text-sm text-gray-600 mt-1">Last 20 sync operations for this calendar connection</p>
    </div>
    
    <div class="p-6">
      <% if @sync_logs.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Details</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @sync_logs.each do |log| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= log.created_at.strftime("%m/%d/%Y %I:%M %p") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if log.calendar_event_mapping.booking %>
                      Booking: <%= log.calendar_event_mapping.booking.service.name rescue 'Unknown Service' %>
                    <% else %>
                      Calendar Event
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% 
                      status_class = case (log.respond_to?(:outcome) ? log.outcome : log.status)
                                     when 'success', 'successful'
                                       'bg-green-100 text-green-800'
                                     when 'error', 'failed'
                                       'bg-red-100 text-red-800'
                                     when 'pending'
                                       'bg-yellow-100 text-yellow-800'
                                     when 'skipped'
                                       'bg-gray-100 text-gray-800'
                                     else
                                       'bg-blue-100 text-blue-800'
                                     end
                      
                      status_text = if log.respond_to?(:outcome_description)
                                      log.outcome_description
                                    elsif log.respond_to?(:outcome)
                                      log.outcome.humanize
                                    else
                                      log.status.humanize
                                    end
                    %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_class %>">
                      <%= status_text %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <div class="space-y-1">
                      <div class="max-w-xs truncate" title="<%= log.message %>">
                        <%= log.message %>
                      </div>
                      <% if log.respond_to?(:failed?) && log.failed? && log.respond_to?(:error_details) && log.error_details.present? %>
                        <div class="text-xs text-red-600 bg-red-50 p-2 rounded">
                          <%= log.error_details[:message] rescue 'Error details unavailable' %>
                        </div>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No sync activity yet</h3>
          <p class="mt-1 text-sm text-gray-500">
            Sync logs will appear here once calendar events are synchronized.
          </p>
          <div class="mt-6">
            <%= button_to "Start Initial Sync", calendar_integration_resync_business_manager_settings_integrations_path(calendar_integration_id: @calendar_connection.id), 
                          method: :post, 
                          class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>