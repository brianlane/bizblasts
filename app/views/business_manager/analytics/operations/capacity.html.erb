<% content_for :title, "Service Capacity Analysis" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Service Capacity Analysis</h1>
      <p class="text-sm text-gray-600 mt-1">Resource utilization and capacity planning insights</p>
    </div>

    <div class="flex items-center gap-4">
      <%= link_to "Export CSV", export_business_manager_analytics_operations_path(format: :csv),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_operations_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Operations Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @capacity_analysis.present? %>
    <% overall_utilization = @capacity_analysis[:overall_utilization] || 0 %>
    <% total_capacity = @capacity_analysis[:total_capacity_hours] || 0 %>
    <% total_booked = @capacity_analysis[:total_booked_hours] || 0 %>
    <% available_hours = total_capacity - total_booked %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Overall Utilization</p>
            <p class="text-2xl font-semibold <%= overall_utilization >= 80 ? 'text-green-600' : overall_utilization >= 60 ? 'text-blue-600' : 'text-orange-600' %> mt-2">
              <%= number_to_percentage(overall_utilization, precision: 1) %>
            </p>
            <p class="text-xs text-gray-500 mt-1">Last 30 days</p>
          </div>
          <div class="<%= overall_utilization >= 80 ? 'bg-green-100' : overall_utilization >= 60 ? 'bg-blue-100' : 'bg-orange-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= overall_utilization >= 80 ? 'text-green-600' : overall_utilization >= 60 ? 'text-blue-600' : 'text-orange-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Capacity</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= number_with_precision(total_capacity, precision: 0) %> hrs</p>
            <p class="text-xs text-gray-500 mt-1">Available hours</p>
          </div>
          <div class="bg-gray-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Booked Hours</p>
            <p class="text-2xl font-semibold text-blue-600 mt-2"><%= number_with_precision(total_booked, precision: 0) %> hrs</p>
            <p class="text-xs text-gray-500 mt-1">Currently scheduled</p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Available Hours</p>
            <p class="text-2xl font-semibold text-green-600 mt-2"><%= number_with_precision(available_hours, precision: 0) %> hrs</p>
            <p class="text-xs text-gray-500 mt-1">Remaining capacity</p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Capacity by Service -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Capacity by Service</h2>
      <p class="text-sm text-gray-600 mt-1">Utilization breakdown by service type</p>
    </div>

    <div class="p-6">
      <% if @capacity_analysis.present? && @capacity_analysis[:by_service].present? %>
        <!-- Mobile Cards -->
        <div class="space-y-4 lg:hidden">
          <% @capacity_analysis[:by_service].each do |service| %>
            <% utilization = service[:utilization] || 0 %>
            <% utilization_color = utilization >= 80 ? 'green' : utilization >= 60 ? 'blue' : utilization >= 40 ? 'yellow' : 'orange' %>
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex justify-between items-start mb-3">
                <div>
                  <h3 class="font-semibold text-gray-900"><%= service[:service_name] %></h3>
                  <p class="text-sm text-gray-600"><%= service[:booking_count] %> <%= service[:booking_count] == 1 ? 'booking' : 'bookings' %></p>
                </div>
                <span class="px-3 py-1 rounded-full text-sm font-medium bg-<%= utilization_color %>-100 text-<%= utilization_color %>-800">
                  <%= number_to_percentage(utilization, precision: 0) %>
                </span>
              </div>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Capacity:</span>
                  <span class="font-medium text-gray-900"><%= number_with_precision(service[:capacity_hours], precision: 1) %> hrs</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Booked:</span>
                  <span class="font-medium text-blue-600"><%= number_with_precision(service[:booked_hours], precision: 1) %> hrs</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Available:</span>
                  <span class="font-medium text-green-600"><%= number_with_precision(service[:available_hours], precision: 1) %> hrs</span>
                </div>
              </div>
              <!-- Utilization Bar -->
              <div class="mt-3 w-full bg-gray-200 rounded-full h-3">
                <div class="bg-<%= utilization_color %>-500 h-3 rounded-full" style="width: <%= [utilization, 100].min %>%"></div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Service
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Bookings
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Capacity (hrs)
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Booked (hrs)
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Available (hrs)
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Utilization
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @capacity_analysis[:by_service].each do |service| %>
                <% utilization = service[:utilization] || 0 %>
                <% utilization_color = utilization >= 80 ? 'green' : utilization >= 60 ? 'blue' : utilization >= 40 ? 'yellow' : 'orange' %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= service[:service_name] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= service[:booking_count] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= number_with_precision(service[:capacity_hours], precision: 1) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-medium text-blue-600"><%= number_with_precision(service[:booked_hours], precision: 1) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-medium text-green-600"><%= number_with_precision(service[:available_hours], precision: 1) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="w-full bg-gray-200 rounded-full h-2 mr-3" style="max-width: 100px;">
                        <div class="bg-<%= utilization_color %>-500 h-2 rounded-full" style="width: <%= [utilization, 100].min %>%"></div>
                      </div>
                      <span class="text-sm font-medium text-<%= utilization_color %>-700"><%= number_to_percentage(utilization, precision: 0) %></span>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Capacity Planning Insights -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Capacity Planning Recommendations</h3>
          <div class="space-y-2 text-sm text-blue-800">
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span><strong>80%+ utilization:</strong> Excellent capacity management - consider expanding if sustained</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span><strong>60-80% utilization:</strong> Healthy capacity with room for growth</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span><strong>&lt;60% utilization:</strong> Underutilized - increase marketing or reduce capacity</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Balance capacity across services to maximize revenue potential</span>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No capacity data</h3>
          <p class="mt-1 text-sm text-gray-500">Insufficient booking data to analyze capacity.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
