<div class="container mx-auto px-4 py-4 sm:py-8">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6 sm:mb-8">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">AI Staff Scheduling</h1>
      <p class="text-sm sm:text-base text-gray-600 mt-1">Optimize staffing levels based on predicted demand and capacity planning</p>
    </div>
    <%= link_to "â† Back to Predictive Analytics", business_manager_analytics_predictive_index_path,
                class: "text-blue-600 hover:text-blue-800 font-medium text-sm sm:text-base" %>
  </div>

  <!-- Scheduling Overview -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6 mb-6 sm:mb-8">
    <div class="bg-white rounded-lg shadow p-4 sm:p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-xs sm:text-sm text-gray-600">Optimal Staff</p>
        <div class="bg-blue-100 p-1.5 sm:p-2 rounded-lg">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-2xl sm:text-3xl font-bold text-gray-900"><%= @scheduling_summary[:optimal_staff_count] %></p>
      <p class="text-xs sm:text-sm text-gray-500 mt-1 hidden sm:block">For next week's peak hours</p>
    </div>

    <div class="bg-white rounded-lg shadow p-4 sm:p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-xs sm:text-sm text-gray-600">Overstaffed</p>
        <div class="bg-orange-100 p-1.5 sm:p-2 rounded-lg">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"/>
          </svg>
        </div>
      </div>
      <p class="text-2xl sm:text-3xl font-bold text-orange-600"><%= @scheduling_summary[:overstaffed_shifts] %></p>
      <p class="text-xs sm:text-sm text-gray-500 mt-1 hidden sm:block">Reduce to save costs</p>
    </div>

    <div class="bg-white rounded-lg shadow p-4 sm:p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-xs sm:text-sm text-gray-600">Understaffed</p>
        <div class="bg-red-100 p-1.5 sm:p-2 rounded-lg">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
      </div>
      <p class="text-2xl sm:text-3xl font-bold text-red-600"><%= @scheduling_summary[:understaffed_shifts] %></p>
      <p class="text-xs sm:text-sm text-gray-500 mt-1 hidden sm:block">Add staff to meet demand</p>
    </div>

    <div class="bg-white rounded-lg shadow p-4 sm:p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-xs sm:text-sm text-gray-600">Savings</p>
        <div class="bg-green-100 p-1.5 sm:p-2 rounded-lg">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-xl sm:text-3xl font-bold text-green-600"><%= number_to_currency(@scheduling_summary[:potential_savings], precision: 0) %></p>
      <p class="text-xs sm:text-sm text-gray-500 mt-1 hidden sm:block">Monthly with optimized schedule</p>
    </div>
  </div>

  <!-- Weekly Demand Heatmap -->
  <div class="bg-white rounded-lg shadow mb-6 sm:mb-8">
    <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg sm:text-xl font-semibold text-gray-900">Predicted Demand Heatmap</h2>
      <p class="text-xs sm:text-sm text-gray-500 mt-1">Expected booking volume by day and time (next 7 days)</p>
    </div>
    <div class="p-4 sm:p-6 overflow-x-auto">
      <table class="min-w-full" style="min-width: 600px;">
        <thead>
          <tr>
            <th class="px-2 sm:px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
            <% %w[Mon Tue Wed Thu Fri Sat Sun].each do |day| %>
              <th class="px-1 sm:px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase"><%= day %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% (8..20).each do |hour| %>
            <tr>
              <td class="px-2 sm:px-4 py-1 sm:py-2 text-xs sm:text-sm text-gray-600 whitespace-nowrap">
                <%= "#{hour}:00" %>
              </td>
              <% 7.times do |day_index| %>
                <% hour_index = hour - 8 %>
                <% demand_level = @demand_heatmap.dig(day_index, hour_index) || 0 %>
                <% cell_color = demand_level >= 80 ? 'bg-red-500' : demand_level >= 60 ? 'bg-orange-400' : demand_level >= 40 ? 'bg-yellow-400' : demand_level >= 20 ? 'bg-green-400' : 'bg-gray-200' %>
                <td class="px-1 sm:px-2 py-1 sm:py-2">
                  <div class="<%= cell_color %> rounded text-center py-1 sm:py-2 text-white text-[10px] sm:text-xs font-medium cursor-pointer hover:opacity-80"
                       title="<%= demand_level %>% capacity">
                    <%= demand_level %>%
                  </div>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!-- Legend - scrollable on mobile -->
      <div class="mt-4 flex flex-wrap sm:flex-nowrap items-center justify-start sm:justify-end gap-2 sm:gap-4 text-[10px] sm:text-xs text-gray-600">
        <div class="flex items-center">
          <div class="w-3 h-3 sm:w-4 sm:h-4 bg-gray-200 rounded mr-1"></div>
          <span>Low</span>
        </div>
        <div class="flex items-center">
          <div class="w-3 h-3 sm:w-4 sm:h-4 bg-green-400 rounded mr-1"></div>
          <span>Medium</span>
        </div>
        <div class="flex items-center">
          <div class="w-3 h-3 sm:w-4 sm:h-4 bg-yellow-400 rounded mr-1"></div>
          <span>Moderate</span>
        </div>
        <div class="flex items-center">
          <div class="w-3 h-3 sm:w-4 sm:h-4 bg-orange-400 rounded mr-1"></div>
          <span>High</span>
        </div>
        <div class="flex items-center">
          <div class="w-3 h-3 sm:w-4 sm:h-4 bg-red-500 rounded mr-1"></div>
          <span>Very High</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Recommended Schedule Adjustments -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-semibold text-gray-900">Schedule Optimization Recommendations</h2>
          <p class="text-sm text-gray-500 mt-1">Suggested changes to improve efficiency and coverage</p>
        </div>
        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium text-sm cursor-pointer">
          Apply All Suggestions
        </button>
      </div>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% @schedule_recommendations.each do |recommendation| %>
          <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <div class="flex items-center">
                  <% if recommendation[:priority] == 'high' %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800 mr-3">High Priority</span>
                  <% elsif recommendation[:priority] == 'medium' %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800 mr-3">Medium Priority</span>
                  <% else %>
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800 mr-3">Low Priority</span>
                  <% end %>
                  <h3 class="text-lg font-semibold text-gray-900"><%= recommendation[:title] %></h3>
                </div>
                <p class="text-sm text-gray-600 mt-2"><%= recommendation[:description] %></p>
              </div>
              <div class="text-right ml-4">
                <div class="text-sm font-medium <%= recommendation[:impact] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= recommendation[:impact] >= 0 ? '+' : '' %><%= number_to_currency(recommendation[:impact].abs) %>
                </div>
                <div class="text-xs text-gray-500">monthly impact</div>
              </div>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 mb-4">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                  <div class="text-xs text-gray-500 mb-1">Shift</div>
                  <div class="text-sm font-medium text-gray-900"><%= recommendation[:shift_time] %></div>
                </div>
                <div>
                  <div class="text-xs text-gray-500 mb-1">Current Staffing</div>
                  <div class="text-sm font-medium text-gray-900"><%= recommendation[:current_staff] %> staff</div>
                </div>
                <div>
                  <div class="text-xs text-gray-500 mb-1">Recommended</div>
                  <div class="text-sm font-bold text-blue-600"><%= recommendation[:recommended_staff] %> staff</div>
                </div>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2 text-sm text-gray-600">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span><%= recommendation[:rationale] %></span>
              </div>
              <div class="flex space-x-2">
                <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
                  View Details
                </button>
                <button class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer">
                  Apply
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Staff Capacity Analysis -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Individual Staff Utilization -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Staff Utilization (Next Week)</h3>
        <p class="text-sm text-gray-500 mt-1">Predicted workload by staff member</p>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @staff_utilization.each do |staff| %>
            <div>
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center">
                  <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center mr-3">
                    <span class="text-sm font-medium text-gray-600"><%= staff[:initials] %></span>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-900"><%= staff[:name] %></div>
                    <div class="text-xs text-gray-500"><%= staff[:role] %></div>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-sm font-bold <%= utilization_color(staff[:utilization_percent]).gsub('bg-', 'text-') %>">
                    <%= staff[:utilization_percent] %>%
                  </div>
                  <div class="text-xs text-gray-500"><%= staff[:hours_scheduled] %>h scheduled</div>
                </div>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="<%= utilization_color(staff[:utilization_percent]) %> h-3 rounded-full"
                     style="width: <%= [staff[:utilization_percent], 100].min %>%"></div>
              </div>
              <% if staff[:recommendation].present? %>
                <div class="mt-2 text-xs text-gray-600">
                  ðŸ’¡ <%= staff[:recommendation] %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Peak Hours Coverage -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Peak Hours Coverage</h3>
        <p class="text-sm text-gray-500 mt-1">Staff vs. demand during busy periods</p>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @peak_hours_coverage.each do |peak| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="flex items-center justify-between mb-3">
                <div>
                  <div class="text-sm font-medium text-gray-900"><%= peak[:day] %>, <%= peak[:time_range] %></div>
                  <div class="text-xs text-gray-500">Expected: <%= peak[:expected_bookings] %> bookings</div>
                </div>
                <% if peak[:coverage_adequate] %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                    Covered
                  </span>
                <% else %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">
                    Understaffed
                  </span>
                <% end %>
              </div>
              <div class="grid grid-cols-3 gap-4 text-sm">
                <div>
                  <div class="text-xs text-gray-500">Staff Scheduled</div>
                  <div class="font-medium text-gray-900"><%= peak[:staff_scheduled] %></div>
                </div>
                <div>
                  <div class="text-xs text-gray-500">Staff Needed</div>
                  <div class="font-medium text-gray-900"><%= peak[:staff_needed] %></div>
                </div>
                <div>
                  <div class="text-xs text-gray-500">Difference</div>
                  <div class="font-medium <%= peak[:staff_difference] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= peak[:staff_difference] >= 0 ? '+' : '' %><%= peak[:staff_difference] %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- AI Insights -->
  <div class="bg-gradient-to-r from-indigo-50 to-purple-50 rounded-lg p-6 border border-indigo-100">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
      AI Scheduling Insights
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% @scheduling_insights.each do |insight| %>
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <% if insight[:type] == 'opportunity' %>
                <div class="bg-green-100 rounded-full p-2">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                  </svg>
                </div>
              <% elsif insight[:type] == 'warning' %>
                <div class="bg-yellow-100 rounded-full p-2">
                  <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  </svg>
                </div>
              <% else %>
                <div class="bg-blue-100 rounded-full p-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="ml-3">
              <h4 class="text-sm font-medium text-gray-900"><%= insight[:title] %></h4>
              <p class="text-sm text-gray-600 mt-1"><%= insight[:description] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
