<div class="container mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Dynamic Pricing Recommendations</h1>
      <p class="text-gray-600 mt-1">AI-powered pricing optimization based on demand, competition, and market conditions</p>
    </div>
    <%= link_to "← Back to Predictive Analytics", business_manager_analytics_predictive_index_path,
                class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>

  <!-- Pricing Overview -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-sm text-gray-600">Current Avg Price</p>
        <div class="bg-gray-100 p-2 rounded-lg">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= number_to_currency(@pricing_summary[:current_avg_price]) %></p>
      <p class="text-sm text-gray-500 mt-1">Across all services</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-sm text-gray-600">Recommended Avg</p>
        <div class="bg-blue-100 p-2 rounded-lg">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-blue-600"><%= number_to_currency(@pricing_summary[:recommended_avg_price]) %></p>
      <p class="text-sm <%= @pricing_summary[:revenue_impact] >= 0 ? 'text-green-600' : 'text-red-600' %> mt-1">
        <%= number_to_currency(@pricing_summary[:revenue_impact].abs) %> <%= @pricing_summary[:revenue_impact] >= 0 ? 'increase' : 'decrease' %> potential
      </p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-sm text-gray-600">Services to Optimize</p>
        <div class="bg-yellow-100 p-2 rounded-lg">
          <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @pricing_summary[:services_to_optimize] %></p>
      <p class="text-sm text-gray-500 mt-1">Need pricing adjustments</p>
    </div>
  </div>

  <!-- Pricing Recommendations by Service -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-semibold text-gray-900">Service Pricing Recommendations</h2>
          <p class="text-sm text-gray-500 mt-1">Based on demand elasticity, market rates, and booking patterns</p>
        </div>
        <%= button_to "Apply All Recommended",
                      apply_all_pricing_business_manager_analytics_predictive_index_path,
                      method: :post,
                      class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium text-sm cursor-pointer",
                      data: { confirm: "Are you sure you want to apply all pricing recommendations? This will update prices for multiple services." } %>
      </div>
    </div>
    <div class="p-6">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Current Price</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Recommended</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Change</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Impact</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @pricing_recommendations.each do |rec| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= rec[:service_name] %></div>
                  <div class="text-sm text-gray-500">
                    <% if rec[:demand_level] == 'high' %>
                      <span class="text-green-600">● High demand</span>
                    <% elsif rec[:demand_level] == 'low' %>
                      <span class="text-red-600">● Low demand</span>
                    <% else %>
                      <span class="text-yellow-600">● Medium demand</span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= number_to_currency(rec[:current_price]) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-bold text-blue-600"><%= number_to_currency(rec[:recommended_price]) %></div>
                  <div class="text-xs text-gray-500">
                    Range: <%= number_to_currency(rec[:price_range_min]) %> - <%= number_to_currency(rec[:price_range_max]) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% change_amount = rec[:recommended_price] - rec[:current_price] %>
                  <% change_percent = ((change_amount / rec[:current_price]) * 100).round(1) %>
                  <div class="text-sm font-medium <%= change_amount >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= change_amount >= 0 ? '+' : '' %><%= number_to_currency(change_amount) %>
                  </div>
                  <div class="text-xs <%= change_amount >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    (<%= change_amount >= 0 ? '+' : '' %><%= change_percent %>%)
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900"><%= rec[:primary_reason] %></div>
                  <div class="text-xs text-gray-500 mt-1">
                    <% rec[:factors].each do |factor| %>
                      <span class="inline-block mr-1">• <%= factor %></span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium <%= rec[:revenue_impact] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= rec[:revenue_impact] >= 0 ? '+' : '' %><%= number_to_currency(rec[:revenue_impact]) %>/mo
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= rec[:confidence_level].round %>% confidence
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                  <%= button_to "Apply",
                                apply_pricing_business_manager_analytics_predictive_index_path,
                                method: :post,
                                params: { service_name: rec[:service_name], recommended_price: rec[:recommended_price] },
                                class: "text-blue-600 hover:text-blue-800 font-medium cursor-pointer bg-transparent border-none p-0",
                                form_class: "inline",
                                data: { confirm: "Apply recommended price of #{number_to_currency(rec[:recommended_price])} to #{rec[:service_name]}?" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Dynamic Pricing Strategy Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center mb-4">
        <div class="bg-green-100 p-3 rounded-lg mr-3">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">Premium Pricing</h3>
      </div>
      <p class="text-sm text-gray-600 mb-4">
        Services with high demand and limited competition can command premium prices
      </p>
      <div class="space-y-2">
        <% @premium_candidates.first(3).each do |service| %>
          <div class="flex justify-between items-center text-sm">
            <span class="text-gray-700"><%= service[:name] %></span>
            <span class="font-medium text-green-600">+<%= service[:increase_potential] %>%</span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center mb-4">
        <div class="bg-blue-100 p-3 rounded-lg mr-3">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">Time-Based Pricing</h3>
      </div>
      <p class="text-sm text-gray-600 mb-4">
        Adjust prices based on peak hours and off-peak times to optimize capacity
      </p>
      <div class="space-y-2">
        <div class="flex justify-between items-center text-sm">
          <span class="text-gray-700">Peak Hours (10am-2pm)</span>
          <span class="font-medium text-blue-600">+15%</span>
        </div>
        <div class="flex justify-between items-center text-sm">
          <span class="text-gray-700">Off-Peak (6pm-8pm)</span>
          <span class="font-medium text-yellow-600">-10%</span>
        </div>
        <div class="flex justify-between items-center text-sm">
          <span class="text-gray-700">Weekend Premium</span>
          <span class="font-medium text-blue-600">+20%</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center mb-4">
        <div class="bg-yellow-100 p-3 rounded-lg mr-3">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">Promotional Pricing</h3>
      </div>
      <p class="text-sm text-gray-600 mb-4">
        Strategic discounts to boost bookings for low-demand services
      </p>
      <div class="space-y-2">
        <% @promotional_candidates.first(3).each do |service| %>
          <div class="flex justify-between items-center text-sm">
            <span class="text-gray-700"><%= service[:name] %></span>
            <span class="font-medium text-yellow-600">-<%= service[:discount_suggested] %>%</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Market Comparison -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Market Comparison</h2>
      <p class="text-sm text-gray-500 mt-1">How your prices compare to similar businesses in your area</p>
    </div>
    <div class="p-6">
      <div class="space-y-6">
        <% @market_comparison.each do |comparison| %>
          <div>
            <div class="flex justify-between items-center mb-2">
              <h3 class="text-sm font-medium text-gray-900"><%= comparison[:service_name] %></h3>
              <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-600">Market Range: <%= number_to_currency(comparison[:market_min]) %> - <%= number_to_currency(comparison[:market_max]) %></span>
                <span class="text-sm font-medium text-gray-900">Your Price: <%= number_to_currency(comparison[:your_price]) %></span>
              </div>
            </div>
            <div class="relative">
              <div class="bg-gray-200 rounded-full h-10 flex items-center">
                <!-- Market range bar -->
                <div class="absolute inset-0 flex items-center px-2">
                  <div class="bg-blue-200 h-6 rounded-full" style="margin-left: <%= comparison[:market_position_percent] %>%; width: <%= comparison[:market_spread_percent] %>%"></div>
                </div>
                <!-- Your price marker -->
                <div class="absolute inset-0 flex items-center">
                  <div class="h-10 w-1 bg-red-600" style="margin-left: <%= comparison[:your_position_percent] %>%">
                    <div class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-red-600 text-white text-xs px-2 py-1 rounded whitespace-nowrap">
                      You: <%= number_to_currency(comparison[:your_price]) %>
                    </div>
                  </div>
                </div>
                <!-- Labels -->
                <div class="absolute left-2 text-xs text-gray-600"><%= number_to_currency(comparison[:market_min]) %></div>
                <div class="absolute right-2 text-xs text-gray-600"><%= number_to_currency(comparison[:market_max]) %></div>
              </div>
            </div>
            <div class="mt-2 text-sm">
              <% if comparison[:position] == 'below' %>
                <span class="text-yellow-600">● Priced below market average - Consider increasing</span>
              <% elsif comparison[:position] == 'above' %>
                <span class="text-blue-600">● Premium positioning - Ensure value justifies price</span>
              <% else %>
                <span class="text-green-600">● Competitively priced within market range</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Pricing Insights -->
  <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg p-6 border border-purple-100">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
      Key Insights & Strategy
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% @pricing_insights.each do |insight| %>
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <h4 class="text-sm font-medium text-gray-900 mb-2"><%= insight[:title] %></h4>
          <p class="text-sm text-gray-600"><%= insight[:description] %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
