<div class="container mx-auto px-4 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Demand Forecast</h1>
      <p class="text-gray-600 mt-1">Predict future booking demand by service and time period</p>
    </div>
    <%= link_to "â† Back to Predictive Analytics", business_manager_analytics_predictive_index_path,
                class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>

  <!-- Time Period Selector -->
  <div class="bg-white rounded-lg shadow mb-6 p-6">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">Forecast Period</h2>
      <div class="flex space-x-2">
        <%= link_to '7 Days', demand_forecast_business_manager_analytics_predictive_index_path(period: 7),
                    class: "px-4 py-2 text-sm font-medium rounded-lg #{params[:period] == '7' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
        <%= link_to '14 Days', demand_forecast_business_manager_analytics_predictive_index_path(period: 14),
                    class: "px-4 py-2 text-sm font-medium rounded-lg #{params[:period] == '14' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
        <%= link_to '30 Days', demand_forecast_business_manager_analytics_predictive_index_path(period: 30),
                    class: "px-4 py-2 text-sm font-medium rounded-lg #{params[:period].nil? || params[:period] == '30' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      </div>
    </div>
  </div>

  <!-- Overall Demand Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-sm text-gray-600">Expected Bookings</p>
        <div class="bg-blue-100 p-2 rounded-lg">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @demand_forecast[:total_bookings_predicted] %></p>
      <p class="text-sm text-gray-500 mt-1">
        <%= percentage_change_badge(@demand_forecast[:change_from_previous]) %>
        vs. previous period
      </p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-sm text-gray-600">Predicted Revenue</p>
        <div class="bg-green-100 p-2 rounded-lg">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= number_to_currency(@demand_forecast[:total_revenue_predicted]) %></p>
      <p class="text-sm text-gray-500 mt-1">Based on avg service value</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-sm text-gray-600">Confidence Level</p>
        <div class="bg-purple-100 p-2 rounded-lg">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-3xl font-bold text-gray-900"><%= @demand_forecast[:confidence_level].round(1) %>%</p>
      <span class="<%= prediction_confidence_badge(@demand_forecast[:confidence_level]) %>">
        <%= @demand_forecast[:confidence_level] >= 85 ? 'High Confidence' : @demand_forecast[:confidence_level] >= 70 ? 'Medium Confidence' : 'Low Confidence' %>
      </span>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between mb-2">
        <p class="text-sm text-gray-600">Peak Day</p>
        <div class="bg-yellow-100 p-2 rounded-lg">
          <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
      </div>
      <p class="text-xl font-bold text-gray-900"><%= @demand_forecast[:peak_day] %></p>
      <p class="text-sm text-gray-500 mt-1"><%= @demand_forecast[:peak_bookings] %> expected bookings</p>
    </div>
  </div>

  <!-- Demand by Service -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Demand Forecast by Service</h2>
      <p class="text-sm text-gray-500 mt-1">Predicted bookings for each service over the next <%= params[:period] || 30 %> days</p>
    </div>
    <div class="p-6">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Historical Avg</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Predicted</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Change</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Confidence</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trend</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @demand_by_service.each do |service_data| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= service_data[:service_name] %></div>
                  <div class="text-sm text-gray-500"><%= service_data[:category] %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= service_data[:historical_avg] %> bookings
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-bold text-blue-600"><%= service_data[:predicted] %> bookings</div>
                  <div class="text-xs text-gray-500"><%= number_to_currency(service_data[:predicted_revenue]) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= percentage_change_badge(service_data[:change_percent]) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="<%= prediction_confidence_badge(service_data[:confidence]) %>">
                    <%= service_data[:confidence].round %>%
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if service_data[:trend] == 'increasing' %>
                    <span class="text-green-600 flex items-center text-sm">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                      </svg>
                      Increasing
                    </span>
                  <% elsif service_data[:trend] == 'decreasing' %>
                    <span class="text-red-600 flex items-center text-sm">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"/>
                      </svg>
                      Decreasing
                    </span>
                  <% else %>
                    <span class="text-gray-600 flex items-center text-sm">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14"/>
                      </svg>
                      Stable
                    </span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Daily Forecast Timeline -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Daily Forecast Timeline</h2>
      <p class="text-sm text-gray-500 mt-1">Expected booking volume by day</p>
    </div>
    <div class="p-6">
      <div class="space-y-3">
        <% @daily_forecast.each do |day_data| %>
          <div class="flex items-center">
            <div class="w-32 text-sm text-gray-600">
              <%= day_data[:date].strftime('%a, %b %d') %>
            </div>
            <div class="flex-1 mx-4">
              <div class="bg-gray-200 rounded-full h-6 relative">
                <div class="bg-blue-500 h-6 rounded-full flex items-center justify-end px-2"
                     style="width: <%= [day_data[:predicted_bookings].to_f / @demand_forecast[:peak_bookings] * 100, 100].min %>%">
                  <span class="text-white text-xs font-medium"><%= day_data[:predicted_bookings] %></span>
                </div>
              </div>
            </div>
            <div class="w-32 text-right">
              <div class="text-sm font-medium text-gray-900"><%= number_to_currency(day_data[:predicted_revenue]) %></div>
              <div class="text-xs text-gray-500"><%= day_data[:confidence].round %>% confidence</div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Actionable Insights -->
  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-6 border border-blue-100">
    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
      <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
      </svg>
      Recommended Actions
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% @demand_forecast[:recommendations].each do |recommendation| %>
        <div class="bg-white rounded-lg p-4 shadow-sm">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <% if recommendation[:priority] == 'high' %>
                <div class="bg-red-100 rounded-full p-2">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  </svg>
                </div>
              <% else %>
                <div class="bg-blue-100 rounded-full p-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="ml-3">
              <h4 class="text-sm font-medium text-gray-900"><%= recommendation[:title] %></h4>
              <p class="text-sm text-gray-600 mt-1"><%= recommendation[:description] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
