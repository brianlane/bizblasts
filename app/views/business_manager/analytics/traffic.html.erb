<% content_for :title, "Traffic Analytics" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Traffic Analytics</h1>
      <p class="text-sm text-gray-600 mt-1">Analyze your website traffic sources and visitor behavior</p>
    </div>

    <!-- Period Selector -->
    <%= render 'shared/period_selector', period: @period, base_path: business_manager_analytics_traffic_path %>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_path(period: @period), class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Analytics Overview
  <% end %>

  <!-- Traffic Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="bg-white p-6 rounded-lg shadow">
      <div class="text-sm font-medium text-gray-500 mb-2">Total Visitors</div>
      <div class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@overview[:visitors][:total] || 0) %></div>
      <div class="flex items-center mt-2 text-sm">
        <span class="text-green-600 mr-1">New: <%= @overview[:visitors][:new] || 0 %></span>
        <span class="text-gray-500">Returning: <%= @overview[:visitors][:returning] || 0 %></span>
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
      <div class="text-sm font-medium text-gray-500 mb-2">Page Views</div>
      <div class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@overview[:page_views] || 0) %></div>
      <div class="text-sm text-gray-500 mt-2">
        Avg: <%= (@overview[:avg_pages_per_session] || 0).round(1) %> pages/session
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
      <div class="text-sm font-medium text-gray-500 mb-2">Avg Duration</div>
      <div class="text-3xl font-bold text-gray-900"><%= @overview[:avg_session_duration] || '0:00' %></div>
      <div class="text-sm text-gray-500 mt-2">Per session</div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
      <div class="text-sm font-medium text-gray-500 mb-2">Bounce Rate</div>
      <div class="text-3xl font-bold text-gray-900"><%= (@overview[:bounce_rate] || 0).round(1) %>%</div>
      <div class="text-sm text-gray-500 mt-2">Single page visits</div>
    </div>
  </div>

  <!-- Traffic Sources Chart -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Traffic Sources</h2>
    <% if @traffic_sources.present? && @traffic_sources.any? %>
      <div class="space-y-4">
        <% @traffic_sources.each do |source, data| %>
          <div>
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center">
                <span class="w-3 h-3 rounded-full mr-3 <%= source_color(source) %>"></span>
                <span class="text-sm font-medium text-gray-700 capitalize"><%= source %></span>
              </div>
              <div class="flex items-center gap-4">
                <span class="text-sm text-gray-500"><%= data[:count] %> visitors</span>
                <span class="text-sm font-medium text-gray-900"><%= data[:percentage] %>%</span>
              </div>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="<%= source_color(source) %> h-2 rounded-full transition-all duration-300" style="width: <%= data[:percentage] %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <p>No traffic data available for this period</p>
      </div>
    <% end %>
  </div>

  <!-- Traffic Trend -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Traffic Trend</h2>
    <% if @trend_data.present? && @trend_data.any? %>
      <div class="grid grid-cols-7 gap-2">
        <% @trend_data.last(7).each do |point| %>
          <div class="text-center p-3 bg-gray-50 rounded">
            <div class="text-xs text-gray-500 mb-1"><%= point[:date].strftime('%a') %></div>
            <div class="text-lg font-semibold text-gray-900"><%= point[:visitors] %></div>
            <div class="text-xs text-gray-500 mt-1"><%= point[:page_views] %> views</div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <p>No trend data available</p>
      </div>
    <% end %>
  </div>

  <!-- Top Pages -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Most Visited Pages</h2>
    <% if @top_pages.present? && @top_pages.any? %>
      <div class="space-y-3">
        <% @top_pages.each_with_index do |page, index| %>
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <div class="flex items-center flex-1">
              <span class="text-sm font-medium text-gray-400 w-8"><%= index + 1 %>.</span>
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900 truncate"><%= page[:path] %></div>
                <% if page[:page_title].present? %>
                  <div class="text-xs text-gray-500 truncate"><%= page[:page_title] %></div>
                <% end %>
              </div>
            </div>
            <div class="text-right">
              <div class="text-sm font-medium text-gray-900"><%= number_with_delimiter(page[:views]) %></div>
              <div class="text-xs text-gray-500">views</div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <p>No page view data available</p>
      </div>
    <% end %>
  </div>
</div>

<% content_for :head do %>
<style>
  .bg-source-direct { background-color: #6366f1; }
  .bg-source-organic { background-color: #22c55e; }
  .bg-source-social { background-color: #3b82f6; }
  .bg-source-referral { background-color: #f59e0b; }
  .bg-source-paid { background-color: #ef4444; }
  .bg-source-other { background-color: #9ca3af; }
</style>
<% end %>
