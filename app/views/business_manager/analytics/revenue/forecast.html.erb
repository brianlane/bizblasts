<% content_for :title, "Revenue Forecast" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Revenue Forecast</h1>
      <p class="text-sm text-gray-600 mt-1">Projected revenue based on confirmed and pending bookings</p>
    </div>

    <div class="flex items-center gap-4">
      <%= link_to "Export CSV", export_business_manager_analytics_revenue_index_path(format: :csv),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_revenue_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Revenue Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @forecast_data.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Confirmed Revenue</p>
            <p class="text-2xl font-semibold text-green-600 mt-2"><%= number_to_currency(@forecast_data[:confirmed] || 0) %></p>
            <p class="text-xs text-gray-500 mt-1">Locked in bookings</p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Conservative Forecast</p>
            <p class="text-2xl font-semibold text-blue-600 mt-2"><%= number_to_currency(@forecast_data[:conservative] || 0) %></p>
            <p class="text-xs text-gray-500 mt-1">Expected minimum</p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Optimistic Forecast</p>
            <p class="text-2xl font-semibold text-purple-600 mt-2"><%= number_to_currency(@forecast_data[:optimistic] || 0) %></p>
            <p class="text-xs text-gray-500 mt-1">Potential maximum</p>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Forecast Range</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2">
              <%= number_to_currency((@forecast_data[:optimistic] || 0) - (@forecast_data[:conservative] || 0)) %>
            </p>
            <p class="text-xs text-gray-500 mt-1">Variance potential</p>
          </div>
          <div class="bg-orange-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Forecast Visualization -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Revenue Forecast Scenarios</h2>
      <p class="text-sm text-gray-600 mt-1">30-day forward projection based on booking trends</p>
    </div>

    <div class="p-6">
      <% if @forecast_data.present? %>
        <div class="space-y-6">
          <!-- Confirmed Revenue Bar -->
          <div>
            <div class="flex justify-between items-center mb-2">
              <div>
                <span class="text-sm font-medium text-gray-700">Confirmed Revenue</span>
                <span class="ml-2 text-xs text-gray-500">(Guaranteed from confirmed bookings)</span>
              </div>
              <span class="text-sm font-semibold text-green-600"><%= number_to_currency(@forecast_data[:confirmed] || 0) %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-8">
              <% max_value = [@forecast_data[:optimistic] || 0, 1].max %>
              <% confirmed_width = [(@forecast_data[:confirmed].to_f / max_value * 100).round(1), 100].min %>
              <div class="bg-green-500 h-8 rounded-full flex items-center justify-end pr-3" style="width: <%= confirmed_width %>%">
                <span class="text-white text-xs font-medium"><%= number_to_percentage(confirmed_width, precision: 0) %></span>
              </div>
            </div>
          </div>

          <!-- Conservative Forecast Bar -->
          <div>
            <div class="flex justify-between items-center mb-2">
              <div>
                <span class="text-sm font-medium text-gray-700">Conservative Forecast</span>
                <span class="ml-2 text-xs text-gray-500">(Expected minimum based on trends)</span>
              </div>
              <span class="text-sm font-semibold text-blue-600"><%= number_to_currency(@forecast_data[:conservative] || 0) %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-8">
              <% conservative_width = [(@forecast_data[:conservative].to_f / max_value * 100).round(1), 100].min %>
              <div class="bg-blue-500 h-8 rounded-full flex items-center justify-end pr-3" style="width: <%= conservative_width %>%">
                <span class="text-white text-xs font-medium"><%= number_to_percentage(conservative_width, precision: 0) %></span>
              </div>
            </div>
          </div>

          <!-- Optimistic Forecast Bar -->
          <div>
            <div class="flex justify-between items-center mb-2">
              <div>
                <span class="text-sm font-medium text-gray-700">Optimistic Forecast</span>
                <span class="ml-2 text-xs text-gray-500">(Potential maximum with strong growth)</span>
              </div>
              <span class="text-sm font-semibold text-purple-600"><%= number_to_currency(@forecast_data[:optimistic] || 0) %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-8">
              <% optimistic_width = [(@forecast_data[:optimistic].to_f / max_value * 100).round(1), 100].min %>
              <div class="bg-purple-500 h-8 rounded-full flex items-center justify-end pr-3" style="width: <%= optimistic_width %>%">
                <span class="text-white text-xs font-medium"><%= number_to_percentage(optimistic_width, precision: 0) %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Forecast Insights -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Forecast Methodology</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="flex items-start">
              <div class="bg-green-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-green-900">Confirmed</div>
                <div class="text-green-800">Revenue from all confirmed, locked-in bookings.</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-blue-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-blue-900">Conservative</div>
                <div class="text-blue-800">Confirmed + 50% of pending bookings based on historical conversion.</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-purple-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-purple-900">Optimistic</div>
                <div class="text-purple-800">Confirmed + all pending + projected new bookings from trend analysis.</div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No forecast data</h3>
          <p class="mt-1 text-sm text-gray-500">Insufficient booking data to generate forecast.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
