<% content_for :title, "Gross Margin Analysis" %>

<div class="space-y-6">
  <!-- Header with Period Selector -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Gross Margin Analysis</h1>
      <p class="text-sm text-gray-600 mt-1">Profitability breakdown by revenue streams</p>
    </div>

    <div class="flex items-center gap-4">
      <%= render 'shared/period_selector', period: @period || :last_30_days, base_path: gross_margin_business_manager_analytics_revenue_index_path %>
      <%= link_to "Export CSV", export_business_manager_analytics_revenue_index_path(format: :csv, period: @period),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_revenue_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Revenue Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @margin_analysis.present? %>
    <% total_revenue = @margin_analysis[:total_revenue] || 0 %>
    <% total_cost = @margin_analysis[:total_cost] || 0 %>
    <% gross_profit = total_revenue - total_cost %>
    <% margin_pct = total_revenue > 0 ? ((gross_profit / total_revenue) * 100) : 0 %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Revenue</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= number_to_currency(total_revenue) %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Cost</p>
            <p class="text-2xl font-semibold text-red-600 mt-2"><%= number_to_currency(total_cost) %></p>
          </div>
          <div class="bg-red-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Gross Profit</p>
            <p class="text-2xl font-semibold <%= gross_profit >= 0 ? 'text-green-600' : 'text-red-600' %> mt-2">
              <%= number_to_currency(gross_profit) %>
            </p>
          </div>
          <div class="<%= gross_profit >= 0 ? 'bg-green-100' : 'bg-red-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= gross_profit >= 0 ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= gross_profit >= 0 ? 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' : 'M13 17h8m0 0V9m0 8l-8-8-4 4-6-6' %>"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Gross Margin</p>
            <p class="text-2xl font-semibold <%= margin_pct >= 40 ? 'text-green-600' : margin_pct >= 20 ? 'text-blue-600' : 'text-orange-600' %> mt-2">
              <%= number_to_percentage(margin_pct, precision: 1) %>
            </p>
          </div>
          <div class="<%= margin_pct >= 40 ? 'bg-green-100' : margin_pct >= 20 ? 'bg-blue-100' : 'bg-orange-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= margin_pct >= 40 ? 'text-green-600' : margin_pct >= 20 ? 'text-blue-600' : 'text-orange-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Margin Breakdown by Category -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Margin by Revenue Stream</h2>
      <p class="text-sm text-gray-600 mt-1">Profitability analysis across categories</p>
    </div>

    <div class="p-6">
      <% if @margin_analysis.present? && @margin_analysis[:by_category] && @margin_analysis[:by_category].any? %>
        <!-- Mobile Cards -->
        <div class="lg:hidden space-y-4">
          <% @margin_analysis[:by_category].each do |category| %>
            <% cat_margin = category[:revenue] > 0 ? ((category[:profit].to_f / category[:revenue]) * 100) : 0 %>
            <div class="border rounded-lg p-4 shadow-sm">
              <h3 class="font-semibold text-gray-900 mb-3"><%= category[:category].to_s.titleize %></h3>

              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Revenue:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(category[:revenue]) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Cost:</span>
                  <span class="font-medium text-red-600"><%= number_to_currency(category[:cost]) %></span>
                </div>
                <div class="flex justify-between border-t pt-2">
                  <span class="text-gray-600 font-medium">Profit:</span>
                  <span class="font-semibold <%= category[:profit] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= number_to_currency(category[:profit]) %>
                  </span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Margin:</span>
                  <span class="font-medium <%= cat_margin >= 40 ? 'text-green-600' : cat_margin >= 20 ? 'text-blue-600' : 'text-orange-600' %>">
                    <%= number_to_percentage(cat_margin, precision: 1) %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Category
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Revenue
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Cost
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Gross Profit
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Margin %
                </th>
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Visual
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @margin_analysis[:by_category].each do |category| %>
                <% cat_margin = category[:revenue] > 0 ? ((category[:profit].to_f / category[:revenue]) * 100) : 0 %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= category[:category].to_s.titleize %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= number_to_currency(category[:revenue]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-red-600"><%= number_to_currency(category[:cost]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold <%= category[:profit] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= number_to_currency(category[:profit]) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold <%= cat_margin >= 40 ? 'text-green-600' : cat_margin >= 20 ? 'text-blue-600' : 'text-orange-600' %>">
                      <%= number_to_percentage(cat_margin, precision: 1) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="w-full max-w-[120px] bg-gray-200 rounded-full h-3 mx-auto">
                      <% bar_width = [[cat_margin, 0].max, 100].min %>
                      <div class="<%= cat_margin >= 40 ? 'bg-green-500' : cat_margin >= 20 ? 'bg-blue-500' : 'bg-orange-500' %> h-3 rounded-full"
                           style="width: <%= bar_width %>%"></div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td class="px-6 py-4 text-left text-sm font-semibold text-gray-900">
                  Total
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-bold text-gray-900">
                    <%= number_to_currency(@margin_analysis[:total_revenue]) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-bold text-red-600">
                    <%= number_to_currency(@margin_analysis[:total_cost]) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-bold <%= (@margin_analysis[:total_revenue] - @margin_analysis[:total_cost]) >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= number_to_currency(@margin_analysis[:total_revenue] - @margin_analysis[:total_cost]) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <% overall_margin = @margin_analysis[:total_revenue] > 0 ? (((@margin_analysis[:total_revenue] - @margin_analysis[:total_cost]) / @margin_analysis[:total_revenue]) * 100) : 0 %>
                  <div class="text-sm font-bold <%= overall_margin >= 40 ? 'text-green-600' : overall_margin >= 20 ? 'text-blue-600' : 'text-orange-600' %>">
                    <%= number_to_percentage(overall_margin, precision: 1) %>
                  </div>
                </td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>

        <!-- Margin Guide -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Margin Health Guidelines</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="flex items-start">
              <div class="bg-green-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-green-900">Excellent (&ge; 40%)</div>
                <div class="text-green-800">Strong profitability. Consider scaling this category.</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-blue-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-blue-900">Healthy (20-40%)</div>
                <div class="text-blue-800">Good margins. Look for optimization opportunities.</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-orange-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-orange-900">Low (&lt; 20%)</div>
                <div class="text-orange-800">Review pricing and cost structure.</div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No margin data</h3>
          <p class="mt-1 text-sm text-gray-500">No revenue data available for the selected period.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
