<% content_for :title, "Payment Aging Report" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Payment Aging Report</h1>
      <p class="text-sm text-gray-600 mt-1">Outstanding payments categorized by age</p>
    </div>

    <div class="flex items-center gap-4">
      <%= link_to "Export CSV", export_business_manager_analytics_revenue_index_path(format: :csv),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_revenue_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Revenue Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @aging_report.present? %>
    <% total_outstanding = @aging_report[:total_outstanding] || 0 %>
    <% most_overdue = @aging_report[:days_90_plus] || 0 %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Outstanding</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= number_to_currency(total_outstanding) %></p>
          </div>
          <div class="bg-red-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Current (Not Overdue)</p>
            <p class="text-2xl font-semibold text-green-600 mt-2"><%= number_to_currency(@aging_report[:current] || 0) %></p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">1-30 Days Overdue</p>
            <p class="text-2xl font-semibold text-yellow-600 mt-2"><%= number_to_currency(@aging_report[:days_30] || 0) %></p>
          </div>
          <div class="bg-yellow-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">90+ Days Overdue</p>
            <p class="text-2xl font-semibold text-red-600 mt-2"><%= number_to_currency(most_overdue) %></p>
          </div>
          <div class="bg-red-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Aging Breakdown -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Payment Aging Breakdown</h2>
      <p class="text-sm text-gray-600 mt-1">Outstanding payments by aging bucket</p>
    </div>

    <div class="p-6">
      <% if @aging_report.present? %>
        <div class="space-y-4">
          <!-- Current -->
          <div class="border-l-4 border-green-500 bg-green-50 rounded-lg p-4">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="font-semibold text-gray-900">Current (Not Overdue)</h3>
                <p class="text-sm text-gray-600">Payments due but not yet past due date</p>
              </div>
              <div class="text-right">
                <p class="text-2xl font-bold text-green-600"><%= number_to_currency(@aging_report[:current] || 0) %></p>
                <p class="text-xs text-gray-500">
                  <%= total_outstanding > 0 ? number_to_percentage((@aging_report[:current].to_f / total_outstanding * 100), precision: 0) : "0%" %> of total
                </p>
              </div>
            </div>
          </div>

          <!-- 1-30 Days -->
          <div class="border-l-4 border-yellow-500 bg-yellow-50 rounded-lg p-4">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="font-semibold text-gray-900">1-30 Days Overdue</h3>
                <p class="text-sm text-gray-600">Recently overdue - send gentle reminders</p>
              </div>
              <div class="text-right">
                <p class="text-2xl font-bold text-yellow-600"><%= number_to_currency(@aging_report[:days_30] || 0) %></p>
                <p class="text-xs text-gray-500">
                  <%= total_outstanding > 0 ? number_to_percentage((@aging_report[:days_30].to_f / total_outstanding * 100), precision: 0) : "0%" %> of total
                </p>
              </div>
            </div>
          </div>

          <!-- 31-60 Days -->
          <div class="border-l-4 border-orange-500 bg-orange-50 rounded-lg p-4">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="font-semibold text-gray-900">31-60 Days Overdue</h3>
                <p class="text-sm text-gray-600">Requires follow-up and escalation</p>
              </div>
              <div class="text-right">
                <p class="text-2xl font-bold text-orange-600"><%= number_to_currency(@aging_report[:days_60] || 0) %></p>
                <p class="text-xs text-gray-500">
                  <%= total_outstanding > 0 ? number_to_percentage((@aging_report[:days_60].to_f / total_outstanding * 100), precision: 0) : "0%" %> of total
                </p>
              </div>
            </div>
          </div>

          <!-- 90+ Days -->
          <div class="border-l-4 border-red-500 bg-red-50 rounded-lg p-4">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="font-semibold text-gray-900">90+ Days Overdue</h3>
                <p class="text-sm text-gray-600">Critical - consider collections or write-off</p>
              </div>
              <div class="text-right">
                <p class="text-2xl font-bold text-red-600"><%= number_to_currency(@aging_report[:days_90_plus] || 0) %></p>
                <p class="text-xs text-gray-500">
                  <%= total_outstanding > 0 ? number_to_percentage((@aging_report[:days_90_plus].to_f / total_outstanding * 100), precision: 0) : "0%" %> of total
                </p>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No aging data</h3>
          <p class="mt-1 text-sm text-gray-500">No outstanding payments found.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Overdue Invoices List -->
  <% if @overdue_invoices.present? && @overdue_invoices.any? %>
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Overdue Invoices</h2>
        <p class="text-sm text-gray-600 mt-1">Most urgent invoices requiring attention</p>
      </div>

      <div class="p-6">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Invoice #
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Customer
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Amount
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Due Date
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Days Overdue
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @overdue_invoices.each do |invoice| %>
                <% days_overdue = (Date.current - invoice.due_date.to_date).to_i %>
                <% severity_class = days_overdue >= 90 ? 'bg-red-50' : days_overdue >= 31 ? 'bg-orange-50' : 'bg-yellow-50' %>
                <tr class="<%= severity_class %>">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">#<%= invoice.id %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= invoice.tenant_customer&.full_name || 'N/A' %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold text-gray-900"><%= number_to_currency(invoice.total_amount) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= invoice.due_date.strftime('%b %d, %Y') %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold <%= days_overdue >= 90 ? 'text-red-600' : days_overdue >= 31 ? 'text-orange-600' : 'text-yellow-600' %>">
                      <%= days_overdue %> days
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= invoice.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= invoice.status.titleize %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
