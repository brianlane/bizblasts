<% content_for :title, "Conversion Analytics" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Conversion Analytics</h1>
      <p class="text-sm text-gray-600 mt-1">Track conversion rates and funnel performance</p>
    </div>

    <!-- Period Selector -->
    <%= render 'shared/period_selector', period: @period, base_path: business_manager_analytics_conversions_path %>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_path(period: @period), class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Analytics Overview
  <% end %>

  <!-- Conversion Rates by Source -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Conversion Rates by Traffic Source</h2>
    <% if @conversion_rates.present? && @conversion_rates.any? %>
      <div class="space-y-4">
        <% @conversion_rates.each do |source, data| %>
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-center justify-between mb-3">
              <div class="flex items-center">
                <span class="w-3 h-3 rounded-full mr-3 <%= source_color(source) %>"></span>
                <span class="text-sm font-semibold text-gray-900 capitalize"><%= source %></span>
              </div>
              <span class="text-lg font-bold text-green-600"><%= data[:conversion_rate] %>%</span>
            </div>
            <div class="grid grid-cols-3 gap-4 text-sm">
              <div>
                <div class="text-gray-500">Visitors</div>
                <div class="font-medium text-gray-900"><%= number_with_delimiter(data[:visitors]) %></div>
              </div>
              <div>
                <div class="text-gray-500">Conversions</div>
                <div class="font-medium text-gray-900"><%= data[:conversions] %></div>
              </div>
              <div>
                <div class="text-gray-500">Value</div>
                <div class="font-medium text-gray-900"><%= number_to_currency(data[:value] || 0) %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
        </svg>
        <p>No conversion data available for this period</p>
      </div>
    <% end %>
  </div>

  <!-- Top Converting Pages -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Top Converting Pages</h2>
    <% if @top_converting_pages.present? && @top_converting_pages.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Page</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Views</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Conversions</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rate</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @top_converting_pages.each do |page| %>
              <tr>
                <td class="px-6 py-4 text-sm text-gray-900 truncate max-w-xs"><%= page[:path] %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= number_with_delimiter(page[:views]) %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= page[:conversions] %></td>
                <td class="px-6 py-4 text-sm">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= page[:conversion_rate] %>%
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <p>No converting pages data available</p>
      </div>
    <% end %>
  </div>

  <!-- Conversion Funnel -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Conversion Funnel</h2>
    <% if @funnel.present? && @funnel[:stages].present? %>
      <div class="space-y-4">
        <% @funnel[:stages].each_with_index do |stage, index| %>
          <div class="relative">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center">
                <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-100 text-blue-600 font-semibold text-sm mr-3">
                  <%= index + 1 %>
                </span>
                <span class="text-sm font-medium text-gray-900"><%= stage[:name] %></span>
              </div>
              <div class="text-right">
                <div class="text-sm font-semibold text-gray-900"><%= number_with_delimiter(stage[:count]) %></div>
                <% if stage[:drop_off_rate].present? && stage[:drop_off_rate] > 0 %>
                  <div class="text-xs text-red-600">-<%= stage[:drop_off_rate] %>%</div>
                <% end %>
              </div>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="bg-blue-500 h-3 rounded-full transition-all duration-300"
                   style="width: <%= stage[:percentage] %>%"></div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-6 grid grid-cols-2 gap-4 pt-6 border-t border-gray-200">
        <div class="text-center">
          <div class="text-sm text-gray-500 mb-1">Overall Conversion Rate</div>
          <div class="text-2xl font-bold text-green-600"><%= @funnel[:overall_rate] %>%</div>
        </div>
        <div class="text-center">
          <div class="text-sm text-gray-500 mb-1">Total Conversions</div>
          <div class="text-2xl font-bold text-gray-900"><%= @funnel[:conversions] %></div>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12 text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"/>
        </svg>
        <p>No funnel data available for this period</p>
      </div>
    <% end %>
  </div>
</div>

<% content_for :head do %>
<style>
  .bg-source-direct { background-color: #6366f1; }
  .bg-source-organic { background-color: #22c55e; }
  .bg-source-social { background-color: #3b82f6; }
  .bg-source-referral { background-color: #f59e0b; }
  .bg-source-paid { background-color: #ef4444; }
  .bg-source-other { background-color: #9ca3af; }
</style>
<% end %>
