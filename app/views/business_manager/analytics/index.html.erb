<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Analytics</h1>
      <p class="text-sm text-gray-600 mt-1">Track your website performance and business metrics</p>
    </div>
    
    <!-- Period Selector -->
    <div class="flex items-center gap-2">
      <label class="text-sm text-gray-600">Period:</label>
      <select id="period-selector" 
              onchange="changeAnalyticsPeriod(this)"
              class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        <option value="today" <%= 'selected' if @period == :today %>>Today</option>
        <option value="last_7_days" <%= 'selected' if @period == :last_7_days %>>Last 7 Days</option>
        <option value="last_30_days" <%= 'selected' if @period == :last_30_days %>>Last 30 Days</option>
        <option value="last_90_days" <%= 'selected' if @period == :last_90_days %>>Last 90 Days</option>
      </select>
    </div>
  </div>

  <!-- Navigation Tabs -->
  <div class="border-b border-gray-200">
    <nav class="-mb-px flex space-x-4 sm:space-x-8 overflow-x-auto">
      <%= link_to "Overview", business_manager_analytics_path(period: @period), 
          class: "whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm #{@tab == 'overview' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
      <%= link_to "Traffic", business_manager_analytics_traffic_path(period: @period),
          class: "whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
      <%= link_to "Conversions", business_manager_analytics_conversions_path(period: @period),
          class: "whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
      <%= link_to "Bookings", business_manager_analytics_bookings_path(period: @period),
          class: "whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
      <%= link_to "Services", business_manager_analytics_services_path(period: @period),
          class: "whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
      <% if @current_business.products.any? %>
        <%= link_to "Products", business_manager_analytics_products_path(period: @period),
            class: "whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
      <% end %>
      <%= link_to "SEO", business_manager_analytics_seo_path,
          class: "whitespace-nowrap py-3 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" %>
    </nav>
  </div>

  <!-- Quick Stats Cards -->
  <div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4">
    <!-- Unique Visitors -->
    <div class="bg-white p-4 rounded-lg shadow">
      <div class="flex items-center justify-between">
        <div class="text-sm font-medium text-gray-500">Visitors</div>
        <% if @comparison[:visitors][:direction] != 'neutral' %>
          <span class="flex items-center text-xs <%= @comparison[:visitors][:direction] == 'up' ? 'text-green-600' : 'text-red-600' %>">
            <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="<%= @comparison[:visitors][:direction] == 'up' ? 'M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z' : 'M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z' %>" clip-rule="evenodd"/>
            </svg>
            <%= @comparison[:visitors][:value] %>%
          </span>
        <% end %>
      </div>
      <div class="mt-2 text-2xl font-bold text-gray-900"><%= number_with_delimiter(@quick_stats[:unique_visitors]) %></div>
    </div>

    <!-- Page Views -->
    <div class="bg-white p-4 rounded-lg shadow">
      <div class="flex items-center justify-between">
        <div class="text-sm font-medium text-gray-500">Page Views</div>
        <% if @comparison[:page_views][:direction] != 'neutral' %>
          <span class="flex items-center text-xs <%= @comparison[:page_views][:direction] == 'up' ? 'text-green-600' : 'text-red-600' %>">
            <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="<%= @comparison[:page_views][:direction] == 'up' ? 'M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z' : 'M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z' %>" clip-rule="evenodd"/>
            </svg>
            <%= @comparison[:page_views][:value] %>%
          </span>
        <% end %>
      </div>
      <div class="mt-2 text-2xl font-bold text-gray-900"><%= number_with_delimiter(@quick_stats[:page_views]) %></div>
    </div>

    <!-- Avg Duration -->
    <div class="bg-white p-4 rounded-lg shadow">
      <div class="text-sm font-medium text-gray-500">Avg Duration</div>
      <div class="mt-2 text-2xl font-bold text-gray-900"><%= @quick_stats[:avg_session_duration] %></div>
    </div>

    <!-- Bounce Rate -->
    <div class="bg-white p-4 rounded-lg shadow">
      <div class="flex items-center justify-between">
        <div class="text-sm font-medium text-gray-500">Bounce Rate</div>
        <% if @comparison[:bounce_rate][:direction] != 'neutral' %>
          <span class="flex items-center text-xs <%= @comparison[:bounce_rate][:direction] == 'up' ? 'text-green-600' : 'text-red-600' %>">
            <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="<%= @comparison[:bounce_rate][:direction] == 'up' ? 'M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z' : 'M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z' %>" clip-rule="evenodd"/>
            </svg>
            <%= @comparison[:bounce_rate][:value] %>%
          </span>
        <% end %>
      </div>
      <div class="mt-2 text-2xl font-bold text-gray-900"><%= @quick_stats[:bounce_rate] %>%</div>
    </div>

    <!-- Conversions -->
    <div class="bg-white p-4 rounded-lg shadow">
      <div class="flex items-center justify-between">
        <div class="text-sm font-medium text-gray-500">Conversions</div>
        <% if @comparison[:conversions][:direction] != 'neutral' %>
          <span class="flex items-center text-xs <%= @comparison[:conversions][:direction] == 'up' ? 'text-green-600' : 'text-red-600' %>">
            <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="<%= @comparison[:conversions][:direction] == 'up' ? 'M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z' : 'M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z' %>" clip-rule="evenodd"/>
            </svg>
            <%= @comparison[:conversions][:value] %>%
          </span>
        <% end %>
      </div>
      <div class="mt-2 text-2xl font-bold text-gray-900"><%= @quick_stats[:conversions] %></div>
    </div>

    <!-- Conversion Rate -->
    <div class="bg-white p-4 rounded-lg shadow">
      <div class="text-sm font-medium text-gray-500">Conv. Rate</div>
      <div class="mt-2 text-2xl font-bold text-green-600"><%= @quick_stats[:conversion_rate] %>%</div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Traffic Trend Chart -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Visitor Trend</h3>
      <% if @overview[:trend].present? && @overview[:trend].any? %>
        <div class="h-64" id="visitor-trend-chart" 
             data-trend="<%= @overview[:trend].to_json %>">
          <!-- Chart will be rendered by JavaScript -->
          <div class="flex items-center justify-center h-full text-gray-400">
            <div class="text-center">
              <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              <p class="text-sm">Chart data available</p>
              <p class="text-xs mt-1"><%= @overview[:trend].size %> data points</p>
            </div>
          </div>
        </div>
        <!-- Simple text representation of trend -->
        <div class="mt-4 grid grid-cols-7 gap-1">
          <% @overview[:trend].last(7).each do |point| %>
            <div class="text-center">
              <div class="text-xs text-gray-500"><%= point[:date].strftime('%a') %></div>
              <div class="text-sm font-medium"><%= point[:visitors] %></div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="flex items-center justify-center h-64 text-gray-400">
          <div class="text-center">
            <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <p class="text-sm">No data for this period</p>
            <p class="text-xs mt-1">Data will appear as visitors arrive</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Traffic Sources -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Traffic Sources</h3>
      <div class="space-y-4">
        <% @overview[:traffic_sources].each do |source, data| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <span class="w-3 h-3 rounded-full mr-3 <%= source_color(source) %>"></span>
              <span class="text-sm font-medium text-gray-700 capitalize"><%= source %></span>
            </div>
            <div class="flex items-center">
              <span class="text-sm text-gray-500 mr-2"><%= data[:count] %></span>
              <span class="text-sm font-medium text-gray-900"><%= data[:percentage] %>%</span>
            </div>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="<%= source_color(source) %> h-2 rounded-full" style="width: <%= data[:percentage] %>%"></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Top Pages -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Top Pages</h3>
      <% if @overview[:top_pages].present? && @overview[:top_pages].any? %>
        <div class="space-y-3">
          <% @overview[:top_pages].each_with_index do |page, index| %>
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
              <div class="flex items-center">
                <span class="text-sm font-medium text-gray-400 w-6"><%= index + 1 %>.</span>
                <span class="text-sm text-gray-700 truncate max-w-[200px]"><%= page[:path] %></span>
              </div>
              <span class="text-sm font-medium text-gray-900"><%= number_with_delimiter(page[:views]) %> views</span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500 text-center py-8">No page view data yet</p>
      <% end %>
    </div>

    <!-- New vs Returning Visitors -->
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Visitor Breakdown</h3>
      <div class="grid grid-cols-2 gap-6">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 mb-3">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
          </div>
          <div class="text-2xl font-bold text-gray-900"><%= @overview[:visitors][:new] %></div>
          <div class="text-sm text-gray-500">New Visitors</div>
        </div>
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 mb-3">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <div class="text-2xl font-bold text-gray-900"><%= @overview[:visitors][:returning] %></div>
          <div class="text-sm text-gray-500">Returning Visitors</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Conversion Summary -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Conversion Summary</h3>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="text-center p-4 bg-green-50 rounded-lg">
        <div class="text-3xl font-bold text-green-600"><%= @overview[:conversions][:total] %></div>
        <div class="text-sm text-green-700">Total Conversions</div>
      </div>
      <div class="text-center p-4 bg-blue-50 rounded-lg">
        <div class="text-3xl font-bold text-blue-600"><%= @overview[:conversions][:rate] %>%</div>
        <div class="text-sm text-blue-700">Conversion Rate</div>
      </div>
      <div class="text-center p-4 bg-purple-50 rounded-lg">
        <div class="text-3xl font-bold text-purple-600"><%= number_to_currency(@overview[:conversions][:value]) %></div>
        <div class="text-sm text-purple-700">Total Value</div>
      </div>
      <div class="text-center p-4 bg-indigo-50 rounded-lg">
        <div class="text-3xl font-bold text-indigo-600"><%= number_to_currency(@overview[:revenue][:avg_conversion_value]) %></div>
        <div class="text-sm text-indigo-700">Avg Conversion Value</div>
      </div>
    </div>
    
    <% if @overview[:conversions][:by_type].present? && @overview[:conversions][:by_type].any? %>
      <div class="mt-6">
        <h4 class="text-sm font-medium text-gray-700 mb-3">By Type</h4>
        <div class="flex flex-wrap gap-3">
          <% @overview[:conversions][:by_type].each do |type, count| %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
              <%= type.to_s.humanize %>: <%= count %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :head do %>
<style>
  /* Source color classes */
  .bg-source-direct { background-color: #6366f1; }
  .bg-source-organic { background-color: #22c55e; }
  .bg-source-social { background-color: #3b82f6; }
  .bg-source-referral { background-color: #f59e0b; }
  .bg-source-paid { background-color: #ef4444; }
</style>
<script>
  function changeAnalyticsPeriod(selectElement) {
    if (!selectElement) return;
    var value = selectElement.value;
    // Optional defensive whitelist in case options become dynamic in future
    var allowed = ['today', 'last_7_days', 'last_30_days', 'last_90_days'];
    if (allowed.indexOf(value) === -1) {
      return;
    }
    var baseUrl = '<%= business_manager_analytics_path %>';
    try {
      var url = new URL(baseUrl, window.location.origin);
      url.searchParams.set('period', value);
      window.location.href = url.toString();
    } catch (e) {
      // Fallback for older browsers without URL API
      var separator = baseUrl.indexOf('?') === -1 ? '?' : '&';
      window.location.href = baseUrl + separator + 'period=' + encodeURIComponent(value);
    }
  }
</script>
<% end %>

