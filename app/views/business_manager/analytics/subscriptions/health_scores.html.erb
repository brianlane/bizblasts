<% content_for :title, "Subscription Health Scores" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Subscription Health Scores</h1>
      <p class="text-sm text-gray-600 mt-1">Track subscription health and identify at-risk accounts</p>
    </div>

    <div class="flex items-center gap-4">
      <%= link_to "Export CSV", export_business_manager_analytics_subscriptions_path(format: :csv),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_subscriptions_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Subscription Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @health_scores.present? && @health_scores.is_a?(Hash) %>
    <% avg_score = @health_scores[:average_score] || 0 %>
    <% healthy_count = @health_scores[:healthy_count] || 0 %>
    <% at_risk_count = @health_scores[:at_risk_count] || 0 %>
    <% critical_count = @health_scores[:critical_count] || 0 %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Average Health Score</p>
            <p class="text-2xl font-semibold <%= avg_score >= 80 ? 'text-green-600' : avg_score >= 60 ? 'text-blue-600' : avg_score >= 40 ? 'text-orange-600' : 'text-red-600' %> mt-2">
              <%= number_with_precision(avg_score, precision: 1) %>/100
            </p>
            <p class="text-xs text-gray-500 mt-1">
              <%= avg_score >= 80 ? 'Excellent' : avg_score >= 60 ? 'Good' : avg_score >= 40 ? 'Fair' : 'Poor' %>
            </p>
          </div>
          <div class="<%= avg_score >= 80 ? 'bg-green-100' : avg_score >= 60 ? 'bg-blue-100' : avg_score >= 40 ? 'bg-orange-100' : 'bg-red-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= avg_score >= 80 ? 'text-green-600' : avg_score >= 60 ? 'text-blue-600' : avg_score >= 40 ? 'text-orange-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Healthy Subscriptions</p>
            <p class="text-2xl font-semibold text-green-600 mt-2"><%= healthy_count %></p>
            <p class="text-xs text-gray-500 mt-1">Score 80+</p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">At-Risk Subscriptions</p>
            <p class="text-2xl font-semibold text-orange-600 mt-2"><%= at_risk_count %></p>
            <p class="text-xs text-gray-500 mt-1">Score 40-79</p>
          </div>
          <div class="bg-orange-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Critical Subscriptions</p>
            <p class="text-2xl font-semibold text-red-600 mt-2"><%= critical_count %></p>
            <p class="text-xs text-gray-500 mt-1">Score <40</p>
          </div>
          <div class="bg-red-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Health Score Distribution -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Subscription Health Scores</h2>
      <p class="text-sm text-gray-600 mt-1">Individual subscription health assessment</p>
    </div>

    <div class="p-6">
      <% if @health_scores.present? && @health_scores[:subscriptions].present? && @health_scores[:subscriptions].any? %>
        <!-- Mobile Cards -->
        <div class="space-y-4 lg:hidden">
          <% @health_scores[:subscriptions].each do |subscription| %>
            <% score = subscription[:health_score] || 0 %>
            <% score_color = score >= 80 ? 'green' : score >= 60 ? 'blue' : score >= 40 ? 'orange' : 'red' %>
            <% score_label = score >= 80 ? 'Healthy' : score >= 60 ? 'Good' : score >= 40 ? 'At Risk' : 'Critical' %>

            <div class="bg-white border border-gray-200 rounded-lg p-4">
              <div class="flex justify-between items-start mb-3">
                <div>
                  <h3 class="font-medium text-gray-900"><%= subscription[:customer_name] %></h3>
                  <p class="text-sm text-gray-500 mt-1"><%= subscription[:plan_name] %></p>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= score_color %>-100 text-<%= score_color %>-800">
                  <%= score_label %>
                </span>
              </div>

              <div class="space-y-2">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Health Score:</span>
                  <span class="font-medium text-<%= score_color %>-600"><%= number_with_precision(score, precision: 1) %>/100</span>
                </div>

                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-<%= score_color %>-500 h-2 rounded-full" style="width: <%= [score, 100].min %>%"></div>
                </div>

                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">MRR:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(subscription[:mrr] || 0) %></span>
                </div>

                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Tenure:</span>
                  <span class="font-medium text-gray-900"><%= subscription[:tenure_months] || 0 %> months</span>
                </div>

                <% if subscription[:risk_factors].present? && subscription[:risk_factors].any? %>
                  <div class="mt-3 pt-3 border-t border-gray-200">
                    <p class="text-xs font-medium text-gray-700 mb-2">Risk Factors:</p>
                    <div class="space-y-1">
                      <% subscription[:risk_factors].each do |factor| %>
                        <div class="flex items-start gap-2">
                          <svg class="w-3 h-3 text-red-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                          </svg>
                          <span class="text-xs text-gray-600"><%= factor %></span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Plan</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">MRR</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tenure</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Health Score</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Risk Factors</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @health_scores[:subscriptions].each do |subscription| %>
                <% score = subscription[:health_score] || 0 %>
                <% score_color = score >= 80 ? 'green' : score >= 60 ? 'blue' : score >= 40 ? 'orange' : 'red' %>
                <% score_label = score >= 80 ? 'Healthy' : score >= 60 ? 'Good' : score >= 40 ? 'At Risk' : 'Critical' %>

                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= subscription[:customer_name] %></div>
                    <div class="text-sm text-gray-500"><%= subscription[:customer_email] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= subscription[:plan_name] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= number_to_currency(subscription[:mrr] || 0) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= subscription[:tenure_months] || 0 %> months</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center gap-2">
                      <div class="flex-1 bg-gray-200 rounded-full h-2 max-w-[100px]">
                        <div class="bg-<%= score_color %>-500 h-2 rounded-full" style="width: <%= [score, 100].min %>%"></div>
                      </div>
                      <span class="text-sm font-medium text-<%= score_color %>-600"><%= number_with_precision(score, precision: 1) %></span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= score_color %>-100 text-<%= score_color %>-800">
                      <%= score_label %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <% if subscription[:risk_factors].present? && subscription[:risk_factors].any? %>
                      <div class="space-y-1">
                        <% subscription[:risk_factors].take(3).each do |factor| %>
                          <div class="flex items-start gap-1">
                            <svg class="w-3 h-3 text-red-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            </svg>
                            <span class="text-xs text-gray-600"><%= factor %></span>
                          </div>
                        <% end %>
                        <% if subscription[:risk_factors].length > 3 %>
                          <p class="text-xs text-gray-500">+<%= subscription[:risk_factors].length - 3 %> more</p>
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-sm text-gray-400">None</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Health Score Factors Guide -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Health Score Components</h3>
          <div class="grid md:grid-cols-2 gap-4 text-sm text-blue-800">
            <div>
              <p class="font-medium mb-2">Positive Factors:</p>
              <ul class="space-y-1 ml-4">
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Regular usage and engagement</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Timely payments</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Feature adoption</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Long tenure</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Positive support interactions</span>
                </li>
              </ul>
            </div>
            <div>
              <p class="font-medium mb-2">Negative Factors:</p>
              <ul class="space-y-1 ml-4">
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                  <span>Declining usage</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                  <span>Late or failed payments</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                  <span>Support ticket volume increase</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                  <span>Downgrade requests</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                  <span>Lack of product adoption</span>
                </li>
              </ul>
            </div>
          </div>

          <div class="mt-4 pt-4 border-t border-blue-200">
            <p class="font-medium mb-2">Recommended Actions:</p>
            <ul class="list-disc list-inside space-y-1 ml-2">
              <li>Monitor critical and at-risk subscriptions closely</li>
              <li>Proactively reach out to accounts with declining scores</li>
              <li>Identify common risk factors across low-scoring accounts</li>
              <li>Implement customer success programs for at-risk segments</li>
              <li>Celebrate and replicate patterns from healthy accounts</li>
            </ul>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No subscription health data</h3>
          <p class="mt-1 text-sm text-gray-500">Health scores will appear as subscription data accumulates.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
