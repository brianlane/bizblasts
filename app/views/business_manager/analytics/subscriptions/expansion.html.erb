<% content_for :title, "Expansion Revenue" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Expansion Revenue</h1>
      <p class="text-sm text-gray-600 mt-1">Revenue growth from existing customers through upgrades and upsells</p>
    </div>

    <div class="flex items-center gap-4">
      <%= render 'shared/period_selector', period: @period, base_path: expansion_business_manager_analytics_subscriptions_path %>
      <%= link_to "Export CSV", export_business_manager_analytics_subscriptions_path(format: :csv, period: @period),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_subscriptions_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Subscription Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @expansion_data.present? && @expansion_data.is_a?(Hash) %>
    <% total_expansion_mrr = @expansion_data[:total_expansion_mrr] || 0 %>
    <% expansion_rate = @expansion_data[:expansion_rate] || 0 %>
    <% upgrade_count = @expansion_data[:upgrade_count] || 0 %>
    <% avg_expansion_value = @expansion_data[:avg_expansion_value] || 0 %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Expansion MRR</p>
            <p class="text-2xl font-semibold text-green-600 mt-2"><%= number_to_currency(total_expansion_mrr) %></p>
            <p class="text-xs text-gray-500 mt-1">From upgrades & upsells</p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Expansion Rate</p>
            <p class="text-2xl font-semibold <%= expansion_rate >= 10 ? 'text-green-600' : expansion_rate >= 5 ? 'text-blue-600' : 'text-orange-600' %> mt-2">
              <%= number_to_percentage(expansion_rate, precision: 1) %>
            </p>
            <p class="text-xs text-gray-500 mt-1">Of total MRR</p>
          </div>
          <div class="<%= expansion_rate >= 10 ? 'bg-green-100' : expansion_rate >= 5 ? 'bg-blue-100' : 'bg-orange-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= expansion_rate >= 10 ? 'text-green-600' : expansion_rate >= 5 ? 'text-blue-600' : 'text-orange-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Upgrades This Period</p>
            <p class="text-2xl font-semibold text-blue-600 mt-2"><%= upgrade_count %></p>
            <p class="text-xs text-gray-500 mt-1">Customer expansions</p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Avg Expansion Value</p>
            <p class="text-2xl font-semibold text-purple-600 mt-2"><%= number_to_currency(avg_expansion_value) %></p>
            <p class="text-xs text-gray-500 mt-1">Per upgrade</p>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Expansion Activity List -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Recent Expansion Activity</h2>
      <p class="text-sm text-gray-600 mt-1">Upgrades, upsells, and plan changes</p>
    </div>

    <div class="p-6">
      <% if @expansion_data.present? && @expansion_data[:expansions].present? && @expansion_data[:expansions].any? %>
        <!-- Mobile Cards -->
        <div class="space-y-4 lg:hidden">
          <% @expansion_data[:expansions].each do |expansion| %>
            <% expansion_type = expansion[:expansion_type] || 'upgrade' %>
            <% type_color = expansion_type == 'upgrade' ? 'green' : expansion_type == 'upsell' ? 'blue' : 'purple' %>
            <% mrr_increase = expansion[:mrr_increase] || 0 %>

            <div class="bg-white border border-gray-200 rounded-lg p-4">
              <div class="flex justify-between items-start mb-3">
                <div>
                  <h3 class="font-medium text-gray-900"><%= expansion[:customer_name] %></h3>
                  <p class="text-sm text-gray-500 mt-1"><%= expansion[:date]&.strftime('%b %d, %Y') || 'N/A' %></p>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= type_color %>-100 text-<%= type_color %>-800">
                  <%= expansion_type.titleize %>
                </span>
              </div>

              <div class="space-y-2">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Plan Change:</span>
                  <div class="text-right">
                    <span class="text-gray-900"><%= expansion[:from_plan] %></span>
                    <svg class="inline w-3 h-3 mx-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                    <span class="font-medium text-<%= type_color %>-600"><%= expansion[:to_plan] %></span>
                  </div>
                </div>

                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">MRR Increase:</span>
                  <span class="font-medium text-green-600">+<%= number_to_currency(mrr_increase) %></span>
                </div>

                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">New MRR:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(expansion[:new_mrr] || 0) %></span>
                </div>

                <% if expansion[:reason].present? %>
                  <div class="pt-2 border-t border-gray-200">
                    <p class="text-xs text-gray-600"><strong>Reason:</strong> <%= expansion[:reason] %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">From Plan</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">To Plan</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">MRR Increase</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">New MRR</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @expansion_data[:expansions].each do |expansion| %>
                <% expansion_type = expansion[:expansion_type] || 'upgrade' %>
                <% type_color = expansion_type == 'upgrade' ? 'green' : expansion_type == 'upsell' ? 'blue' : 'purple' %>
                <% mrr_increase = expansion[:mrr_increase] || 0 %>

                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= expansion[:date]&.strftime('%b %d, %Y') || 'N/A' %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= expansion[:customer_name] %></div>
                    <div class="text-sm text-gray-500"><%= expansion[:customer_email] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= type_color %>-100 text-<%= type_color %>-800">
                      <%= expansion_type.titleize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= expansion[:from_plan] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-<%= type_color %>-600"><%= expansion[:to_plan] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-green-600">+<%= number_to_currency(mrr_increase) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= number_to_currency(expansion[:new_mrr] || 0) %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-600 max-w-xs truncate"><%= expansion[:reason] || 'N/A' %></div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Expansion Strategy Guide -->
        <div class="mt-8 bg-green-50 border border-green-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-green-900 mb-3">Expansion Revenue Optimization</h3>
          <div class="grid md:grid-cols-2 gap-4 text-sm text-green-800">
            <div>
              <p class="font-medium mb-2">Expansion Benchmarks:</p>
              <ul class="space-y-1 ml-4">
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span><strong>Excellent:</strong> 10%+ monthly expansion rate</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span><strong>Good:</strong> 5-10% monthly expansion rate</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span><strong>Target:</strong> Expansion > Churn (negative net churn)</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span><strong>World-class SaaS:</strong> Negative net revenue churn</span>
                </li>
              </ul>
            </div>

            <div>
              <p class="font-medium mb-2">Expansion Strategies:</p>
              <ul class="space-y-1 ml-4">
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Usage-based pricing tiers</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Feature-based upsells</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Cross-sell complementary products</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Multi-seat licenses</span>
                </li>
                <li class="flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span>Annual vs monthly pricing incentives</span>
                </li>
              </ul>
            </div>
          </div>

          <div class="mt-4 pt-4 border-t border-green-200">
            <p class="font-medium mb-2">Maximizing Expansion Revenue:</p>
            <ul class="list-disc list-inside space-y-1 ml-2">
              <li>Identify high-usage customers approaching plan limits</li>
              <li>Create clear upgrade paths with compelling value propositions</li>
              <li>Use in-app notifications to promote premium features</li>
              <li>Offer time-limited upgrade incentives for engaged users</li>
              <li>Track feature requests to guide product development and upsells</li>
              <li>Celebrate customer milestones with upgrade offers</li>
              <li>Make upgrades frictionless with one-click processes</li>
            </ul>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No expansion revenue data</h3>
          <p class="mt-1 text-sm text-gray-500">Expansion revenue will appear as customers upgrade their subscriptions.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
