<% content_for :title, "MRR Trend Analysis" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">MRR Trend Analysis</h1>
      <p class="text-sm text-gray-600 mt-1">Monthly Recurring Revenue growth over time</p>
    </div>

    <div class="flex items-center gap-4">
      <%= link_to "Export CSV", export_business_manager_analytics_subscriptions_path(format: :csv),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_subscriptions_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Subscription Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @trend_data.present? && @trend_data.any? %>
    <% current_mrr = @trend_data.last[:mrr] || 0 %>
    <% previous_mrr = @trend_data[-2]&.dig(:mrr) || current_mrr %>
    <% mrr_growth = previous_mrr > 0 ? (((current_mrr - previous_mrr) / previous_mrr) * 100) : 0 %>
    <% total_growth = @trend_data.first && @trend_data.first[:mrr] > 0 ? (((current_mrr - @trend_data.first[:mrr]) / @trend_data.first[:mrr]) * 100) : 0 %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Current MRR</p>
            <p class="text-2xl font-semibold text-blue-600 mt-2"><%= number_to_currency(current_mrr) %></p>
            <p class="text-xs text-gray-500 mt-1"><%= @trend_data.last[:month] %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">MoM Growth</p>
            <p class="text-2xl font-semibold <%= mrr_growth >= 0 ? 'text-green-600' : 'text-red-600' %> mt-2">
              <%= mrr_growth >= 0 ? '+' : '' %><%= number_to_percentage(mrr_growth, precision: 1) %>
            </p>
            <p class="text-xs text-gray-500 mt-1">Month over month</p>
          </div>
          <div class="<%= mrr_growth >= 0 ? 'bg-green-100' : 'bg-red-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= mrr_growth >= 0 ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% if mrr_growth >= 0 %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              <% else %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0v-8m0 8l-8-8-4 4-6-6"/>
              <% end %>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Period Growth</p>
            <p class="text-2xl font-semibold <%= total_growth >= 0 ? 'text-green-600' : 'text-red-600' %> mt-2">
              <%= total_growth >= 0 ? '+' : '' %><%= number_to_percentage(total_growth, precision: 1) %>
            </p>
            <p class="text-xs text-gray-500 mt-1">Last <%= @trend_data.length %> months</p>
          </div>
          <div class="<%= total_growth >= 0 ? 'bg-green-100' : 'bg-red-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= total_growth >= 0 ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Projected ARR</p>
            <p class="text-2xl font-semibold text-purple-600 mt-2"><%= number_to_currency(current_mrr * 12) %></p>
            <p class="text-xs text-gray-500 mt-1">Annual run rate</p>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- MRR Trend Chart -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">MRR Trend</h2>
      <p class="text-sm text-gray-600 mt-1">Monthly recurring revenue over time</p>
    </div>

    <div class="p-6">
      <% if @trend_data.present? && @trend_data.any? %>
        <% max_mrr = @trend_data.map { |d| d[:mrr] || 0 }.max || 1 %>

        <div class="space-y-3">
          <% @trend_data.reverse.each do |month_data| %>
            <% mrr_value = month_data[:mrr] || 0 %>
            <% new_mrr = month_data[:new_mrr] || 0 %>
            <% churned_mrr = month_data[:churned_mrr] || 0 %>
            <% net_change = new_mrr - churned_mrr %>
            <% mrr_width = (mrr_value.to_f / max_mrr * 100).round(1) %>

            <div class="border-b border-gray-100 pb-3 last:border-0">
              <div class="flex justify-between items-center mb-2">
                <div>
                  <span class="text-sm font-medium text-gray-900"><%= month_data[:month] %></span>
                  <span class="ml-3 text-xs text-gray-500">
                    <span class="text-green-600">+<%= number_to_currency(new_mrr) %></span>
                    <span class="mx-1">/</span>
                    <span class="text-red-600">-<%= number_to_currency(churned_mrr) %></span>
                  </span>
                </div>
                <div class="text-right">
                  <span class="text-sm font-semibold text-blue-600"><%= number_to_currency(mrr_value) %></span>
                  <% if net_change != 0 %>
                    <span class="ml-2 text-xs <%= net_change > 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= net_change > 0 ? '+' : '' %><%= number_to_currency(net_change) %>
                    </span>
                  <% end %>
                </div>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-6">
                <div class="bg-blue-500 h-6 rounded-full flex items-center justify-end pr-2" style="width: <%= [mrr_width, 100].min %>%">
                  <span class="text-white text-xs font-medium"><%= number_to_percentage(mrr_width, precision: 0) %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- MRR Growth Insights -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">MRR Growth Insights</h3>
          <div class="space-y-2 text-sm text-blue-800">
            <% if mrr_growth >= 10 %>
              <p><strong>Exceptional growth!</strong> Your MRR is growing rapidly at <%= number_to_percentage(mrr_growth, precision: 1) %> month-over-month. Maintain focus on retention to sustain this trajectory.</p>
            <% elsif mrr_growth >= 5 %>
              <p><strong>Healthy growth.</strong> MRR is growing at <%= number_to_percentage(mrr_growth, precision: 1) %> month-over-month. Continue optimizing customer acquisition and reducing churn.</p>
            <% elsif mrr_growth > 0 %>
              <p><strong>Positive momentum.</strong> MRR is growing at <%= number_to_percentage(mrr_growth, precision: 1) %> month-over-month. Focus on acceleration through upsells and new customer acquisition.</p>
            <% else %>
              <p><strong>Growth challenge.</strong> MRR declined <%= number_to_percentage(mrr_growth.abs, precision: 1) %>. Prioritize churn reduction and reactivation campaigns.</p>
            <% end %>

            <div class="mt-3 pt-3 border-t border-blue-200">
              <p class="font-medium">Key Actions:</p>
              <ul class="list-disc list-inside space-y-1 mt-2 ml-2">
                <li>Monitor new MRR from customer acquisition</li>
                <li>Track expansion MRR from upgrades and upsells</li>
                <li>Minimize churn through improved customer success</li>
                <li>Target 10-15% month-over-month growth for SaaS businesses</li>
              </ul>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No MRR trend data</h3>
          <p class="mt-1 text-sm text-gray-500">Insufficient subscription data to analyze MRR trends.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
