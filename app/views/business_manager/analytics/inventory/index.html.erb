<% content_for :title, "Inventory Intelligence" %>

<div class="analytics-inventory-container">
  <div class="page-header">
    <h1>Inventory Intelligence</h1>
    <div class="header-actions">
      <!-- Period Selector -->
      <div class="mr-4">
        <%= render 'shared/period_selector', period: @period, base_path: business_manager_analytics_inventory_index_path %>
      </div>

      <%= link_to "Export CSV", export_business_manager_analytics_inventory_index_path(format: :csv, period: @period), class: "btn btn-outline cursor-pointer" %>
    </div>
  </div>

  <!-- Inventory Health Score -->
  <div class="analytics-section">
    <h2>Inventory Health Score</h2>
    <%= link_to "View Detailed Breakdown", health_score_business_manager_analytics_inventory_index_path, class: "btn btn-link cursor-pointer" %>

    <div class="health-score-container">
      <div class="score-display">
        <div class="score-circle <%= @health_score[:grade].downcase %>">
          <span class="score-value"><%= @health_score[:score] %></span>
          <span class="score-grade">Grade <%= @health_score[:grade] %></span>
        </div>
        <div class="score-interpretation">
          <% if @health_score[:score] >= 90 %>
            <span class="status-excellent">Excellent</span>
            <p>Your inventory management is in excellent shape!</p>
          <% elsif @health_score[:score] >= 70 %>
            <span class="status-good">Good</span>
            <p>Your inventory management is working well with minor improvements needed.</p>
          <% else %>
            <span class="status-needs-attention">Needs Attention</span>
            <p>There are several inventory issues that require immediate attention.</p>
          <% end %>
        </div>
      </div>

      <% if @health_score[:issues].any? %>
        <div class="health-issues">
          <h4>Issues Found</h4>
          <ul>
            <% @health_score[:issues].each do |issue| %>
              <li><%= issue %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if @health_score[:recommendations].any? %>
        <div class="health-recommendations">
          <h4>Recommendations</h4>
          <ul>
            <% @health_score[:recommendations].each do |recommendation| %>
              <li><%= recommendation %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Low Stock Alerts -->
  <div class="analytics-section">
    <h2>Low Stock Alerts</h2>
    <%= link_to "View All Low Stock Items", low_stock_business_manager_analytics_inventory_index_path, class: "btn btn-link cursor-pointer" %>

    <% if @low_stock.any? %>
      <div class="alert-summary">
        <span class="alert-count critical"><%= @low_stock.count { |item| item[:status] == 'critical' } %> Critical</span>
        <span class="alert-count warning"><%= @low_stock.count { |item| item[:status] == 'warning' } %> Warning</span>
      </div>

      <div class="low-stock-table">
        <table>
          <thead>
            <tr>
              <th>Product</th>
              <th>Variant</th>
              <th>Current Stock</th>
              <th>Days Remaining</th>
              <th>Reorder Qty</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @low_stock.first(10).each do |item| %>
              <tr class="<%= item[:status] %>">
                <td><%= item[:product_name] %></td>
                <td><%= item[:variant_name] %></td>
                <td><%= item[:current_stock] %></td>
                <td><%= item[:days_remaining].round(1) %> days</td>
                <td><%= item[:recommended_reorder] %> units</td>
                <td>
                  <span class="badge <%= item[:status] %>">
                    <%= item[:status].titleize %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @low_stock.count > 10 %>
        <p class="table-note">Showing 10 of <%= @low_stock.count %> low stock items. <%= link_to "View all â†’", low_stock_business_manager_analytics_inventory_index_path %></p>
      <% end %>
    <% else %>
      <div class="empty-state">
        <span class="icon">âœ“</span>
        <p>No low stock items at this time</p>
      </div>
    <% end %>
  </div>

  <!-- Reorder Recommendations -->
  <div class="analytics-section">
    <h2>Reorder Recommendations</h2>
    <%= link_to "View All Recommendations", reorder_recommendations_business_manager_analytics_inventory_index_path, class: "btn btn-link cursor-pointer" %>

    <% if @reorder_points.any? %>
      <div class="alert-summary">
        <span class="alert-count urgent"><%= @reorder_points.count { |item| item[:status] == 'urgent' } %> Urgent</span>
        <span class="alert-count due"><%= @reorder_points.count { |item| item[:status] == 'due' } %> Due</span>
      </div>

      <div class="reorder-table">
        <table>
          <thead>
            <tr>
              <th>Product</th>
              <th>Variant</th>
              <th>Current Stock</th>
              <th>Reorder Point</th>
              <th>Order Qty</th>
              <th>Daily Sales</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @reorder_points.first(10).each do |item| %>
              <tr class="<%= item[:status] %>">
                <td><%= item[:product_name] %></td>
                <td><%= item[:variant_name] %></td>
                <td><%= item[:current_stock] %></td>
                <td><%= item[:reorder_point] %></td>
                <td class="highlight"><%= item[:recommended_order_quantity] %> units</td>
                <td><%= item[:daily_sales_rate] %> units/day</td>
                <td>
                  <span class="badge <%= item[:status] %>">
                    <%= item[:status].titleize %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="empty-state">
        <span class="icon">âœ“</span>
        <p>All products are above their reorder points</p>
      </div>
    <% end %>
  </div>

  <!-- Stock Valuation -->
  <div class="analytics-section">
    <h2>Stock Valuation</h2>
    <%= link_to "View Detailed Breakdown", valuation_business_manager_analytics_inventory_index_path, class: "btn btn-link cursor-pointer" %>

    <div class="metrics-grid">
      <div class="metric-card highlight">
        <span class="label">Total Stock Value</span>
        <span class="value"><%= number_to_currency(@stock_valuation[:total_stock_value]) %></span>
        <span class="description">At cost price</span>
      </div>
      <div class="metric-card">
        <span class="label">Product Count</span>
        <span class="value"><%= @stock_valuation[:product_count] %></span>
        <span class="description">With inventory value</span>
      </div>
      <% if @stock_valuation[:breakdown].any? %>
        <div class="metric-card">
          <span class="label">Top Product Value</span>
          <span class="value"><%= number_to_currency(@stock_valuation[:breakdown].first[:stock_value]) %></span>
          <span class="description"><%= @stock_valuation[:breakdown].first[:product_name] %></span>
        </div>
        <div class="metric-card">
          <span class="label">Avg Product Value</span>
          <span class="value">
            <%= number_to_currency(@stock_valuation[:total_stock_value] / @stock_valuation[:product_count]) %>
          </span>
          <span class="description">Per product</span>
        </div>
      <% end %>
    </div>

    <% if @stock_valuation[:breakdown].any? %>
      <div class="valuation-breakdown">
        <h4>Top 5 Products by Value</h4>
        <div class="breakdown-list">
          <% @stock_valuation[:breakdown].first(5).each do |item| %>
            <div class="breakdown-item">
              <span class="product-name"><%= item[:product_name] %></span>
              <div class="product-details">
                <span class="stock-qty"><%= item[:stock_quantity] %> units</span>
                <span class="stock-value"><%= number_to_currency(item[:stock_value]) %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Stock Movement Summary -->
  <div class="analytics-section">
    <h2>Stock Movement Summary (Last 30 Days)</h2>
    <%= link_to "View All Movements", movements_business_manager_analytics_inventory_index_path, class: "btn btn-link cursor-pointer" %>

    <div class="metrics-grid">
      <div class="metric-card">
        <span class="label">Total Movements</span>
        <span class="value"><%= @movement_summary[:total_movements] %></span>
      </div>
      <div class="metric-card success">
        <span class="label">Stock In</span>
        <span class="value"><%= @movement_summary[:stock_in] %></span>
        <span class="description">Units received</span>
      </div>
      <div class="metric-card">
        <span class="label">Stock Out</span>
        <span class="value"><%= @movement_summary[:stock_out] %></span>
        <span class="description">Units sold/used</span>
      </div>
      <div class="metric-card warning">
        <span class="label">Adjustments</span>
        <span class="value"><%= @movement_summary[:adjustments] %></span>
        <span class="description">Manual corrections</span>
      </div>
    </div>

    <% if @movement_summary[:adjustments] > 10 %>
      <div class="alert alert-warning">
        <strong>High Adjustment Count:</strong> <%= @movement_summary[:adjustments] %> stock adjustments in the last 30 days may indicate inventory tracking issues.
      </div>
    <% end %>

    <% if @movement_summary[:recent_movements].any? %>
      <div class="recent-movements">
        <h4>Recent Movements (Last 20)</h4>
        <div class="movements-list">
          <% @movement_summary[:recent_movements].first(5).each do |movement| %>
            <div class="movement-item">
              <span class="movement-date"><%= movement[:date].strftime('%b %d, %Y') %></span>
              <span class="movement-product"><%= movement[:product_name] %> - <%= movement[:variant_name] %></span>
              <span class="movement-type <%= movement[:movement_type] %>">
                <%= movement[:movement_type].titleize %>
              </span>
              <span class="movement-qty">
                <%= movement[:quantity] > 0 ? "+#{movement[:quantity]}" : movement[:quantity] %>
              </span>
              <span class="movement-reason"><%= movement[:reason] %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Links -->
  <div class="analytics-section">
    <h2>Detailed Reports</h2>
    <div class="quick-links-grid">
      <%= link_to dead_stock_business_manager_analytics_inventory_index_path, class: "quick-link" do %>
        <span class="icon">ðŸ“¦</span>
        <span class="link-title">Dead Stock Report</span>
        <span class="link-description">Products with no recent sales</span>
      <% end %>

      <%= link_to turnover_business_manager_analytics_inventory_index_path, class: "quick-link" do %>
        <span class="icon">ðŸ”„</span>
        <span class="link-title">Stock Turnover</span>
        <span class="link-description">Inventory velocity analysis</span>
      <% end %>

      <%= link_to profitability_business_manager_analytics_inventory_index_path, class: "quick-link" do %>
        <span class="icon">ðŸ’°</span>
        <span class="link-title">Product Profitability</span>
        <span class="link-description">Profit margin analysis</span>
      <% end %>
    </div>
  </div>
</div>

