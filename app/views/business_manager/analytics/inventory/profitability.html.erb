<% content_for :title, "Product Profitability Analysis" %>

<div class="space-y-6">
  <!-- Header with Period Selector -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Product Profitability Analysis</h1>
      <p class="text-sm text-gray-600 mt-1">Profit margin analysis by product</p>
    </div>

    <div class="flex items-center gap-4">
      <%= render 'shared/period_selector', period: @period || :last_30_days, base_path: profitability_business_manager_analytics_inventory_index_path %>
      <%= link_to "Export CSV", export_business_manager_analytics_inventory_index_path(format: :csv, period: @period),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_inventory_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Inventory Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @profitability_data.present? && @profitability_data[:products] && @profitability_data[:products].any? %>
    <% total_profit = @profitability_data[:total_profit] || 0 %>
    <% avg_margin = @profitability_data[:average_margin] || 0 %>
    <% most_profitable = @profitability_data[:products].max_by { |p| p[:profit] } %>
    <% highest_margin = @profitability_data[:products].max_by { |p| p[:margin] } %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Profit</p>
            <p class="text-2xl font-semibold <%= total_profit >= 0 ? 'text-green-600' : 'text-red-600' %> mt-2">
              <%= number_to_currency(total_profit) %>
            </p>
          </div>
          <div class="<%= total_profit >= 0 ? 'bg-green-100' : 'bg-red-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= total_profit >= 0 ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Avg Profit Margin</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= number_to_percentage(avg_margin, precision: 1) %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
      </div>

      <% if most_profitable.present? %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Most Profitable</p>
              <p class="text-lg font-semibold text-gray-900 mt-2"><%= most_profitable[:product_name].truncate(15) %></p>
              <p class="text-sm text-green-600 font-medium"><%= number_to_currency(most_profitable[:profit]) %></p>
            </div>
            <div class="bg-green-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
          </div>
        </div>
      <% end %>

      <% if highest_margin.present? %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Highest Margin</p>
              <p class="text-lg font-semibold text-gray-900 mt-2"><%= highest_margin[:product_name].truncate(15) %></p>
              <p class="text-sm text-purple-600 font-medium"><%= number_to_percentage(highest_margin[:margin], precision: 1) %></p>
            </div>
            <div class="bg-purple-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Profitability Table -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Product Profitability Breakdown</h2>
      <p class="text-sm text-gray-600 mt-1">Sorted by total profit (highest to lowest)</p>
    </div>

    <div class="p-6">
      <% if @profitability_data.present? && @profitability_data[:products] && @profitability_data[:products].any? %>
        <!-- Mobile Cards -->
        <div class="lg:hidden space-y-4">
          <% @profitability_data[:products].each_with_index do |product, index| %>
            <% profit_class = product[:profit] >= 0 ? 'border-green-500 bg-green-50' : 'border-red-500 bg-red-50' %>
            <div class="border-l-4 <%= profit_class %> rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div>
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-semibold text-gray-500">#<%= index + 1 %></span>
                    <h3 class="font-semibold text-gray-900"><%= product[:product_name] %></h3>
                  </div>
                  <% if product[:variant_name] %>
                    <p class="text-sm text-gray-600 mt-1"><%= product[:variant_name] %></p>
                  <% end %>
                </div>
              </div>

              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Units Sold:</span>
                  <span class="font-medium text-gray-900"><%= product[:units_sold] %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Revenue:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(product[:revenue]) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Cost:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(product[:cost]) %></span>
                </div>
                <div class="flex justify-between border-t pt-2">
                  <span class="text-gray-600 font-medium">Profit:</span>
                  <span class="font-semibold <%= product[:profit] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= number_to_currency(product[:profit]) %>
                  </span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Margin:</span>
                  <span class="font-medium <%= product[:margin] >= 30 ? 'text-green-600' : product[:margin] >= 15 ? 'text-blue-600' : 'text-orange-600' %>">
                    <%= number_to_percentage(product[:margin], precision: 1) %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Rank
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Product
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Variant
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Units Sold
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Revenue
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Cost
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Profit
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Margin %
                </th>
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Performance
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @profitability_data[:products].each_with_index do |product, index| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full <%= index < 3 ? 'bg-yellow-100 text-yellow-600 font-semibold' : 'bg-gray-100 text-gray-600' %>">
                      <%= index + 1 %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= product[:product_name] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= product[:variant_name] || 'N/A' %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= product[:units_sold] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= number_to_currency(product[:revenue]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= number_to_currency(product[:cost]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold <%= product[:profit] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= number_to_currency(product[:profit]) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-medium <%= product[:margin] >= 30 ? 'text-green-600' : product[:margin] >= 15 ? 'text-blue-600' : 'text-orange-600' %>">
                      <%= number_to_percentage(product[:margin], precision: 1) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center justify-center">
                      <div class="w-full max-w-[100px] bg-gray-200 rounded-full h-2">
                        <% margin_width = [[product[:margin], 0].max, 100].min %>
                        <div class="<%= product[:margin] >= 30 ? 'bg-green-500' : product[:margin] >= 15 ? 'bg-blue-500' : 'bg-orange-500' %> h-2 rounded-full"
                             style="width: <%= margin_width %>%"></div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="6" class="px-6 py-4 text-right text-sm font-semibold text-gray-900">
                  Totals:
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-bold <%= @profitability_data[:total_profit] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= number_to_currency(@profitability_data[:total_profit]) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-semibold text-gray-900">
                    <%= number_to_percentage(@profitability_data[:average_margin], precision: 1) %>
                  </div>
                </td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>

        <!-- Margin Guide -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Understanding Profit Margins</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="flex items-start">
              <div class="bg-green-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-green-900">Excellent (&ge; 30%)</div>
                <div class="text-green-800">Strong profitability. Consider increasing inventory.</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-blue-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-blue-900">Good (15-30%)</div>
                <div class="text-blue-800">Healthy margins. Monitor costs and pricing.</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-orange-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-orange-900">Low (&lt; 15%)</div>
                <div class="text-orange-800">Review pricing strategy or reduce costs.</div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No profitability data</h3>
          <p class="mt-1 text-sm text-gray-500">No sales data available for the selected period.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
