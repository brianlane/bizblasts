<% content_for :title, "Stock Valuation" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Stock Valuation</h1>
      <p class="text-sm text-gray-600 mt-1">Product-by-product valuation breakdown</p>
    </div>

    <div class="flex items-center gap-4">
      <%= link_to "Export CSV", export_business_manager_analytics_inventory_index_path(format: :csv),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_inventory_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Inventory Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @valuation_data.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Stock Value</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= number_to_currency(@valuation_data[:total_stock_value] || 0) %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Product Count</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= @valuation_data[:product_count] || 0 %></p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
          </div>
        </div>
      </div>

      <% if @valuation_data[:product_count] && @valuation_data[:product_count] > 0 %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Avg Product Value</p>
              <p class="text-2xl font-semibold text-gray-900 mt-2">
                <%= number_to_currency(@valuation_data[:total_stock_value].to_f / @valuation_data[:product_count]) %>
              </p>
            </div>
            <div class="bg-purple-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
          </div>
        </div>
      <% end %>

      <% if @valuation_data[:items] && @valuation_data[:items].any? %>
        <% top_value_item = @valuation_data[:items].max_by { |item| item[:stock_value] } %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Highest Value Item</p>
              <p class="text-lg font-semibold text-gray-900 mt-2"><%= top_value_item[:product_name].truncate(20) %></p>
              <p class="text-sm text-gray-500"><%= number_to_currency(top_value_item[:stock_value]) %></p>
            </div>
            <div class="bg-yellow-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Stock Valuation Table -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Stock Valuation by Product</h2>
    </div>

    <div class="p-6">
      <% if @valuation_data.present? && @valuation_data[:items] && @valuation_data[:items].any? %>
        <!-- Mobile Cards -->
        <div class="lg:hidden space-y-4">
          <% @valuation_data[:items].each do |item| %>
            <div class="border rounded-lg p-4 shadow-sm">
              <div class="mb-3">
                <h3 class="font-semibold text-gray-900"><%= item[:product_name] %></h3>
                <% if item[:variant_name] %>
                  <p class="text-sm text-gray-600"><%= item[:variant_name] %></p>
                <% end %>
              </div>

              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Quantity:</span>
                  <span class="font-medium text-gray-900"><%= item[:quantity] %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Unit Cost:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(item[:unit_cost] || 0) %></span>
                </div>
                <div class="flex justify-between border-t pt-2">
                  <span class="text-gray-600 font-medium">Stock Value:</span>
                  <span class="font-semibold text-blue-600"><%= number_to_currency(item[:stock_value]) %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Product
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Variant
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Quantity
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Unit Cost
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Stock Value
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  % of Total
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @valuation_data[:items].sort_by { |item| -item[:stock_value] }.each do |item| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= item[:product_name] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= item[:variant_name] || 'N/A' %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= item[:quantity] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= number_to_currency(item[:unit_cost] || 0) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold text-blue-600"><%= number_to_currency(item[:stock_value]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900">
                      <%= number_to_percentage((item[:stock_value].to_f / @valuation_data[:total_stock_value] * 100), precision: 1) %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="4" class="px-6 py-4 text-right text-sm font-semibold text-gray-900">
                  Total Stock Value:
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-bold text-gray-900"><%= number_to_currency(@valuation_data[:total_stock_value]) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-semibold text-gray-900">100%</div>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No valuation data</h3>
          <p class="mt-1 text-sm text-gray-500">No inventory to valuate.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
