<% content_for :title, "Promotion Effectiveness" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Promotion Effectiveness</h1>
      <% if @promotion_data.present? %>
        <p class="text-sm text-gray-600 mt-1"><%= @promotion_data[:promotion_name] %></p>
      <% else %>
        <p class="text-sm text-gray-600 mt-1">Detailed promotion performance analysis</p>
      <% end %>
    </div>

    <div class="flex items-center gap-4">
      <%= link_to "Export CSV", export_business_manager_analytics_marketing_index_path(format: :csv),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_marketing_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Marketing Analytics
  <% end %>

  <% if @promotion_data.present? %>
    <% uses = @promotion_data[:total_uses] || 0 %>
    <% revenue = @promotion_data[:revenue_generated] || 0 %>
    <% discount_given = @promotion_data[:total_discount_given] || 0 %>
    <% net_revenue = revenue - discount_given %>
    <% avg_order_value = @promotion_data[:avg_order_value] || 0 %>

    <!-- Summary Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Uses</p>
            <p class="text-2xl font-semibold text-blue-600 mt-2"><%= number_with_delimiter(uses) %></p>
            <p class="text-xs text-gray-500 mt-1">Promotion redemptions</p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Gross Revenue</p>
            <p class="text-2xl font-semibold text-green-600 mt-2"><%= number_to_currency(revenue) %></p>
            <p class="text-xs text-gray-500 mt-1">Before discounts</p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Discount Given</p>
            <p class="text-2xl font-semibold text-red-600 mt-2"><%= number_to_currency(discount_given) %></p>
            <p class="text-xs text-gray-500 mt-1">Total savings</p>
          </div>
          <div class="bg-red-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Net Revenue</p>
            <p class="text-2xl font-semibold text-purple-600 mt-2"><%= number_to_currency(net_revenue) %></p>
            <p class="text-xs text-gray-500 mt-1">After discounts</p>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Performance Metrics -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Promotion Details -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Promotion Details</h2>
          <p class="text-sm text-gray-600 mt-1">Configuration and parameters</p>
        </div>

        <div class="p-6">
          <div class="space-y-4">
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <span class="text-sm font-medium text-gray-600">Promotion Type</span>
              <span class="text-sm font-semibold text-gray-900">
                <%= @promotion_data[:promotion_type]&.titleize || 'N/A' %>
              </span>
            </div>

            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <span class="text-sm font-medium text-gray-600">Discount Amount</span>
              <span class="text-sm font-semibold text-blue-600">
                <% if @promotion_data[:discount_type] == 'percentage' %>
                  <%= number_to_percentage(@promotion_data[:discount_value], precision: 0) %> off
                <% else %>
                  <%= number_to_currency(@promotion_data[:discount_value] || 0) %> off
                <% end %>
              </span>
            </div>

            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <span class="text-sm font-medium text-gray-600">Usage Limit</span>
              <span class="text-sm font-semibold text-gray-900">
                <% if @promotion_data[:usage_limit].present? && @promotion_data[:usage_limit] > 0 %>
                  <%= uses %> / <%= @promotion_data[:usage_limit] %>
                  <span class="text-xs text-gray-500">
                    (<%= number_to_percentage((uses.to_f / @promotion_data[:usage_limit] * 100), precision: 0) %>)
                  </span>
                <% else %>
                  Unlimited
                <% end %>
              </span>
            </div>

            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <span class="text-sm font-medium text-gray-600">Active Period</span>
              <span class="text-sm font-semibold text-gray-900">
                <% if @promotion_data[:start_date] && @promotion_data[:end_date] %>
                  <%= @promotion_data[:start_date].strftime('%b %d') %> - <%= @promotion_data[:end_date].strftime('%b %d, %Y') %>
                <% else %>
                  Ongoing
                <% end %>
              </span>
            </div>

            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <span class="text-sm font-medium text-gray-600">Promotion Code</span>
              <span class="text-sm font-mono font-semibold text-purple-600">
                <%= @promotion_data[:promo_code] || 'N/A' %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Performance Metrics -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Performance Metrics</h2>
          <p class="text-sm text-gray-600 mt-1">Usage and value statistics</p>
        </div>

        <div class="p-6">
          <div class="space-y-4">
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">Avg Order Value</p>
                <p class="text-xs text-gray-500">With promotion</p>
              </div>
              <span class="text-sm font-semibold text-green-600">
                <%= number_to_currency(avg_order_value) %>
              </span>
            </div>

            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">Avg Discount</p>
                <p class="text-xs text-gray-500">Per redemption</p>
              </div>
              <span class="text-sm font-semibold text-red-600">
                <%= number_to_currency(uses > 0 ? (discount_given / uses) : 0) %>
              </span>
            </div>

            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">Revenue Per Use</p>
                <p class="text-xs text-gray-500">Net revenue per redemption</p>
              </div>
              <span class="text-sm font-semibold text-purple-600">
                <%= number_to_currency(uses > 0 ? (net_revenue / uses) : 0) %>
              </span>
            </div>

            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">New Customers</p>
                <p class="text-xs text-gray-500">First-time buyers</p>
              </div>
              <span class="text-sm font-semibold text-blue-600">
                <%= @promotion_data[:new_customers] || 0 %>
                <span class="text-xs text-gray-500">
                  (<%= uses > 0 ? number_to_percentage((@promotion_data[:new_customers].to_f / uses * 100), precision: 0) : '0%' %>)
                </span>
              </span>
            </div>

            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">Repeat Uses</p>
                <p class="text-xs text-gray-500">Return customers</p>
              </div>
              <span class="text-sm font-semibold text-gray-900">
                <%= @promotion_data[:repeat_uses] || 0 %>
                <span class="text-xs text-gray-500">
                  (<%= uses > 0 ? number_to_percentage((@promotion_data[:repeat_uses].to_f / uses * 100), precision: 0) : '0%' %>)
                </span>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Effectiveness Analysis -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Effectiveness Analysis</h2>
        <p class="text-sm text-gray-600 mt-1">Performance assessment and recommendations</p>
      </div>

      <div class="p-6">
        <% discount_rate = revenue > 0 ? (discount_given / revenue * 100) : 0 %>
        <% new_customer_rate = uses > 0 ? ((@promotion_data[:new_customers].to_f / uses) * 100) : 0 %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Discount Rate Analysis -->
          <div class="<%= discount_rate < 20 ? 'bg-green-50 border-green-200' : discount_rate < 40 ? 'bg-blue-50 border-blue-200' : 'bg-orange-50 border-orange-200' %> border rounded-lg p-4">
            <h3 class="text-sm font-semibold <%= discount_rate < 20 ? 'text-green-900' : discount_rate < 40 ? 'text-blue-900' : 'text-orange-900' %> mb-3">
              Discount Rate: <%= number_to_percentage(discount_rate, precision: 1) %>
            </h3>
            <div class="space-y-2 text-sm <%= discount_rate < 20 ? 'text-green-800' : discount_rate < 40 ? 'text-blue-800' : 'text-orange-800' %>">
              <% if discount_rate < 20 %>
                <p><strong>Healthy margin preservation.</strong> This promotion maintains profitability while driving sales.</p>
              <% elsif discount_rate < 40 %>
                <p><strong>Moderate discount impact.</strong> Ensure volume increase justifies margin reduction.</p>
              <% else %>
                <p><strong>High discount rate.</strong> Consider reducing discount amount or requiring minimum purchase.</p>
              <% end %>
              <div class="mt-3 w-full bg-gray-200 rounded-full h-2">
                <div class="<%= discount_rate < 20 ? 'bg-green-500' : discount_rate < 40 ? 'bg-blue-500' : 'bg-orange-500' %> h-2 rounded-full" style="width: <%= [discount_rate, 100].min %>%"></div>
              </div>
            </div>
          </div>

          <!-- Customer Acquisition Analysis -->
          <div class="<%= new_customer_rate > 50 ? 'bg-green-50 border-green-200' : new_customer_rate > 25 ? 'bg-blue-50 border-blue-200' : 'bg-orange-50 border-orange-200' %> border rounded-lg p-4">
            <h3 class="text-sm font-semibold <%= new_customer_rate > 50 ? 'text-green-900' : new_customer_rate > 25 ? 'text-blue-900' : 'text-orange-900' %> mb-3">
              New Customer Acquisition: <%= number_to_percentage(new_customer_rate, precision: 0) %>
            </h3>
            <div class="space-y-2 text-sm <%= new_customer_rate > 50 ? 'text-green-800' : new_customer_rate > 25 ? 'text-blue-800' : 'text-orange-800' %>">
              <% if new_customer_rate > 50 %>
                <p><strong>Excellent customer acquisition!</strong> This promotion is effectively bringing in new customers.</p>
              <% elsif new_customer_rate > 25 %>
                <p><strong>Balanced usage.</strong> Mix of new and returning customers is healthy for growth.</p>
              <% else %>
                <p><strong>Primarily existing customers.</strong> Consider adding minimum purchase or targeting new customer segments.</p>
              <% end %>
              <div class="mt-3 w-full bg-gray-200 rounded-full h-2">
                <div class="<%= new_customer_rate > 50 ? 'bg-green-500' : new_customer_rate > 25 ? 'bg-blue-500' : 'bg-orange-500' %> h-2 rounded-full" style="width: <%= [new_customer_rate, 100].min %>%"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Recommendations -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Optimization Recommendations</h3>
          <div class="space-y-2 text-sm text-blue-800">
            <% if discount_rate > 40 %>
              <div class="flex items-start">
                <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Reduce discount percentage to preserve margins</span>
              </div>
            <% end %>
            <% if new_customer_rate < 25 %>
              <div class="flex items-start">
                <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Add "first-time customer only" restriction to boost acquisition</span>
              </div>
            <% end %>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Consider minimum purchase requirements to increase order values</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Test time-limited urgency ("ends this weekend") to drive faster conversion</span>
            </div>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- No Promotion Data -->
    <div class="bg-white rounded-lg shadow p-12">
      <div class="text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No promotion selected</h3>
        <p class="mt-1 text-sm text-gray-500">Select a promotion to view detailed effectiveness analysis.</p>
        <div class="mt-6">
          <%= link_to "View All Promotions", promotions_business_manager_analytics_marketing_index_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
