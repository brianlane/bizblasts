<% content_for :title, "Marketing Channels Performance" %>

<div class="space-y-6">
  <!-- Header with Period Selector -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Marketing Channels Performance</h1>
      <p class="text-sm text-gray-600 mt-1">Performance comparison across marketing channels</p>
    </div>

    <div class="flex items-center gap-4">
      <%= render 'shared/period_selector', period: @period || :last_30_days, base_path: channels_business_manager_analytics_marketing_index_path %>
      <%= link_to "Export CSV", export_business_manager_analytics_marketing_index_path(format: :csv, period: @period),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_marketing_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Marketing Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @channel_data.present? && @channel_data.any? %>
    <% total_spend = @channel_data.sum { |c| c[:spend].to_f } %>
    <% total_revenue = @channel_data.sum { |c| c[:revenue].to_f } %>
    <% avg_roi = total_spend > 0 ? ((total_revenue - total_spend) / total_spend * 100) : 0 %>
    <% top_channel = @channel_data.max_by { |c| c[:revenue].to_f } %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Channels</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= @channel_data.count %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Spend</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= number_to_currency(total_spend) %></p>
          </div>
          <div class="bg-red-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Revenue</p>
            <p class="text-2xl font-semibold text-green-600 mt-2"><%= number_to_currency(total_revenue) %></p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Avg ROI</p>
            <p class="text-2xl font-semibold <%= avg_roi >= 0 ? 'text-green-600' : 'text-red-600' %> mt-2">
              <%= number_to_percentage(avg_roi, precision: 0) %>
            </p>
          </div>
          <div class="<%= avg_roi >= 0 ? 'bg-green-100' : 'bg-red-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= avg_roi >= 0 ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= avg_roi >= 0 ? 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' : 'M13 17h8m0 0V9m0 8l-8-8-4 4-6-6' %>"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Channels Performance Table -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Channel Performance Comparison</h2>
      <p class="text-sm text-gray-600 mt-1">Ranked by revenue generated</p>
    </div>

    <div class="p-6">
      <% if @channel_data.present? && @channel_data.any? %>
        <!-- Mobile Cards -->
        <div class="lg:hidden space-y-4">
          <% @channel_data.sort_by { |c| -c[:revenue].to_f }.each_with_index do |channel, index| %>
            <% roi = channel[:spend].to_f > 0 ? ((channel[:revenue].to_f - channel[:spend].to_f) / channel[:spend].to_f * 100) : 0 %>
            <% roi_class = roi >= 100 ? 'border-green-500 bg-green-50' : roi >= 0 ? 'border-blue-500 bg-blue-50' : 'border-red-500 bg-red-50' %>
            <div class="border-l-4 <%= roi_class %> rounded-lg p-4">
              <div class="flex items-start justify-between mb-2">
                <div>
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-semibold text-gray-500">#<%= index + 1 %></span>
                    <h3 class="font-semibold text-gray-900"><%= channel[:channel].to_s.titleize %></h3>
                  </div>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= roi >= 100 ? 'bg-green-100 text-green-800' : roi >= 0 ? 'bg-blue-100 text-blue-800' : 'bg-red-100 text-red-800' %>">
                  <%= number_to_percentage(roi, precision: 0) %> ROI
                </span>
              </div>

              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Spend:</span>
                  <span class="font-medium text-red-600"><%= number_to_currency(channel[:spend]) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Revenue:</span>
                  <span class="font-medium text-green-600"><%= number_to_currency(channel[:revenue]) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Conversions:</span>
                  <span class="font-medium text-gray-900"><%= channel[:conversions] %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Cost per Conv:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(channel[:cost_per_conversion]) %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Rank
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Channel
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Spend
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Revenue
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Conversions
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Cost per Conv
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  ROI
                </th>
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Performance
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @channel_data.sort_by { |c| -c[:revenue].to_f }.each_with_index do |channel, index| %>
                <% roi = channel[:spend].to_f > 0 ? ((channel[:revenue].to_f - channel[:spend].to_f) / channel[:spend].to_f * 100) : 0 %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full <%= index < 3 ? 'bg-blue-100 text-blue-600 font-semibold' : 'bg-gray-100 text-gray-600' %>">
                      <%= index + 1 %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="text-sm font-medium text-gray-900"><%= channel[:channel].to_s.titleize %></div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-red-600"><%= number_to_currency(channel[:spend]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold text-green-600"><%= number_to_currency(channel[:revenue]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= channel[:conversions] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= number_to_currency(channel[:cost_per_conversion]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold <%= roi >= 100 ? 'text-green-600' : roi >= 0 ? 'text-blue-600' : 'text-red-600' %>">
                      <%= number_to_percentage(roi, precision: 0) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center justify-center">
                      <div class="w-full max-w-[120px] bg-gray-200 rounded-full h-3">
                        <% bar_width = [[roi, 0].max, 200].min / 2 %>
                        <div class="<%= roi >= 100 ? 'bg-green-500' : roi >= 0 ? 'bg-blue-500' : 'bg-red-500' %> h-3 rounded-full"
                             style="width: <%= bar_width %>%"></div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="2" class="px-6 py-4 text-right text-sm font-semibold text-gray-900">
                  Totals:
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-bold text-red-600">
                    <%= number_to_currency(@channel_data.sum { |c| c[:spend].to_f }) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-bold text-green-600">
                    <%= number_to_currency(@channel_data.sum { |c| c[:revenue].to_f }) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="text-sm font-bold text-gray-900">
                    <%= @channel_data.sum { |c| c[:conversions].to_i } %>
                  </div>
                </td>
                <td colspan="3"></td>
              </tr>
            </tfoot>
          </table>
        </div>

        <!-- Channel Performance Guide -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Channel Performance Guide</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="flex items-start">
              <div class="bg-green-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-green-900">Excellent (&ge; 100% ROI)</div>
                <div class="text-green-800">Scale investment. Channel is highly profitable.</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-blue-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-blue-900">Positive (0-100% ROI)</div>
                <div class="text-blue-800">Profitable but optimize for better returns.</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-red-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-red-900">Negative (&lt; 0% ROI)</div>
                <div class="text-red-800">Review strategy or consider pausing channel.</div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No channel data</h3>
          <p class="mt-1 text-sm text-gray-500">No marketing channel data available for the selected period.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
