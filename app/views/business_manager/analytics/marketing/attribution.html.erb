<% content_for :title, "Marketing Attribution Analysis" %>

<div class="space-y-6">
  <!-- Header with Period Selector -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Marketing Attribution Analysis</h1>
      <p class="text-sm text-gray-600 mt-1">Customer attribution and conversion paths</p>
    </div>

    <div class="flex items-center gap-4">
      <%= render 'shared/period_selector', period: @period || :last_30_days, base_path: attribution_business_manager_analytics_marketing_index_path %>
      <%= link_to "Export CSV", export_business_manager_analytics_marketing_index_path(format: :csv, period: @period),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_marketing_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Marketing Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @attribution_data.present? %>
    <% total_conversions = @attribution_data[:total_conversions] || 0 %>
    <% avg_touchpoints = @attribution_data[:avg_touchpoints] || 0 %>
    <% top_first_touch = @attribution_data[:first_touch_attribution]&.first %>
    <% top_last_touch = @attribution_data[:last_touch_attribution]&.first %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Conversions</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= total_conversions %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Avg Touchpoints</p>
            <p class="text-2xl font-semibold text-gray-900 mt-2"><%= number_with_precision(avg_touchpoints, precision: 1) %></p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <% if top_first_touch.present? %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Top First Touch</p>
              <p class="text-lg font-semibold text-gray-900 mt-2"><%= top_first_touch[:source].to_s.titleize.truncate(15) %></p>
              <p class="text-sm text-green-600"><%= top_first_touch[:conversions] %> conversions</p>
            </div>
            <div class="bg-purple-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
              </svg>
            </div>
          </div>
        </div>
      <% end %>

      <% if top_last_touch.present? %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Top Last Touch</p>
              <p class="text-lg font-semibold text-gray-900 mt-2"><%= top_last_touch[:source].to_s.titleize.truncate(15) %></p>
              <p class="text-sm text-blue-600"><%= top_last_touch[:conversions] %> conversions</p>
            </div>
            <div class="bg-orange-100 p-3 rounded-full">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- First Touch Attribution -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">First Touch Attribution</h2>
      <p class="text-sm text-gray-600 mt-1">Initial touchpoint that started customer journey</p>
    </div>

    <div class="p-6">
      <% if @attribution_data.present? && @attribution_data[:first_touch_attribution] && @attribution_data[:first_touch_attribution].any? %>
        <!-- Mobile Cards -->
        <div class="lg:hidden space-y-4">
          <% @attribution_data[:first_touch_attribution].each_with_index do |touch, index| %>
            <div class="border rounded-lg p-4 shadow-sm">
              <div class="flex items-start justify-between mb-2">
                <div>
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-semibold text-gray-500">#<%= index + 1 %></span>
                    <h3 class="font-semibold text-gray-900"><%= touch[:source].to_s.titleize %></h3>
                  </div>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  <%= number_to_percentage(touch[:percentage], precision: 1) %>
                </span>
              </div>

              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Conversions:</span>
                  <span class="font-medium text-gray-900"><%= touch[:conversions] %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Revenue:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(touch[:revenue]) %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Rank
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Source
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Conversions
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Revenue
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Share
                </th>
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Visual
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @attribution_data[:first_touch_attribution].each_with_index do |touch, index| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full <%= index < 3 ? 'bg-purple-100 text-purple-600 font-semibold' : 'bg-gray-100 text-gray-600' %>">
                      <%= index + 1 %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= touch[:source].to_s.titleize %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= touch[:conversions] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-medium text-gray-900"><%= number_to_currency(touch[:revenue]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold text-purple-600"><%= number_to_percentage(touch[:percentage], precision: 1) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="w-full bg-gray-200 rounded-full h-3">
                      <div class="bg-purple-500 h-3 rounded-full" style="width: <%= touch[:percentage] %>%"></div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No attribution data</h3>
          <p class="mt-1 text-sm text-gray-500">No conversion data available for the selected period.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Last Touch Attribution -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Last Touch Attribution</h2>
      <p class="text-sm text-gray-600 mt-1">Final touchpoint before conversion</p>
    </div>

    <div class="p-6">
      <% if @attribution_data.present? && @attribution_data[:last_touch_attribution] && @attribution_data[:last_touch_attribution].any? %>
        <!-- Mobile Cards -->
        <div class="lg:hidden space-y-4">
          <% @attribution_data[:last_touch_attribution].each_with_index do |touch, index| %>
            <div class="border rounded-lg p-4 shadow-sm">
              <div class="flex items-start justify-between mb-2">
                <div>
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-semibold text-gray-500">#<%= index + 1 %></span>
                    <h3 class="font-semibold text-gray-900"><%= touch[:source].to_s.titleize %></h3>
                  </div>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= number_to_percentage(touch[:percentage], precision: 1) %>
                </span>
              </div>

              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Conversions:</span>
                  <span class="font-medium text-gray-900"><%= touch[:conversions] %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Revenue:</span>
                  <span class="font-medium text-gray-900"><%= number_to_currency(touch[:revenue]) %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Rank
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Source
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Conversions
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Revenue
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Share
                </th>
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Visual
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @attribution_data[:last_touch_attribution].each_with_index do |touch, index| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full <%= index < 3 ? 'bg-blue-100 text-blue-600 font-semibold' : 'bg-gray-100 text-gray-600' %>">
                      <%= index + 1 %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= touch[:source].to_s.titleize %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm text-gray-900"><%= touch[:conversions] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-medium text-gray-900"><%= number_to_currency(touch[:revenue]) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right">
                    <div class="text-sm font-semibold text-blue-600"><%= number_to_percentage(touch[:percentage], precision: 1) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="w-full bg-gray-200 rounded-full h-3">
                      <div class="bg-blue-500 h-3 rounded-full" style="width: <%= touch[:percentage] %>%"></div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Attribution Guide -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Understanding Attribution Models</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
            <div class="flex items-start">
              <div class="bg-purple-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-purple-900">First Touch Attribution</div>
                <div class="text-purple-800">Credits conversion to the initial customer touchpoint (awareness campaigns).</div>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-blue-500 w-3 h-3 rounded-full mt-1 mr-2 flex-shrink-0"></div>
              <div>
                <div class="font-medium text-blue-900">Last Touch Attribution</div>
                <div class="text-blue-800">Credits conversion to the final touchpoint before purchase (conversion campaigns).</div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No attribution data</h3>
          <p class="mt-1 text-sm text-gray-500">No conversion data available for the selected period.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
