<% content_for :title, "Marketing Spend Efficiency" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Marketing Spend Efficiency</h1>
      <p class="text-sm text-gray-600 mt-1">Return on ad spend and overall marketing ROI</p>
    </div>

    <div class="flex items-center gap-4">
      <%= render 'shared/period_selector', period: params[:period] || 30, base_path: spend_efficiency_business_manager_analytics_marketing_index_path %>
      <%= link_to "Export CSV", export_business_manager_analytics_marketing_index_path(format: :csv, period: params[:period]),
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_marketing_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Marketing Analytics
  <% end %>

  <!-- Summary Stats -->
  <% if @efficiency_data.present? %>
    <% total_spend = @efficiency_data[:total_spend] || 0 %>
    <% total_revenue = @efficiency_data[:total_revenue] || 0 %>
    <% roas = @efficiency_data[:roas] || 0 %>
    <% roi = @efficiency_data[:roi] || 0 %>
    <% cpc = @efficiency_data[:cost_per_conversion] || 0 %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Spend</p>
            <p class="text-2xl font-semibold text-red-600 mt-2"><%= number_to_currency(total_spend) %></p>
            <p class="text-xs text-gray-500 mt-1">Last <%= params[:period] || 30 %> days</p>
          </div>
          <div class="bg-red-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Generated Revenue</p>
            <p class="text-2xl font-semibold text-green-600 mt-2"><%= number_to_currency(total_revenue) %></p>
            <p class="text-xs text-gray-500 mt-1">From marketing</p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">ROAS</p>
            <p class="text-2xl font-semibold <%= roas >= 4 ? 'text-green-600' : roas >= 2 ? 'text-blue-600' : 'text-orange-600' %> mt-2">
              <%= number_with_precision(roas, precision: 2) %>x
            </p>
            <p class="text-xs text-gray-500 mt-1">Return on ad spend</p>
          </div>
          <div class="<%= roas >= 4 ? 'bg-green-100' : roas >= 2 ? 'bg-blue-100' : 'bg-orange-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= roas >= 4 ? 'text-green-600' : roas >= 2 ? 'text-blue-600' : 'text-orange-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Marketing ROI</p>
            <p class="text-2xl font-semibold <%= roi >= 200 ? 'text-green-600' : roi >= 100 ? 'text-blue-600' : 'text-orange-600' %> mt-2">
              <%= number_to_percentage(roi, precision: 0) %>
            </p>
            <p class="text-xs text-gray-500 mt-1">Return on investment</p>
          </div>
          <div class="<%= roi >= 200 ? 'bg-green-100' : roi >= 100 ? 'bg-blue-100' : 'bg-orange-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= roi >= 200 ? 'text-green-600' : roi >= 100 ? 'text-blue-600' : 'text-orange-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Efficiency Metrics Breakdown -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Cost Efficiency -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Cost Efficiency Metrics</h2>
        <p class="text-sm text-gray-600 mt-1">Per-conversion and per-click costs</p>
      </div>

      <div class="p-6">
        <% if @efficiency_data.present? %>
          <div class="space-y-4">
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">Cost Per Conversion</p>
                <p class="text-xs text-gray-500 mt-1">Average spend per customer</p>
              </div>
              <p class="text-xl font-semibold text-purple-600"><%= number_to_currency(@efficiency_data[:cost_per_conversion] || 0) %></p>
            </div>

            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">Cost Per Click</p>
                <p class="text-xs text-gray-500 mt-1">Average cost per ad click</p>
              </div>
              <p class="text-xl font-semibold text-blue-600"><%= number_to_currency(@efficiency_data[:cost_per_click] || 0) %></p>
            </div>

            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">Total Conversions</p>
                <p class="text-xs text-gray-500 mt-1">Marketing-driven customers</p>
              </div>
              <p class="text-xl font-semibold text-green-600"><%= number_with_delimiter(@efficiency_data[:total_conversions] || 0) %></p>
            </div>

            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
              <div>
                <p class="text-sm font-medium text-gray-600">Total Clicks</p>
                <p class="text-xs text-gray-500 mt-1">Across all channels</p>
              </div>
              <p class="text-xl font-semibold text-gray-900"><%= number_with_delimiter(@efficiency_data[:total_clicks] || 0) %></p>
            </div>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-sm text-gray-500">No efficiency data available</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- ROI Analysis -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">ROI Analysis</h2>
        <p class="text-sm text-gray-600 mt-1">Return breakdown and efficiency score</p>
      </div>

      <div class="p-6">
        <% if @efficiency_data.present? %>
          <% net_profit = total_revenue - total_spend %>
          <% efficiency_score = @efficiency_data[:efficiency_score] || 0 %>

          <div class="space-y-6">
            <!-- Profit Calculation -->
            <div class="bg-gradient-to-br from-green-50 to-blue-50 rounded-lg p-6">
              <div class="text-center">
                <p class="text-sm font-medium text-gray-600 mb-2">Net Marketing Profit</p>
                <p class="text-3xl font-bold <%= net_profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= number_to_currency(net_profit) %>
                </p>
                <p class="text-xs text-gray-500 mt-2">Revenue - Spend</p>
              </div>
            </div>

            <!-- ROAS Visualization -->
            <div>
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-700">ROAS Performance</span>
                <span class="text-sm font-semibold <%= roas >= 4 ? 'text-green-600' : roas >= 2 ? 'text-blue-600' : 'text-orange-600' %>">
                  <%= number_with_precision(roas, precision: 2) %>x
                </span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-8">
                <% roas_pct = [((roas / 5) * 100).round(1), 100].min %>
                <div class="<%= roas >= 4 ? 'bg-green-500' : roas >= 2 ? 'bg-blue-500' : 'bg-orange-500' %> h-8 rounded-full flex items-center justify-end pr-3" style="width: <%= roas_pct %>%">
                  <span class="text-white text-xs font-medium">
                    <%= roas >= 4 ? 'Excellent' : roas >= 2 ? 'Good' : 'Needs Improvement' %>
                  </span>
                </div>
              </div>
              <p class="text-xs text-gray-500 mt-1">Target: 4x or higher for sustainable growth</p>
            </div>

            <!-- Efficiency Score -->
            <div>
              <div class="flex justify-between items-center mb-2">
                <span class="text-sm font-medium text-gray-700">Overall Efficiency</span>
                <span class="text-sm font-semibold <%= efficiency_score >= 80 ? 'text-green-600' : efficiency_score >= 60 ? 'text-blue-600' : 'text-orange-600' %>">
                  <%= number_with_precision(efficiency_score, precision: 0) %>/100
                </span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-8">
                <div class="<%= efficiency_score >= 80 ? 'bg-green-500' : efficiency_score >= 60 ? 'bg-blue-500' : 'bg-orange-500' %> h-8 rounded-full flex items-center justify-end pr-3" style="width: <%= [efficiency_score, 100].min %>%">
                  <span class="text-white text-xs font-medium"><%= number_to_percentage(efficiency_score, precision: 0) %></span>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-sm text-gray-500">No ROI data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Efficiency Insights -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Spend Efficiency Benchmarks & Recommendations</h2>
      <p class="text-sm text-gray-600 mt-1">Industry standards and optimization strategies</p>
    </div>

    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- ROAS Benchmarks -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">ROAS Benchmarks</h3>
          <div class="space-y-2 text-sm text-blue-800">
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span><strong>4x+:</strong> Excellent - sustainable and profitable</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span><strong>2-4x:</strong> Good - room for optimization</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <span><strong>&lt;2x:</strong> Needs improvement - review strategy</span>
            </div>
          </div>
        </div>

        <!-- Optimization Strategies -->
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <h3 class="text-sm font-semibold text-green-900 mb-3">Optimization Strategies</h3>
          <div class="space-y-2 text-sm text-green-800">
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Focus budget on high-ROAS channels</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>A/B test ad creative and messaging</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Refine audience targeting to reduce waste</span>
            </div>
            <div class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Improve landing page conversion rates</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
