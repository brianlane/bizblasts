<% content_for :title, "Marketing Campaigns" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Marketing Campaigns</h1>
      <p class="text-sm text-gray-600 mt-1">Overview of all marketing campaigns and their performance</p>
    </div>

    <div class="flex items-center gap-3">
      <%= render 'shared/period_selector', period: @period || :last_30_days, base_path: campaigns_business_manager_analytics_marketing_index_path %>
    </div>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_marketing_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900 cursor-pointer" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Marketing Analytics
  <% end %>

  <!-- Summary Cards -->
  <% if @campaigns_data.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Campaigns</p>
            <p class="text-3xl font-bold text-blue-600 mt-2"><%= @campaigns_data[:total_campaigns] || 0 %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
            </svg>
          </div>
        </div>
        <p class="text-sm text-gray-500 mt-2"><%= @campaigns_data[:active_campaigns] || 0 %> active</p>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Spend</p>
            <p class="text-3xl font-bold text-purple-600 mt-2"><%= number_to_currency(@campaigns_data[:total_spend] || 0) %></p>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <p class="text-sm text-gray-500 mt-2">Across all campaigns</p>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Revenue Generated</p>
            <p class="text-3xl font-bold text-green-600 mt-2"><%= number_to_currency(@campaigns_data[:total_revenue] || 0) %></p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
        </div>
        <p class="text-sm text-gray-500 mt-2">From campaign conversions</p>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Average ROI</p>
            <p class="text-3xl font-bold <%= (@campaigns_data[:avg_roi] || 0) >= 0 ? 'text-green-600' : 'text-red-600' %> mt-2">
              <%= number_to_percentage(@campaigns_data[:avg_roi] || 0, precision: 1) %>
            </p>
          </div>
          <div class="<%= (@campaigns_data[:avg_roi] || 0) >= 0 ? 'bg-green-100' : 'bg-red-100' %> p-3 rounded-full">
            <svg class="w-6 h-6 <%= (@campaigns_data[:avg_roi] || 0) >= 0 ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
        <p class="text-sm text-gray-500 mt-2">Return on investment</p>
      </div>
    </div>

    <!-- Campaigns Table -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Campaign Performance</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Campaign</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Spend</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Revenue</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ROI</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @campaigns_data[:campaigns].present? %>
              <% @campaigns_data[:campaigns].each do |campaign| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= campaign[:name] %></div>
                    <div class="text-sm text-gray-500"><%= campaign[:start_date]&.strftime('%b %d') %> - <%= campaign[:end_date]&.strftime('%b %d, %Y') %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                      <%= campaign[:type]&.titleize || 'General' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-medium rounded-full <%= campaign[:status] == 'active' ? 'bg-green-100 text-green-800' : campaign[:status] == 'completed' ? 'bg-gray-100 text-gray-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= campaign[:status]&.titleize || 'Unknown' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_to_currency(campaign[:spend] || 0) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-600">
                    <%= number_to_currency(campaign[:revenue] || 0) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-sm font-medium <%= (campaign[:roi] || 0) >= 0 ? 'text-green-600' : 'text-red-600' %>">
                      <%= number_to_percentage(campaign[:roi] || 0, precision: 1) %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <%= link_to "View Details", campaign_roi_business_manager_analytics_marketing_path(campaign[:id]), class: "text-blue-600 hover:text-blue-800 cursor-pointer" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
                  </svg>
                  <p class="mt-2">No campaigns found</p>
                  <p class="text-sm">Create a marketing campaign to see analytics here</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">No Campaign Data</h3>
      <p class="mt-2 text-sm text-gray-500">Start running marketing campaigns to see performance analytics here.</p>
    </div>
  <% end %>
</div>

