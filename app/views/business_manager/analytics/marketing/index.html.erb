<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Marketing Performance</h1>
      <p class="text-gray-600 mt-1">Campaign ROI and attribution analysis</p>
    </div>

    <div class="flex flex-wrap items-center gap-3 sm:gap-4">
      <!-- Period Selector -->
      <%= render 'shared/period_selector', period: @period, base_path: business_manager_analytics_marketing_index_path %>

      <%= link_to "Export Data", export_business_manager_analytics_marketing_index_path(format: :csv, period: @period),
                  class: "px-3 py-2 sm:px-4 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors whitespace-nowrap" %>
    </div>
  </div>

  <!-- Quick Navigation -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
    <%= link_to campaigns_business_manager_analytics_marketing_index_path,
                class: "bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow" do %>
      <div class="flex items-center">
        <div class="bg-blue-100 p-2 rounded-lg mr-3">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-900">Campaigns</div>
          <div class="text-xs text-gray-500">View all</div>
        </div>
      </div>
    <% end %>

    <%= link_to promotions_business_manager_analytics_marketing_index_path,
                class: "bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow" do %>
      <div class="flex items-center">
        <div class="bg-green-100 p-2 rounded-lg mr-3">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-900">Promotions</div>
          <div class="text-xs text-gray-500">Discounts & offers</div>
        </div>
      </div>
    <% end %>

    <%= link_to attribution_business_manager_analytics_marketing_index_path,
                class: "bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow" do %>
      <div class="flex items-center">
        <div class="bg-purple-100 p-2 rounded-lg mr-3">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-900">Attribution</div>
          <div class="text-xs text-gray-500">Touch analysis</div>
        </div>
      </div>
    <% end %>

    <%= link_to channels_business_manager_analytics_marketing_index_path,
                class: "bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow" do %>
      <div class="flex items-center">
        <div class="bg-yellow-100 p-2 rounded-lg mr-3">
          <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-900">Channels</div>
          <div class="text-xs text-gray-500">By source</div>
        </div>
      </div>
    <% end %>

    <%= link_to referrals_business_manager_analytics_marketing_index_path,
                class: "bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow" do %>
      <div class="flex items-center">
        <div class="bg-pink-100 p-2 rounded-lg mr-3">
          <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold text-gray-900">Referrals</div>
          <div class="text-xs text-gray-500">Program stats</div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Total Campaign Spend</p>
          <p class="text-3xl font-bold text-gray-900"><%= number_to_currency(@marketing_summary[:total_spend]) %></p>
        </div>
        <div class="bg-blue-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2">Last 30 days</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Revenue Generated</p>
          <p class="text-3xl font-bold text-green-600"><%= number_to_currency(@marketing_summary[:total_revenue]) %></p>
        </div>
        <div class="bg-green-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2">From campaigns</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Average ROI</p>
          <p class="text-3xl font-bold <%= @marketing_summary[:avg_roi] >= 100 ? 'text-green-600' : 'text-yellow-600' %>">
            <%= @marketing_summary[:avg_roi].round(0) %>%
          </p>
        </div>
        <div class="bg-purple-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2">Return on investment</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Conversions</p>
          <p class="text-3xl font-bold text-indigo-600"><%= @marketing_summary[:total_conversions] %></p>
        </div>
        <div class="bg-indigo-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2"><%= @marketing_summary[:conversion_rate].round(1) %>% conversion rate</p>
    </div>
  </div>

  <!-- Top Performing Campaigns -->
  <% if @top_campaigns.present? && @top_campaigns.any? %>
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-gray-900">Top Performing Campaigns</h2>
          <%= link_to "View All Campaigns", campaigns_business_manager_analytics_marketing_index_path,
                      class: "text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      </div>
      <div class="p-6">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Campaign</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Revenue</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cost</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ROI</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Conversions</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Conv. Rate</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @top_campaigns.first(5).each do |campaign| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= campaign[:campaign_name] %></div>
                    <div class="text-sm text-gray-500"><%= campaign[:channel] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-green-600">
                    <%= number_to_currency(campaign[:revenue]) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_to_currency(campaign[:cost]) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= campaign[:roi] >= 100 ? 'bg-green-100 text-green-800' : campaign[:roi] >= 0 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                      <%= campaign[:roi].round(0) %>%
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= campaign[:conversions] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= campaign[:conversion_rate].round(1) %>%
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Channel Performance -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Performance by Channel</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <% @channel_performance.each do |data| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-sm font-medium text-gray-600 capitalize"><%= data[:channel] %></h3>
              <div class="<%= channel_icon_bg(data[:channel]) %> p-2 rounded-lg">
                <%= channel_icon_svg(data[:channel]).html_safe %>
              </div>
            </div>
            <div class="space-y-2">
              <div>
                <div class="text-xs text-gray-500">Revenue</div>
                <div class="text-xl font-bold text-gray-900"><%= number_to_currency(data[:revenue]) %></div>
              </div>
              <div>
                <div class="text-xs text-gray-500">Conversions</div>
                <div class="text-sm font-medium text-gray-700"><%= data[:conversions] %></div>
              </div>
              <div>
                <div class="text-xs text-gray-500">Conversion Rate</div>
                <div class="text-sm font-bold text-blue-600">
                  <%= data[:conversion_rate].round(1) %>%
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Customer Acquisition -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Customer Acquisition Sources</h2>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% @acquisition_sources.each do |data| %>
          <div>
            <div class="flex justify-between items-center mb-2">
              <div class="flex items-center">
                <span class="w-3 h-3 rounded-full <%= source_color_bg(data[:source]) %> mr-3"></span>
                <span class="text-sm font-medium text-gray-700 capitalize"><%= data[:source] %></span>
              </div>
              <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-500"><%= data[:acquisitions] %> acquisitions</span>
                <span class="text-sm font-bold text-gray-900"><%= data[:percentage] %>%</span>
              </div>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="<%= source_color_bar(data[:source]) %> h-2 rounded-full" style="width: <%= data[:percentage] %>%"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
<style>
  .bg-source-organic { background-color: #10b981; }
  .bg-source-paid { background-color: #3b82f6; }
  .bg-source-social { background-color: #8b5cf6; }
  .bg-source-referral { background-color: #f59e0b; }
  .bg-source-direct { background-color: #6b7280; }
</style>
<% end %>
