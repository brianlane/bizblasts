<% content_for :title, "Service Analytics" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Service Analytics</h1>
      <p class="text-sm text-gray-600 mt-1">Analyze service performance and engagement</p>
    </div>

    <!-- Period Selector -->
    <%= render 'shared/period_selector', period: @period, base_path: business_manager_analytics_services_path %>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_path(period: @period), class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Analytics Overview
  <% end %>

  <!-- Service Metrics Summary -->
  <% if @metrics.present? %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="text-sm font-medium text-gray-500 mb-2">Total Service Views</div>
        <div class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@metrics[:total_views] || 0) %></div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow">
        <div class="text-sm font-medium text-gray-500 mb-2">Unique Services Viewed</div>
        <div class="text-3xl font-bold text-gray-900"><%= @metrics[:unique_services_viewed] || 0 %></div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow">
        <div class="text-sm font-medium text-gray-500 mb-2">Avg Views per Service</div>
        <div class="text-3xl font-bold text-gray-900"><%= (@metrics[:avg_views_per_service] || 0).round(1) %></div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow">
        <div class="text-sm font-medium text-gray-500 mb-2">View-to-Booking Rate</div>
        <div class="text-3xl font-bold text-green-600"><%= (@metrics[:view_to_booking_rate] || 0).round(1) %>%</div>
      </div>
    </div>
  <% end %>

  <!-- View-to-Booking Gap Analysis -->
  <% if @view_booking_gap.present? %>
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-lg font-semibold text-gray-900 mb-6">View-to-Booking Gap Analysis</h2>
      <p class="text-sm text-gray-600 mb-6">
        Services with high views but low bookings may need better descriptions, pricing adjustments, or improved call-to-action.
      </p>

      <% if @view_booking_gap[:services].present? && @view_booking_gap[:services].any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Views</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bookings</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Conversion Rate</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Gap Score</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @view_booking_gap[:services].each do |service| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= service[:name] %></div>
                    <div class="text-xs text-gray-500"><%= number_to_currency(service[:price] || 0) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= number_with_delimiter(service[:views]) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= service[:bookings] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= service[:conversion_rate] > 5 ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= service[:conversion_rate] %>%
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% gap_color = service[:gap_score] > 70 ? 'text-red-600' : (service[:gap_score] > 40 ? 'text-yellow-600' : 'text-green-600') %>
                    <span class="text-sm font-medium <%= gap_color %>"><%= service[:gap_score] %></span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          <p>No gap analysis data available for this period</p>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Service Performance Comparison -->
  <% if @service_comparison.present? && @service_comparison.any? %>
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-lg font-semibold text-gray-900 mb-6">Service Performance Comparison</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @service_comparison.each do |service| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
            <h3 class="text-sm font-semibold text-gray-900 mb-3 truncate"><%= service[:name] %></h3>

            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Views</span>
                <span class="font-medium text-gray-900"><%= number_with_delimiter(service[:views] || 0) %></span>
              </div>

              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Bookings</span>
                <span class="font-medium text-gray-900"><%= service[:bookings] || 0 %></span>
              </div>

              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Revenue</span>
                <span class="font-medium text-gray-900"><%= number_to_currency(service[:revenue] || 0) %></span>
              </div>

              <div class="pt-2 border-t border-gray-100">
                <div class="flex justify-between text-sm">
                  <span class="text-gray-500">Conversion</span>
                  <span class="font-medium text-green-600"><%= service[:conversion_rate] %>%</span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-white p-6 rounded-lg shadow text-center py-12 text-gray-500">
      <svg class="w-12 h-12 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
      <p>No service data available for this period</p>
    </div>
  <% end %>
</div>

