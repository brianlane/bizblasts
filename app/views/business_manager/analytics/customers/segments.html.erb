<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Customer Segments</h1>
      <p class="text-gray-600 mt-1">RFM (Recency, Frequency, Monetary) Analysis</p>
    </div>
    <%= link_to "â† Back to Customers", business_manager_analytics_customers_path,
                class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>

  <!-- Segment Overview -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
    <% @segment_summary.each do |segment, data| %>
      <div class="bg-white rounded-lg shadow-lg p-6 border-l-4 <%= segment_border_color(segment) %>">
        <h3 class="text-lg font-semibold text-gray-900 capitalize mb-2"><%= segment.to_s.humanize %></h3>
        <p class="text-4xl font-bold <%= segment_text_color(segment) %>"><%= data[:count] %></p>
        <p class="text-sm text-gray-500 mt-2"><%= data[:percentage] %>% of customers</p>
        <p class="text-sm font-medium text-gray-700 mt-1">
          Total Revenue: <%= number_to_currency(data[:total_revenue]) %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Champions -->
  <% if @segments[:champions].present? && @segments[:champions].any? %>
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-green-50 to-emerald-50">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <span class="w-3 h-3 rounded-full bg-green-500 mr-3"></span>
          Champions
          <span class="ml-3 px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
            <%= @segments[:champions].size %>
          </span>
        </h2>
        <p class="text-sm text-gray-600 mt-1">Your best customers - high frequency, high value, recent purchases</p>
      </div>
      <div class="p-6">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Recency</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Frequency</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monetary</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Revenue</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @segments[:champions].first(10).each do |customer_data| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= customer_data[:name] %></div>
                    <div class="text-sm text-gray-500"><%= customer_data[:email] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= customer_data[:recency_score] %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                      <%= customer_data[:frequency_score] %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                      <%= customer_data[:monetary_score] %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= number_to_currency(customer_data[:total_revenue]) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <!-- At Risk -->
  <% if @segments[:at_risk].present? && @segments[:at_risk].any? %>
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-red-50 to-pink-50">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <span class="w-3 h-3 rounded-full bg-red-500 mr-3"></span>
          At Risk
          <span class="ml-3 px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-medium">
            <%= @segments[:at_risk].size %>
          </span>
        </h2>
        <p class="text-sm text-gray-600 mt-1">Previously high-value customers who haven't purchased recently</p>
      </div>
      <div class="p-6">
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Re-engagement Recommended</h3>
              <div class="mt-2 text-sm text-yellow-700">
                <p>Consider reaching out to these customers with special offers or personalized messages.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Days Inactive</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Past Value</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @segments[:at_risk].first(10).each do |customer_data| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= customer_data[:name] %></div>
                    <div class="text-sm text-gray-500"><%= customer_data[:email] %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= customer_data[:days_since_purchase] %> days
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= number_to_currency(customer_data[:total_revenue]) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600">
                    <%= link_to "Send Email", "#", class: "hover:text-blue-800" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Other Segments Summary -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% [:loyal, :big_spenders, :new, :occasional, :hibernating, :lost].each do |segment| %>
      <% if @segments[segment].present? && @segments[segment].any? %>
        <div class="bg-white rounded-lg shadow">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 capitalize flex items-center">
              <span class="w-2 h-2 rounded-full <%= segment_dot_color(segment) %> mr-2"></span>
              <%= segment.to_s.humanize %>
            </h3>
            <p class="text-sm text-gray-500 mt-1"><%= @segments[segment].size %> customers</p>
          </div>
          <div class="px-6 py-4">
            <div class="text-2xl font-bold text-gray-900">
              <%= number_to_currency(@segment_summary[segment][:total_revenue]) %>
            </div>
            <p class="text-sm text-gray-500 mt-1">Total revenue</p>
            <div class="mt-4">
              <p class="text-xs text-gray-600"><%= segment_description(segment) %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<% content_for :head do %>
<style>
  .border-l-green-500 { border-left-color: #10b981; }
  .border-l-blue-500 { border-left-color: #3b82f6; }
  .border-l-purple-500 { border-left-color: #8b5cf6; }
  .border-l-yellow-500 { border-left-color: #f59e0b; }
  .border-l-red-500 { border-left-color: #ef4444; }
  .border-l-gray-500 { border-left-color: #6b7280; }
</style>
<%if !defined?(segment_border_color) %>
<script>
  <%# Helper methods for segment colors - fallback if not defined in helper %>
</script>
<% end %>
<% end %>
