<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Customer Lifecycle Analytics</h1>
    <%= link_to "Export Data", export_business_manager_analytics_customers_path(format: :csv),
                class: "btn btn-primary" %>
  </div>

  <!-- Key Metrics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Customers -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Total Customers</p>
          <p class="text-3xl font-bold text-gray-900"><%= @lifecycle_data[:total_customers] %></p>
        </div>
        <div class="bg-blue-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2">
        <%= @lifecycle_data[:active_customers] %> active
      </p>
    </div>

    <!-- Average CLV -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Avg Customer Lifetime Value</p>
          <p class="text-3xl font-bold text-gray-900"><%= number_to_currency(@lifecycle_data[:avg_clv]) %></p>
        </div>
        <div class="bg-green-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2">
        ARPC: <%= number_to_currency(@lifecycle_data[:arpc]) %>
      </p>
    </div>

    <!-- Repeat Rate -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Repeat Customer Rate</p>
          <p class="text-3xl font-bold text-gray-900"><%= number_to_percentage(@lifecycle_data[:repeat_customer_rate], precision: 1) %></p>
        </div>
        <div class="bg-purple-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2">
        <%= @lifecycle_data[:avg_purchase_frequency].round(1) %> avg purchases
      </p>
    </div>

    <!-- Churn Risk -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-600">Customers at Risk</p>
          <p class="text-3xl font-bold text-red-600"><%= @churn_stats[:high_risk] %></p>
        </div>
        <div class="bg-red-100 p-3 rounded-full">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2">
        <%= link_to "View at-risk customers", at_risk_business_manager_analytics_customers_path, class: "text-red-600 hover:text-red-800" %>
      </p>
    </div>
  </div>

  <!-- Customer Segments -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Customer Segments (RFM Analysis)</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @segment_summary[:counts].each do |segment, count| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold text-gray-900 capitalize"><%= segment.to_s.humanize %></h3>
            <p class="text-3xl font-bold text-blue-600 mt-2"><%= count %></p>
            <p class="text-sm text-gray-500 mt-1">
              <%= @segment_summary[:percentages][segment] %>% of customers
            </p>
            <p class="text-sm text-gray-600 mt-2">
              Total Value: <%= number_to_currency(@segment_summary[:total_values][segment] || 0) %>
            </p>
          </div>
        <% end %>
      </div>
      <%= link_to "View detailed segments", segments_business_manager_analytics_customers_path,
                  class: "btn btn-secondary mt-4" %>
    </div>
  </div>

  <!-- Churn Risk Distribution -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Churn Risk Distribution</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div>
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm font-medium text-gray-700">High Risk</span>
              <span class="text-sm font-bold text-red-600"><%= @churn_stats[:high_risk] %> customers</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <% high_risk_pct = @churn_stats[:total_customers] > 0 ? (@churn_stats[:high_risk].to_f / @churn_stats[:total_customers] * 100).round(1) : 0 %>
              <div class="bg-red-600 h-2 rounded-full" style="width: <%= high_risk_pct %>%"></div>
            </div>
          </div>

          <div>
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm font-medium text-gray-700">Medium Risk</span>
              <span class="text-sm font-bold text-yellow-600"><%= @churn_stats[:medium_risk] %> customers</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <% medium_risk_pct = @churn_stats[:total_customers] > 0 ? (@churn_stats[:medium_risk].to_f / @churn_stats[:total_customers] * 100).round(1) : 0 %>
              <div class="bg-yellow-500 h-2 rounded-full" style="width: <%= medium_risk_pct %>%"></div>
            </div>
          </div>

          <div>
            <div class="flex justify-between items-center mb-2">
              <span class="text-sm font-medium text-gray-700">Low Risk</span>
              <span class="text-sm font-bold text-green-600"><%= @churn_stats[:low_risk] %> customers</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <% low_risk_pct = @churn_stats[:total_customers] > 0 ? (@churn_stats[:low_risk].to_f / @churn_stats[:total_customers] * 100).round(1) : 0 %>
              <div class="bg-green-600 h-2 rounded-full" style="width: <%= low_risk_pct %>%"></div>
            </div>
          </div>
        </div>

        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <p class="text-sm text-gray-700">
            <strong>Estimated Churn in Next 30 Days:</strong> <%= @churn_stats[:customers_at_risk_30_days] %> customers
          </p>
          <p class="text-sm text-gray-700 mt-1">
            <strong>Estimated Churn in Next 90 Days:</strong> <%= @churn_stats[:customers_at_risk_90_days] %> customers
          </p>
        </div>
      </div>
    </div>

    <!-- Top Customers by CLV -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Top Customers by Lifetime Value</h2>
      </div>
      <div class="p-6">
        <div class="space-y-3">
          <% @top_customers.each_with_index do |customer_data, index| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex items-center space-x-3">
                <span class="text-lg font-bold text-gray-400"><%= index + 1 %></span>
                <div>
                  <p class="font-semibold text-gray-900"><%= customer_data[:customer].full_name %></p>
                  <p class="text-sm text-gray-500"><%= customer_data[:purchases] %> purchases</p>
                </div>
              </div>
              <div class="text-right">
                <p class="font-bold text-green-600"><%= number_to_currency(customer_data[:clv]) %></p>
                <p class="text-xs text-gray-500">CLV</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Quick Actions</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to at_risk_business_manager_analytics_customers_path,
                    class: "block p-4 border-2 border-red-200 rounded-lg hover:border-red-400 transition-colors" do %>
          <h3 class="font-semibold text-gray-900">Contact At-Risk Customers</h3>
          <p class="text-sm text-gray-600 mt-1">Reach out to <%= @churn_stats[:high_risk] %> high-risk customers before they churn</p>
        <% end %>

        <%= link_to segments_business_manager_analytics_customers_path,
                    class: "block p-4 border-2 border-blue-200 rounded-lg hover:border-blue-400 transition-colors" do %>
          <h3 class="font-semibold text-gray-900">View Customer Segments</h3>
          <p class="text-sm text-gray-600 mt-1">Analyze <%= @segment_summary[:counts].count %> different customer segments</p>
        <% end %>

        <%= link_to export_business_manager_analytics_customers_path(format: :csv),
                    class: "block p-4 border-2 border-green-200 rounded-lg hover:border-green-400 transition-colors" do %>
          <h3 class="font-semibold text-gray-900">Export Customer Data</h3>
          <p class="text-sm text-gray-600 mt-1">Download complete customer analytics report</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
