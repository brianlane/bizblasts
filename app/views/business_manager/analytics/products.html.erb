<% content_for :title, "Product Analytics" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Product Analytics</h1>
      <p class="text-sm text-gray-600 mt-1">Analyze your product sales and performance</p>
    </div>

    <!-- Period Selector -->
    <%= render 'shared/period_selector', period: @period, base_path: business_manager_analytics_products_path %>
  </div>

  <!-- Back Link -->
  <%= link_to business_manager_analytics_path(period: @period), class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Analytics Overview
  <% end %>

  <!-- Metrics Summary -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Total Orders</h3>
      <p class="text-3xl font-bold text-gray-900"><%= @metrics[:total_orders] %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Total Revenue</h3>
      <p class="text-3xl font-bold text-green-600"><%= number_to_currency(@metrics[:total_revenue]) %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Average Order Value</h3>
      <p class="text-3xl font-bold text-blue-600"><%= number_to_currency(@metrics[:average_order_value]) %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-sm font-medium text-gray-500 mb-2">Items Sold</h3>
      <p class="text-3xl font-bold text-purple-600"><%= @metrics[:total_items_sold] %></p>
    </div>
  </div>

  <!-- Top Products -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Top Products</h2>
    </div>
    <div class="p-6">
      <% if @top_products.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity Sold</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Revenue</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @top_products.each do |product| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= product[:name] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= product[:quantity] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= number_to_currency(product[:revenue]) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500">No product sales data available for this period.</p>
      <% end %>
    </div>
  </div>

  <!-- Cart Abandonment -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Cart Abandonment</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <p class="text-sm text-gray-500 mb-1">Carts Created</p>
          <p class="text-2xl font-bold text-gray-900"><%= @cart_abandonment[:carts_created] %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500 mb-1">Checkouts Started</p>
          <p class="text-2xl font-bold text-blue-600"><%= @cart_abandonment[:checkouts_started] %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500 mb-1">Abandonment Rate</p>
          <p class="text-2xl font-bold text-red-600"><%= number_to_percentage(@cart_abandonment[:abandonment_rate], precision: 1) %></p>
        </div>
      </div>
    </div>
  </div>
</div>

