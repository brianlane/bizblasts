<%# app/views/business_manager/rentals/show.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @rental.name %></h1>
      <div class="flex flex-wrap gap-2 mt-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @rental.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
          <%= @rental.active? ? 'Active' : 'Inactive' %>
        </span>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <%= @rental.rental_category&.titleize %>
        </span>
        <% if @rental.featured? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            Featured
          </span>
        <% end %>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to 'Edit', edit_business_manager_rental_path(@rental), class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700" %>
      <%= link_to 'Back to Rentals', business_manager_rentals_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Info -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Images -->
      <% if @rental.images.attached? %>
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Images</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <% @rental.images.each do |image| %>
              <%= image_tag image.variant(:medium), class: "w-full h-48 object-cover rounded-lg" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Description -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Description</h2>
        <p class="text-gray-700 whitespace-pre-wrap"><%= @rental.description || 'No description provided.' %></p>
      </div>

      <!-- Recent Bookings -->
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-medium text-gray-900">Recent Bookings</h2>
          <%= link_to 'View All', business_manager_rental_bookings_path(product_id: @rental.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
        </div>
        
        <% if @recent_bookings.any? %>
          <div class="space-y-3">
            <% @recent_bookings.each do |booking| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div>
                  <div class="font-medium text-gray-900"><%= booking.tenant_customer&.full_name || 'Guest' %></div>
                  <div class="text-sm text-gray-500">
                    <%= booking.local_start_time&.strftime('%b %d') %> - <%= booking.local_end_time&.strftime('%b %d, %Y') %>
                  </div>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium 
                    <%= case booking.status
                        when 'pending_deposit' then 'bg-yellow-100 text-yellow-800'
                        when 'deposit_paid' then 'bg-blue-100 text-blue-800'
                        when 'checked_out' then 'bg-purple-100 text-purple-800'
                        when 'overdue' then 'bg-red-100 text-red-800'
                        when 'returned' then 'bg-orange-100 text-orange-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'cancelled' then 'bg-gray-100 text-gray-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= booking.status.titleize.gsub('_', ' ') %>
                  </span>
                  <div class="text-sm font-medium text-gray-900 mt-1"><%= number_to_currency(booking.total_amount) %></div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-4">No bookings yet</p>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Pricing Card -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Pricing</h2>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Daily Rate</span>
            <span class="font-semibold text-green-600"><%= number_to_currency(@rental.daily_rate) %></span>
          </div>
          <% if @rental.hourly_rate.present? && @rental.allow_hourly_rental? %>
            <div class="flex justify-between">
              <span class="text-gray-600">Hourly Rate</span>
              <span class="font-medium"><%= number_to_currency(@rental.hourly_rate) %></span>
            </div>
          <% end %>
          <% if @rental.weekly_rate.present? && @rental.allow_weekly_rental? %>
            <div class="flex justify-between">
              <span class="text-gray-600">Weekly Rate</span>
              <span class="font-medium"><%= number_to_currency(@rental.weekly_rate) %></span>
            </div>
          <% end %>
          <% if @rental.security_deposit.to_d > 0 %>
            <div class="flex justify-between border-t pt-3">
              <span class="text-gray-600">Security Deposit</span>
              <span class="font-medium text-orange-600"><%= number_to_currency(@rental.security_deposit) %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Availability Card -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Availability</h2>
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600">Total Units</span>
            <span class="font-medium"><%= @rental.rental_quantity_available %></span>
          </div>
          <% if @rental.min_rental_duration_mins.present? %>
            <div class="flex justify-between">
              <span class="text-gray-600">Min Duration</span>
              <span class="font-medium"><%= @rental.send(:duration_in_words, @rental.min_rental_duration_mins) %></span>
            </div>
          <% end %>
          <% if @rental.max_rental_duration_mins.present? %>
            <div class="flex justify-between">
              <span class="text-gray-600">Max Duration</span>
              <span class="font-medium"><%= @rental.send(:duration_in_words, @rental.max_rental_duration_mins) %></span>
            </div>
          <% end %>
          <% if @rental.rental_buffer_mins.to_i > 0 %>
            <div class="flex justify-between">
              <span class="text-gray-600">Buffer Time</span>
              <span class="font-medium"><%= @rental.rental_buffer_mins %> mins</span>
            </div>
          <% end %>
        </div>
        
        <!-- Rate Types Allowed -->
        <div class="mt-4 pt-4 border-t">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Allowed Rate Types</h3>
          <div class="flex flex-wrap gap-2">
            <% if @rental.allow_hourly_rental? %>
              <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded">Hourly</span>
            <% end %>
            <% if @rental.allow_daily_rental? %>
              <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Daily</span>
            <% end %>
            <% if @rental.allow_weekly_rental? %>
              <span class="px-2 py-1 text-xs bg-purple-100 text-purple-800 rounded">Weekly</span>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Location Card -->
      <% if @rental.location.present? %>
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Location</h2>
          <div class="text-gray-700">
            <div class="font-medium"><%= @rental.location.name %></div>
            <div class="text-sm text-gray-500 mt-1">
              <%= @rental.location.address %><br>
              <%= @rental.location.city %>, <%= @rental.location.state %> <%= @rental.location.zip %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- 30-Day Availability Calendar Preview -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">30-Day Availability</h2>
        <div class="grid grid-cols-7 gap-1 text-xs">
          <% %w[S M T W T F S].each do |day| %>
            <div class="text-center font-medium text-gray-500 p-1"><%= day %></div>
          <% end %>
          <% @availability_calendar.each do |date_str, data| %>
            <% date = Date.parse(date_str) %>
            <div class="text-center p-1 rounded <%= data[:fully_booked] ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>" 
                 title="<%= date.strftime('%b %d') %>: <%= data[:available] %>/<%= data[:total] %> available">
              <%= date.day %>
            </div>
          <% end %>
        </div>
        <div class="mt-3 flex items-center justify-center gap-4 text-xs">
          <div class="flex items-center gap-1">
            <div class="w-3 h-3 bg-green-100 rounded"></div>
            <span>Available</span>
          </div>
          <div class="flex items-center gap-1">
            <div class="w-3 h-3 bg-red-100 rounded"></div>
            <span>Fully Booked</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

