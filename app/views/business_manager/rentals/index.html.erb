<%# app/views/business_manager/rentals/index.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-xl sm:text-2xl font-bold">Manage Rentals</h1>
          <p class="text-sm text-gray-600 mt-1">Create and manage rental items for your customers</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-2">
          <%= link_to 'New Rental', new_business_manager_rental_path, 
                class: "inline-flex items-center justify-center px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="border-t border-gray-200 px-4 py-4 sm:px-6 bg-gray-50">
      <div class="flex flex-wrap gap-4 items-center">
        <div>
          <label class="block text-xs font-medium text-gray-500 mb-1">Category</label>
          <%= form_tag business_manager_rentals_path, method: :get, class: "inline" do %>
            <%= select_tag :category, 
                options_for_select([['All Categories', '']] + @rental_categories.map { |c| [c.titleize, c] }, params[:category]),
                class: "text-sm border-gray-300 rounded-md", onchange: "this.form.submit()" %>
          <% end %>
        </div>
        <% if @locations.any? %>
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Location</label>
            <%= form_tag business_manager_rentals_path, method: :get, class: "inline" do %>
              <%= hidden_field_tag :category, params[:category] %>
              <%= select_tag :location_id,
                  options_for_select([['All Locations', '']] + @locations.map { |l| [l.name, l.id] }, params[:location_id]),
                  class: "text-sm border-gray-300 rounded-md", onchange: "this.form.submit()" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <% if @rentals.any? %>
        <div class="space-y-4">
          <% @rentals.each do |rental| %>
            <div class="border rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow bg-white">
              <div class="flex flex-col md:flex-row md:items-start gap-4">
                <!-- Image -->
                <div class="flex-shrink-0">
                  <% if rental.images.attached? %>
                    <%= image_tag rental.images.first.variant(:thumb), class: "w-24 h-24 object-cover rounded-lg" %>
                  <% else %>
                    <div class="w-24 h-24 bg-gray-100 rounded-lg flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
                
                <!-- Details -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between">
                    <div>
                      <%= link_to rental.name, business_manager_rental_path(rental), 
                            class: "text-lg font-semibold text-blue-600 hover:text-blue-800" %>
                      <div class="flex flex-wrap gap-2 mt-1">
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= rental.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                          <%= rental.active? ? 'Active' : 'Inactive' %>
                        </span>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                          <%= rental.rental_category&.titleize %>
                        </span>
                        <% if rental.location.present? %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                            ğŸ“ <%= rental.location.name %>
                          </span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  
                  <p class="text-sm text-gray-600 mt-2 line-clamp-2"><%= rental.description %></p>
                  
                  <!-- Pricing -->
                  <div class="mt-3 flex flex-wrap gap-4 text-sm">
                    <div>
                      <span class="text-gray-500">Daily:</span>
                      <span class="font-medium text-green-600"><%= number_to_currency(rental.daily_rate) %></span>
                    </div>
                    <% if rental.hourly_rate.present? && rental.allow_hourly_rental? %>
                      <div>
                        <span class="text-gray-500">Hourly:</span>
                        <span class="font-medium"><%= number_to_currency(rental.hourly_rate) %></span>
                      </div>
                    <% end %>
                    <% if rental.weekly_rate.present? && rental.allow_weekly_rental? %>
                      <div>
                        <span class="text-gray-500">Weekly:</span>
                        <span class="font-medium"><%= number_to_currency(rental.weekly_rate) %></span>
                      </div>
                    <% end %>
                    <% if rental.security_deposit.to_d > 0 %>
                      <div>
                        <span class="text-gray-500">Deposit:</span>
                        <span class="font-medium text-orange-600"><%= number_to_currency(rental.security_deposit) %></span>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Availability -->
                  <div class="mt-2 text-sm text-gray-600">
                    Available: <span class="font-medium"><%= rental.rental_quantity_available %></span> units
                  </div>
                </div>
                
                <!-- Actions -->
                <div class="flex flex-col gap-2">
                  <%= link_to 'Edit', edit_business_manager_rental_path(rental), 
                        class: "inline-flex items-center px-3 py-1.5 text-sm font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-md transition-colors" %>
                  <%= link_to 'View', business_manager_rental_path(rental), 
                        class: "inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-600 bg-gray-50 hover:bg-gray-100 rounded-md transition-colors" %>
                  <%= button_to 'Delete', business_manager_rental_path(rental),
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete '#{rental.name}'?" },
                        class: "inline-flex items-center px-3 py-1.5 text-sm font-medium text-red-600 bg-red-50 hover:bg-red-100 rounded-md transition-colors border-0" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No rentals found</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating your first rental item.</p>
          <div class="mt-6">
            <%= link_to 'Create Rental', new_business_manager_rental_path, 
                  class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-500 hover:bg-primary-600 transition-colors" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

