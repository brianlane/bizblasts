<%# app/views/business_manager/rental_bookings/index.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-xl sm:text-2xl font-bold">Rental Bookings</h1>
          <p class="text-sm text-gray-600 mt-1">Manage all rental reservations</p>
        </div>
        <div class="flex gap-2">
          <%= link_to 'New Booking', new_business_manager_rental_booking_path, 
                class: "px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-lg transition-colors" %>
          <%= link_to 'Calendar View', calendar_business_manager_rental_bookings_path,
                class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Status Tabs -->
    <div class="border-t border-gray-200 px-4 py-3 sm:px-6 bg-gray-50">
      <div class="flex flex-wrap gap-2">
        <%= link_to business_manager_rental_bookings_path, 
              class: "px-3 py-1.5 rounded-full text-sm font-medium #{params[:status].blank? ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" do %>
          All
        <% end %>
        <%= link_to business_manager_rental_bookings_path(status: 'pending_deposit'), 
              class: "px-3 py-1.5 rounded-full text-sm font-medium #{params[:status] == 'pending_deposit' ? 'bg-yellow-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" do %>
          Pending Deposit <span class="ml-1 text-xs">(<%= @pending_count %>)</span>
        <% end %>
        <%= link_to business_manager_rental_bookings_path(status: 'deposit_paid'), 
              class: "px-3 py-1.5 rounded-full text-sm font-medium #{params[:status] == 'deposit_paid' ? 'bg-blue-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" do %>
          Ready for Pickup
        <% end %>
        <%= link_to business_manager_rental_bookings_path(status: 'checked_out'), 
              class: "px-3 py-1.5 rounded-full text-sm font-medium #{params[:status] == 'checked_out' ? 'bg-purple-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" do %>
          Checked Out
        <% end %>
        <%= link_to overdue_business_manager_rental_bookings_path, 
              class: "px-3 py-1.5 rounded-full text-sm font-medium #{request.path.include?('overdue') ? 'bg-red-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" do %>
          Overdue <span class="ml-1 text-xs">(<%= @overdue_count %>)</span>
        <% end %>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="border-t border-gray-200 px-4 py-3 sm:px-6 grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="text-center p-3 bg-blue-50 rounded-lg">
        <div class="text-2xl font-bold text-blue-600"><%= @active_count %></div>
        <div class="text-xs text-blue-500">Active Rentals</div>
      </div>
      <div class="text-center p-3 bg-yellow-50 rounded-lg">
        <div class="text-2xl font-bold text-yellow-600"><%= @today_pickups_count %></div>
        <div class="text-xs text-yellow-500">Today's Pickups</div>
      </div>
      <div class="text-center p-3 bg-orange-50 rounded-lg">
        <div class="text-2xl font-bold text-orange-600"><%= @today_returns_count %></div>
        <div class="text-xs text-orange-500">Today's Returns</div>
      </div>
      <div class="text-center p-3 bg-red-50 rounded-lg">
        <div class="text-2xl font-bold text-red-600"><%= @overdue_count %></div>
        <div class="text-xs text-red-500">Overdue</div>
      </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <% if @rental_bookings.any? %>
        <div class="space-y-4">
          <% @rental_bookings.each do |booking| %>
            <div class="border rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow bg-white <%= booking.overdue? ? 'border-red-300 bg-red-50' : '' %>">
              <div class="flex flex-col md:flex-row md:items-start gap-4">
                <div class="flex-1">
                  <div class="flex items-start justify-between">
                    <div>
                      <%= link_to booking.rental_name, business_manager_rental_booking_path(booking), 
                            class: "text-lg font-semibold text-blue-600 hover:text-blue-800" %>
                      <div class="text-sm text-gray-500 mt-1">
                        Booking #<%= booking.booking_number %>
                      </div>
                    </div>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                      <%= case booking.status
                          when 'pending_deposit' then 'bg-yellow-100 text-yellow-800'
                          when 'deposit_paid' then 'bg-blue-100 text-blue-800'
                          when 'checked_out' then 'bg-purple-100 text-purple-800'
                          when 'overdue' then 'bg-red-100 text-red-800'
                          when 'returned' then 'bg-orange-100 text-orange-800'
                          when 'completed' then 'bg-green-100 text-green-800'
                          when 'cancelled' then 'bg-gray-100 text-gray-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= booking.status.titleize.gsub('_', ' ') %>
                      <% if booking.overdue? %>
                        <span class="ml-1">‚ö†Ô∏è</span>
                      <% end %>
                    </span>
                  </div>
                  
                  <div class="mt-3 grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
                    <div>
                      <span class="text-gray-500">Customer:</span>
                      <div class="font-medium"><%= booking.customer_full_name || 'Guest' %></div>
                    </div>
                    <div>
                      <span class="text-gray-500">Period:</span>
                      <div class="font-medium">
                        <%= booking.local_start_time&.strftime('%b %d') %> - <%= booking.local_end_time&.strftime('%b %d') %>
                      </div>
                    </div>
                    <div>
                      <span class="text-gray-500">Duration:</span>
                      <div class="font-medium"><%= booking.duration_display %></div>
                    </div>
                    <div>
                      <span class="text-gray-500">Total:</span>
                      <div class="font-medium text-green-600"><%= number_to_currency(booking.total_amount) %></div>
                    </div>
                  </div>
                  
                  <% if booking.location.present? %>
                    <div class="mt-2 text-sm text-gray-500">
                      üìç <%= booking.location.name %>
                    </div>
                  <% end %>
                </div>
                
                <div class="flex flex-col gap-2">
                  <%= link_to 'View', business_manager_rental_booking_path(booking), 
                        class: "px-3 py-1.5 text-sm font-medium text-gray-600 bg-gray-50 hover:bg-gray-100 rounded-md text-center" %>
                  
                  <% if booking.can_check_out? %>
                    <%= button_to 'Check Out', check_out_business_manager_rental_booking_path(booking),
                          method: :patch,
                          class: "px-3 py-1.5 text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 rounded-md" %>
                  <% end %>
                  
                  <% if booking.can_return? %>
                    <%= link_to 'Process Return', business_manager_rental_booking_path(booking, anchor: 'return-form'),
                          class: "px-3 py-1.5 text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 rounded-md text-center" %>
                  <% end %>
                  
                  <% if booking.can_cancel? %>
                    <%= button_to 'Cancel', cancel_business_manager_rental_booking_path(booking),
                          method: :patch,
                          data: { confirm: 'Are you sure you want to cancel this booking?' },
                          class: "px-3 py-1.5 text-sm font-medium text-red-600 bg-red-50 hover:bg-red-100 rounded-md" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No rental bookings found</h3>
          <p class="mt-1 text-sm text-gray-500">Bookings will appear here when customers rent items.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

