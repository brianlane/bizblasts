<%# app/views/business_manager/customers/show.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <!-- Header Section -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-center gap-4">
          <!-- Customer Avatar -->
          <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-bold text-xl">
            <%= @customer.full_name.first.upcase %>
          </div>
          <div>
            <h1 class="text-xl sm:text-2xl font-bold text-gray-900">
              <%= @customer.full_name %>
            </h1>
            <p class="text-gray-600 text-sm mt-1">
              Customer Profile & Activity
            </p>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-2">
          <%= link_to business_manager_customers_path,
                class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Back to Customers
          <% end %>
          
          <div class="flex gap-2 justify-center">
            <% if policy(@customer).edit? %>
              <%= link_to edit_business_manager_customer_path(@customer),
                    class: "text-indigo-600 hover:text-indigo-900 font-medium text-sm" do %>
                Edit
              <% end %>
            <% end %>
            <% if policy(@customer).destroy? %>
              <%= button_to business_manager_customer_path(@customer),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this customer? This action cannot be undone." },
                    class: "text-red-600 hover:text-red-900 font-medium text-sm bg-transparent border-0 p-0 cursor-pointer" do %>
                Delete
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Customer Status Badge -->
    <div class="border-t border-gray-200 px-4 py-3 sm:px-6 bg-gray-50">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <% if User.find_by(email: @customer.email) %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
              Registered User
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
              Guest Customer
            </span>
          <% end %>
        </div>
        <div class="text-sm text-gray-600">
          <span class="font-medium">Last visit:</span> <%= @customer.last_appointment&.strftime("%b %d, %Y") || 'Never' %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Customer Details Card -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h2 class="text-lg font-semibold text-gray-900">Customer Details</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Name -->
            <div class="space-y-2">
              <div class="flex items-center text-sm font-medium text-gray-500">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Full Name
              </div>
              <div class="text-sm text-gray-900 font-medium"><%= @customer.full_name %></div>
            </div>

            <!-- Email -->
            <div class="space-y-2">
              <div class="flex items-center text-sm font-medium text-gray-500">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                </svg>
                Email Address
              </div>
              <div class="text-sm text-gray-900 font-medium">
                <a href="mailto:<%= @customer.email %>" class="text-primary hover:text-secondary transition-colors">
                  <%= @customer.email %>
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="space-y-2">
              <div class="flex items-center text-sm font-medium text-gray-500">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Phone Number
              </div>
              <div class="text-sm text-gray-900 font-medium">
                <% if @customer.phone.present? %>
                  <a href="tel:<%= @customer.phone %>" class="text-primary hover:text-secondary transition-colors">
                    <%= @customer.phone %>
                  </a>
                <% else %>
                  <span class="text-gray-400">Not provided</span>
                <% end %>
              </div>
            </div>

            <!-- Last Appointment -->
            <div class="space-y-2">
              <div class="flex items-center text-sm font-medium text-gray-500">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m0 0h4a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V9a2 2 0 012-2h4z"/>
                </svg>
                Last Appointment
              </div>
              <div class="text-sm text-gray-900 font-medium">
                <% if @customer.last_appointment %>
                  <%= @customer.last_appointment.strftime("%B %d, %Y at %I:%M %p") %>
                <% else %>
                  <span class="text-gray-400">No appointments yet</span>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Address (full width) -->
          <% if @customer.address.present? %>
            <div class="mt-6 pt-6 border-t border-gray-200">
              <div class="space-y-2">
                <div class="flex items-center text-sm font-medium text-gray-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  Address
                </div>
                <div class="text-sm text-gray-900 font-medium"><%= @customer.address %></div>
              </div>
            </div>
          <% end %>

          <!-- Notes (full width) -->
          <% if @customer.notes.present? %>
            <div class="mt-6 pt-6 border-t border-gray-200">
              <div class="space-y-2">
                <div class="flex items-center text-sm font-medium text-gray-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  Notes
                </div>
                <div class="text-sm text-gray-900 bg-gray-50 rounded-lg p-3"><%= @customer.notes %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Activity Summary Sidebar -->
    <div class="space-y-6">
      <!-- Quick Stats -->
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-900">Activity Summary</h3>
        </div>
        <div class="p-4 space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div class="text-center p-3 bg-light rounded-lg border border-primary/30">
              <div class="text-2xl font-bold text-primary"><%= @customer.bookings.count %></div>
              <div class="text-xs text-blue-800 font-medium">Bookings</div>
            </div>
            <div class="text-center p-3 bg-green-50 rounded-lg border border-green-200">
              <div class="text-2xl font-bold text-success"><%= @customer.orders.count %></div>
              <div class="text-xs text-green-800 font-medium">Orders</div>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="text-center p-3 bg-purple-50 rounded-lg border border-purple-200">
              <div class="text-2xl font-bold text-purple-600"><%= @customer.invoices.count %></div>
              <div class="text-xs text-purple-800 font-medium">Invoices</div>
            </div>
            <div class="text-center p-3 bg-amber-50 rounded-lg border border-amber-200">
              <div class="text-2xl font-bold text-amber-600"><%= @customer.payments.count %></div>
              <div class="text-xs text-amber-800 font-medium">Payments</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Customer Analytics -->
      <% if @clv.present? %>
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
            <h3 class="text-lg font-semibold text-gray-900">Analytics Insights</h3>
          </div>
          <div class="p-4 space-y-4">
            <!-- Customer Lifetime Value -->
            <div class="p-3 bg-green-50 rounded-lg border border-green-200">
              <div class="text-xs text-green-700 font-medium mb-1">Customer Lifetime Value</div>
              <div class="text-xl font-bold text-green-600"><%= number_to_currency(@clv[:total_value] || 0) %></div>
              <div class="text-xs text-green-600 mt-1">Predicted: <%= number_to_currency(@clv[:predicted_future_value] || 0) %></div>
            </div>

            <!-- Churn Risk -->
            <div class="p-3 rounded-lg border <%= @churn_probability.to_i > 70 ? 'bg-red-50 border-red-200' : @churn_probability.to_i > 40 ? 'bg-yellow-50 border-yellow-200' : 'bg-green-50 border-green-200' %>">
              <div class="text-xs font-medium mb-1 <%= @churn_probability.to_i > 70 ? 'text-red-700' : @churn_probability.to_i > 40 ? 'text-yellow-700' : 'text-green-700' %>">Churn Risk</div>
              <div class="text-xl font-bold <%= @churn_probability.to_i > 70 ? 'text-red-600' : @churn_probability.to_i > 40 ? 'text-yellow-600' : 'text-green-600' %>">
                <%= number_to_percentage(@churn_probability || 0, precision: 0) %>
              </div>
              <div class="text-xs mt-1 <%= @churn_probability.to_i > 70 ? 'text-red-600' : @churn_probability.to_i > 40 ? 'text-yellow-600' : 'text-green-600' %>">
                <% if @churn_probability.to_i > 70 %>
                  High risk - needs attention
                <% elsif @churn_probability.to_i > 40 %>
                  Moderate risk
                <% else %>
                  Low risk - loyal customer
                <% end %>
              </div>
            </div>

            <!-- Risk Factors -->
            <% if @risk_factors.present? && @risk_factors.any? %>
              <div class="p-3 bg-yellow-50 rounded-lg border border-yellow-200">
                <div class="text-xs text-yellow-700 font-medium mb-2">Risk Factors</div>
                <ul class="space-y-1">
                  <% @risk_factors.first(3).each do |factor| %>
                    <li class="text-xs text-yellow-800 flex items-start">
                      <svg class="w-3 h-3 mr-1 mt-0.5 flex-shrink-0 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                      </svg>
                      <%= factor %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Activity Sections -->
  <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Bookings -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-semibold text-gray-900">Recent Bookings</h3>
      </div>
      <div class="p-6">
        <% if @customer.bookings.any? %>
          <div class="space-y-3">
            <% @customer.bookings.order(start_time: :desc).limit(5).each do |booking| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-primary rounded-full"></div>
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= booking.local_start_time.strftime("%b %d, %Y") %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= booking.local_start_time.strftime("%I:%M %p") %>
                    </div>
                  </div>
                </div>
                <%= link_to business_manager_booking_path(booking),
                      class: "text-primary hover:text-secondary text-sm font-medium transition-colors" do %>
                  View →
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m0 0h4a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V9a2 2 0 012-2h4z"/>
            </svg>
            <p class="text-gray-500 text-sm">No bookings found</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Orders -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-semibold text-gray-900">Recent Orders</h3>
      </div>
      <div class="p-6">
        <% if @customer.orders.any? %>
          <div class="space-y-3">
            <% @customer.orders.order(created_at: :desc).limit(5).each do |order| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-success rounded-full"></div>
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      Order #<%= order.id %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= order.created_at.strftime("%b %d, %Y") %>
                    </div>
                  </div>
                </div>
                <%= link_to business_manager_order_path(order),
                      class: "text-success hover:text-success text-sm font-medium transition-colors" do %>
                  View →
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
            <p class="text-gray-500 text-sm">No orders found</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Invoices -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-semibold text-gray-900">Recent Invoices</h3>
      </div>
      <div class="p-6">
        <% if @customer.invoices.any? %>
          <div class="space-y-3">
            <% @customer.invoices.order(created_at: :desc).limit(5).each do |invoice| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= invoice.invoice_number || "Invoice ##{invoice.id}" %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= invoice.created_at.strftime("%b %d, %Y") %>
                    </div>
                  </div>
                </div>
                <%= link_to business_manager_invoice_path(invoice),
                      class: "text-purple-600 hover:text-purple-800 text-sm font-medium transition-colors" do %>
                  View →
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <p class="text-gray-500 text-sm">No invoices found</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Payments -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-semibold text-gray-900">Recent Payments</h3>
      </div>
      <div class="p-6">
        <% if @customer.payments.any? %>
          <div class="space-y-3">
            <% @customer.payments.order(created_at: :desc).limit(5).each do |payment| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <div class="flex items-center gap-3">
                  <div class="w-2 h-2 bg-amber-500 rounded-full"></div>
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      Payment #<%= payment.id %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= payment.created_at.strftime("%b %d, %Y") %>
                    </div>
                  </div>
                </div>
                <%= link_to business_manager_payment_path(payment),
                      class: "text-amber-600 hover:text-amber-800 text-sm font-medium transition-colors" do %>
                  View →
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <p class="text-gray-500 text-sm">No payments found</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 