<%# app/views/business_manager/customers/index.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-xl sm:text-2xl font-bold">Customer Management</h1>
          <p class="text-sm text-gray-600 mt-1">Manage customer information and contact details</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-2">
          <%= link_to business_manager_csv_index_path,
                class: "inline-flex items-center justify-center px-4 py-2 border border-emerald-300 text-sm font-medium rounded-lg text-emerald-700 bg-white hover:bg-emerald-50 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
            </svg>
            Import/Export
          <% end %>
          <% if policy(TenantCustomer).create? %>
            <%= link_to new_business_manager_customer_path,
                  class: "inline-flex items-center justify-center px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              New Customer
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <% if @customers.any? %>
        <!-- Mobile Card Layout (hidden on lg+ screens) -->
        <div class="lg:hidden space-y-4">
          <% @customers.each do |customer| %>
            <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
              <div class="p-4">
                <div class="flex items-start justify-between mb-3">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-3 mb-2">
                      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-semibold text-sm">
                        <%= customer.full_name.first.upcase %>
                      </div>
                      <div>
                        <h3 class="text-base font-semibold text-gray-900 truncate">
                          <%= link_to customer.full_name, business_manager_customer_path(customer), class: "text-blue-600 hover:text-blue-800 transition-colors" %>
                        </h3>
                        <% if User.find_by(email: customer.email) %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                            Registered User
                          </span>
                        <% else %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                            Guest Customer
                          </span>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="space-y-1 text-sm">
                      <div class="flex items-center text-gray-600">
                        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                        </svg>
                        <%= customer.email %>
                      </div>
                      <% if customer.phone.present? %>
                        <div class="flex items-center text-gray-600">
                          <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                          </svg>
                          <%= customer.phone %>
                        </div>
                      <% end %>
                      <div class="flex items-center text-gray-500">
                        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        Last visit: <%= customer.last_appointment&.strftime("%b %d, %Y") || 'Never' %>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center gap-2 pt-3 border-t border-gray-100">
                  <% if policy(customer).show? %>
                    <%= link_to business_manager_customer_path(customer),
                          class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-md transition-colors" do %>
                      View
                    <% end %>
                  <% end %>
                  <% if policy(customer).edit? %>
                    <%= link_to edit_business_manager_customer_path(customer),
                          class: "flex-1 inline-flex items-center justify-center px-3 py-2 text-xs font-medium text-amber-600 bg-amber-50 hover:bg-amber-100 rounded-md transition-colors" do %>
                      Edit
                    <% end %>
                  <% end %>
                  <% if policy(customer).destroy? %>
                    <%= button_to business_manager_customer_path(customer),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete the customer '#{customer.full_name}'?" },
                          class: "inline-flex items-center justify-center px-3 py-2 text-xs font-medium text-red-600 bg-red-50 hover:bg-red-100 rounded-md transition-colors border-0" do %>
                      Delete
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Desktop Table Layout (hidden on mobile) -->
        <div class="hidden lg:block">
          <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200">
              <thead class="bg-gray-100">
                <tr>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Customer</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Contact</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Last Visit</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Account Type</th>
                  <th class="px-6 py-3 border-b border-gray-200"></th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @customers.each do |customer| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-semibold text-sm mr-3">
                          <%= customer.full_name.first.upcase %>
                        </div>
                        <div class="text-sm font-semibold">
                          <%= link_to customer.full_name, business_manager_customer_path(customer), class: "text-blue-600 hover:text-blue-800 transition-colors" %>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="space-y-1">
                        <div class="text-sm text-gray-900"><%= customer.email %></div>
                        <% if customer.phone.present? %>
                          <div class="text-sm text-gray-500"><%= customer.phone %></div>
                        <% end %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                      <%= customer.last_appointment&.strftime("%b %d, %Y") || '-' %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if User.find_by(email: customer.email) %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                          Registered User
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                          Guest Customer
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <div class="flex items-center justify-end space-x-2">
                        <% if policy(customer).show? %>
                          <%= link_to 'View', business_manager_customer_path(customer),
                                class: "text-indigo-600 hover:text-indigo-900 transition-colors" %>
                        <% end %>
                        <% if policy(customer).edit? %>
                          <%= link_to 'Edit', edit_business_manager_customer_path(customer),
                                class: "text-indigo-600 hover:text-indigo-900 transition-colors" %>
                        <% end %>
                        <% if policy(customer).destroy? %>
                          <%= button_to 'Delete',
                                business_manager_customer_path(customer),
                                method: :delete,
                                data: { confirm: "Are you sure you want to delete the customer '#{customer.full_name}'?" },
                                class: 'text-red-600 hover:text-red-900 transition-colors bg-transparent border-0 p-0' %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Pagination -->
        <% if respond_to?(:paginate) && @customers.respond_to?(:current_page) && @customers.total_pages > 1 %>
          <div class="flex justify-center mt-8">
            <%= paginate @customers %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No customers yet</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by adding your first customer.</p>
          <div class="mt-6">
            <% if policy(TenantCustomer).create? %>
              <%= link_to new_business_manager_customer_path,
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Add Customer
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
