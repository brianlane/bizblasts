<%# app/views/business_manager/staff_members/edit.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-xl sm:text-2xl font-bold">Editing Staff Member</h1>
          <p class="text-sm text-gray-600 mt-1"><%= @staff_member.name || @staff_member.user&.email %></p>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <%= render 'form', staff_member: @staff_member %>
    </div>

    <div class="border-t border-gray-200 px-4 py-4 sm:px-6">
      <div class="flex flex-col sm:flex-row gap-2">
        <%= link_to 'View Staff Member', business_manager_staff_member_path(@staff_member), 
              class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-blue-600 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors" %>
        <%= link_to 'Back to Staff', business_manager_staff_members_path, 
              class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-600 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors" %>
      </div>
    </div>
  </div>
</div>
