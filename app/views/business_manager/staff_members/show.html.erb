<%# app/views/business_manager/staff_members/show.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <h3 class="text-lg sm:text-xl leading-6 font-medium text-gray-900">
          Staff Member: <%= @staff_member.name || @staff_member.user&.email %>
        </h3>
        <div class="flex flex-col sm:flex-row gap-2">
          <%= link_to 'Edit', edit_business_manager_staff_member_path(@staff_member), 
                class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-lg transition-colors" %>
          <%= link_to 'Manage Availability', manage_availability_business_manager_staff_member_path(@staff_member), 
                class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-success bg-green-50 hover:bg-green-100 rounded-lg transition-colors" %>
          <%= link_to 'Back to Staff', business_manager_staff_members_path, 
                class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-primary bg-light hover:bg-light rounded-lg transition-colors" %>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
      <dl class="sm:divide-y sm:divide-gray-200">
        <% if @staff_member.photo.attached? %>
          <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Photo</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= image_tag rails_public_blob_url(@staff_member.photo.variant(:medium)), class: "h-24 w-24 rounded-full object-cover" %>
            </dd>
          </div>
        <% end %>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @staff_member.name %></dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @staff_member.user&.email %></dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Phone</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @staff_member.phone %></dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Position</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @staff_member.position %></dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Active</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= boolean_status_tag @staff_member.active %></dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Booked Hours (This Month)</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @staff_member.hours_booked_this_month.round(2) %></dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Completed Hours (This Month)</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @staff_member.hours_completed_this_month.round(2) %></dd>
        </div>
        
        <% if @staff_metrics.present? %>
          <!-- Performance Analytics Section -->
          <div class="py-4 sm:py-5 sm:px-6 bg-gradient-to-r from-indigo-50 to-indigo-100">
            <h4 class="text-sm font-semibold text-indigo-900 mb-4 flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              Performance Analytics
            </h4>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
              <div class="bg-white p-3 rounded-lg shadow-sm border border-indigo-200">
                <div class="text-xs text-gray-500 font-medium">Total Bookings</div>
                <div class="text-xl font-bold text-indigo-600"><%= @staff_metrics[:bookings] || 0 %></div>
              </div>
              <div class="bg-white p-3 rounded-lg shadow-sm border border-green-200">
                <div class="text-xs text-gray-500 font-medium">Total Revenue</div>
                <div class="text-xl font-bold text-green-600"><%= number_to_currency(@staff_metrics[:revenue] || 0) %></div>
              </div>
              <div class="bg-white p-3 rounded-lg shadow-sm border border-blue-200">
                <div class="text-xs text-gray-500 font-medium">Utilization Rate</div>
                <div class="text-xl font-bold <%= (@staff_metrics[:utilization] || 0) >= 70 ? 'text-green-600' : (@staff_metrics[:utilization] || 0) >= 50 ? 'text-yellow-600' : 'text-red-600' %>">
                  <%= number_to_percentage(@staff_metrics[:utilization] || 0, precision: 1) %>
                </div>
              </div>
              <div class="bg-white p-3 rounded-lg shadow-sm border border-purple-200">
                <div class="text-xs text-gray-500 font-medium">Completion Rate</div>
                <div class="text-xl font-bold <%= (@staff_metrics[:completion_rate] || 0) >= 90 ? 'text-green-600' : (@staff_metrics[:completion_rate] || 0) >= 75 ? 'text-yellow-600' : 'text-red-600' %>">
                  <%= number_to_percentage(@staff_metrics[:completion_rate] || 0, precision: 1) %>
                </div>
              </div>
              <div class="bg-white p-3 rounded-lg shadow-sm border border-orange-200">
                <div class="text-xs text-gray-500 font-medium">Cancellation Rate</div>
                <div class="text-xl font-bold <%= (@staff_metrics[:cancellation_rate] || 0) <= 5 ? 'text-green-600' : (@staff_metrics[:cancellation_rate] || 0) <= 10 ? 'text-yellow-600' : 'text-red-600' %>">
                  <%= number_to_percentage(@staff_metrics[:cancellation_rate] || 0, precision: 1) %>
                </div>
              </div>
              <div class="bg-white p-3 rounded-lg shadow-sm border border-red-200">
                <div class="text-xs text-gray-500 font-medium">No-Show Rate</div>
                <div class="text-xl font-bold <%= (@staff_metrics[:no_show_rate] || 0) <= 5 ? 'text-green-600' : (@staff_metrics[:no_show_rate] || 0) <= 10 ? 'text-yellow-600' : 'text-red-600' %>">
                  <%= number_to_percentage(@staff_metrics[:no_show_rate] || 0, precision: 1) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Bio</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= simple_format(@staff_member.bio) %></dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Assigned Services</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @staff_member.services.any? %>
              <ul class="list-disc list-inside">
                <% @staff_member.services.each do |service| %>
                  <li><%= link_to service.name, business_manager_service_path(service), class: "text-primary hover:text-secondary" %></li>
                <% end %>
              </ul>
            <% else %>
              None assigned
            <% end %>
          </dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Availability</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @staff_member.availability.is_a?(Hash) && @staff_member.availability.present? %>
              <div class="mb-2">
                <strong>Weekly Schedule:</strong>
                <ul class="list-disc list-inside mt-1">
                  <% %w[monday tuesday wednesday thursday friday saturday sunday].each do |day| %>
                    <% slots = @staff_member.availability[day] %>
                    <% if slots.present? && slots.any? %>
                      <li>
                        <span class="capitalize"><%= day %>:</span>
                        <% slots.each_with_index do |slot, i| %>
                          <%= i > 0 ? ', ' : '' %><%= slot['start'] %> - <%= slot['end'] %>
                        <% end %>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
              
              <% if @staff_member.availability['exceptions'].present? && @staff_member.availability['exceptions'].any? %>
                <div>
                  <strong>Special Dates:</strong>
                  <ul class="list-disc list-inside mt-1">
                    <% @staff_member.availability['exceptions'].each do |date, slots| %>
                      <li>
                        <span><%= date %>:</span>
                        <% if slots.present? && slots.any? %>
                          <% slots.each_with_index do |slot, i| %>
                            <%= i > 0 ? ', ' : '' %><%= slot['start'] %> - <%= slot['end'] %>
                          <% end %>
                        <% else %>
                          Not available
                        <% end %>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              
              <div class="mt-3">
                <%= link_to 'Manage Availability', manage_availability_business_manager_staff_member_path(@staff_member), class: "text-primary hover:text-secondary" %>
              </div>
            <% else %>
              <p>No availability set.</p>
              <div class="mt-2">
                <%= link_to 'Set Availability', manage_availability_business_manager_staff_member_path(@staff_member), class: "text-primary hover:text-secondary" %>
              </div>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>
