<%# app/views/business_manager/bookings/show.html.erb %>
<div class="container mx-auto px-4 py-8">
  <% if flash[:notice] %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= flash[:notice] %></span>
    </div>
  <% end %>
  
  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= flash[:alert] %></span>
    </div>
  <% end %>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
      <h1 class="text-xl font-bold">Booking #<%= @booking.id %></h1>
      <div class="flex space-x-4">
        <%= link_to business_manager_bookings_path, class: "text-blue-600 hover:text-blue-800" do %>
          ‚Üê Back to Bookings
        <% end %>
      </div>
    </div>
    
    <!-- Status Banner -->
    <% status_banner_colors = {
      'pending' => 'bg-yellow-50 border-yellow-200 text-yellow-800',
      'confirmed' => 'bg-green-50 border-green-200 text-green-800',
      'cancelled' => 'bg-red-50 border-red-200 text-red-800',
      'completed' => 'bg-blue-50 border-blue-200 text-blue-800',
      'no_show' => 'bg-gray-50 border-gray-200 text-gray-800'
    } %>
    
    <div class="<%= status_banner_colors[@booking.status] %> px-4 py-3 border-t border-b">
      <div class="flex">
        <div class="flex-shrink-0">
          <% if @booking.status == 'pending' %>
            <svg class="h-5 w-5 text-yellow-400 booking-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
          <% elsif @booking.status == 'confirmed' %>
            <svg class="h-5 w-5 text-green-400 booking-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          <% elsif @booking.status == 'cancelled' %>
            <svg class="h-5 w-5 text-red-400 booking-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          <% elsif @booking.status == 'completed' %>
            <svg class="h-5 w-5 text-blue-400 booking-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium">
            Status: <%= @booking.status.capitalize %>
            <% if @booking.status == 'cancelled' && @booking.cancellation_reason.present? %>
              <span class="text-sm font-normal">(<%= @booking.cancellation_reason %>)</span>
            <% end %>
          </h3>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <%= render 'shared/booking_details', booking: @booking, show_actions: true, admin_mode: false %>
      
      <!-- Action Buttons -->
      <div class="mt-8 flex flex-wrap gap-3">
        <% if @booking.status == 'pending' %>
          <%= form_with url: confirm_business_manager_booking_path(@booking), method: :patch, class: "inline confirm-booking-form" do %>
            <%= submit_tag "Confirm Booking", 
                  class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
          <% end %>
        <% end %>
        
        <% if !%w[cancelled completed].include?(@booking.status) %>
          <%= link_to "Cancel Booking", "#", 
                class: "cancel-booking-link inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", 
                data: { booking_id: @booking.id } %>
        <% end %>
        
        <% if !%w[cancelled completed].include?(@booking.status) %>
          <%= link_to "Reschedule", reschedule_business_manager_booking_path(@booking), 
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
        
        <%= link_to "Edit Notes", edit_business_manager_booking_path(@booking), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>
</div>

<!-- Cancel Booking Modal -->
<div id="cancel-booking-modal" class="fixed inset-0 z-10 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <%= form_with url: "#", id: "cancel-booking-form", method: :patch do |f| %>
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
              <svg class="h-6 w-6 text-red-600 modal-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
              <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                Cancel Booking
              </h3>
              <div class="mt-2">
                <p class="text-sm text-gray-500">
                  Are you sure you want to cancel this booking? This action cannot be undone.
                </p>
                <div class="mt-4">
                  <%= f.label :cancellation_reason, "Reason for cancellation:", class: "block text-sm font-medium text-gray-700" %>
                  <%= f.text_area :cancellation_reason, rows: 3, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder: "Provide a reason for cancellation..." %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <%= f.submit "Cancel Booking", class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm" %>
          <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" id="cancel-modal-close">
            Close
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('cancel-booking-modal');
    const form = document.getElementById('cancel-booking-form');
    const closeBtn = document.getElementById('cancel-modal-close');
    
    // Open modal when cancel link is clicked
    document.querySelectorAll('.cancel-booking-link').forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const bookingId = this.dataset.bookingId;
        form.action = `/manage/bookings/${bookingId}/cancel`;
        modal.classList.remove('hidden');
      });
    });
    
    // Close modal when close button is clicked
    closeBtn.addEventListener('click', function() {
      modal.classList.add('hidden');
    });
    
    // Close modal when clicking outside of it
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        modal.classList.add('hidden');
      }
    });
    
    // Confirm booking form handling
    const confirmForms = document.querySelectorAll('.confirm-booking-form');
    confirmForms.forEach(form => {
      form.addEventListener('submit', function(e) {
        e.preventDefault(); // Stop the form from submitting immediately
        
        if (confirm('Are you sure you want to confirm this booking?')) {
          // If user confirms, submit the form
          form.submit();
        }
        // Otherwise do nothing, which cancels the submission
      });
    });
  });
</script> 