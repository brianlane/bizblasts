<div class="container mx-auto px-4 py-6">
  <div class="mb-6">
    <%= link_to business_manager_job_form_submissions_path, class: "inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Submissions
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
        <!-- Header -->
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
          <div class="flex justify-between items-start">
            <div>
              <h1 class="text-xl font-bold text-gray-900 dark:text-white"><%= @template&.name || 'Form Submission' %></h1>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                Submitted <%= time_ago_in_words(@job_form_submission.submitted_at || @job_form_submission.created_at) %> ago
              </p>
            </div>
            <% status_classes = {
              'draft' => 'bg-gray-100 text-gray-800',
              'submitted' => 'bg-yellow-100 text-yellow-800',
              'approved' => 'bg-green-100 text-green-800',
              'requires_revision' => 'bg-red-100 text-red-800'
            } %>
            <span class="px-3 py-1 text-sm font-semibold rounded-full <%= status_classes[@job_form_submission.status] || 'bg-gray-100 text-gray-800' %>">
              <%= @job_form_submission.status.humanize %>
            </span>
          </div>
        </div>

        <!-- Form Responses -->
        <div class="px-6 py-4">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Responses</h2>

          <% if @responses_with_labels.any? %>
            <div class="space-y-6">
              <% @responses_with_labels.each do |response| %>
                <div class="border-b border-gray-200 dark:border-gray-700 pb-4 last:border-0">
                  <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">
                    <%= response[:label] %>
                    <% if response[:required] %>
                      <span class="text-red-500">*</span>
                    <% end %>
                  </p>
                  <div class="text-gray-900 dark:text-white">
                    <% case response[:type] %>
                    <% when 'checkbox' %>
                      <% if response[:value] == true || response[:value] == 'true' %>
                        <span class="inline-flex items-center text-green-600">
                          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          Checked
                        </span>
                      <% else %>
                        <span class="inline-flex items-center text-gray-400">
                          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                          </svg>
                          Not checked
                        </span>
                      <% end %>

                    <% when 'photo' %>
                      <% photo_url = resolve_photo_value(response[:value], @job_form_submission, response[:field_id]) %>
                      <% if photo_url.present? %>
                        <% if photo_url.is_a?(Array) %>
                          <div class="flex flex-wrap gap-2 mt-2">
                            <% photo_url.each do |url| %>
                              <%= link_to url, target: "_blank" do %>
                                <img src="<%= url %>" alt="Photo" class="h-24 w-24 object-cover rounded-lg border">
                              <% end %>
                            <% end %>
                          </div>
                        <% else %>
                          <%= link_to photo_url, target: "_blank" do %>
                            <img src="<%= photo_url %>" alt="Photo" class="h-32 object-cover rounded-lg border">
                          <% end %>
                        <% end %>
                      <% else %>
                        <span class="text-gray-400 italic">No photo uploaded</span>
                      <% end %>

                    <% when 'signature' %>
                      <% if response[:value].present? %>
                        <div class="border border-gray-200 dark:border-gray-600 rounded-lg p-2 inline-block bg-white">
                          <img src="<%= response[:value] %>" alt="Signature" class="h-16">
                        </div>
                      <% else %>
                        <span class="text-gray-400 italic">No signature captured</span>
                      <% end %>

                    <% when 'textarea' %>
                      <div class="whitespace-pre-wrap bg-gray-50 dark:bg-gray-700 rounded-lg p-3 text-sm">
                        <%= response[:value].presence || '-' %>
                      </div>

                    <% else %>
                      <p><%= response[:value].presence || '-' %></p>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 dark:text-gray-400 text-center py-8">No responses recorded.</p>
          <% end %>
        </div>

        <!-- Revision Notes (if any) -->
        <% if @job_form_submission.notes.present? %>
          <div class="px-6 py-4 bg-yellow-50 dark:bg-yellow-900 border-t border-yellow-200 dark:border-yellow-700">
            <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200 mb-2">Revision Notes</h3>
            <p class="text-sm text-yellow-700 dark:text-yellow-300"><%= @job_form_submission.notes %></p>
          </div>
        <% end %>

        <!-- Actions -->
        <% if @job_form_submission.status == 'submitted' %>
          <div class="px-6 py-4 bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
            <div class="flex space-x-3">
              <%= button_to approve_business_manager_job_form_submission_path(@job_form_submission), method: :patch, class: "flex-1 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-center" do %>
                <span class="inline-flex items-center justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Approve
                </span>
              <% end %>
              <button type="button" onclick="document.getElementById('revision-modal').classList.remove('hidden')" class="flex-1 px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition text-center cursor-pointer">
                <span class="inline-flex items-center justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Request Revision
                </span>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Submission Info -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Submission Details</h3>
        </div>
        <div class="px-6 py-4 space-y-4">
          <div>
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400">Submitted By</p>
            <p class="text-sm text-gray-900 dark:text-white">
              <%= @job_form_submission.submitted_by_user&.full_name || @job_form_submission.staff_member&.user&.full_name || 'Unknown' %>
            </p>
          </div>
          <div>
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400">Submitted At</p>
            <p class="text-sm text-gray-900 dark:text-white">
              <%= (@job_form_submission.submitted_at || @job_form_submission.created_at)&.strftime('%B %d, %Y at %I:%M %p') %>
            </p>
          </div>
          <% if @job_form_submission.approved_at %>
            <div>
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400">
                <%= @job_form_submission.requires_revision? ? 'Revision Requested At' : 'Approved At' %>
              </p>
              <p class="text-sm text-gray-900 dark:text-white">
                <%= @job_form_submission.approved_at.strftime('%B %d, %Y at %I:%M %p') %>
              </p>
            </div>
          <% end %>
          <% if @job_form_submission.approved_by_user %>
            <div>
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400">
                <%= @job_form_submission.requires_revision? ? 'Revision Requested By' : 'Approved By' %>
              </p>
              <p class="text-sm text-gray-900 dark:text-white">
                <%= @job_form_submission.approved_by_user.full_name %>
              </p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Booking Info -->
      <% if @booking %>
        <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Related Booking</h3>
          </div>
          <div class="px-6 py-4 space-y-4">
            <div>
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400">Service</p>
              <p class="text-sm text-gray-900 dark:text-white"><%= @booking.service&.name %></p>
            </div>
            <div>
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400">Customer</p>
              <p class="text-sm text-gray-900 dark:text-white"><%= @booking.tenant_customer&.full_name %></p>
            </div>
            <div>
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400">Date & Time</p>
              <p class="text-sm text-gray-900 dark:text-white"><%= @booking.start_time&.strftime('%B %d, %Y at %I:%M %p') %></p>
            </div>
            <div class="pt-2">
              <%= link_to "View Booking", business_manager_booking_path(@booking), class: "text-sm text-blue-600 hover:text-blue-800" %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Template Info -->
      <% if @template %>
        <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Form Template</h3>
          </div>
          <div class="px-6 py-4 space-y-4">
            <div>
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400">Template Name</p>
              <p class="text-sm text-gray-900 dark:text-white"><%= @template.name %></p>
            </div>
            <div>
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400">Type</p>
              <p class="text-sm text-gray-900 dark:text-white"><%= @template.form_type.humanize %></p>
            </div>
            <div class="pt-2">
              <%= link_to "View Template", business_manager_job_form_template_path(@template), class: "text-sm text-blue-600 hover:text-blue-800" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Revision Modal -->
<div id="revision-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white dark:bg-gray-800">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white text-center">Request Revision</h3>
      <%= form_with url: request_revision_business_manager_job_form_submission_path(@job_form_submission), method: :patch, local: true do |f| %>
        <div class="mt-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Notes for revision</label>
          <textarea name="notes" rows="4" class="block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Explain what needs to be revised..."></textarea>
        </div>
        <div class="mt-4 flex space-x-3">
          <button type="button" onclick="document.getElementById('revision-modal').classList.add('hidden')" class="flex-1 px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition cursor-pointer">
            Cancel
          </button>
          <%= f.submit "Request Revision", class: "flex-1 px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
