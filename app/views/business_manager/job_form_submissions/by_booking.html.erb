<div class="container mx-auto px-4 py-6">
  <div class="mb-6">
    <%= link_to business_manager_booking_path(@booking), class: "inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Booking
    <% end %>
  </div>

  <!-- Booking Header -->
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden mb-6">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-xl font-bold text-gray-900 dark:text-white">Form Submissions for Booking</h1>
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
            <%= @booking.service&.name %> - <%= @booking.tenant_customer&.full_name %>
          </p>
        </div>
        <div class="text-right">
          <p class="text-sm font-medium text-gray-900 dark:text-white">
            <%= @booking.start_time&.strftime('%B %d, %Y') %>
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            <%= @booking.start_time&.strftime('%I:%M %p') %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Submissions List -->
  <% if @job_form_submissions.any? %>
    <div class="space-y-4">
      <% @job_form_submissions.each do |submission| %>
        <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                  <%= link_to submission.job_form_template&.name || 'Unknown Template', business_manager_job_form_submission_path(submission), class: "hover:text-blue-600" %>
                </h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                  <%= submission.job_form_template&.form_type&.humanize %> &bull;
                  Submitted by <%= submission.submitted_by_user&.full_name || submission.staff_member&.user&.full_name || 'Unknown' %>
                </p>
              </div>
              <% status_classes = {
                'draft' => 'bg-gray-100 text-gray-800',
                'submitted' => 'bg-yellow-100 text-yellow-800',
                'approved' => 'bg-green-100 text-green-800',
                'requires_revision' => 'bg-red-100 text-red-800'
              } %>
              <span class="px-3 py-1 text-sm font-semibold rounded-full <%= status_classes[submission.status] || 'bg-gray-100 text-gray-800' %>">
                <%= submission.status.humanize %>
              </span>
            </div>

            <!-- Quick Response Preview -->
            <% if submission.responses.present? && submission.job_form_template %>
              <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                  <% submission.responses_with_labels.first(4).each do |response| %>
                    <div>
                      <p class="text-xs font-medium text-gray-500 dark:text-gray-400"><%= response[:label] %></p>
                      <p class="text-sm text-gray-900 dark:text-white truncate">
                        <% if response[:type] == 'checkbox' %>
                          <%= response[:value] ? '✓ Yes' : '✗ No' %>
                        <% elsif response[:type] == 'photo' %>
                          <% photo_url = resolve_photo_value(response[:value], submission, response[:field_id]) %>
                          <% if photo_url.present? %>
                            <span class="text-blue-600"><%= photo_url.is_a?(Array) ? "#{photo_url.length} photos" : '1 photo' %></span>
                          <% else %>
                            <span class="text-gray-400">-</span>
                          <% end %>
                        <% else %>
                          <%= response[:value].to_s.truncate(30).presence || '-' %>
                        <% end %>
                      </p>
                    </div>
                  <% end %>
                </div>
                <% if submission.responses.length > 4 %>
                  <p class="mt-2 text-xs text-gray-500">+<%= submission.responses.length - 4 %> more fields</p>
                <% end %>
              </div>
            <% end %>

            <div class="mt-4 flex justify-between items-center">
              <p class="text-xs text-gray-500 dark:text-gray-400">
                <%= time_ago_in_words(submission.submitted_at || submission.created_at) %> ago
              </p>
              <div class="flex space-x-2">
                <%= link_to business_manager_job_form_submission_path(submission), class: "px-3 py-1.5 text-sm bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" do %>
                  View Details
                <% end %>
                <% if submission.status == 'submitted' %>
                  <%= button_to approve_business_manager_job_form_submission_path(submission), method: :patch, class: "px-3 py-1.5 text-sm bg-green-600 text-white rounded-lg hover:bg-green-700 transition" do %>
                    Approve
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-lg shadow">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No form submissions</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">No forms have been submitted for this booking yet.</p>
    </div>
  <% end %>
</div>
