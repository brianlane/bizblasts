<%# app/views/business_manager/job_form_templates/index.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
          <h1 class="text-xl sm:text-2xl font-bold">Job Forms</h1>
          <p class="text-sm text-gray-600 mt-1">Create forms and checklists for your team to complete during jobs</p>
    </div>
        <div class="flex flex-col sm:flex-row gap-2">
          <%= link_to new_business_manager_job_form_template_path, 
                class: "inline-flex items-center justify-center px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white font-medium rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      New Template
    <% end %>
        </div>
      </div>
  </div>

  <!-- Filter Tabs -->
    <div class="border-t border-gray-200 px-4 sm:px-6">
    <nav class="-mb-px flex space-x-8">
      <%= link_to "All", business_manager_job_form_templates_path,
          class: "#{params[:active].blank? && params[:form_type].blank? ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
      <%= link_to "Active", business_manager_job_form_templates_path(active: true),
          class: "#{params[:active] == 'true' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
      <%= link_to "Inactive", business_manager_job_form_templates_path(active: false),
          class: "#{params[:active] == 'false' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
    </nav>
  </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
  <% if @job_form_templates.any? %>
        <!-- Mobile Card Layout (hidden on lg+ screens) -->
        <div class="lg:hidden space-y-4">
          <% @job_form_templates.each do |template| %>
            <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
              <!-- Template Header -->
              <div class="p-4 pb-2">
                <div class="flex items-start justify-between mb-3">
                  <div class="flex-1 min-w-0">
                    <%= link_to template.name, business_manager_job_form_template_path(template), 
                          class: "text-lg font-medium text-blue-600 hover:text-blue-800 transition-colors block" %>
                    <% if template.description.present? %>
                      <div class="text-sm text-gray-600 mt-1">
                        <%= truncate(template.description, length: 80) %>
                      </div>
                    <% end %>
                  </div>
                </div>
                
                <!-- Status Tags -->
                <div class="flex flex-wrap gap-2 mb-3">
                  <% if template.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Inactive</span>
                  <% end %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= template.form_type.humanize %>
                  </span>
                </div>
              </div>
              
              <!-- Template Details -->
              <div class="px-4 pb-4">
                <div class="grid grid-cols-1 gap-3 mb-4 text-sm">
                  <!-- Fields & Services Row -->
                  <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <div>
                      <div class="text-xs text-gray-500 uppercase tracking-wider">Fields</div>
                      <div class="text-gray-900 font-medium">
                        <%= template.form_fields.length %> fields
                        <% if template.required_field_count > 0 %>
                          <span class="text-gray-400">(<%= template.required_field_count %> required)</span>
                        <% end %>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-xs text-gray-500 uppercase tracking-wider">Services</div>
                      <div class="text-gray-900 font-medium">
                        <%= template.services.count %> services
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex flex-wrap gap-2 pt-2 border-t border-gray-100">
                  <%= link_to edit_business_manager_job_form_template_path(template), 
                        class: "inline-flex items-center px-3 py-2 text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-md transition-colors" do %>
                    Edit
                  <% end %>
                  <%= button_to toggle_active_business_manager_job_form_template_path(template), 
                        method: :patch, 
                        class: "inline-flex items-center px-3 py-2 text-xs font-medium text-gray-600 bg-gray-50 hover:bg-gray-100 rounded-md transition-colors border-0" do %>
                    <%= template.active? ? 'Deactivate' : 'Activate' %>
                  <% end %>
                  <%= button_to duplicate_business_manager_job_form_template_path(template), 
                        method: :post, 
                        class: "inline-flex items-center px-3 py-2 text-xs font-medium text-gray-600 bg-gray-50 hover:bg-gray-100 rounded-md transition-colors border-0" do %>
                    Duplicate
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Desktop Table Layout (hidden on mobile) -->
        <div class="hidden lg:block">
          <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200">
              <thead class="bg-gray-100">
                <tr>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Name</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Type</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Fields</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Services</th>
                  <th class="px-6 py-3 border-b border-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 border-b border-gray-200"></th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @job_form_templates.each do |template| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div>
                          <div class="text-sm font-medium text-gray-900">
                            <%= link_to template.name, business_manager_job_form_template_path(template), class: "text-blue-600 hover:text-blue-800 font-medium transition-colors" %>
                          </div>
                          <% if template.description.present? %>
                            <div class="text-sm text-gray-500 truncate max-w-xs"><%= truncate(template.description, length: 50) %></div>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= template.form_type.humanize %>
                </span>
              </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= template.form_fields.length %> fields
                <% if template.required_field_count > 0 %>
                  <span class="text-gray-400">(<%= template.required_field_count %> required)</span>
                <% end %>
              </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= template.services.count %> services
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if template.active? %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Inactive</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end space-x-2">
                        <%= link_to 'Edit', edit_business_manager_job_form_template_path(template), 
                              class: "text-indigo-600 hover:text-indigo-900 transition-colors" %>
                        <%= button_to toggle_active_business_manager_job_form_template_path(template), 
                              method: :patch, 
                              class: "text-gray-600 hover:text-gray-900 transition-colors bg-transparent border-0 p-0",
                              title: template.active? ? 'Deactivate' : 'Activate' do %>
                    <% if template.active? %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                      </svg>
                    <% else %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    <% end %>
                  <% end %>
                        <%= button_to duplicate_business_manager_job_form_template_path(template), 
                              method: :post, 
                              class: "text-gray-600 hover:text-gray-900 transition-colors bg-transparent border-0 p-0",
                              title: 'Duplicate' do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
          </div>
    </div>

    <% if @job_form_templates.respond_to?(:total_pages) && @job_form_templates.total_pages > 1 %>
          <div class="flex justify-center mt-8">
        <%= paginate @job_form_templates %>
      </div>
    <% end %>
  <% else %>
        <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
      </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No job form templates</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a new form template for your team.</p>
      <div class="mt-6">
            <%= link_to new_business_manager_job_form_template_path, 
                  class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Template
        <% end %>
      </div>
    </div>
  <% end %>
    </div>
  </div>
</div>
