<%# app/views/business_manager/job_form_templates/show.html.erb %>
<div class="container mx-auto px-4 py-4 sm:py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="mb-4">
        <%= link_to business_manager_job_form_templates_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900 transition-colors" do %>
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Job Forms
        <% end %>
      </div>

      <!-- Header -->
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4">
        <div>
          <h1 class="text-xl sm:text-2xl font-bold text-gray-900"><%= @job_form_template.name %></h1>
          <% if @job_form_template.description.present? %>
            <p class="mt-1 text-sm text-gray-600"><%= @job_form_template.description %></p>
          <% end %>
          <div class="mt-2 flex items-center space-x-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= @job_form_template.form_type.humanize %>
            </span>
            <% if @job_form_template.active? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Inactive</span>
            <% end %>
          </div>
        </div>
        <div class="flex flex-wrap gap-2">
          <%= link_to preview_business_manager_job_form_template_path(@job_form_template), target: "_blank", class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm text-gray-700 hover:bg-gray-50 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            Preview
          <% end %>
          <%= link_to edit_business_manager_job_form_template_path(@job_form_template), class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit Template
          <% end %>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="border-t border-gray-200 px-4 py-4 sm:px-6 bg-gray-50">
      <div class="grid grid-cols-3 gap-4">
        <div>
          <p class="text-sm text-gray-500">Total Fields</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @job_form_template.form_fields.length %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Required Fields</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @job_form_template.required_field_count %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Submissions</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @submission_count %></p>
        </div>
      </div>
    </div>

    <!-- Form Fields Preview -->
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Form Fields</h2>

      <% if @job_form_template.form_fields.any? %>
        <div class="space-y-4">
          <% @job_form_template.form_fields.sort_by { |f| f['position'] || 0 }.each do |field| %>
            <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-medium text-gray-900">
                    <%= field['label'] %>
                    <% if field['required'] %>
                      <span class="text-red-500">*</span>
                    <% end %>
                  </p>
                  <% if field['help_text'].present? %>
                    <p class="text-sm text-gray-500 mt-1"><%= field['help_text'] %></p>
                  <% end %>
                </div>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= field['type'].humanize %>
                </span>
              </div>

              <% if field['type'] == 'select' && field['options'].present? %>
                <div class="mt-2">
                  <p class="text-sm text-gray-500">Options:</p>
                  <div class="flex flex-wrap gap-1 mt-1">
                    <% field['options'].each do |option| %>
                      <span class="px-2 py-0.5 text-xs bg-gray-200 text-gray-700 rounded"><%= option %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No fields defined yet. <%= link_to "Edit this template", edit_business_manager_job_form_template_path(@job_form_template), class: "text-blue-600 hover:text-blue-800" %> to add fields.</p>
      <% end %>
    </div>

    <!-- Services Using This Template -->
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Services Using This Template</h2>

      <% if @services_using.any? %>
        <ul class="divide-y divide-gray-200">
          <% @services_using.each do |service| %>
            <li class="py-3 flex justify-between items-center">
              <span class="text-gray-900"><%= service.name %></span>
              <%= link_to "View Service", business_manager_service_path(service), class: "text-blue-600 hover:text-blue-800 text-sm" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-center py-4">This template is not assigned to any services yet.</p>
      <% end %>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="mt-6 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-4 sm:px-6 border-b border-gray-200">
      <h2 class="text-lg font-medium text-red-600">Danger Zone</h2>
    </div>
    <div class="px-4 py-4 sm:px-6 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
      <div>
        <p class="text-sm font-medium text-gray-900">Delete this template</p>
        <p class="text-sm text-gray-500">Once deleted, this template cannot be recovered.</p>
      </div>
      <% if @submission_count > 0 %>
        <span class="text-sm text-gray-500">Cannot delete - has <%= @submission_count %> submissions</span>
      <% else %>
        <%= button_to business_manager_job_form_template_path(@job_form_template), method: :delete, data: { confirm: "Are you sure you want to delete this template?" }, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors cursor-pointer" do %>
          Delete Template
        <% end %>
      <% end %>
    </div>
  </div>
</div>
