<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Preview: <%= @job_form_template.name %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</head>
<body class="h-full bg-gray-100 dark:bg-gray-900">
  <div class="min-h-full">
    <!-- Preview Header -->
    <div class="bg-yellow-50 dark:bg-yellow-900 border-b border-yellow-200 dark:border-yellow-700 px-4 py-3">
      <div class="max-w-3xl mx-auto flex items-center justify-between">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <span class="text-sm font-medium text-yellow-800 dark:text-yellow-200">Preview Mode</span>
        </div>
        <button onclick="window.close()" class="text-sm text-yellow-700 dark:text-yellow-300 hover:text-yellow-900 dark:hover:text-yellow-100 cursor-pointer">
          Close Preview
        </button>
      </div>
    </div>

    <!-- Form Preview -->
    <div class="max-w-3xl mx-auto px-4 py-8">
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
        <!-- Form Header -->
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-xl font-bold text-gray-900 dark:text-white"><%= @job_form_template.name %></h1>
              <% if @job_form_template.description.present? %>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400"><%= @job_form_template.description %></p>
              <% end %>
            </div>
            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
              <%= @job_form_template.form_type.humanize %>
            </span>
          </div>
        </div>

        <!-- Form Fields -->
        <div class="px-6 py-6">
          <% if @job_form_template.form_fields.any? %>
            <div class="space-y-6">
              <% @job_form_template.form_fields.sort_by { |f| f['position'] || 0 }.each do |field| %>
                <div class="field-preview">
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                    <%= field['label'] %>
                    <% if field['required'] %>
                      <span class="text-red-500">*</span>
                    <% end %>
                  </label>

                  <% case field['type'] %>
                  <% when 'checkbox' %>
                    <div class="flex items-center">
                      <input type="checkbox" disabled class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                      <span class="ml-2 text-sm text-gray-600 dark:text-gray-400">Check to confirm</span>
                    </div>

                  <% when 'text' %>
                    <input type="text" disabled class="block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm" placeholder="Enter text...">

                  <% when 'textarea' %>
                    <textarea disabled rows="3" class="block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm" placeholder="Enter detailed text..."></textarea>

                  <% when 'number' %>
                    <input type="number" disabled class="block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm" placeholder="0">

                  <% when 'date' %>
                    <input type="date" disabled class="block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm">

                  <% when 'time' %>
                    <input type="time" disabled class="block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm">

                  <% when 'select' %>
                    <select disabled class="block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm">
                      <option value="">Select an option...</option>
                      <% field['options']&.each do |option| %>
                        <option><%= option %></option>
                      <% end %>
                    </select>

                  <% when 'photo' %>
                    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 dark:border-gray-600 border-dashed rounded-lg">
                      <div class="space-y-1 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <div class="text-sm text-gray-600 dark:text-gray-400">
                          <span>Click to upload or drag and drop</span>
                        </div>
                        <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
                      </div>
                    </div>

                  <% when 'signature' %>
                    <div class="mt-1 border-2 border-gray-300 dark:border-gray-600 border-dashed rounded-lg p-4 h-32 flex items-center justify-center">
                      <span class="text-gray-400">Signature will be captured here</span>
                    </div>

                  <% else %>
                    <input type="text" disabled class="block w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm" placeholder="Enter value...">
                  <% end %>

                  <% if field['help_text'].present? %>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= field['help_text'] %></p>
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- Submit Button (disabled in preview) -->
            <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
              <button type="button" disabled class="w-full px-4 py-3 bg-blue-600 text-white rounded-lg opacity-50 cursor-not-allowed">
                Submit Form
              </button>
              <p class="mt-2 text-center text-xs text-gray-500">This is a preview - form submission is disabled</p>
            </div>
          <% else %>
            <div class="text-center py-8 text-gray-500 dark:text-gray-400">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <p class="mt-2">No fields defined for this template.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
