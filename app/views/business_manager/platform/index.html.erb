<script>
function copyReferralCode() {
  // Get the code from the DOM element instead of ERB to avoid escaping issues
  const codeElement = document.querySelector('.platform-referral-code');
  const code = codeElement ? codeElement.textContent.trim() : '';
  
  if (code && code !== '') {
    // Check if clipboard API is available
    if (navigator.clipboard && navigator.clipboard.writeText) {
      navigator.clipboard.writeText(code).then(function() {
        showToast('Referral code copied to clipboard!', 'success');
      }).catch(function() {
        // Fallback to legacy method
        fallbackCopyToClipboard(code);
      });
    } else {
      // Use fallback for older browsers
      fallbackCopyToClipboard(code);
    }
  } else {
    showToast('No referral code to copy', 'error');
  }
}

function fallbackCopyToClipboard(text) {
  const textArea = document.createElement('textarea');
  textArea.value = text;
  textArea.style.position = 'fixed';
  textArea.style.left = '-999999px';
  textArea.style.top = '-999999px';
  document.body.appendChild(textArea);
  textArea.focus();
  textArea.select();
  
  try {
    document.execCommand('copy');
    showToast('Referral code copied to clipboard!', 'success');
  } catch (err) {
    showToast('Failed to copy code. Please try selecting and copying manually.', 'error');
  }
  
  document.body.removeChild(textArea);
}

function copyDiscountCode(code) {
  if (navigator.clipboard && navigator.clipboard.writeText) {
    navigator.clipboard.writeText(code).then(function() {
      showToast('Discount code copied to clipboard!', 'success');
    }).catch(function() {
      fallbackCopyToClipboard(code);
    });
  } else {
    fallbackCopyToClipboard(code);
  }
}

function showToast(message, type) {
  // Create toast notification
  const toast = document.createElement('div');
  toast.className = `fixed top-4 right-4 p-4 rounded-md shadow-lg z-50 ${type === 'success' ? 'bg-green-500' : 'bg-red-500'} text-white`;
  toast.textContent = message;
  document.body.appendChild(toast);
  
  // Remove after 3 seconds
  setTimeout(() => {
    document.body.removeChild(toast);
  }, 3000);
}

// Handle form submissions with loading states
document.addEventListener('DOMContentLoaded', function() {
  const forms = document.querySelectorAll('form[data-remote="true"]');
  forms.forEach(form => {
    form.addEventListener('ajax:before', function() {
      const submitBtn = form.querySelector('[type="submit"]');
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = submitBtn.dataset.loadingText || 'Loading...';
      }
    });
    
    form.addEventListener('ajax:complete', function() {
      const submitBtn = form.querySelector('[type="submit"]');
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = submitBtn.value;
      }
    });
    
    form.addEventListener('ajax:success', function(event) {
      const response = event.detail[0];
      if (response.success) {
        showToast(response.message, 'success');
        if (response.referral_code) {
          location.reload(); // Reload to show the new referral code
        }
      }
    });
    
    form.addEventListener('ajax:error', function(event) {
      const response = event.detail[0];
      showToast(response.error || 'An error occurred', 'error');
    });
  });
});
</script> 