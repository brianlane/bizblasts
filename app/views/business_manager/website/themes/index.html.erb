  </div>

  <!-- Active Theme Highlight -->
  <% if @active_theme %>
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-lg font-semibold text-blue-900">üé® Active Theme</h2>
          <p class="text-blue-700 font-medium text-xl mt-1"><%= @active_theme.name %></p>
          <p class="text-blue-600 text-sm mt-1">Currently applied to your website</p>
        </div>
        <div class="space-x-3">
          <%= link_to "Preview", theme_test_business_path(business_subdomain: current_business.host_type_subdomain? ? current_business.hostname : nil), 
                      class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition-colors",
                      target: "_blank" %>
          <%= link_to "Edit", edit_business_manager_website_theme_path(@active_theme), 
                      class: "bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded transition-colors" %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-lg font-semibold text-yellow-900">‚ö†Ô∏è No Active Theme</h2>
          <p class="text-yellow-700 mt-1">Your website is using default styling</p>
        </div>
        <%= link_to "Create Your First Theme", new_business_manager_website_theme_path, 
                    class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded transition-colors" %>
      </div>
    </div>
  <% end %>

  <!-- All Themes Grid -->
  <div class="space-y-4">
    <h2 class="text-lg font-semibold text-gray-900">All Themes</h2>
    
    <% if @themes.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @themes.each do |theme| %>
          <div class="theme-card bg-white rounded-lg shadow-sm border border-gray-200 p-6 relative" data-theme-id="<%= theme.id %>">
            <div class="theme-preview mb-4">
              <!-- Theme Color Preview -->
              <div class="w-full h-32 bg-gray-100 rounded-md border border-gray-200 flex items-center justify-center relative overflow-hidden">
                <!-- Mock website preview using theme colors -->
                <div class="absolute inset-0 p-4 space-y-2">
                  <!-- Mock header -->
                  <div class="h-2 rounded" style="background-color: <%= theme.color_scheme['primary'] || '#3b82f6' %>; width: 60%;"></div>
                  <!-- Mock content -->
                  <div class="space-y-1">
                    <div class="h-1 bg-gray-300 rounded" style="width: 80%;"></div>
                    <div class="h-1 bg-gray-300 rounded" style="width: 65%;"></div>
                  </div>
                  <!-- Mock button -->
                  <div class="h-3 w-16 rounded text-xs flex items-center justify-center text-white text-[8px]" 
                       style="background-color: <%= theme.color_scheme['accent'] || '#10b981' %>;">
                    Button
                  </div>
                </div>
              </div>
              
              <!-- Active Theme Badge -->
              <% if theme.active? %>
                <div class="absolute top-2 right-2 bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full">
                  Active
                </div>
              <% end %>
            </div>

            <div class="theme-info">
              <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= theme.name %></h3>
              
              <div class="theme-metadata text-xs text-gray-500 mb-4">
                <div class="flex items-center justify-between">
                  <span>Created: <%= theme.created_at.strftime('%m/%d/%Y') %></span>
                  <% if theme.custom_css.present? %>
                    <span class="text-blue-600">Customized</span>
                  <% end %>
                </div>
              </div>

              <!-- Color Palette Preview -->
              <div class="mb-4">
                <p class="text-xs font-medium text-gray-700 mb-2">Color Scheme</p>
                <div class="flex space-x-1">
                  <% %w[primary secondary accent].each do |color_key| %>
                    <% if theme.color_scheme[color_key] %>
                      <div class="w-4 h-4 rounded-full border border-gray-200" 
                           style="background-color: <%= theme.color_scheme[color_key] %>;"
                           title="<%= color_key.titleize %>: <%= theme.color_scheme[color_key] %>">
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>

              <!-- Theme Actions -->
              <div class="theme-actions flex items-center justify-between pt-4 border-t border-gray-100">
                <div class="flex space-x-2">
                  <!-- Edit Button -->
                  <%= link_to "Edit", edit_business_manager_website_theme_path(theme),
                        class: "text-sm px-3 py-1 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors" %>
                  
                  <!-- Preview Button -->
                  <button type="button"
                          class="text-sm px-3 py-1 bg-blue-100 text-blue-700 rounded-md hover:bg-blue-200 transition-colors"
                          data-action="click->theme-browser#previewTheme">
                    Preview
                  </button>
                </div>

                <div class="flex space-x-2">
                  <!-- Activation/Deactivation -->
                  <% if theme.active? %>
                    <span class="text-sm px-3 py-1 bg-green-100 text-green-700 rounded-md">Current</span>
                  <% else %>
                    <%= button_to "Activate", business_manager_website_theme_path(theme),
                          method: :patch,
                          params: { activate: true },
                          class: "text-sm px-3 py-1 bg-indigo-100 text-indigo-700 rounded-md hover:bg-indigo-200 transition-colors",
                          data: { confirm: "Are you sure you want to activate this theme?" } %>
                  <% end %>

                  <!-- Delete Button (only for inactive themes) -->
                  <% unless theme.active? %>
                    <%= button_to "Delete", business_manager_website_theme_path(theme),
                          method: :delete,
                          class: "text-sm px-3 py-1 bg-red-100 text-red-700 rounded-md hover:bg-red-200 transition-colors",
                          data: { confirm: "Are you sure you want to delete this theme? This action cannot be undone." } %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-gray-400 text-6xl mb-4">üé®</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No themes yet</h3>
        <p class="text-gray-500 mb-6">Create your first theme to customize your website's appearance.</p>
        <%= link_to "Create Theme", new_business_manager_website_theme_path, 
                    class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Theme Preview Modal -->
  <div class="fixed inset-0 bg-black bg-opacity-50 hidden preview-modal-overlay" 
       style="z-index: 9999;"
       data-theme-browser-target="previewModal"
       data-action="keydown@window->theme-browser#handleKeydown click->theme-browser#closePreview">
    <div class="absolute inset-4 bg-white rounded-lg shadow-xl overflow-hidden flex flex-col" data-action="click->theme-browser#stopPropagation">
      <div class="bg-gray-100 border-b border-gray-200 p-4 flex justify-between items-center flex-shrink-0">
        <h3 class="text-lg font-semibold">Theme Preview</h3>
        <div class="space-x-3">
          <button type="button" 
                  class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition-colors"
                  data-action="click->theme-browser#activateCurrentTheme">
            Activate This Theme
          </button>
          <button type="button" 
                  class="text-gray-500 hover:text-gray-700"
                  data-action="click->theme-browser#closePreview">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
      <div class="flex-1 overflow-hidden">
        <iframe class="w-full h-full border-0" data-theme-browser-target="previewFrame" src=""></iframe>
      </div>
    </div>
  </div>
</div>

<style>
.theme-card {
  transition: transform 0.2s ease-in-out;
}

.theme-card:hover {
  transform: translateY(-2px);
}

/* Hide body scroll when modal is open */
body.modal-open {
  overflow: hidden;
}

.preview-modal-overlay:not(.hidden) {
  display: flex !important;
}
</style>

<script>
// Add some interactivity for theme previews
function initializeThemesIndexPage() {
  // Add hover effects to theme cards
  const themeCards = document.querySelectorAll('[data-theme-id]');
  themeCards.forEach(card => {
    card.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-2px)';
    });
    card.addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0)';
    });
  });
}

// Initialize on both DOMContentLoaded and turbo:load for Turbo compatibility
document.addEventListener('DOMContentLoaded', initializeThemesIndexPage);
document.addEventListener('turbo:load', initializeThemesIndexPage);
</script> 