<% content_for :title, "#{@page.title} - Page Overview" %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
  <!-- Header Section -->
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-3 sm:px-6 lg:px-8">
      <div class="flex flex-col space-y-3 py-3 sm:py-6 sm:space-y-0 sm:flex-row sm:justify-between sm:items-center">
        <!-- Page Title & Breadcrumb -->
        <div class="flex items-center space-x-3 min-w-0">
          <%= link_to business_manager_website_pages_path, 
              class: "flex-shrink-0 text-gray-400 hover:text-primary transition-colors duration-200 p-1 -ml-1" do %>
            <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <div class="min-w-0 flex-1">
            <h1 class="text-lg sm:text-2xl font-bold text-gray-900 truncate leading-tight"><%= @page.title %></h1>
            <div class="flex flex-col sm:flex-row sm:items-center text-xs sm:text-sm text-gray-500 mt-0.5 sm:mt-1 space-y-0.5 sm:space-y-0">
              <span class="text-primary font-medium truncate">/<%= @page.slug %></span>
              <span class="hidden sm:inline mx-2">â€¢</span>
              <span class="text-gray-400 sm:text-gray-500"><%= @page.page_type.humanize %> Page</span>
            </div>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex items-stretch gap-1.5 sm:gap-3 sm:flex-shrink-0">
          <%= link_to "Edit Page", edit_business_manager_website_page_path(@page), 
              class: "flex-1 sm:flex-none inline-flex items-center justify-center px-2.5 py-2 sm:px-4 bg-secondary hover:bg-teal-600 text-white text-xs sm:text-sm font-medium rounded-md sm:rounded-lg transition-colors duration-200 shadow-sm" %>
          <%= link_to "Edit Sections", business_manager_website_page_sections_path(@page), 
              class: "flex-1 sm:flex-none inline-flex items-center justify-center px-2.5 py-2 sm:px-4 bg-secondary hover:bg-teal-600 text-white text-xs sm:text-sm font-medium rounded-md sm:rounded-lg transition-colors duration-200 shadow-sm" %>
          <%= link_to "Back", business_manager_website_pages_path, 
              class: "sm:hidden inline-flex items-center justify-center px-2.5 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-xs font-medium rounded-md transition-colors duration-200" %>
          <%= link_to "Back to Pages", business_manager_website_pages_path, 
              class: "hidden sm:inline-flex items-center justify-center px-4 py-2 bg-secondary hover:bg-teal-600 text-white text-sm font-medium rounded-lg transition-colors duration-200 shadow-sm" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Left Column - Page Information -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Page Information Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="border-b border-gray-200 bg-gradient-to-r from-blue-400 to-blue-600 px-6 py-4">
            <h2 class="text-lg font-semibold text-white flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Page Information
            </h2>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border">
                  <div>
                    <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Page Type</label>
                    <div class="mt-1 text-lg font-semibold text-gray-900"><%= @page.page_type.humanize %></div>
                  </div>
                  <div class="text-primary">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707L16.414 6.414A1 1 0 0015.707 6H7a2 2 0 00-2 2v11a2 2 0 002 2z"/>
                    </svg>
                  </div>
                </div>
                
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border">
                  <div>
                    <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Status</label>
                    <div class="mt-1">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @page.status == 'published' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <% if @page.status == 'published' %>
                          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                        <% else %>
                          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                          </svg>
                        <% end %>
                        <%= @page.status.humanize %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border">
                   <div class="flex-1">
                     <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">URL Slug</label>
                     <div class="mt-1">
                       <%= link_to public_page_url(@page), 
                           target: "_blank", 
                           class: "text-lg font-mono text-primary hover:text-blue-700 transition-colors duration-200 underline decoration-2 underline-offset-2" do %>
                         /<%= @page.slug %>
                       <% end %>
                     </div>
                   </div>
                   <div class="text-secondary ml-3">
                     <%= link_to public_page_url(@page), 
                         target: "_blank", 
                         class: "hover:text-teal-600 transition-colors duration-200" do %>
                       <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                       </svg>
                     <% end %>
                   </div>
                 </div>
                
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border">
                  <div>
                    <label class="text-sm font-medium text-gray-500 uppercase tracking-wide">Created</label>
                    <div class="mt-1 text-lg font-semibold text-gray-900"><%= @page.created_at.strftime("%B %d, %Y") %></div>
                  </div>
                  <div class="text-accent">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Page Sections Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="border-b border-gray-200 bg-gradient-to-r from-teal-400 to-teal-600 px-6 py-4">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-semibold text-white flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                Page Sections
              </h2>
              <span class="bg-white bg-opacity-20 text-teal-600 px-3 py-1 rounded-full text-sm font-medium">
                <%= pluralize(@page.page_sections.count, 'section') %>
              </span>
            </div>
          </div>
          <div class="p-6">
            <% if @page.page_sections.any? %>
              <div class="space-y-3">
                <% @page.page_sections.ordered.each_with_index do |section, index| %>
                  <div class="flex items-center justify-between p-4 bg-gradient-to-r from-gray-50 to-gray-100 rounded-lg border border-gray-200 hover:shadow-md transition-all duration-200">
                    <div class="flex items-center space-x-4">
                      <div class="flex-shrink-0 w-8 h-8 bg-primary text-white rounded-full flex items-center justify-center text-sm font-bold">
                        <%= index + 1 %>
                      </div>
                      <div>
                        <h3 class="font-semibold text-gray-900"><%= section.section_type.humanize %></h3>
                        <p class="text-sm text-gray-500">Position: <%= section.position %></p>
                      </div>
                    </div>
                    <div class="flex items-center space-x-3">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= section.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <% if section.active? %>
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          Active
                        <% else %>
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                          </svg>
                          Inactive
                        <% end %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-12">
                <div class="mx-auto h-12 w-12 text-gray-400 mb-4">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                  </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No sections added yet</h3>
                <p class="text-gray-500 mb-4">Start building your page by adding sections</p>
                <%= link_to "Add Sections", business_manager_website_page_sections_path(@page), 
                    class: "inline-flex items-center px-4 py-2 bg-secondary hover:bg-teal-600 text-white font-medium rounded-lg transition-colors duration-200" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Homepage Special Notice -->
        <% if @page.page_type == 'home' %>
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-xl p-6">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-blue-900 mb-2">Homepage Settings</h3>
                <p class="text-blue-800">This is your website's homepage. It will be the first page visitors see when they visit your site.</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Right Column - Quick Actions & Stats -->
      <div class="space-y-6">
        
        <!-- Quick Actions Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="border-b border-gray-200 bg-gradient-to-r from-orange-400 to-orange-600 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              Quick Actions
            </h3>
          </div>
          <div class="p-6 space-y-3">
            <%= link_to "Show Page", public_page_url(@page), 
                target: "_blank", 
                class: "flex items-center w-full px-4 py-3 bg-gray-50 hover:bg-gray-100 text-gray-700 font-medium rounded-lg transition-colors duration-200 border border-gray-200" %>
            <%= link_to "Edit Content", edit_business_manager_website_page_path(@page), 
                class: "flex items-center w-full px-4 py-3 bg-gray-50 hover:bg-gray-100 text-gray-700 font-medium rounded-lg transition-colors duration-200 border border-gray-200" %>
            <%= link_to "Manage Sections", business_manager_website_page_sections_path(@page), 
                class: "flex items-center w-full px-4 py-3 bg-gray-50 hover:bg-gray-100 text-gray-700 font-medium rounded-lg transition-colors duration-200 border border-gray-200" %>
          </div>
        </div>

        <!-- Page Stats Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="border-b border-gray-200 bg-gradient-to-r from-gray-600 to-gray-700 px-6 py-4">
            <h3 class="text-lg font-semibold text-white flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              Page Statistics
            </h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-500">Total Sections</span>
                <span class="text-2xl font-bold text-primary"><%= @page.page_sections.count %></span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-500">Active Sections</span>
                <span class="text-2xl font-bold text-green-600"><%= @page.page_sections.where(active: true).count %></span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-500">Last Updated</span>
                <span class="text-sm font-semibold text-gray-900"><%= time_ago_in_words(@page.updated_at) %> ago</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Last Updated Card -->
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-6 border border-gray-200">
          <div class="text-center">
            <div class="mx-auto h-12 w-12 text-gray-400 mb-3">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <p class="text-sm font-medium text-gray-500 mb-1">Last Updated</p>
            <p class="text-lg font-semibold text-gray-900"><%= @page.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 