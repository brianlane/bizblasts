<h1 class="text-3xl font-bold mb-6">Welcome to <%= @current_business.name %> Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <!-- Example Dashboard Widgets -->

  <!-- Upcoming Bookings -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-xl font-semibold mb-4">Upcoming Bookings</h2>
    <%# Placeholder: Replace with actual booking data %>
    <% if @upcoming_bookings.present? %>
      <ul>
        <% @upcoming_bookings.each do |booking| %>
          <li class="border-b last:border-b-0 py-2">
            <span class="font-medium"><%= booking.service.name %></span> with <%= booking.tenant_customer.name %>
            <span class="text-sm text-gray-600 block"><%= booking.start_time.strftime("%a, %b %d, %Y at %I:%M %p") %></span>
          </li>
        <% end %>
      </ul>
      <%# Link to full bookings page %>
      <%= link_to "View All Bookings", "#", class: "text-blue-600 hover:underline mt-4 inline-block" %>
    <% else %>
      <p class="text-gray-600">No upcoming bookings.</p>
      <%# Link to booking creation? %>
    <% end %>
  </div>

  <!-- Quick Stats (Placeholder) -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-xl font-semibold mb-4">Quick Stats</h2>
    <div class="space-y-3">
      <p><strong>Total Customers:</strong> <span class="text-blue-600">123</span></p>
      <p><strong>Bookings Today:</strong> <span class="text-green-600">5</span></p>
      <p><strong>Revenue This Month:</strong> <span class="text-indigo-600">$1,234.56</span></p>
    </div>
    <%# Link to analytics page %>
    <%= link_to "View Full Analytics", "#", class: "text-blue-600 hover:underline mt-4 inline-block" %>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
    <div class="space-y-2">
      <%= link_to "Create New Booking", "#", class: "block text-blue-600 hover:underline" %>
      <%= link_to "Add New Customer", "#", class: "block text-blue-600 hover:underline" %>
      <%= link_to "Manage Services", "#", class: "block text-blue-600 hover:underline" %>
      <%= link_to "Edit Website Pages", "#", class: "block text-blue-600 hover:underline" %>
    </div>
  </div>

  <%# Add more dashboard widgets as needed %>

</div> 