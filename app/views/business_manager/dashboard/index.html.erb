                <div>
                  <span class="text-green-600">ðŸ“¤</span>
                  <span class="font-medium"><%= booking.rental_name.truncate(20) %></span>
                </div>
                <span class="text-xs text-gray-500">Pickup @ <%= booking.local_start_time&.strftime('%I:%M %p') %></span>
              </div>
            <% end %>
            <% today_returns.each do |booking| %>
              <div class="flex items-center justify-between text-sm p-2 bg-orange-50 rounded">
                <div>
                  <span class="text-orange-600">ðŸ“¥</span>
