<div class="space-y-4 sm:space-y-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold">Dashboard</h1>
      <h2 class="text-lg sm:text-2xl font-semibold text-gray-600">Welcome to <%= @current_business.name %></h2>
      <p class="text-xs text-gray-600">
        Customers will never need a Bizblasts Client/Customer account to book appointments or purchase products from your business
      </p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4 sm:gap-6">

    <!-- Recent Bookings (Last 7 Days) -->
    <div id="recent-bookings-widget" class="bg-white p-4 sm:p-6 rounded-lg shadow hover:shadow-md transition-shadow">
      <h3 class="text-lg sm:text-xl font-semibold mb-4">Recent Bookings (Last 7 Days)</h3>
      <% recent_bookings = @current_business.bookings.where(start_time: 7.days.ago..Time.current)
        .where.not(status: :cancelled)
        .order(start_time: :desc)
        .limit(5) %>
      <% if recent_bookings.present? %>
        <div class="space-y-3">
          <% recent_bookings.each do |booking| %>
            <div class="py-3 border-b border-gray-100 last:border-b-0">
              <div class="font-medium text-sm sm:text-base"><%= service_with_variant(booking) %></div>
              <div class="text-sm text-gray-600">with <%= booking.tenant_customer&.full_name || 'Deleted Customer' %></div>
              <div class="text-xs sm:text-sm text-gray-500 mt-1">
                <%= booking.local_start_time.strftime("%a, %b %d, %Y at %I:%M %p") %>
              </div>
            </div>
          <% end %>
        </div>
        <%= link_to "View All Bookings", business_manager_bookings_path, 
              class: "inline-flex items-center text-blue-600 hover:text-blue-800 mt-4 text-sm sm:text-base font-medium transition-colors" %>
      <% else %>
        <p class="text-gray-600 text-sm sm:text-base">No bookings in the last 7 days.</p>
      <% end %>
    </div>

    <!-- Upcoming Appointments (Next 7 Days) -->
    <div id="upcoming-appointments-widget" class="bg-white p-4 sm:p-6 rounded-lg shadow hover:shadow-md transition-shadow">
      <h3 class="text-lg sm:text-xl font-semibold mb-4">Upcoming Appointments (Next 7 Days)</h3>
      <% upcoming_appointments = @current_business.bookings.where(start_time: Time.current..7.days.from_now)
        .where.not(status: :cancelled)
        .order(start_time: :asc)
        .limit(5) %>
      <% if upcoming_appointments.present? %>
        <div class="space-y-3">
          <% upcoming_appointments.each do |booking| %>
            <div class="py-3 border-b border-gray-100 last:border-b-0">
              <div class="font-medium text-sm sm:text-base"><%= service_with_variant(booking) %></div>
              <div class="text-sm text-gray-600">with <%= booking.tenant_customer&.full_name || 'Deleted Customer' %></div>
              <div class="text-xs sm:text-sm text-gray-500 mt-1">
                <%= booking.local_start_time.strftime("%a, %b %d, %Y at %I:%M %p") %>
              </div>
            </div>
          <% end %>
        </div>
        <%= link_to "View All Bookings", business_manager_bookings_path, 
              class: "inline-flex items-center text-blue-600 hover:text-blue-800 mt-4 text-sm sm:text-base font-medium transition-colors" %>
      <% else %>
        <p class="text-gray-600 text-sm sm:text-base">No upcoming appointments in the next 7 days.</p>
      <% end %>
    </div>

    <!-- Estimates Overview -->
    <% if @current_business.show_estimate_page? %>
    <div id="estimates-widget" class="bg-white p-4 sm:p-6 rounded-lg shadow hover:shadow-md transition-shadow">
      <h3 class="text-lg sm:text-xl font-semibold mb-4">Estimates Overview</h3>
      <% pending_estimates = @current_business.estimates.includes(:tenant_customer).where(status: [:draft, :sent, :viewed]).order(created_at: :desc).limit(5) %>
      <% estimates_counts = {
        draft: @current_business.estimates.draft.count,
        sent: @current_business.estimates.sent.count,
        viewed: @current_business.estimates.viewed.count,
        approved: @current_business.estimates.approved.count
      } %>
      <div class="grid grid-cols-2 gap-3 mb-4">
        <div class="text-center p-2 bg-gray-50 rounded-lg">
          <div class="text-2xl font-bold text-gray-600"><%= estimates_counts[:draft] %></div>
          <div class="text-xs text-gray-500">Draft</div>
        </div>
        <div class="text-center p-2 bg-blue-50 rounded-lg">
          <div class="text-2xl font-bold text-blue-600"><%= estimates_counts[:sent] %></div>
          <div class="text-xs text-blue-500">Sent</div>
        </div>
        <div class="text-center p-2 bg-yellow-50 rounded-lg">
          <div class="text-2xl font-bold text-yellow-600"><%= estimates_counts[:viewed] %></div>
          <div class="text-xs text-yellow-500">Viewed</div>
        </div>
        <div class="text-center p-2 bg-green-50 rounded-lg">
          <div class="text-2xl font-bold text-green-600"><%= estimates_counts[:approved] %></div>
          <div class="text-xs text-green-500">Approved</div>
        </div>
      </div>
      <% if pending_estimates.present? %>
        <h4 class="text-sm font-medium text-gray-700 mb-2">Recent Pending</h4>
        <div class="space-y-2">
          <% pending_estimates.each do |estimate| %>
            <div class="py-2 border-b border-gray-100 last:border-b-0">
              <div class="flex items-center justify-between">
                <div class="font-medium text-sm"><%= estimate.tenant_customer&.full_name || "#{estimate.first_name} #{estimate.last_name}" %></div>
                <span class="px-2 py-0.5 text-xs rounded-full <%= case estimate.status
                  when 'draft' then 'bg-gray-100 text-gray-600'
                  when 'sent' then 'bg-blue-100 text-blue-600'
                  when 'viewed' then 'bg-yellow-100 text-yellow-600'
                  else 'bg-gray-100 text-gray-600'
                end %>"><%= estimate.status.humanize %></span>
              </div>
              <div class="text-xs text-gray-500 mt-1">
                <%= number_to_currency(estimate.total) %> Â· <%= time_ago_in_words(estimate.created_at) %> ago
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600 text-sm">No pending estimates.</p>
      <% end %>
      <div class="flex gap-2 mt-4">
        <%= link_to "View All", business_manager_estimates_path, 
              class: "inline-flex items-center text-blue-600 hover:text-blue-800 text-sm font-medium transition-colors" %>
        <span class="text-gray-300">|</span>
        <%= link_to "New Estimate", new_business_manager_estimate_path, 
              class: "inline-flex items-center text-green-600 hover:text-green-800 text-sm font-medium transition-colors" %>
      </div>
    </div>
    <% end %>

    <!-- Website Visitor Statistics (Placeholder) -->
    <div id="website-stats-widget" class="bg-white p-4 sm:p-6 rounded-lg shadow hover:shadow-md transition-shadow lg:col-span-1 xl:col-span-1">
      <h3 class="text-lg sm:text-xl font-semibold mb-4">Website Visitor Statistics</h3>
      <div class="text-sm text-gray-600 mb-4">(Coming Soon to Standard Membership)</div>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm sm:text-base">Total Visitors (Last 30d):</span>
          <span class="text-blue-600 font-medium">---</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm sm:text-base">Page Views (Last 30d):</span>
          <span class="text-green-600 font-medium">---</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm sm:text-base">Bounce Rate:</span>
          <span class="text-indigo-600 font-medium">---</span>
        </div>
        <p class="text-xs sm:text-sm text-gray-500 italic mt-4">Analytics coming soon to standard users!</p>
      </div>
      <%= link_to "View Full Analytics", "#", 
            class: "inline-flex items-center text-blue-600 hover:text-blue-800 mt-4 text-sm sm:text-base font-medium transition-colors" %>
    </div>

    <!-- Share Business Web Page -->
    <div id="share-business-widget" class="bg-white p-4 sm:p-6 rounded-lg shadow hover:shadow-md transition-shadow lg:col-span-1 xl:col-span-2">
      <h3 class="text-lg sm:text-xl font-semibold mb-4">Share Your Business Web Page</h3>
      <p class="text-sm text-gray-600 mb-4">Share this link with customers so they can book appointments and view your services</p>
      <div class="flex items-center gap-2">
        <div class="flex-1 relative">
          <input type="text"
                 id="business-url-input"
                 value="<%= TenantHost.url_for(@current_business, request) %>"
                 readonly
                 class="w-full px-4 py-3 pr-12 text-sm sm:text-base border border-gray-300 rounded-lg bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
        </div>
        <button type="button"
                id="copy-url-btn"
                onclick="copyBusinessUrl()"
                class="flex items-center gap-2 px-4 sm:px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 whitespace-nowrap">
          <svg id="copy-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
          </svg>
          <span id="copy-text" class="hidden sm:inline">Copy Link</span>
        </button>
      </div>
      <div id="copy-success-message" class="hidden mt-3 text-sm text-green-600 font-medium flex items-center gap-2">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>Link copied to clipboard!</span>
      </div>
    </div>

    <script>
      function copyBusinessUrl() {
        const input = document.getElementById('business-url-input');
        const successMessage = document.getElementById('copy-success-message');
        const copyBtn = document.getElementById('copy-url-btn');
        const copyIcon = document.getElementById('copy-icon');
        const copyText = document.getElementById('copy-text');
        
        // Select and copy the text
        input.select();
        input.setSelectionRange(0, 99999); // For mobile devices
        
        navigator.clipboard.writeText(input.value).then(function() {
          // Show success message
          successMessage.classList.remove('hidden');
          
          // Change button appearance temporarily
          copyBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
          copyBtn.classList.add('bg-green-600', 'hover:bg-green-700');
          copyText.textContent = 'Copied!';
          
          // Update icon to checkmark
          copyIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>';
          
          // Reset after 2 seconds
          setTimeout(function() {
            successMessage.classList.add('hidden');
            copyBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
            copyBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
            copyText.textContent = 'Copy Link';
            copyIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>';
          }, 2000);
        }).catch(function(err) {
          console.error('Failed to copy text: ', err);
          alert('Failed to copy link. Please try again.');
        });
      }
    </script>

    <!-- Quick Actions -->
    <div id="quick-actions-widget" class="bg-white p-4 sm:p-6 rounded-lg shadow hover:shadow-md transition-shadow lg:col-span-2 xl:col-span-3">
      <h3 class="text-lg sm:text-xl font-semibold mb-4">Quick Actions</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-3">
        <%= link_to tenant_calendar_path, 
              class: "flex items-center p-3 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-colors border border-gray-200 hover:border-blue-200" do %>
          <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          <span class="text-sm sm:text-base">Create Booking</span>
        <% end %>
 
        <%= link_to business_manager_staff_members_path, 
              class: "flex items-center p-3 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-colors border border-gray-200 hover:border-blue-200" do %>
          <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="text-sm sm:text-base">Manage Staff</span>
        <% end %>

        <%= link_to edit_business_manager_settings_profile_path, 
              class: "flex items-center p-3 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-colors border border-gray-200 hover:border-blue-200" do %>
          <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span class="text-sm sm:text-base">Edit Profile</span>
        <% end %>
        
        <%= link_to edit_business_manager_settings_website_pages_path, 
              class: "flex items-center p-3 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-colors border border-gray-200 hover:border-blue-200" do %>
          <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          <span class="text-sm sm:text-base">Edit Website</span>
        <% end %>
        
        <%= link_to edit_business_manager_settings_booking_policy_path, 
              class: "flex items-center p-3 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-colors border border-gray-200 hover:border-blue-200" do %>
          <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span class="text-sm sm:text-base">Adjust Booking Policies</span>
        <% end %>
        
        <% current_staff_member = @current_business.staff_members.find_by(user: current_user) %>
        <% if current_staff_member %>
          <%= link_to manage_availability_business_manager_staff_member_path(current_staff_member), 
                class: "flex items-center p-3 text-blue-600 hover:text-blue-800 hover:bg-blue-50 rounded-lg transition-colors border border-gray-200 hover:border-blue-200" do %>
                <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
            <span class="text-sm sm:text-base">Manage My Availability</span>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div> 