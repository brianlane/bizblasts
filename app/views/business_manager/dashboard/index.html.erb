      <h3 class="text-lg sm:text-xl font-semibold mb-4">Estimates Overview</h3>

      <%# Calculate estimates stats %>
      <% all_estimates = @current_business.estimates %>
      <% estimates_counts = {
        draft: all_estimates.draft.count,
        sent: all_estimates.sent.count,
        viewed: all_estimates.viewed.count,
        pending_payment: all_estimates.pending_payment.count,
        approved: all_estimates.approved.count
      } %>
      <% total_sent = estimates_counts[:sent] + estimates_counts[:viewed] + estimates_counts[:pending_payment] + estimates_counts[:approved] %>
      <% conversion_rate = total_sent > 0 ? ((estimates_counts[:approved].to_f / total_sent) * 100).round(1) : 0 %>
      <% total_value = all_estimates.sum(:total) %>
      <% average_value = all_estimates.any? ? (total_value / all_estimates.count) : 0 %>
      <% stale_payments = all_estimates.pending_payment.where('updated_at < ?', 24.hours.ago) %>

      <%# Alert for stale pending payments %>
      <% if stale_payments.any? %>
        <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-start">
