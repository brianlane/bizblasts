        <div class="text-center p-2 bg-blue-50 rounded-lg">
          <div class="text-lg font-bold text-blue-600"><%= conversion_rate %>%</div>
          <div class="text-xs text-blue-500">Conversion</div>
        </div>
        <div class="text-center p-2 bg-green-50 rounded-lg">
          <div class="text-lg font-bold text-green-600"><%= number_to_currency(total_value, precision: 0) %></div>
          <div class="text-xs text-green-500">Total Value</div>
        </div>
        <div class="text-center p-2 bg-purple-50 rounded-lg">
          <div class="text-lg font-bold text-purple-600"><%= number_to_currency(average_value, precision: 0) %></div>
          <div class="text-xs text-purple-500">Avg Value</div>
        </div>
      </div>

      <%# Status counts %>
      <div class="grid grid-cols-3 gap-2 mb-4">
        <div class="text-center p-2 bg-gray-50 rounded-lg">
          <div class="text-xl font-bold text-gray-600"><%= estimates_counts[:draft] %></div>
          <div class="text-xs text-gray-500">Draft</div>
        </div>
        <div class="text-center p-2 bg-blue-50 rounded-lg">
          <div class="text-xl font-bold text-blue-600"><%= estimates_counts[:sent] %></div>
          <div class="text-xs text-blue-500">Sent</div>
        </div>
        <div class="text-center p-2 bg-yellow-50 rounded-lg">
          <div class="text-xl font-bold text-yellow-600"><%= estimates_counts[:viewed] %></div>
          <div class="text-xs text-yellow-500">Viewed</div>
        </div>
        <div class="text-center p-2 bg-orange-50 rounded-lg">
          <div class="text-xl font-bold text-orange-600"><%= estimates_counts[:pending_payment] %></div>
          <div class="text-xs text-orange-500">Pending Pay</div>
        </div>
        <div class="text-center p-2 bg-green-50 rounded-lg col-span-2">
          <div class="text-xl font-bold text-green-600"><%= estimates_counts[:approved] %></div>
          <div class="text-xs text-green-500">Approved & Paid</div>
        </div>
      </div>

      <%# Recent estimates %>
      <% recent_estimates = all_estimates.includes(:tenant_customer)
        .where(status: [:sent, :viewed, :pending_payment])
        .order(updated_at: :desc)
        .limit(5) %>
      <% if recent_estimates.present? %>
        <h4 class="text-sm font-medium text-gray-700 mb-2">Recent Active</h4>
        <div class="space-y-2">
          <% recent_estimates.each do |estimate| %>
            <div class="py-2 border-b border-gray-100 last:border-b-0">
              <div class="flex items-center justify-between">
                <div class="font-medium text-sm"><%= estimate.tenant_customer&.full_name || "#{estimate.first_name} #{estimate.last_name}" %></div>
                <span class="px-2 py-0.5 text-xs rounded-full <%= case estimate.status
                  when 'draft' then 'bg-gray-100 text-gray-600'
                  when 'sent' then 'bg-blue-100 text-blue-600'
                  when 'viewed' then 'bg-yellow-100 text-yellow-600'
                  when 'pending_payment' then 'bg-orange-100 text-orange-600'
                  when 'approved' then 'bg-green-100 text-green-600'
                  else 'bg-gray-100 text-gray-600'
                end %>"><%= estimate.status.humanize.gsub('_', ' ') %></span>
              </div>
              <div class="text-xs text-gray-500 mt-1">
                <%= number_to_currency(estimate.total) %> Â· <%= time_ago_in_words(estimate.updated_at) %> ago
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600 text-sm">No active estimates.</p>
      <% end %>

      <%# Quick actions %>
      <div class="flex gap-2 mt-4">
        <%= link_to "View All", business_manager_estimates_path,
              class: "inline-flex items-center text-blue-600 hover:text-blue-800 text-sm font-medium transition-colors" %>
        <span class="text-gray-300">|</span>
        <%= link_to "New Estimate", new_business_manager_estimate_path,
              class: "inline-flex items-center text-green-600 hover:text-green-800 text-sm font-medium transition-colors" %>
      </div>
    </div>
