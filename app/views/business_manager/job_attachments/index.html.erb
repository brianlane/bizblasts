<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Job Attachments</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-1">
        Attachments for <%= @attachable_type %>: <%= @attachable.respond_to?(:name) ? @attachable.name : @attachable.id %>
      </p>
    </div>
    <%= link_to polymorphic_path([:business_manager, @attachable]), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back
    <% end %>
  </div>

  <%= render 'business_manager/job_attachments/attachment_manager', attachable: @attachable %>
</div>
