<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || (ActsAsTenant.current_tenant && !platform_branding_enabled? ? "My Estimates - #{ActsAsTenant.current_tenant.name}" : "My Estimates - BizBlasts") %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  
  <%= stylesheet_link_tag "tailwind", data: { "turbo-track": "reload" } %>
  <%= stylesheet_link_tag "custom", data: { "turbo-track" => "reload" } %>
  <%= javascript_include_tag "application", defer: true %>
  
  <!-- Favicons -->
  <%= favicon_link_tag "icon.svg", rel: "icon", type: "image/svg+xml" %>
  <%= favicon_link_tag "icon.png", rel: "icon", type: "image/png", sizes: "32x32" %>
</head>

<body class="bg-gray-50">
  <nav class="bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <%= link_to root_path, class: "text-white font-bold text-xl" do %>
              <%= ActsAsTenant.current_tenant && !platform_branding_enabled? ? ActsAsTenant.current_tenant.name : "BizBlasts" %>
            <% end %>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <%= link_to "Dashboard", dashboard_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "My Bookings", client_bookings_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" rescue nil %>
              <%= link_to "My Estimates", client_estimates_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to "Settings", client_settings_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" rescue nil %>
            </div>
          </div>
        </div>
        <div class="hidden md:block">
          <div class="ml-4 flex items-center md:ml-6">
            <% if current_user %>
              <span class="text-gray-300 text-sm mr-4"><%= current_user.email %></span>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium cursor-pointer", form: { data: { turbo: false } } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <% if flash[:notice] %>
      <div class="mb-4 p-4 bg-green-100 text-green-700 rounded">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <%= yield %>
  </main>
</body>
</html>
