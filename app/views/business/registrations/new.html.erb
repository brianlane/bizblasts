                <div class="flex items-center justify-between mb-2">
                  <%= business_f.label :canonical_preference, "Canonical URL (Advanced)", class: "text-sm font-medium text-dark" %>
                  <span class="text-xs text-gray-500">Optional</span>
                </div>
                <div class="space-y-2">
