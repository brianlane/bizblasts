            <%= business_f.label :tier, "Choose Your Plan", class: "block text-lg font-semibold text-dark mb-6" %>
            <%= business_f.hidden_field :tier, id: "selected_tier" %>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 subscription-plans">
