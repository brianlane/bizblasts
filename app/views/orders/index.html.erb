<h1>Orders</h1>

<h2>Product Orders</h2>
<table>
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Customer</th>
      <th>Total</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.products.each do |order| %>
      <tr>
        <td><%= order.order_number %></td>
        <td><%= order.tenant_customer.name %></td>
        <td><%= number_to_currency(order.total_amount) %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

