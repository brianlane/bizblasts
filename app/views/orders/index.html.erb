<h1>My Orders</h1>

<% if @orders.any? %>
  <table>
    <thead>
      <tr>
        <th>Order Number</th>
        <th>Date</th>
        <th>Status</th>
        <th>Type</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.order_number, order_path(order) %></td>
          <td><%= l order.created_at, format: :short %></td>
          <td><%= order.status.titleize %></td>
          <td><%= order.order_type.titleize %></td>
          <td><%= number_to_currency order.total_amount %></td>
          <td><%= link_to 'View Details', order_path(order) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no orders with this business yet.</p>
<% end %>

<%= link_to 'Continue Shopping', products_path %> <!-- Assuming products_path is your main shop page --> 