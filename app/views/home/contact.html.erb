<!-- Contact Section -->
<div class="max-w-4xl mx-auto px-4 py-12 flex flex-col md:flex-row items-start gap-8">
    <!-- Left Side - Contact Info -->
    <div class="flex-1 min-w-0">
        <h2 class="text-4xl font-bold text-dark mb-2">Send us a <span class="text-secondary">message</span></h2>
        <p class="text-2xl text-gray-700 mb-4">
            We pride ourselves on our dedicated support team for all businesses and industries. Additionally, we offer support to any client users interacting with businesses on our platform.
            Whether you're launching your first website, need help with booking management, 
            or want to help setting up new integrations, our team is here to help you succeed.
        </p>
        <p class="text-2xl text-gray-700">
            Use the contact form to get in touch with us, and we'll reply as quickly as possible. 
            Most inquiries receive a response within 24 hours.
        </p>
    </div>

    <!-- Right Side - Contact Form -->
    <div class="flex-shrink-0 w-full max-w-md">
        <div class="bg-white p-8 rounded-xl shadow border border-gray-100">
            <%= form_with url: contact_path, method: :post, local: true do |form| %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <%= form.label :name, class: "block text-sm font-medium text-dark mb-2" %>
                        <%= form.text_field :name, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors" %>
                    </div>
                    <div>
                        <%= form.label :email, class: "block text-sm font-medium text-dark mb-2" %>
                        <%= form.email_field :email, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors" %>
                    </div>
                </div>
                <div class="mt-4">
                    <%= form.label :business_name, "Business Name (Optional)", class: "block text-sm font-medium text-dark mb-2" %>
                    <%= form.text_field :business_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors" %>
                </div>
                <div class="mt-4">
                    <%= form.label :subject, class: "block text-sm font-medium text-dark mb-2" %>
                    <%= form.text_field :subject, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors" %>
                </div>
                <div class="mt-4">
                    <%= form.label :message, class: "block text-sm font-medium text-dark mb-2" %>
                    <%= form.text_area :message, placeholder: "Tell us how we can help you grow your Phoenix service business...", rows: 4, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors resize-none" %>
                </div>
                <div class="mt-6">
                    <%= form.submit "Send Message", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary cursor-pointer transition" %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-light py-8">
  <div class="container mx-auto px-4">
    <div class="flex justify-center space-x-4 text-gray-600">
      <%= link_to "About", "/about", class: "hover:text-primary" %>
      <span>&bull;</span>
      <%= link_to "Contact", "/contact", class: "hover:text-primary text-primary font-semibold" %>
      <span>&bull;</span>
      <%= link_to "Docs", "/docs", class: "hover:text-primary" %>
      <span>&bull;</span>
      <%= link_to "Pricing", "/pricing", class: "hover:text-primary" %>
    </div>
  </div>
</footer>