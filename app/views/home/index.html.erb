<!-- Simple welcome page that doesn't rely on database -->
<div class="container mx-auto px-4 py-8">
  <div class="text-center">
    <h1 class="text-4xl font-bold mb-4">Welcome to BizBlasts</h1>
    <p class="text-lg mb-6">Business management and websites for service companies</p>

    <% if @companies_count > 0 %>
      <p class="mb-4">We're currently serving <%= @companies_count %> companies!</p>
    <% end %>

    <div class="mt-8">
      <h2 class="text-2xl font-bold mb-4">Get Started</h2>
      <div class="flex justify-center">
        <% if user_signed_in? %>
          <%= link_to "Dashboard", dashboard_path, class: "btn-primary" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "btn-primary mx-2" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn-secondary mx-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>