<div class="available-slots-container">
  <h1>Available Time Slots</h1>
  
  <div class="provider-info">
    <h2><%= @service_provider.name %></h2>
    <% if @service.present? %>
      <p>Service: <%= @service.name %> (<%= @service.duration_minutes %> minutes)</p>
    <% end %>
    <p>Date: <%= @date.strftime('%A, %B %d, %Y') %></p>
  </div>
  
  <div class="date-selector">
    <%= form_tag available_slots_bookings_path, method: :get do %>
      <%= hidden_field_tag :service_provider_id, @service_provider.id %>
      <%= hidden_field_tag :service_id, @service&.id %>
      <%= hidden_field_tag :interval, @interval %>
      
      <%= date_field_tag :date, @date %>
      <%= submit_tag "View Available Slots" %>
    <% end %>
  </div>
  
  <div class="slots-container">
    <% if @slots.empty? %>
      <p class="no-slots">No available slots for this date. Please select another date.</p>
    <% else %>
      <div class="time-slots">
        <h3>Available Times</h3>
        <div class="slots-grid">
          <% @slots.each do |slot| %>
            <div class="time-slot">
              <%= link_to slot[:formatted_time], 
                          new_booking_path(
                            service_provider_id: @service_provider.id,
                            service_id: @service&.id,
                            start_time: slot[:start_time],
                            end_time: slot[:end_time]
                          ), 
                          class: "slot-link" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .available-slots-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .provider-info {
    background-color: #f5f5f5;
    padding: 15px;
    border-radius: 5px;
    margin-bottom: 20px;
  }
  
  .date-selector {
    margin-bottom: 30px;
  }
  
  .date-selector form {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .slots-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 10px;
    margin-top: 20px;
  }
  
  .time-slot {
    background-color: #e9f7fe;
    border-radius: 5px;
    padding: 10px;
    text-align: center;
  }
  
  .slot-link {
    display: block;
    color: #0066cc;
    text-decoration: none;
    font-weight: bold;
  }
  
  .slot-link:hover {
    background-color: #d0ebfa;
  }
  
  .no-slots {
    color: #e74c3c;
    font-weight: bold;
    font-style: italic;
  }
</style> 