<% content_for :title, "#{@business.name} - Loyalty Program" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900"><%= @business.name %> Loyalty</h1>
          <p class="mt-1 text-sm text-gray-500">Your loyalty points and rewards</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to tenant_referral_program_path, 
                      class: "inline-flex items-center px-3 py-2 sm:px-4 border border-gray-300 text-xs sm:text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-1 sm:mr-2 h-4 w-4 sm:h-5 sm:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
            </svg>
            <span class="hidden sm:inline">Refer Friends</span>
            <span class="sm:hidden">Refer</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    <% if @customer %>
      <!-- Points Overview -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6 sm:mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-4 sm:p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="h-8 w-8 sm:h-10 sm:w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                  <svg class="h-4 w-4 sm:h-6 sm:w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-3 sm:ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-xs sm:text-sm font-medium text-gray-500 truncate">Current Points</dt>
                  <dd class="text-lg sm:text-xl font-bold text-gray-900"><%= number_with_delimiter(@loyalty_summary[:current_points]) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-4 sm:p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="h-8 w-8 sm:h-10 sm:w-10 rounded-full bg-green-100 flex items-center justify-center">
                  <svg class="h-4 w-4 sm:h-6 sm:w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-3 sm:ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-xs sm:text-sm font-medium text-gray-500 truncate">Total Earned</dt>
                  <dd class="text-lg sm:text-xl font-bold text-gray-900"><%= number_with_delimiter(@loyalty_summary[:total_earned]) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-4 sm:p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="h-8 w-8 sm:h-10 sm:w-10 rounded-full bg-red-100 flex items-center justify-center">
                  <svg class="h-4 w-4 sm:h-6 sm:w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-3 sm:ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-xs sm:text-sm font-medium text-gray-500 truncate">Total Redeemed</dt>
                  <dd class="text-lg sm:text-xl font-bold text-gray-900"><%= number_with_delimiter(@loyalty_summary[:total_redeemed]) %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-4 sm:p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="h-8 w-8 sm:h-10 sm:w-10 rounded-full bg-yellow-100 flex items-center justify-center">
                  <svg class="h-4 w-4 sm:h-6 sm:w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-3 sm:ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-xs sm:text-sm font-medium text-gray-500 truncate">Next Reward</dt>
                  <dd class="text-sm sm:text-base font-medium text-gray-900">
                    <% if @loyalty_summary[:points_to_next_reward] > 0 %>
                      <%= @loyalty_summary[:points_to_next_reward] %> more
                    <% else %>
                      Ready!
                    <% end %>
                  </dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Redemption Options -->
      <% if @redemption_options.any? %>
        <div class="bg-white shadow overflow-hidden sm:rounded-md mb-6 sm:mb-8">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Available Rewards</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Redeem your points for discounts</p>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-4 sm:p-6">
            <% @redemption_options.each do |option| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:border-indigo-300 transition-colors">
                <div class="flex justify-between items-start mb-3">
                  <div>
                    <h4 class="text-sm font-medium text-gray-900">$<%= option[:discount_amount] %> Off</h4>
                    <p class="text-xs text-gray-500"><%= option[:description] %></p>
                  </div>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    <%= option[:points] %> points
                  </span>
                </div>
                <%= form_with url: tenant_loyalty_redeem_path, 
                             method: :post, local: true, class: "w-full" do |form| %>
                  <%= form.hidden_field :points, value: option[:points] %>
                  <%= form.submit "Redeem", 
                                 class: "w-full bg-indigo-600 text-white text-sm font-medium py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Active Redemptions -->
      <% if @active_redemptions.any? %>
        <div class="bg-white shadow overflow-hidden sm:rounded-md mb-6 sm:mb-8">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Active Discount Codes</h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Your redeemed discount codes ready to use</p>
          </div>
          <ul class="divide-y divide-gray-200">
            <% @active_redemptions.each do |redemption| %>
              <li class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <div class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center">
                        <svg class="h-4 w-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        $<%= redemption.discount_value %> Discount Code
                      </div>
                      <div class="text-sm text-gray-500">
                        Code: <span class="font-mono bg-gray-100 px-2 py-1 rounded"><%= redemption.code %></span>
                      </div>
                    </div>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= redemption.points_redeemed %> points
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Points History -->
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Points History</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Your recent point transactions</p>
        </div>
        <% if @loyalty_history.any? %>
          <ul class="divide-y divide-gray-200">
            <% @loyalty_history.each do |transaction| %>
              <li class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <% if transaction.earned? %>
                        <div class="h-6 w-6 sm:h-8 sm:w-8 rounded-full bg-green-100 flex items-center justify-center">
                          <svg class="h-3 w-3 sm:h-4 sm:w-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                          </svg>
                        </div>
                      <% else %>
                        <div class="h-6 w-6 sm:h-8 sm:w-8 rounded-full bg-red-100 flex items-center justify-center">
                          <svg class="h-3 w-3 sm:h-4 sm:w-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 12H6"></path>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-3 sm:ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= transaction.description %>
                      </div>
                      <div class="text-xs sm:text-sm text-gray-500">
                        <%= transaction.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                      </div>
                    </div>
                  </div>
                  <div class="text-sm font-medium">
                    <span class="<%= transaction.earned? ? 'text-green-600' : 'text-red-600' %>">
                      <%= transaction.earned? ? '+' : '' %><%= transaction.points_amount %> points
                    </span>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No transactions yet</h3>
            <p class="mt-1 text-sm text-gray-500">Start earning points by making bookings or purchases!</p>
          </div>
        <% end %>
      </div>

    <% else %>
      <!-- No Loyalty Account -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No loyalty account found</h3>
        <p class="mt-1 text-sm text-gray-500">Make your first booking or purchase to start earning loyalty points!</p>
        <div class="mt-6">
          <%= link_to "Book a Service", tenant_root_path(subdomain: @business.hostname), 
                      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 