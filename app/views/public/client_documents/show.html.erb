<% content_for :title, @document.title || 'Document' %>

<div class="container mx-auto px-4 py-8 max-w-3xl">
  <!-- Flash Messages -->
  <% if flash[:notice] %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-6" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Header -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @business.name %></h1>
        <p class="text-gray-500 mt-1"><%= @document.title || 'Document' %></p>
      </div>
      <div class="text-right">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
          <%= case @document.status
              when 'draft' then 'bg-gray-100 text-gray-800'
              when 'sent' then 'bg-blue-100 text-blue-800'
              when 'pending_signature' then 'bg-yellow-100 text-yellow-800'
              when 'pending_payment' then 'bg-amber-100 text-amber-800'
              when 'completed' then 'bg-green-100 text-green-800'
              when 'void' then 'bg-red-100 text-red-800'
              else 'bg-gray-100 text-gray-800'
              end %>">
          <%= case @document.status
              when 'pending_signature' then 'Awaiting Signature'
              when 'pending_payment' then 'Awaiting Payment'
              else @document.status.titleize
              end %>
        </span>
      </div>
    </div>
  </div>

  <!-- Document Content -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Document</h2>
    <div class="prose prose-sm max-w-none text-gray-700 bg-gray-50 p-4 rounded-lg border border-gray-200">
      <%= simple_format(@document.body) %>
    </div>
  </div>

  <% if @document.completed? %>
    <!-- Completed State -->
    <div class="bg-green-50 border border-green-200 rounded-lg p-6 text-center">
      <svg class="w-16 h-16 text-green-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <h3 class="text-lg font-semibold text-green-800 mb-2">Document Completed</h3>
      <p class="text-green-700">This document was signed on <%= @document.signed_at&.strftime('%B %d, %Y at %I:%M %p') %></p>
      <% if @document.pdf.attached? %>
        <div class="mt-4">
          <%= link_to download_public_client_document_pdf_path(token: @document.token), class: "inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Download PDF
          <% end %>
        </div>
      <% end %>
    </div>

  <% elsif @document.signature_required? && !@document.signed_at.present? %>
    <!-- Signature Required -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Sign Document</h2>
      
      <%= form_with url: sign_public_client_document_path(token: @document.token), method: :post, local: true, data: { controller: "signature-pad" } do |form| %>
        <div class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :signer_name, "Your Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= form.text_field :signer_name, required: true, value: @document.tenant_customer&.full_name,
                    class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500" %>
            </div>
            <div>
              <%= form.label :signer_email, "Your Email", class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= form.email_field :signer_email, required: true, value: @document.tenant_customer&.email,
                    class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500" %>
            </div>
          </div>

          <div>
            <%= form.label :signature_data, "Your Signature", class: "block text-gray-700 text-sm font-bold mb-2" %>
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 bg-gray-50">
              <canvas id="signature-canvas" class="w-full h-32 bg-white border border-gray-200 rounded cursor-crosshair" data-signature-pad-target="canvas"></canvas>
              <%= form.hidden_field :signature_data, data: { "signature-pad-target": "input" } %>
            </div>
            <div class="flex justify-between mt-2">
              <p class="text-xs text-gray-500">Sign above using your mouse or finger</p>
              <button type="button" class="text-sm text-blue-600 hover:text-blue-800 cursor-pointer" data-action="click->signature-pad#clear">Clear Signature</button>
            </div>
          </div>

          <div class="border-t pt-4">
            <div class="flex items-center mb-4">
              <%= form.check_box :agree_to_terms, required: true, class: "form-checkbox h-4 w-4 text-blue-600 rounded focus:ring-blue-500", id: "agree_to_terms" %>
              <%= form.label :agree_to_terms, "I have read and agree to the terms above", class: "ml-2 text-gray-700 text-sm" %>
            </div>
            
            <%= form.submit "Sign Document", class: "w-full px-6 py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>

  <% elsif @document.pending_payment? %>
    <!-- Payment Required -->
    <div class="bg-amber-50 border border-amber-200 rounded-lg p-6 text-center">
      <svg class="w-16 h-16 text-amber-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
      </svg>
      <h3 class="text-lg font-semibold text-amber-800 mb-2">Payment Required</h3>
      <p class="text-amber-700 mb-4">Document signed! Please complete your payment of <%= number_to_currency(@document.deposit_amount) %> to finalize.</p>
      <!-- TODO: Add Stripe payment integration -->
      <p class="text-sm text-amber-600">Payment processing will be available soon.</p>
    </div>
  <% end %>

  <!-- Footer -->
  <div class="text-center text-gray-500 text-sm mt-8">
    <p>Questions? Contact <%= @business.name %> at <%= mail_to @business.email %></p>
  </div>
</div>

<script>
// Simple signature pad implementation
document.addEventListener('DOMContentLoaded', function() {
  const canvas = document.getElementById('signature-canvas');
  if (!canvas) return;
  
  const ctx = canvas.getContext('2d');
  const hiddenInput = document.querySelector('[data-signature-pad-target="input"]');
  
  let isDrawing = false;
  let lastX = 0;
  let lastY = 0;
  
  // Set canvas size
  function resizeCanvas() {
    const rect = canvas.getBoundingClientRect();
    canvas.width = rect.width;
    canvas.height = rect.height;
    ctx.strokeStyle = '#000';
    ctx.lineWidth = 2;
    ctx.lineCap = 'round';
    ctx.lineJoin = 'round';
  }
  
  resizeCanvas();
  window.addEventListener('resize', resizeCanvas);
  
  function getPos(e) {
    const rect = canvas.getBoundingClientRect();
    if (e.touches) {
      return {
        x: e.touches[0].clientX - rect.left,
        y: e.touches[0].clientY - rect.top
      };
    }
    return {
      x: e.clientX - rect.left,
      y: e.clientY - rect.top
    };
  }
  
  function startDrawing(e) {
    isDrawing = true;
    const pos = getPos(e);
    lastX = pos.x;
    lastY = pos.y;
  }
  
  function draw(e) {
    if (!isDrawing) return;
    e.preventDefault();
    
    const pos = getPos(e);
    ctx.beginPath();
    ctx.moveTo(lastX, lastY);
    ctx.lineTo(pos.x, pos.y);
    ctx.stroke();
    
    lastX = pos.x;
    lastY = pos.y;
    
    updateHiddenInput();
  }
  
  function stopDrawing() {
    isDrawing = false;
  }
  
  function updateHiddenInput() {
    if (hiddenInput) {
      hiddenInput.value = canvas.toDataURL('image/png');
    }
  }
  
  // Mouse events
  canvas.addEventListener('mousedown', startDrawing);
  canvas.addEventListener('mousemove', draw);
  canvas.addEventListener('mouseup', stopDrawing);
  canvas.addEventListener('mouseout', stopDrawing);
  
  // Touch events
  canvas.addEventListener('touchstart', startDrawing);
  canvas.addEventListener('touchmove', draw);
  canvas.addEventListener('touchend', stopDrawing);
  
  // Clear button
  document.querySelectorAll('[data-action="click->signature-pad#clear"]').forEach(btn => {
    btn.addEventListener('click', function() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      if (hiddenInput) {
        hiddenInput.value = '';
      }
    });
  });
});
</script>

