<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">My Bookings with <%= @business.name %></h1>
    <%= link_to "â† Back to Business", tenant_root_path, class: "text-blue-600 hover:underline" %>
  </div>

  <% if @bookings.any? %>
    <div class="space-y-4">
      <% @bookings.each do |booking| %>
        <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
          <%= render "shared/booking_details", 
                     booking: booking, 
                     show_actions: booking.can_cancel?,
                     show_customer: false,
                     condensed: true %>
          
          <div class="mt-3 text-right">
            <%= link_to "View Details", tenant_my_booking_path(booking), class: "text-blue-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-100 p-6 rounded-lg text-center">
      <p class="text-gray-700 mb-4">You don't have any bookings with <%= @business.name %> yet.</p>
      <p>
        <%= link_to "Book Appointment", new_tenant_booking_path, class: "text-blue-600 hover:underline" %> to get started.
      </p>
    </div>
  <% end %>
  
  <div class="mt-6">
    <p class="text-gray-600">
      <%= link_to "View All My Bookings", main_domain_url_for('/my-bookings'), class: "text-blue-600 hover:underline" %> to see bookings across all businesses.
    </p>
  </div>
</div> 