<%# Full gallery page showing all photos %>
<% business = @business %>
<% accent_enabled = business&.website_layout_enhanced? %>

<% if accent_enabled %>
  <% content_for :body_class, 'enhanced-layout-active' %>
<% end %>

<% section_classes = accent_enabled ? "gallery-section py-16 lg:py-24 text-white border border-white/10 shadow-[0_35px_90px_-45px_rgba(0,0,0,0.75)]" : "gallery-section py-16 lg:py-24 bg-white" %>
<% section_styles = accent_enabled ? "background: radial-gradient(circle at 0% 0%, rgba(59,130,246,0.12), rgba(10,14,26,0.95) 45%), radial-gradient(circle at 100% 100%, rgba(236,72,153,0.12), rgba(6,10,20,0.97) 55%);" : "" %>
<% heading_classes = accent_enabled ? "text-3xl md:text-4xl font-bold text-white mb-4" : "text-3xl md:text-4xl font-bold text-gray-900 mb-4" %>
<% subtitle_classes = accent_enabled ? "text-lg text-gray-300 max-w-3xl mx-auto" : "text-lg text-gray-600 max-w-3xl mx-auto" %>
<% grid_heading_classes = accent_enabled ? "text-2xl font-semibold text-white mb-8 text-center" : "text-2xl font-semibold text-gray-900 mb-8 text-center" %>
<%# Only show business-owned photos on the business gallery page, not section photos %>
<% photos = business.gallery_photos.business_owned.by_position %>

</div><%# Close main container %>

<% if business&.gallery_ready? %>
  <div class="<%= section_classes %> min-h-screen" style="<%= section_styles %>" id="full-gallery">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="<%= heading_classes %>">Gallery</h1>
          <p class="<%= subtitle_classes %>">
            Every photo from <%= business.name %>. Looking for the home page?
            <%= link_to "Jump back", tenant_root_path(anchor: 'gallery'), class: "underline hover:opacity-80" %>
          </p>
        </div>

        <% if photos.any? %>
          <div>
            <%
              grid_cols_class = case business.gallery_display_columns
              when 2 then "lg:grid-cols-2"
              when 3 then "lg:grid-cols-3"
              when 4 then "lg:grid-cols-4"
              when 5 then "lg:grid-cols-5"
              when 6 then "lg:grid-cols-6"
              else "lg:grid-cols-3"
              end
            %>
            <div class="grid grid-cols-1 sm:grid-cols-2 <%= grid_cols_class %> gap-6">
              <% photos.each_with_index do |photo, index| %>
                <a href="<%= photo.image_url(:large) %>"
                   target="_blank"
                   class="group relative aspect-w-4 aspect-h-3 rounded-lg overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 cursor-pointer block">
                  <%= image_tag photo.image_url(:medium),
                               alt: photo.title || "Gallery photo #{index + 1}",
                               class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500",
                               loading: "lazy" %>

                  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-all duration-300 flex items-center justify-center">
                    <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                      </svg>
                    </div>
                  </div>

                  <% if photo.title.present? %>
                    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                      <h4 class="text-white text-sm font-semibold truncate"><%= photo.title %></h4>
                    </div>
                  <% end %>
                </a>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="max-w-2xl mx-auto text-center">
            <div class="rounded-2xl border border-dashed <%= accent_enabled ? 'border-white/20 bg-white/5 text-white' : 'border-gray-200 bg-gray-50 text-gray-700' %> px-6 py-12">
              <svg class="mx-auto h-12 w-12 <%= accent_enabled ? 'text-white/70' : 'text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <h3 class="mt-4 text-lg font-semibold">No photos yet</h3>
              <p class="mt-2 text-sm <%= accent_enabled ? 'text-white/80' : 'text-gray-500' %>">Check back soon to see what weâ€™re showcasing.</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
<% else %>
  <div class="<%= section_classes %> min-h-screen" style="<%= section_styles %>">
    <div class="max-w-3xl mx-auto px-4 py-16 text-center">
      <h1 class="<%= heading_classes %>">Gallery coming soon</h1>
      <p class="<%= subtitle_classes %>">This business hasn't published any gallery photos yet.</p>
    </div>
  </div>
<% end %>

<div class="container mx-auto px-4"><%# Reopen main container %>
