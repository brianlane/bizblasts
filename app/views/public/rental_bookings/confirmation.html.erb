<%# app/views/public/rental_bookings/confirmation.html.erb %>
<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-center mb-6">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Booking Confirmed!</h1>
        <p class="text-gray-600">Your rental has been confirmed.</p>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Booking Details</h2>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-gray-600">Booking Number</dt>
            <dd class="font-medium text-gray-900"><%= @rental_booking.id %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-600">Item</dt>
            <dd class="font-medium text-gray-900"><%= @rental_booking.product.name %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-gray-600">Status</dt>
            <dd class="font-medium text-gray-900"><%= @rental_booking.status.titleize %></dd>
          </div>
        </dl>
      </div>

      <div class="mt-6 pt-6 border-t border-gray-200">
        <%= link_to 'View Booking Details', rental_booking_path(@rental_booking, token: params[:token]),
              class: "block w-full text-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors" %>
      </div>
    </div>
  </div>
</div>
