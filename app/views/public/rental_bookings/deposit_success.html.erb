<%# app/views/public/rental_bookings/deposit_success.html.erb %>
<div class="min-h-screen bg-gray-50 flex items-center justify-center">
  <div class="max-w-md w-full mx-4">
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <!-- Success Icon -->
      <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
      
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Booking Confirmed!</h1>
      <p class="text-gray-600 mb-6">
        Your security deposit has been received and your rental is now confirmed.
      </p>
      
      <!-- Booking Details -->
      <div class="bg-gray-50 rounded-lg p-4 text-left mb-6">
        <div class="text-sm text-gray-500 mb-1">Booking Number</div>
        <div class="font-mono font-semibold text-gray-900"><%= @rental_booking.booking_number %></div>
        
        <div class="grid grid-cols-2 gap-4 mt-4">
          <div>
            <div class="text-sm text-gray-500">Pickup</div>
            <div class="font-medium"><%= @rental_booking.local_start_time&.strftime('%b %d, %Y') %></div>
          </div>
          <div>
            <div class="text-sm text-gray-500">Return</div>
            <div class="font-medium"><%= @rental_booking.local_end_time&.strftime('%b %d, %Y') %></div>
          </div>
        </div>
      </div>
      
      <div class="space-y-3">
        <%= link_to 'View Booking Details', rental_booking_path(@rental_booking), 
              class: "block w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
        <%= link_to 'Browse More Rentals', rentals_path, 
              class: "block w-full py-2 px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-colors" %>
      </div>
      
      <p class="mt-6 text-sm text-gray-500">
        A confirmation email has been sent to <%= @rental_booking.customer_email %>
      </p>
    </div>
  </div>
</div>

