<div class="service-list-section py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if section.content_data['title'].present? %>
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12"><%= section.content_data['title'] %></h2>
    <% end %>
    
    <% if section.content_data['description'].present? %>
      <div class="text-center mb-12">
        <div class="prose prose-lg max-w-none mx-auto">
          <%= section.content_data['description'] %>
        </div>
      </div>
    <% end %>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% business.services.active.positioned.each do |service| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= service.name %></h3>
          <% if service.description.present? %>
            <p class="text-gray-600 mb-4"><%= truncate(service.description, length: 150) %></p>
          <% end %>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-blue-600">$<%= service.price %></span>
            <%= link_to "Book Now", "/book?service_id=#{service.id}", 
                        class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 