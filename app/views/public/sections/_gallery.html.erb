<%# Gallery Section for Public Display %>
<% current_business = local_assigns[:business] %>
<% section = local_assigns[:section] %>
<% accent_enabled = current_business&.website_layout_enhanced? %>

<% if current_business&.gallery_ready? && current_business.show_gallery_section? %>
  <div class="gallery-section py-16 lg:py-24 bg-white" id="gallery">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          <%= section.content_data&.dig('title').presence || 'Our Gallery' %>
        </h2>
        <% if section.content_data&.dig('subtitle').present? %>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            <%= section.content_data['subtitle'] %>
          </p>
        <% end %>
      </div>

      <!-- Featured Photos Carousel (if any featured photos exist) -->
      <% featured_photos = current_business.featured_gallery_photos %>
      <% if featured_photos.any? %>
        <div class="mb-16">
          <h3 class="text-2xl font-semibold text-gray-900 mb-6 text-center">Featured</h3>
          <div class="relative" data-controller="gallery-carousel">
            <div class="overflow-hidden">
              <div class="flex transition-transform duration-500 ease-in-out" data-gallery-carousel-target="track">
                <% featured_photos.each_with_index do |photo, index| %>
                  <div class="flex-shrink-0 w-full px-2" data-gallery-carousel-target="slide">
                    <div class="relative aspect-w-16 aspect-h-9 rounded-2xl overflow-hidden shadow-2xl">
                      <%= image_tag photo.image_url(:large),
                                   alt: photo.title || "Featured photo #{index + 1}",
                                   class: "w-full h-[500px] object-cover cursor-pointer hover:scale-105 transition-transform duration-300",
                                   data: { action: "click->gallery-lightbox#open", photo_index: index } %>
                      <% if photo.title.present? %>
                        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-6">
                          <h4 class="text-white text-xl font-semibold"><%= photo.title %></h4>
                          <% if photo.description.present? %>
                            <p class="text-gray-200 text-sm mt-2"><%= photo.description %></p>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Carousel Controls (only if more than 1 featured photo) -->
            <% if featured_photos.count > 1 %>
              <button type="button"
                      data-action="click->gallery-carousel#prev"
                      class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white rounded-full p-3 shadow-lg transition z-10">
                <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
              </button>
              <button type="button"
                      data-action="click->gallery-carousel#next"
                      class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white rounded-full p-3 shadow-lg transition z-10">
                <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>

              <!-- Indicators -->
              <div class="flex justify-center mt-6 gap-2">
                <% featured_photos.each_with_index do |_, index| %>
                  <button type="button"
                          data-action="click->gallery-carousel#goTo"
                          data-index="<%= index %>"
                          class="w-2 h-2 rounded-full transition <%= index == 0 ? (accent_enabled ? 'accent-bg w-8' : 'bg-gray-800 w-8') : 'bg-gray-300' %>"
                          data-gallery-carousel-target="indicator">
                  </button>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Gallery Video (if video display location includes gallery) -->
      <% if current_business.gallery_video_display? %>
        <div class="mb-16">
          <h3 class="text-2xl font-semibold text-gray-900 mb-6 text-center">
            <%= current_business.video_title.presence || 'Featured Video' %>
          </h3>
          <div class="max-w-4xl mx-auto">
            <div class="relative aspect-w-16 aspect-h-9 rounded-2xl overflow-hidden shadow-2xl bg-black">
              <video controls
                     class="w-full h-full"
                     poster="<%= current_business.gallery_video.variant(:thumbnail).processed.url rescue nil %>">
                <source src="<%= url_for(current_business.gallery_video) %>" type="<%= current_business.gallery_video.content_type %>">
                Your browser does not support the video tag.
              </video>
            </div>
          </div>
        </div>
      <% end %>

      <!-- All Gallery Photos Grid -->
      <% all_photos = current_business.gallery_photos.by_position %>
      <% if all_photos.any? %>
        <div class="mt-16">
          <h3 class="text-2xl font-semibold text-gray-900 mb-8 text-center">Gallery</h3>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-<%= current_business.gallery_display_columns %> gap-6"
               data-controller="gallery-lightbox">
            <% all_photos.each_with_index do |photo, index| %>
              <div class="group relative aspect-w-4 aspect-h-3 rounded-lg overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 cursor-pointer"
                   data-action="click->gallery-lightbox#open"
                   data-photo-index="<%= index %>">
                <%= image_tag photo.image_url(:medium),
                             alt: photo.title || "Gallery photo #{index + 1}",
                             class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500",
                             loading: "lazy" %>

                <!-- Hover Overlay -->
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-all duration-300 flex items-center justify-center">
                  <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                    </svg>
                  </div>
                </div>

                <!-- Photo Info Overlay (if title exists) -->
                <% if photo.title.present? %>
                  <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                    <h4 class="text-white text-sm font-semibold truncate"><%= photo.title %></h4>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Lightbox Modal -->
  <div id="gallery-lightbox"
       class="fixed inset-0 bg-black/95 z-50 hidden items-center justify-center"
       data-gallery-lightbox-target="modal"
       data-action="click->gallery-lightbox#close keydown@window->gallery-lightbox#handleKeyboard">

    <!-- Close Button -->
    <button type="button"
            class="absolute top-4 right-4 text-white hover:text-gray-300 transition z-50"
            data-action="click->gallery-lightbox#close">
      <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <!-- Navigation Buttons -->
    <button type="button"
            class="absolute left-4 top-1/2 -translate-y-1/2 text-white hover:text-gray-300 transition z-50"
            data-action="click->gallery-lightbox#prev"
            data-gallery-lightbox-target="prevBtn">
      <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </button>
    <button type="button"
            class="absolute right-4 top-1/2 -translate-y-1/2 text-white hover:text-gray-300 transition z-50"
            data-action="click->gallery-lightbox#next"
            data-gallery-lightbox-target="nextBtn">
      <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </button>

    <!-- Image Container -->
    <div class="max-w-7xl max-h-screen p-8 flex items-center justify-center" data-action="click->gallery-lightbox#stopPropagation">
      <img data-gallery-lightbox-target="image"
           class="max-w-full max-h-full object-contain"
           alt="Gallery photo">
    </div>

    <!-- Image Info -->
    <div class="absolute bottom-8 left-0 right-0 text-center text-white px-8" data-gallery-lightbox-target="info">
      <h3 class="text-xl font-semibold mb-2" data-gallery-lightbox-target="title"></h3>
      <p class="text-gray-300 text-sm" data-gallery-lightbox-target="description"></p>
      <p class="text-gray-400 text-xs mt-2" data-gallery-lightbox-target="counter"></p>
    </div>
  </div>
<% end %>
