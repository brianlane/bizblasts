<%# Gallery Section for Public Display %>
<% current_business = local_assigns[:business] %>
<% section = local_assigns[:section] %>
<% accent_enabled = current_business&.website_layout_enhanced? %>
<% section_classes = accent_enabled ? "gallery-section py-16 lg:py-24 bg-[radial-gradient(circle_at_0%_0%,rgba(59,130,246,0.12),rgba(10,14,26,0.95)_45%),radial-gradient(circle_at_100%_100%,rgba(236,72,153,0.12),rgba(6,10,20,0.97)_55%)] text-white border border-white/10 shadow-[0_35px_90px_-45px_rgba(0,0,0,0.75)]" : "gallery-section py-16 lg:py-24 bg-white" %>
<% heading_classes = accent_enabled ? "text-3xl md:text-4xl font-bold text-white mb-4" : "text-3xl md:text-4xl font-bold text-gray-900 mb-4" %>
<% subtitle_classes = accent_enabled ? "text-lg text-gray-300 max-w-3xl mx-auto" : "text-lg text-gray-600 max-w-3xl mx-auto" %>
<% section_subheading_classes = accent_enabled ? "text-2xl font-semibold text-white mb-6 text-center" : "text-2xl font-semibold text-gray-900 mb-6 text-center" %>
<% grid_heading_classes = accent_enabled ? "text-2xl font-semibold text-white mb-8 text-center" : "text-2xl font-semibold text-gray-900 mb-8 text-center" %>
<%# Only show business-owned photos in the enhanced layout gallery section, not section photos %>
<% all_photos = current_business.gallery_photos.business_owned.by_position.limit(6) %>

<% if current_business&.gallery_ready? && current_business.show_gallery_section? %>
  <div class="<%= section_classes %>" id="gallery">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Gallery Video (if video display location includes gallery) -->
      <% if current_business.gallery_video_display? %>
        <div class="mb-16">
          <h3 class="<%= section_subheading_classes %>">
            <%= current_business.video_title.presence || 'Featured Video' %>
          </h3>
          <div class="max-w-4xl mx-auto">
            <div class="relative aspect-w-16 aspect-h-9 rounded-2xl overflow-hidden shadow-2xl bg-black">
              <video controls
                     class="w-full h-full">
                <source src="<%= rails_blob_path(current_business.gallery_video, only_path: true) %>" type="<%= current_business.gallery_video.content_type %>">
                Your browser does not support the video tag.
              </video>
            </div>
          </div>
        </div>
      <% end %>

      <!-- All Gallery Photos Grid -->
      <% if all_photos.any? %>
        <div class="mt-16">
          <h3 class="<%= grid_heading_classes %>">
            <%= link_to "Gallery",
                        tenant_page_path(page: "gallery"),
                        class: "hover:underline hover:opacity-80 transition" %>
          </h3>

          <%
            # Tailwind JIT requires complete class names, not dynamic interpolation
            grid_cols_class = case current_business.gallery_display_columns
            when 2 then "lg:grid-cols-2"
            when 3 then "lg:grid-cols-3"
            when 4 then "lg:grid-cols-4"
            when 5 then "lg:grid-cols-5"
            when 6 then "lg:grid-cols-6"
            else "lg:grid-cols-3" # default
            end
          %>
          <div class="grid grid-cols-1 sm:grid-cols-2 <%= grid_cols_class %> gap-6">
            <% all_photos.each_with_index do |photo, index| %>
              <a href="<%= photo.image_url(:large) %>"
                 target="_blank"
                 class="group relative aspect-w-4 aspect-h-3 rounded-lg overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 cursor-pointer block">
                <%= image_tag photo.image_url(:medium),
                             alt: photo.title || "Gallery photo #{index + 1}",
                             class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500",
                             loading: "lazy" %>

                <!-- Hover Overlay -->
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-all duration-300 flex items-center justify-center">
                  <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                    </svg>
                  </div>
                </div>

                <!-- Photo Info Overlay (if title exists) -->
                <% if photo.title.present? %>
                  <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                    <h4 class="text-white text-sm font-semibold truncate"><%= photo.title %></h4>
                  </div>
                <% end %>
              </a>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
