<div class="header-section">
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <% if section.content_data['title'].present? %>
          <h1 class="text-2xl font-bold text-gray-900"><%= section.content_data['title'] %></h1>
        <% else %>
          <h1 class="text-2xl font-bold text-gray-900"><%= business.name %></h1>
        <% end %>
        
        <nav class="hidden md:flex space-x-8">
          <% business.pages.published.where(show_in_menu: true).order(:menu_order).each do |page| %>
            <%= link_to page.title, "/#{page.slug}", class: "text-gray-500 hover:text-gray-900" %>
          <% end %>
        </nav>
      </div>
    </div>
  </header>
</div> 