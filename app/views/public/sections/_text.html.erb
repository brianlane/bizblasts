<% enhanced_story = section.custom_css_classes.to_s.split.include?('enhanced-story-block') %>
<div class="text-section <%= enhanced_story ? 'py-0' : 'py-8' %>">
  <div class="<%= enhanced_story ? 'px-0' : 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8' %>">
    <% if section.content_data['title'].present? %>
      <h2 class="<%= enhanced_story ? 'text-3xl md:text-4xl font-bold mb-6 text-white' : 'text-3xl font-bold text-gray-900 mb-6' %>">
        <%= section.content_data['title'] %>
      </h2>
    <% end %>
    
    <% if section.content_data['content'].present? %>
      <div class="<%= enhanced_story ? '' : 'prose prose-lg max-w-none' %>">
        <%= section.content_data['content'].to_s.html_safe %>
      </div>
    <% end %>
  </div>
</div> 