<div class="text-section py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if section.content_data['title'].present? %>
      <h2 class="text-3xl font-bold text-gray-900 mb-6"><%= section.content_data['title'] %></h2>
    <% end %>
    
    <% if section.content_data['content'].present? %>
      <div class="prose prose-lg max-w-none">
        <%= section.content_data['content'].to_s.html_safe %>
      </div>
    <% end %>
  </div>
</div> 