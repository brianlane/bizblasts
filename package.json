{
  "name": "app",
  "private": "true",
  "scripts": {
    "build:css:application": "sass ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:active_admin": "./bin/sass-build-activeadmin.sh",
    "build:css:custom": "cp ./app/assets/stylesheets/custom.css ./app/assets/builds/custom.css",
    "build:css": "yarn run build:css:application && yarn run build:css:active_admin && yarn run build:css:custom",
    "build:js": "bun build ./app/javascript/application.js --outdir ./app/assets/builds",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint app/assets/javascripts app/javascript spec/javascript --ext .js",
    "lint:fix": "eslint app/assets/javascripts app/javascript spec/javascript --ext .js --fix"
  },
  "devDependencies": {
    "@istanbuljs/load-nyc-config": "file:vendor/npm/@istanbuljs/load-nyc-config",
    "@activeadmin/activeadmin": "^3.3.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/stimulus-webpack-helpers": "^1.0.1",
    "@hotwired/turbo-rails": "^8.0.5",
    "@rails/actiontext": "^8.0.0",
    "@rails/ujs": "^7.1.3-4",
    "@vue/compiler-sfc": "^3.4.38",
    "dompurify": "^3.3.0",
    "jquery": "^3.7.1",
    "jquery-ui": "^1.14.1",
    "sass": "^1.86.3",
    "sortablejs": "^1.15.2",
    "trix": "^2.1.4",
    "vue": "^3.4.38"
  }
}
